<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Contact Duplicate Tree View -->
    <record id="view_contact_duplicate_tree" model="ir.ui.view">
        <field name="name">contact.duplicate.tree</field>
        <field name="model">contact.duplicate</field>
        <field name="arch" type="xml">
            <tree string="Contact Duplicates" decoration-success="state=='merged'" 
                  decoration-muted="state=='ignored'" decoration-info="state=='reviewed'">
                <field name="partner_id"/>
                <field name="duplicate_partner_id"/>
                <field name="similarity_score" widget="percentage"/>
                <field name="matching_fields"/>
                <field name="state"/>
                <field name="review_date"/>
                <field name="review_user_id"/>
                <button name="action_mark_as_duplicate" type="object"
                        string="Merge" icon="fa-compress"
                        attrs="{'invisible': [('state', 'in', ['merged', 'ignored'])]}"/>
                <button name="action_ignore_duplicate" type="object"
                        string="Ignore" icon="fa-times"
                        attrs="{'invisible': [('state', 'in', ['merged', 'ignored'])]}"/>
                <button name="action_review_duplicate" type="object"
                        string="Review" icon="fa-eye"
                        attrs="{'invisible': [('state', '!=', 'new')]}"/>
            </tree>
        </field>
    </record>

    <!-- Contact Duplicate Form View -->
    <record id="view_contact_duplicate_form" model="ir.ui.view">
        <field name="name">contact.duplicate.form</field>
        <field name="model">contact.duplicate</field>
        <field name="arch" type="xml">
            <form string="Contact Duplicate">
                <header>
                    <button name="action_mark_as_duplicate" type="object"
                            string="Merge Contacts" class="btn-primary"
                            attrs="{'invisible': [('state', 'in', ['merged', 'ignored'])]}"/>
                    <button name="action_ignore_duplicate" type="object"
                            string="Ignore Duplicate" class="btn-secondary"
                            attrs="{'invisible': [('state', 'in', ['merged', 'ignored'])]}"/>
                    <button name="action_review_duplicate" type="object"
                            string="Mark as Reviewed" class="btn-secondary"
                            attrs="{'invisible': [('state', '!=', 'new')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>Potential Duplicate Contact</h1>
                    </div>
                    
                    <group>
                        <group string="Original Contact">
                            <field name="partner_id" readonly="1"/>
                        </group>
                        <group string="Potential Duplicate">
                            <field name="duplicate_partner_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Similarity">
                            <field name="similarity_score" widget="percentage"/>
                            <field name="matching_fields"/>
                        </group>
                        <group string="Review Information">
                            <field name="review_date"/>
                            <field name="review_user_id"/>
                        </group>
                    </group>
                    
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Contact Duplicate Search View -->
    <record id="view_contact_duplicate_search" model="ir.ui.view">
        <field name="name">contact.duplicate.search</field>
        <field name="model">contact.duplicate</field>
        <field name="arch" type="xml">
            <search string="Contact Duplicates">
                <field name="partner_id"/>
                <field name="duplicate_partner_id"/>
                <filter name="new" string="New" domain="[('state', '=', 'new')]"/>
                <filter name="reviewed" string="Reviewed" domain="[('state', '=', 'reviewed')]"/>
                <filter name="merged" string="Merged" domain="[('state', '=', 'merged')]"/>
                <filter name="ignored" string="Ignored" domain="[('state', '=', 'ignored')]"/>
                <separator/>
                <filter name="high_similarity" string="High Similarity (>90%)" 
                        domain="[('similarity_score', '>', 0.9)]"/>
                <filter name="medium_similarity" string="Medium Similarity (70-90%)" 
                        domain="[('similarity_score', '>=', 0.7), ('similarity_score', '<=', 0.9)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Original Contact" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Review Date" name="group_review_date" context="{'group_by': 'review_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Contact Duplicate Action -->
    <record id="action_contact_duplicate" model="ir.actions.act_window">
        <field name="name">Contact Duplicates</field>
        <field name="res_model">contact.duplicate</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_new': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No duplicate contacts found!
            </p>
            <p>
                Use the "Find Duplicates" button on contact forms or run the batch duplicate detection
                to identify potential duplicate contacts.
            </p>
        </field>
    </record>

    <!-- Contact Merge History Tree View -->
    <record id="view_contact_merge_history_tree" model="ir.ui.view">
        <field name="name">contact.merge.history.tree</field>
        <field name="model">contact.merge.history</field>
        <field name="arch" type="xml">
            <tree string="Merge History">
                <field name="master_partner_id"/>
                <field name="merge_date"/>
                <field name="merge_user_id"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

    <!-- Contact Merge History Form View -->
    <record id="view_contact_merge_history_form" model="ir.ui.view">
        <field name="name">contact.merge.history.form</field>
        <field name="model">contact.merge.history</field>
        <field name="arch" type="xml">
            <form string="Merge History">
                <sheet>
                    <div class="oe_title">
                        <h1>Contact Merge History</h1>
                    </div>
                    
                    <group>
                        <group string="Merge Information">
                            <field name="master_partner_id"/>
                            <field name="merge_date"/>
                            <field name="merge_user_id"/>
                        </group>
                    </group>
                    
                    <group string="Merged Contacts">
                        <field name="merged_partner_ids" widget="text"/>
                    </group>
                    
                    <group string="Field Changes">
                        <field name="field_changes" widget="text"/>
                    </group>
                    
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Contact Merge History Action -->
    <record id="action_contact_merge_history" model="ir.actions.act_window">
        <field name="name">Merge History</field>
        <field name="res_model">contact.merge.history</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No merge history found!
            </p>
            <p>
                This view shows the history of all contact merges performed in the system.
            </p>
        </field>
    </record>

</odoo>
