<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Override web client bootstrap template -->
    <template id="webclient_bootstrap_inherit" inherit_id="web.webclient_bootstrap">
        <xpath expr="//title" position="replace">
            <title t-esc="title or (request.env.company.white_label_name if request.env.company.replace_odoo_branding else 'Odoo')"/>
        </xpath>
        
        <!-- Add company branding data to page -->
        <xpath expr="//head" position="inside">
            <meta name="company-name" t-att-content="request.env.company.white_label_name"/>
            <meta name="replace-odoo-branding" t-att-content="'true' if request.env.company.replace_odoo_branding else 'false'"/>
        </xpath>
    </template>
    
    <!-- Override login page template -->
    <template id="login_inherit" inherit_id="web.login">
        <xpath expr="//div[hasclass('oe_single_form_footer')]" position="replace">
            <div class="oe_single_form_footer">
                <t t-if="request.env.company.replace_odoo_branding">
                    Powered by <span t-esc="request.env.company.white_label_name or request.env.company.name"/>
                </t>
                <t t-else="">
                    Powered by <a href="https://www.odoo.com" target="_blank">Odoo</a>
                </t>
            </div>
        </xpath>
    </template>
    
    <!-- Override database selector -->
    <template id="database_selector_inherit" inherit_id="web.database_selector">
        <xpath expr="//div[hasclass('list-group-item')]//small" position="replace">
            <t t-if="request.env.company.replace_odoo_branding">
                <small class="text-muted">
                    Powered by <span t-esc="request.env.company.white_label_name or 'Your Company'"/>
                </small>
            </t>
            <t t-else="">
                <small class="text-muted">Powered by Odoo</small>
            </t>
        </xpath>
    </template>
    
</odoo>
