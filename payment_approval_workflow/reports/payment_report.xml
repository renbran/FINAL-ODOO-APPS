<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Enhanced Payment Receipt Report -->
        <record id="payment_receipt_enhanced" model="ir.actions.report">
            <field name="name">Payment Receipt (Enhanced)</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">payment_approval_workflow.payment_receipt_document_enhanced</field>
            <field name="report_file">payment_approval_workflow.payment_receipt_document_enhanced</field>
            <field name="binding_model_id" ref="account.model_account_payment"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Enhanced Payment Receipt Template -->
        <template id="payment_receipt_document_enhanced">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            
                            <!-- Header -->
                            <div class="row">
                                <div class="col-6">
                                    <h2>
                                        <span t-if="o.payment_type == 'outbound'">Vendor Payment Receipt</span>
                                        <span t-if="o.payment_type == 'inbound'">Customer Payment Receipt</span>
                                    </h2>
                                </div>
                                <div class="col-6 text-right">
                                    <h3 t-field="o.name"/>
                                    <div t-if="o.verification_token" class="mt-2">
                                        <img t-att-src="'data:image/png;base64,%s' % o.qr_code_image.decode('ascii')" 
                                             style="width: 100px; height: 100px;" 
                                             alt="QR Code"/>
                                        <br/>
                                        <small>Scan to verify payment</small>
                                    </div>
                                </div>
                            </div>

                            <hr/>

                            <!-- Payment Details -->
                            <div class="row mt-4">
                                <div class="col-6">
                                    <strong>Payment Information:</strong>
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <td><strong>Date:</strong></td>
                                            <td><span t-field="o.date"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Amount:</strong></td>
                                            <td><span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Currency:</strong></td>
                                            <td><span t-field="o.currency_id.name"/></td>
                                        </tr>
                                        <tr t-if="o.ref">
                                            <td><strong>Reference:</strong></td>
                                            <td><span t-field="o.ref"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Payment Method:</strong></td>
                                            <td><span t-field="o.payment_method_line_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Journal:</strong></td>
                                            <td><span t-field="o.journal_id.name"/></td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-6">
                                    <strong>Partner Information:</strong>
                                    <div class="mt-2">
                                        <div><strong><span t-field="o.partner_id.name"/></strong></div>
                                        <div t-if="o.partner_id.street"><span t-field="o.partner_id.street"/></div>
                                        <div t-if="o.partner_id.street2"><span t-field="o.partner_id.street2"/></div>
                                        <div>
                                            <span t-if="o.partner_id.city"><span t-field="o.partner_id.city"/></span>
                                            <span t-if="o.partner_id.state_id"><span t-field="o.partner_id.state_id.name"/></span>
                                            <span t-if="o.partner_id.zip"><span t-field="o.partner_id.zip"/></span>
                                        </div>
                                        <div t-if="o.partner_id.country_id"><span t-field="o.partner_id.country_id.name"/></div>
                                        <div t-if="o.partner_id.vat" class="mt-2">
                                            <strong>Tax ID: </strong><span t-field="o.partner_id.vat"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Approval Status -->
                            <div class="row mt-4" t-if="o.approval_state != 'draft'">
                                <div class="col-12">
                                    <strong>Approval Status:</strong>
                                    <div class="alert alert-info mt-2">
                                        <table class="table table-sm table-borderless mb-0">
                                            <tr>
                                                <td><strong>Current Status:</strong></td>
                                                <td>
                                                    <span t-if="o.approval_state == 'submitted'">Submitted for Review</span>
                                                    <span t-if="o.approval_state == 'reviewed'">Reviewed</span>
                                                    <span t-if="o.approval_state == 'approved'">Approved</span>
                                                    <span t-if="o.approval_state == 'authorized'">Authorized</span>
                                                    <span t-if="o.approval_state == 'posted'">Posted &amp; Processed</span>
                                                    <span t-if="o.approval_state == 'rejected'">Rejected</span>
                                                </td>
                                            </tr>
                                            <tr t-if="o.submitted_by_id">
                                                <td><strong>Submitted by:</strong></td>
                                                <td><span t-field="o.submitted_by_id.name"/> on <span t-field="o.submission_date" t-options="{'widget': 'datetime'}"/></td>
                                            </tr>
                                            <tr t-if="o.reviewer_id">
                                                <td><strong>Reviewed by:</strong></td>
                                                <td><span t-field="o.reviewer_id.name"/> on <span t-field="o.review_date" t-options="{'widget': 'datetime'}"/></td>
                                            </tr>
                                            <tr t-if="o.approver_id">
                                                <td><strong>Approved by:</strong></td>
                                                <td><span t-field="o.approver_id.name"/> on <span t-field="o.approval_date" t-options="{'widget': 'datetime'}"/></td>
                                            </tr>
                                            <tr t-if="o.authorizer_id">
                                                <td><strong>Authorized by:</strong></td>
                                                <td><span t-field="o.authorizer_id.name"/> on <span t-field="o.authorization_date" t-options="{'widget': 'datetime'}"/></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- Rejection Information -->
                            <div class="row mt-4" t-if="o.approval_state == 'rejected'">
                                <div class="col-12">
                                    <div class="alert alert-danger">
                                        <strong>Payment Rejected</strong>
                                        <div t-if="o.rejection_reason" class="mt-2">
                                            <strong>Reason:</strong> <span t-field="o.rejection_reason"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Journal Entry Information -->
                            <div class="row mt-4" t-if="o.move_id">
                                <div class="col-12">
                                    <strong>Journal Entry:</strong>
                                    <div class="mt-2">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Account</th>
                                                    <th>Debit</th>
                                                    <th>Credit</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr t-foreach="o.move_id.line_ids" t-as="line">
                                                    <td><span t-field="line.account_id.name"/></td>
                                                    <td class="text-right">
                                                        <span t-if="line.debit" t-field="line.debit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-if="line.credit" t-field="line.credit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- Digital Signatures Footer -->
                            <div class="row mt-5" t-if="o.approval_state in ['reviewed', 'approved', 'authorized', 'posted']">
                                <div class="col-12">
                                    <hr/>
                                    <h5>Digital Signatures</h5>
                                    <div class="row mt-3">
                                        
                                        <!-- Reviewer Signature -->
                                        <div class="col-4" t-if="o.review_signature">
                                            <div class="text-center">
                                                <div class="signature-box" style="border: 1px solid #ccc; padding: 10px; min-height: 80px;">
                                                    <img t-att-src="'data:image/png;base64,%s' % o.review_signature.decode('ascii')" 
                                                         style="max-width: 150px; max-height: 60px;" 
                                                         alt="Reviewer Signature"/>
                                                </div>
                                                <div class="mt-2">
                                                    <strong>Reviewed by:</strong><br/>
                                                    <span t-field="o.reviewer_id.name"/><br/>
                                                    <small><span t-field="o.review_date" t-options="{'widget': 'datetime'}"/></small>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Approver Signature -->
                                        <div class="col-4" t-if="o.approval_signature">
                                            <div class="text-center">
                                                <div class="signature-box" style="border: 1px solid #ccc; padding: 10px; min-height: 80px;">
                                                    <img t-att-src="'data:image/png;base64,%s' % o.approval_signature.decode('ascii')" 
                                                         style="max-width: 150px; max-height: 60px;" 
                                                         alt="Approver Signature"/>
                                                </div>
                                                <div class="mt-2">
                                                    <strong>Approved by:</strong><br/>
                                                    <span t-field="o.approver_id.name"/><br/>
                                                    <small><span t-field="o.approval_date" t-options="{'widget': 'datetime'}"/></small>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Authorizer Signature -->
                                        <div class="col-4" t-if="o.authorization_signature">
                                            <div class="text-center">
                                                <div class="signature-box" style="border: 1px solid #ccc; padding: 10px; min-height: 80px;">
                                                    <img t-att-src="'data:image/png;base64,%s' % o.authorization_signature.decode('ascii')" 
                                                         style="max-width: 150px; max-height: 60px;" 
                                                         alt="Authorizer Signature"/>
                                                </div>
                                                <div class="mt-2">
                                                    <strong>Authorized by:</strong><br/>
                                                    <span t-field="o.authorizer_id.name"/><br/>
                                                    <small><span t-field="o.authorization_date" t-options="{'widget': 'datetime'}"/></small>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <!-- Verification Notice -->
                            <div class="row mt-4" t-if="o.verification_token">
                                <div class="col-12">
                                    <div class="alert alert-info text-center">
                                        <strong>Payment Verification</strong><br/>
                                        You can verify this payment online at:<br/>
                                        <span t-field="o.verification_url"/><br/>
                                        Or scan the QR code above.
                                    </div>
                                </div>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
