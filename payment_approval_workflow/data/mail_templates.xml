        <!-- Email Template: Payment Submitted for Review -->
        <record id="email_template_payment_submitted" model="mail.template">
            <field name="name">Payment Submitted for Review</field>
            <field name="email_from">${(object.company_id.email or user.email)|safe}</field>
            <field name="subject">Payment Review Required: ${object.name}</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="auto_delete" eval="True"/>
            <field name="email_to">${','.join([user.email for user in object.env['res.users'].search([('groups_id', 'in', object.env.ref('payment_approval_workflow.group_payment_reviewer').id)]) if user.email])}</field>
            <field name="body_html" type="html">
<div style="margin: 0; padding: 0; font-family: Arial, sans-serif; background-color: #f5f5f5;">
    <table style="width: 100%; max-width: 600px; margin: 0 auto; background-color: #ffffff; border-collapse: collapse;">
        <!-- Header -->
        <tr>
            <td style="background-color: #800020; padding: 20px; text-align: center;">
                <h1 style="color: #ffffff; margin: 0; font-size: 24px; font-weight: bold;">
                    Payment Review Required
                </h1>
            </td>
        </tr>
        
        <!-- Content -->
        <tr>
            <td style="padding: 30px;">
                <p style="color: #333333; font-size: 16px; line-height: 1.6; margin: 0 0 20px 0;">
                    Dear Payment Reviewer,
                </p>
                
                <p style="color: #333333; font-size: 16px; line-height: 1.6; margin: 0 0 20px 0;">
                    A new payment has been submitted for your review. Please find the details below:
                </p>
                
                <!-- Payment Details -->
                <table style="width: 100%; border-collapse: collapse; margin: 20px 0; border: 1px solid #dddddd;">
                    <tr style="background-color: #f8f9fa;">
                        <td style="padding: 12px; border: 1px solid #dddddd; font-weight: bold; color: #800020;">Payment Reference:</td>
                        <td style="padding: 12px; border: 1px solid #dddddd;">${object.name}</td>
                    </tr>
                    <tr>
                        <td style="padding: 12px; border: 1px solid #dddddd; font-weight: bold; color: #800020;">Partner:</td>
                        <td style="padding: 12px; border: 1px solid #dddddd;">${object.partner_id.name}</td>
                    </tr>
                    <tr style="background-color: #f8f9fa;">
                        <td style="padding: 12px; border: 1px solid #dddddd; font-weight: bold; color: #800020;">Amount:</td>
                        <td style="padding: 12px; border: 1px solid #dddddd;">${object.currency_id.symbol} ${'{:,.2f}'.format(object.amount)}</td>
                    </tr>
                    <tr>
                        <td style="padding: 12px; border: 1px solid #dddddd; font-weight: bold; color: #800020;">Date:</td>
                        <td style="padding: 12px; border: 1px solid #dddddd;">${object.date}</td>
                    </tr>
                    <tr style="background-color: #f8f9fa;">
                        <td style="padding: 12px; border: 1px solid #dddddd; font-weight: bold; color: #800020;">Type:</td>
                        <td style="padding: 12px; border: 1px solid #dddddd;">${'Vendor Payment' if object.payment_type == 'outbound' else 'Customer Receipt'}</td>
                    </tr>
                    <tr>
                        <td style="padding: 12px; border: 1px solid #dddddd; font-weight: bold; color: #800020;">Submitted by:</td>
                        <td style="padding: 12px; border: 1px solid #dddddd;">${object.submitted_by_id.name if object.submitted_by_id else 'N/A'}</td>
                    </tr>
                </table>
                
                <!-- Action Button -->
                <div style="text-align: center; margin: 30px 0;">
                    <a href="${object.env['ir.config_parameter'].sudo().get_param('web.base.url')}/web#id=${object.id}&amp;model=account.payment&amp;view_type=form" 
                       style="background-color: #FFD700; color: #800020; padding: 12px 24px; text-decoration: none; border-radius: 5px; font-weight: bold; font-size: 16px; display: inline-block;">
                        Review Payment
                    </a>
                </div>
                
                <p style="color: #666666; font-size: 14px; line-height: 1.6; margin: 20px 0 0 0;">
                    Please log into the system to review and approve this payment.
                </p>
            </td>
        </tr>
        
