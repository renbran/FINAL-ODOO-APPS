<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Enhanced Payment Form View -->
        <record id="view_account_payment_form_approval" model="ir.ui.view">
            <field name="name">account.payment.form.approval</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                
                <!-- Add statusbar for approval state -->
                <field name="state" position="after">
                    <field name="approval_state" widget="statusbar" statusbar_visible="draft,submitted,reviewed,approved,authorized,posted"/>
                </field>

                <!-- Add approval buttons in header -->
                <header position="inside">
                    <!-- Submit for Review -->
                    <button name="action_submit_for_review" 
                            string="Submit for Review" 
                            type="object" 
                            class="btn-primary"
                            invisible="approval_state != 'draft' or not can_submit"/>
                    
                    <!-- Review -->
                    <button name="action_review" 
                            string="Review" 
                            type="object" 
                            class="btn-success"
                            invisible="approval_state != 'submitted' or not can_review"/>
                    
                    <!-- Approve -->
                    <button name="action_approve" 
                            string="Approve" 
                            type="object" 
                            class="btn-success"
                            invisible="approval_state != 'reviewed' or not can_approve"/>
                    
                    <!-- Authorize (Vendor Payments Only) -->
                    <button name="action_authorize" 
                            string="Authorize" 
                            type="object" 
                            class="btn-success"
                            invisible="approval_state != 'approved' or payment_type != 'outbound' or not can_authorize"/>
                    
                    <!-- Reject -->
                    <button name="action_reject" 
                            string="Reject" 
                            type="object" 
                            class="btn-danger"
                            invisible="approval_state not in ['submitted', 'reviewed', 'approved'] or not can_reject"/>
                    
                    <!-- Reset to Draft (Admin Only) -->
                    <button name="action_reset_to_draft" 
                            string="Reset to Draft" 
                            type="object" 
                            class="btn-warning"
                            groups="base.group_system"
                            invisible="approval_state == 'draft'"/>
                </header>

                <!-- Smart Buttons -->
                <div name="button_box" position="inside">
                    <!-- Journal Entry Smart Button -->
                    <button name="action_view_journal_entry"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-book"
                            invisible="not move_id">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Journal</span>
                            <span class="o_stat_text">Entry</span>
                        </div>
                    </button>
                    
                    <!-- QR Verification Smart Button -->
                    <button name="action_view_qr_verification"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-qrcode"
                            invisible="not verification_token">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">QR</span>
                            <span class="o_stat_text">Verification</span>
                        </div>
                    </button>
                </div>

                <!-- Make form readonly when not in draft -->
                <sheet position="attributes">
                    <attribute name="readonly">approval_state not in ['draft', 'rejected']</attribute>
                </sheet>

                <!-- Add approval fields to the form -->
                <field name="ref" position="after">
                    <!-- Verification Token and QR Code -->
                    <field name="verification_token" readonly="1" invisible="not verification_token"/>
                    <field name="verification_url" widget="url" readonly="1" invisible="not verification_url"/>
                </field>

                <!-- Add approval tracking information -->
                <field name="currency_id" position="after">
                    <!-- Approval Tracking Fields -->
                    <group string="Approval Tracking" invisible="approval_state == 'draft'">
                        <group>
                            <field name="submitted_by_id" readonly="1"/>
                            <field name="submission_date" readonly="1"/>
                            <field name="reviewer_id" readonly="1"/>
                            <field name="review_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="approver_id" readonly="1"/>
                            <field name="approval_date" readonly="1"/>
                            <field name="authorizer_id" readonly="1" invisible="payment_type != 'outbound'"/>
                            <field name="authorization_date" readonly="1" invisible="payment_type != 'outbound'"/>
                        </group>
                    </group>
                </field>

                <!-- Add rejection reason -->
                <field name="ref" position="after">
                    <field name="rejection_reason" readonly="1" invisible="approval_state != 'rejected'"/>
                </field>

                <!-- Add QR Code Image -->
                <notebook position="inside">
                    <page string="QR Code &amp; Signatures" invisible="approval_state == 'draft'">
                        <group>
                            <group string="QR Code Verification">
                                <field name="qr_code_image" widget="image" class="oe_avatar"/>
                                <field name="verification_url" widget="url" readonly="1"/>
                            </group>
                            <group string="Digital Signatures">
                                <field name="review_signature" widget="image" invisible="not review_signature"/>
                                <field name="approval_signature" widget="image" invisible="not approval_signature"/>
                                <field name="authorization_signature" widget="image" invisible="not authorization_signature"/>
                            </group>
                        </group>
                    </page>
                </notebook>

                <!-- Add invisible fields for computations -->
                <field name="partner_id" position="after">
                    <field name="can_submit" invisible="1"/>
                    <field name="can_review" invisible="1"/>
                    <field name="can_approve" invisible="1"/>
                    <field name="can_authorize" invisible="1"/>
                    <field name="can_reject" invisible="1"/>
                </field>

            </field>
        </record>

        <!-- Enhanced Payment Tree View -->
        <record id="view_account_payment_tree_approval" model="ir.ui.view">
            <field name="name">account.payment.tree.approval</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                
                <!-- Add approval state column -->
                <field name="state" position="after">
                    <field name="approval_state" string="Approval Status" widget="badge" 
                           decoration-info="approval_state in ('draft', 'submitted')"
                           decoration-warning="approval_state in ('reviewed', 'approved')"
                           decoration-success="approval_state in ('authorized', 'posted')"
                           decoration-danger="approval_state == 'rejected'"/>
                </field>

                <!-- Add reviewer information -->
                <field name="state" position="after">
                    <field name="reviewer_id" string="Reviewed By" optional="hide"/>
                    <field name="approver_id" string="Approved By" optional="hide"/>
                    <field name="authorizer_id" string="Authorized By" optional="hide"/>
                </field>

            </field>
        </record>

        <!-- Payment Search View Enhancement -->
        <record id="view_account_payment_search_approval" model="ir.ui.view">
            <field name="name">account.payment.search.approval</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                
                <!-- Add approval state search -->
                <field name="state" position="after">
                    <field name="approval_state"/>
                    <field name="reviewer_id"/>
                    <field name="approver_id"/>
                    <field name="authorizer_id"/>
                </field>

                <!-- Add filters for approval states -->
                <filter name="draft" position="after">
                    <separator/>
                    <filter string="Draft" name="approval_draft" domain="[('approval_state', '=', 'draft')]"/>
                    <filter string="Submitted" name="approval_submitted" domain="[('approval_state', '=', 'submitted')]"/>
                    <filter string="Reviewed" name="approval_reviewed" domain="[('approval_state', '=', 'reviewed')]"/>
                    <filter string="Approved" name="approval_approved" domain="[('approval_state', '=', 'approved')]"/>
                    <filter string="Authorized" name="approval_authorized" domain="[('approval_state', '=', 'authorized')]"/>
                    <filter string="Rejected" name="approval_rejected" domain="[('approval_state', '=', 'rejected')]"/>
                </filter>

                <!-- Add group by options -->
                <filter name="group_by_partner_id" position="after">
                    <filter string="Approval Status" name="group_by_approval_state" domain="[]" context="{'group_by': 'approval_state'}"/>
                    <filter string="Reviewer" name="group_by_reviewer" domain="[]" context="{'group_by': 'reviewer_id'}"/>
                    <filter string="Approver" name="group_by_approver" domain="[]" context="{'group_by': 'approver_id'}"/>
                </filter>

            </field>
        </record>

        <!-- Payments Requiring Review -->
        <record id="action_account_payment_review" model="ir.actions.act_window">
            <field name="name">Payments to Review</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('approval_state', '=', 'submitted')]</field>
            <field name="context">{'search_default_approval_submitted': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No payments waiting for review!
                </p>
                <p>
                    Payments submitted for review will appear here.
                </p>
            </field>
        </record>

        <!-- Payments Requiring Approval -->
        <record id="action_account_payment_approve" model="ir.actions.act_window">
            <field name="name">Payments to Approve</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('approval_state', '=', 'reviewed')]</field>
            <field name="context">{'search_default_approval_reviewed': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No payments waiting for approval!
                </p>
                <p>
                    Reviewed payments will appear here for your approval.
                </p>
            </field>
        </record>

        <!-- Payments Requiring Authorization -->
        <record id="action_account_payment_authorize" model="ir.actions.act_window">
            <field name="name">Payments to Authorize</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('approval_state', '=', 'approved'), ('payment_type', '=', 'outbound')]</field>
            <field name="context">{'search_default_approval_approved': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No payments waiting for authorization!
                </p>
                <p>
                    Approved vendor payments will appear here for final authorization.
                </p>
            </field>
        </record>

        <!-- Payment Approval Dashboard Menu -->
        <menuitem id="menu_payment_approval_root"
                  name="Payment Approvals"
                  parent="account.menu_finance"
                  sequence="25"/>

        <menuitem id="menu_payment_review"
                  name="To Review"
                  parent="menu_payment_approval_root"
                  action="action_account_payment_review"
                  groups="payment_approval_workflow.group_payment_reviewer"
                  sequence="10"/>

        <menuitem id="menu_payment_approve"
                  name="To Approve"
                  parent="menu_payment_approval_root"
                  action="action_account_payment_approve"
                  groups="payment_approval_workflow.group_payment_approver"
                  sequence="20"/>

        <menuitem id="menu_payment_authorize"
                  name="To Authorize"
                  parent="menu_payment_approval_root"
                  action="action_account_payment_authorize"
                  groups="payment_approval_workflow.group_payment_authorizer"
                  sequence="30"/>

    </data>
</odoo>
