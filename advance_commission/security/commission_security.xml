<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Commission Sequence -->
        <record id="seq_commission" model="ir.sequence">
            <field name="name">Commission Sequence</field>
            <field name="code">commission.sequence</field>
            <field name="prefix">COM/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Commission Groups -->
        <record id="group_commission_user" model="res.groups" forcecreate="0">
            <field name="name">Commission User</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_commission_manager" model="res.groups">
            <field name="name">Commission Manager</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('group_commission_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>