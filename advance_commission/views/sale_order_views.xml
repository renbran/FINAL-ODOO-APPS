<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_commission" model="ir.ui.view">
        <field name="name">sale.order.form.commission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Basic fields -->
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="deal_id" string="Deal ID"/>
                <field name="booking_date"/>
                <field name="buyer_id"/>
                <field name="project_id"/>
                <field name="unit_id"/>
                <field name="sale_value"/>
            </xpath>

            <!-- Commission page -->
            <xpath expr="//page[@name='other_information']" position="after">
                <page string="Commission" name="commission">
                    <group>
                        <group string="Commission Status">
                            <field name="commission_status" widget="statusbar"/>
                            <field name="commission_sequence" readonly="1"/>
                            <field name="commission_payment_date"/>
                            <field name="commission_reference"/>
                        </group>
                        <group string="Commission Notes">
                            <field name="commission_notes" widget="html"/>
                        </group>
                    </group>

                    <group string="Commission Summary">
                        <group string="Base &amp; Status">
                            <field name="gross_commission_base" readonly="1"/>
                            <field name="commission_allocation_status" readonly="1"/>
                            <field name="commission_percentage" readonly="1"/>
                            <field name="commission_variance" readonly="1"/>
                        </group>
                        <group string="Totals">
                            <field name="total_external_allocation" readonly="1"/>
                            <field name="total_internal_allocation" readonly="1"/>
                            <field name="grand_total_commission" readonly="1"/>
                            <field name="total_company_net" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="External Commission">
                            <group>
                                <group string="Broker/Agency">
                                    <field name="broker_agency_partner_id"/>
                                    <field name="broker_agency_commission_type"/>
                                    <field name="broker_agency_rate"/>
                                    <field name="broker_agency_amount"/>
                                </group>
                                <group string="Referral">
                                    <field name="referral_partner_id"/>
                                    <field name="referral_commission_type"/>
                                    <field name="referral_rate"/>
                                    <field name="referral_amount"/>
                                </group>
                            </group>
                            <group>
                                <group string="Cashback">
                                    <field name="cashback_partner_id"/>
                                    <field name="cashback_commission_type"/>
                                    <field name="cashback_rate"/>
                                    <field name="cashback_amount"/>
                                </group>
                                <group string="Other External">
                                    <field name="other_external_partner_id"/>
                                    <field name="other_external_commission_type"/>
                                    <field name="other_external_rate"/>
                                    <field name="other_external_amount"/>
                                </group>
                            </group>
                        </page>

                        <page string="Internal Commission">
                            <group>
                                <group string="Agent 1">
                                    <field name="agent1_id"/>
                                    <field name="agent1_commission_type"/>
                                    <field name="agent1_rate"/>
                                    <field name="agent1_amount"/>
                                </group>
                                <group string="Agent 2">
                                    <field name="agent2_id"/>
                                    <field name="agent2_commission_type"/>
                                    <field name="agent2_rate"/>
                                    <field name="agent2_amount"/>
                                </group>
                            </group>
                            <group>
                                <group string="Manager">
                                    <field name="manager_id"/>
                                    <field name="manager_commission_type"/>
                                    <field name="manager_rate"/>
                                    <field name="manager_amount"/>
                                </group>
                                <group string="Director">
                                    <field name="director_id"/>
                                    <field name="director_commission_type"/>
                                    <field name="director_rate"/>
                                    <field name="director_amount"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </page>
            </xpath>

            <!-- Commission buttons -->
            <xpath expr="//header//button[@name='action_confirm']" position="before">
                <button name="action_calculate_commission" 
                        string="Calculate" 
                        type="object" 
                        class="btn-primary" 
                        invisible="not show_calculate_button"/>
                <button name="action_confirm_commission" 
                        string="Confirm" 
                        type="object" 
                        class="btn-primary" 
                        invisible="not show_confirm_button"/>
                <button name="action_pay_commission" 
                        string="Mark Paid" 
                        type="object" 
                        class="btn-success" 
                        invisible="not show_pay_button"/>
                <button name="action_reset_commission" 
                        string="Reset" 
                        type="object" 
                        class="btn-secondary" 
                        invisible="not show_reset_button"/>
                <button name="action_reject_commission" 
                        string="Reject" 
                        type="object" 
                        class="btn-danger" 
                        invisible="not show_reject_button"/>
            </xpath>

            <!-- Smart buttons -->
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button name="action_view_related_purchase_orders" type="object" class="oe_stat_button" icon="fa-shopping-cart" string="POs"/>
            </xpath>
        </field>
    </record>
</odoo>