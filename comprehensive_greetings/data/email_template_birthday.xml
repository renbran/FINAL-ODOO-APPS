<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- Personal Birthday Wish Template -->
        <record id="mail_template_birthday_personal" model="mail.template">
            <field name="name">OSUS Birthday Personal Greetings</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="partner_to">{{object.id}}</field>
            <field name="email_from">{{ (object.company_id.email) or 'info@osusproperties.com' }}</field>
            <field name="subject">🎉 Happy Birthday {{ object.name }}! - OSUS Properties</field>
            <field name="email_to">{{ (object.work_email) }}</field>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Arial', sans-serif; background: linear-gradient(135deg, #8B1538 0%, #4A0E1F 100%); padding: 20px; color: #454748;">
    <div style="max-width: 600px; margin: 0 auto; background: #ffffff; border-radius: 12px; overflow: hidden; box-shadow: 0 20px 40px rgba(0,0,0,0.1);">
        
        <!-- Hero Section -->
<div style="background: linear-gradient(135deg, #8B1538 0%, #B91C47 50%, #8B1538 100%); padding: 60px 40px; color: #ffffff; text-align: center; position: relative; min-height: 300px;">
<div style="position: absolute; top: 20px; left: 30px; font-size: 40px; opacity: 0.7;">🎈🎈</div>
<div style="position: absolute; bottom: 30px; right: 40px; font-size: 30px; opacity: 0.6;">🎉✨</div>

<h1 style="font-size: 48px; font-weight: 300; letter-spacing: 2px; margin-bottom: 10px; text-shadow: 0 2px 4px rgba(0,0,0,0.3);">HAPPY</h1>
<h2 style="font-size: 64px; font-weight: 400; color: #ffffff; margin: 20px 0; text-shadow: 0 3px 6px rgba(0,0,0,0.4);">Birthday</h2>
<h3 style="font-size: 32px; font-weight: 600; color: #D4AF37; margin: 15px 0; text-shadow: 0 2px 4px rgba(0,0,0,0.3);">{{ object.name }}</h3>
<p style="font-size: 18px; font-weight: 300; opacity: 0.95; max-width: 400px; margin: 0 auto; line-height: 1.4;">Wishing you a year filled with joy, blessings, and prosperity.</p>

<div style="position: absolute; bottom: 30px; left: 50%; transform: translateX(-50%);">
<div style="font-size: 24px; font-weight: 700; letter-spacing: 3px; color: #D4AF37; text-shadow: 0 2px 4px rgba(0,0,0,0.3);">OSUS</div>
<div style="font-size: 10px; font-weight: 400; letter-spacing: 2px; color: rgba(255,255,255,0.8); margin-top: 2px;">PROPERTIES</div>
</div>
</div>

<!-- Main Content -->
<div style="padding: 50px 40px; background: #ffffff;">
<div style="font-size: 16px; line-height: 1.8; color: #454748; text-align: center; margin-bottom: 35px;">
<p style="margin-bottom: 20px;">On this special day, we want to celebrate not just another year of your life, but another year of your valuable contributions to <strong>{{ object.company_id.name or 'OSUS Properties' }}</strong>.</p>

<div style="background: linear-gradient(135deg, #F5F5F5 0%, #E8E8E8 100%); padding: 25px; border-radius: 10px; border-left: 4px solid #D4AF37; margin: 30px 0; text-align: center;">
<div style="font-size: 18px; font-weight: 500; color: #8B1538; font-style: italic;">
                        "You are one of our most valued team members, and your dedication continues to inspire us every day."
                    </div>
</div>

<p style="margin-bottom: 20px;">As you embark on another year of success and achievements, we wish you nothing but happiness, prosperity, and continued excellence in all your endeavors.</p>

<p><strong>May this year bring you joy, success, and all the wonderful moments you deserve!</strong></p>
</div>

<div style="text-align: center; margin-top: 40px; padding-top: 30px; border-top: 1px solid #E0E0E0;">
<div style="font-size: 14px; color: #999999; margin-bottom: 10px;">Warmest Regards,</div>
<div style="font-size: 18px; font-weight: 600; color: #8B1538; letter-spacing: 1px;">{{ object.company_id.name or 'OSUS Properties' }}</div>
</div>
</div>

<!-- Footer -->
<div style="background: linear-gradient(135deg, #F8F8F8 0%, #E8E8E8 100%); padding: 30px; text-align: center; border-top: 1px solid #E0E0E0;">
<div style="font-size: 12px; color: #666666; line-height: 1.6;">
<strong style="color: #8B1538; font-weight: 600;">{{ object.company_id.name or 'OSUS Properties' }}</strong><br/>
                Sheikh Zayed Road, Single Business Tower<br/>
                Office 2902, 29th Floor, Dubai, UAE
            </div>

<div style="margin-top: 15px; font-size: 11px; color: #999999;">
<span>{{ object.company_id.phone or '+971 4 XXX XXXX' }}</span>
                | <a href="mailto:{{ object.company_id.email or 'info@osusproperties.com' }}" style="color: #8B1538; text-decoration: none;">{{ object.company_id.email or 'info@osusproperties.com' }}</a>
                | <a href="https://{{ object.company_id.website or 'www.osusproperties.com' }}" style="color: #8B1538; text-decoration: none;">{{ object.company_id.website or 'www.osusproperties.com' }}</a>
</div>

<div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #E0E0E0; font-size: 10px; color: #AAAAAA;">
                Powered by <a href="https://osusproperties.com" target="_blank" style="color: #D4AF37; text-decoration: none; font-weight: 500;">OSUS PROPERTIES</a>
</div>
</div>
</div>
</div>
]]>            </field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">{{object.lang}}</field>
        </record>

        <!-- Birthday Announcement Template -->
        <record id="mail_template_birthday_announcement" model="mail.template">
            <field name="name">OSUS Birthday Team Announcement</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="partner_to">{{object.id}}</field>
            <field name="email_from">{{ (object.company_id.email) or 'info@osusproperties.com' }}</field>
            <field name="subject">🎉 Today is {{ object.name }}'s Birthday - Let's Celebrate! - OSUS Properties</field>
            <field name="email_to">{{ (object.work_email) }}</field>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Arial', sans-serif; background: #f5f5f5; padding: 20px;">
    <div style="width: 600px; max-width: 600px; margin: 0 auto; background: #ffffff; box-shadow: 0 15px 40px rgba(0,0,0,0.3); border-radius: 8px; overflow: hidden;">
        
        <!-- Header -->
<div style="background: #ffffff; padding: 25px 40px; border-bottom: 3px solid #8B1538; text-align: center;">
<div style="font-size: 28px; font-weight: 700; color: #8B1538; letter-spacing: 2px;">OSUS PROPERTIES</div>
</div>

<!-- Hero Section -->
<div style="background: linear-gradient(135deg, #8b1538 0%, #b91c47 100%); position: relative; overflow: hidden; text-align: center; color: #ffffff; padding: 80px 40px;">
<div style="position: absolute; top: 30px; left: 40px; font-size: 28px; opacity: 0.3;">🎈</div>
<div style="position: absolute; bottom: 40px; right: 40px; font-size: 24px; opacity: 0.3;">🎉</div>

<h1 style="margin: 0 0 20px 0; text-shadow: 0px 2px 4px rgba(0,0,0,0.3); letter-spacing: 2px; font-size: 54px; color: #ffffff; line-height: 1.2; font-weight: 300;">🎉 CELEBRATION TIME! 🎉</h1>
<div style="margin: 0 0 30px 0; line-height: 0.9; text-shadow: 0px 3px 6px rgba(0,0,0,0.3); color: #d4af37; font-style: italic; font-weight: 600; font-size: 62px;">Birthday</div>

<div style="border-radius: 15px; border: 2px solid #d4af37; padding: 25px; margin: 30px auto; max-width: 400px; background: rgba(212,175,55,0.2);">
<div style="margin: 0 0 8px 0; text-shadow: 0px 2px 4px rgba(0,0,0,0.3); letter-spacing: 1px; text-transform: uppercase; color: #d4af37; font-weight: 700; font-size: 32px;">{{ object.name }}</div>
<div style="font-weight: 400; color: #ffffff; font-size: 14px;">✨ Let's Celebrate Together ✨</div>
</div>

<div style="margin: 0px auto 40px auto; line-height: 1.5; max-width: 450px; opacity: 0.9; font-weight: 300; font-size: 18px;">
                Join us in wishing our amazing colleague a very happy birthday!
            </div>
</div>

<!-- Content Section -->
<div style="padding: 60px 40px; background-color: #ffffff;">
<div style="margin: 0 0 40px 0; color: #444444; line-height: 1.8; font-size: 16px; text-align: center;">
<p style="margin: 0 0 20px 0;">Today is a special day as we celebrate <strong>{{ object.name }}</strong>'s birthday at <strong>{{ object.company_id.name or 'OSUS Properties' }}</strong>!</p>

<div style="margin: 40px 0; text-align: center;">
<span style="margin: 0 0 20px 0; font-size: 48px; display: block;">🎂</span>
<div style="margin: 0 0 20px 0; font-weight: 500; color: #8b1538; font-size: 18px;">Let's make this day extra special!</div>
<div style="margin: 20px 0; letter-spacing: 8px; font-size: 32px;">🎈🎈🎈🎈🎈</div>
</div>

<p style="margin: 0 0 20px 0;">We're so grateful to have such a wonderful person as part of our OSUS Properties family. Your positive energy and dedication make our workplace brighter every day.</p>
</div>

<div style="border-radius: 0px; border-left: 4px solid #8b1538; padding: 30px; margin: 40px 0; position: relative; background: linear-gradient(135deg, #f9f9f9 0%, #f0f0f0 100%);">
<div style="margin: 0 0 0 30px; font-weight: 500; text-align: center; color: #8b1538; font-style: italic; font-size: 20px;">
                    Join us in sending warm birthday wishes and making this celebration memorable!
                </div>
</div>
</div>

<!-- CTA Section -->
<div style="padding: 50px 40px; text-align: center; background: linear-gradient(135deg, #8b1538 0%, #b91c47 100%);">
<div style="margin: 20px 0; font-size: 24px; color: #d4af37;">✨ ⭐ ✨</div>
<a href="https://t.me/+bWdZc6_TZME5ODM0" target="_blank" style="text-decoration: none; border-radius: 50px; padding: 18px 40px; box-shadow: 0px 6px 20px rgba(211,175,55,0.4); letter-spacing: 1px; text-transform: uppercase; font-size: 16px; font-weight: 600; background-color: #d4af37; display: inline-block; color: #8b1538;">
                🎉 Send Birthday Greetings 🎉
            </a>
<div style="margin: 20px 0; font-size: 24px; color: #d4af37;">🎊 🌟 🎊</div>
</div>

<!-- Footer -->
<div style="padding: 40px; text-align: center; color: #ffffff; background-color: #2c2c2c;">
<div style="margin: 0 0 20px 0;">
<div style="margin: 0 0 10px 0; color: #d4af37; font-weight: 600; font-size: 18px;">{{ object.company_id.name or 'OSUS Properties' }}</div>
<div style="opacity: 0.8; line-height: 1.6; font-size: 14px;">
                    Sheikh Zayed Road, Single Business Tower<br/>
                    Office 2902, 29th Floor, Dubai, UAE
                </div>
</div>

<div style="margin: 20px 0 0 0; font-size: 12px;">
<span>{{ object.company_id.phone or '+971 4 XXX XXXX' }}</span>
                | <a href="mailto:{{ object.company_id.email or 'info@osusproperties.com' }}" style="text-decoration: none; margin: 0px 10px; color: #ffffff;">{{ object.company_id.email or 'info@osusproperties.com' }}</a>
                | <a href="https://{{ object.company_id.website or 'www.osusproperties.com' }}" style="text-decoration: none; margin: 0px 10px; color: #ffffff;">{{ object.company_id.website or 'www.osusproperties.com' }}</a>
</div>

<div style="border-top: 1px solid #444444; padding: 20px 0 0 0; margin: 30px 0 0 0; opacity: 0.6; font-size: 11px;">
<strong>Warmest Regards,</strong><br/>
                The OSUS Properties Team
            </div>
</div>
</div>
</div>
]]>            </field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">{{object.lang}}</field>
        </record>

    </data>
</odoo> 