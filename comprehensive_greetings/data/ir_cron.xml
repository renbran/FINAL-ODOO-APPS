<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- Birthday Reminder Cron Job -->
        <record id="birthday_reminder_cron" model="ir.cron">
            <field name="name">OSUS Properties Birthday Reminder</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="state">code</field>
            <field name="code">model._cron_birthday_reminder()</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- Work Anniversary Reminder Cron Job -->
        <record id="work_anniversary_reminder_cron" model="ir.cron">
            <field name="name">OSUS Properties Work Anniversary Reminder</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="state">code</field>
            <field name="code">model._cron_anniversary_reminder()</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

    </data>
</odoo>