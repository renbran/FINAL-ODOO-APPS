<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Security Groups for HR Greetings System -->
        
        <!-- HR Greeting Coordinator Group -->
        <record id="group_osus_hr_greeting_coordinator" model="res.groups">
            <field name="name">OSUS HR Greeting Coordinator</field>
            <field name="comment">Can manage birthday and anniversary greetings for employees</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>
        
    </data>
</odoo>
        
        <!-- Greeting Coordinator Rule -->
        <record id="greeting_coordinator_rule" model="ir.rule">
            <field name="name">OSUS Greeting Coordinator Rule</field>
            <field name="model_id" ref="model_comprehensive_greeting"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_osus_greeting_coordinator'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Greeting Manager Rule -->
        <record id="greeting_manager_rule" model="ir.rule">
            <field name="name">OSUS Greeting Manager Rule</field>
            <field name="model_id" ref="model_comprehensive_greeting"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_osus_greeting_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Template Access Rules -->
        <record id="template_user_rule" model="ir.rule">
            <field name="name">OSUS Template User Rule</field>
            <field name="model_id" ref="model_comprehensive_greeting_template"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_osus_greeting_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Category Access Rules -->
        <record id="category_user_rule" model="ir.rule">
            <field name="name">OSUS Category User Rule</field>
            <field name="model_id" ref="model_comprehensive_greeting_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_osus_greeting_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
    </data>
</odoo>
