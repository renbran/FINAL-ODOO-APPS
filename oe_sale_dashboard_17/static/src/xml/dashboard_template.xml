<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="oe_sale_dashboard_17.yearly_sales_dashboard_template">
        <div class="o_oe_sale_dashboard_17_container">
            <!-- Loading State -->
            <div t-if="state.isLoading" class="o_dashboard_loading_overlay">
                <div class="o_dashboard_spinner">
                    <i class="fa fa-spinner fa-spin fa-3x"></i>
                </div>
                <h4>Loading Dashboard Data...</h4>
            </div>
            
            <!-- Error State -->
            <div t-elif="state.hasError" class="alert alert-danger">
                <h4><i class="fa fa-exclamation-triangle"></i> Dashboard Error</h4>
                <p t-esc="state.errorMessage"/>
                <button class="btn btn-primary" t-on-click="_reloadDashboard">
                    <i class="fa fa-refresh"></i> Retry
                </button>
            </div>
            
            <!-- Main Dashboard Content -->
            <div t-else="" class="o_dashboard_main_content">
                <!-- Date Range Controls -->
                <div class="o_dashboard_controls mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Date Range:</label>
                                <div class="input-group">
                                    <input type="date" 
                                           class="form-control" 
                                           t-model="state.startDate"
                                           t-on-change="_onDateRangeChange"/>
                                    <span class="input-group-text">to</span>
                                    <input type="date" 
                                           class="form-control" 
                                           t-model="state.endDate"
                                           t-on-change="_onDateRangeChange"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Sales Type:</label>
                                <select class="form-control" t-model="state.selectedSalesType" t-on-change="_onSalesTypeChange">
                                    <option value="">All Sales Types</option>
                                    <option t-foreach="state.salesTypes" t-as="salesType" t-key="salesType.id" t-att-value="salesType.id" t-esc="salesType.name"/>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- KPI Cards -->
                <div class="o_oe_sale_dashboard_17_container__kpi-grid row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="card h-100 kpi-card kpi-quotations">
                            <div class="card-body text-center">
                                <i class="fa fa-file-text-o fa-2x mb-2 text-info"></i>
                                <h3 class="kpi-value" t-esc="state.kpis.quotations.formatted"/>
                                <p class="kpi-label mb-0">Total Quotations</p>
                                <small class="text-muted" t-esc="state.kpis.quotations.count + ' items'"/>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <div class="card h-100 kpi-card kpi-sales">
                            <div class="card-body text-center">
                                <i class="fa fa-shopping-cart fa-2x mb-2 text-success"></i>
                                <h3 class="kpi-value" t-esc="state.kpis.sales.formatted"/>
                                <p class="kpi-label mb-0">Sales Orders</p>
                                <small class="text-muted" t-esc="state.kpis.sales.count + ' items'"/>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <div class="card h-100 kpi-card kpi-invoiced">
                            <div class="card-body text-center">
                                <i class="fa fa-money fa-2x mb-2 text-warning"></i>
                                <h3 class="kpi-value" t-esc="state.kpis.invoiced.formatted"/>
                                <p class="kpi-label mb-0">Invoiced Sales</p>
                                <small class="text-muted" t-esc="state.kpis.invoiced.count + ' items'"/>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <div class="card h-100 kpi-card kpi-conversion">
                            <div class="card-body text-center">
                                <i class="fa fa-line-chart fa-2x mb-2 text-primary"></i>
                                <h3 class="kpi-value" t-esc="state.kpis.conversionRate"/>
                                <p class="kpi-label mb-0">Conversion Rate</p>
                                <small class="text-muted">Quote to Sale</small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Charts Section -->
                <div class="row">
                    <!-- Monthly Trend Chart -->
                    <div class="col-md-8 mb-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fa fa-line-chart"></i> Monthly Sales Trend
                                </h5>
                            </div>
                            <div class="card-body">
                                <canvas id="monthlyTrendChart" width="400" height="200"></canvas>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Sales Distribution Chart -->
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fa fa-pie-chart"></i> Revenue Distribution
                                </h5>
                            </div>
                            <div class="card-body">
                                <canvas id="revenueDistributionChart" width="200" height="200"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Data Tables Section -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fa fa-table"></i> Recent Sales Activity
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Customer</th>
                                                <th>Order</th>
                                                <th>Amount</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="state.recentOrders" t-as="order" t-key="order.id">
                                                <td t-esc="order.date"/>
                                                <td t-esc="order.partner_name"/>
                                                <td t-esc="order.name"/>
                                                <td t-esc="order.amount_formatted"/>
                                                <td>
                                                    <span class="badge" t-att-class="'badge-' + order.status_class" t-esc="order.status_text"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
