<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Dashboard Client Action -->
        <record id="action_sales_dashboard" model="ir.actions.client">
            <field name="name">Executive Sales Dashboard</field>
            <field name="tag">oe_sale_dashboard_17_action</field>
            <field name="target">current</field>
            <field name="context">{}</field>
        </record>

        <!-- Main Menu Item -->
        <menuitem id="menu_sales_dashboard_main"
                  name="Sales Dashboard"
                  parent="sale.sale_menu_root"
                  action="action_sales_dashboard"
                  sequence="1"
                  groups="sales_team.group_sale_manager,sales_team.group_sale_salesman"/>

        <!-- Alternative Menu for Reports Section -->
        <menuitem id="menu_sales_dashboard_reports"
                  name="Executive Dashboard"
                  parent="sale.menu_sale_report"
                  action="action_sales_dashboard"
                  sequence="1"
                  groups="sales_team.group_sale_manager"/>

    </data>
</odoo>