<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sales Dashboard View -->
    <record id="view_sales_dashboard_form" model="ir.ui.view">
        <field name="name">sales.dashboard.form</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <form string="Sales Dashboard" create="false" edit="false">
                <sheet>
                    <div class="oe_title">
                        <h1>Executive Sales Dashboard</h1>
                    </div>
                    
                    <!-- Dashboard Container -->
                    <div class="o_sales_dashboard_container">
                        <!-- Loading State -->
                        <div class="o_dashboard_loading" style="display: none;">
                            <div class="fa fa-spinner fa-spin"></div>
                            <p>Loading dashboard data...</p>
                        </div>
                        
                        <!-- Main Dashboard Content -->
                        <div class="o_dashboard_content">
                            <!-- KPI Section -->
                            <div class="row o_dashboard_kpi_section">
                                <div class="col-md-3">
                                    <div class="card o_kpi_card">
                                        <div class="card-body">
                                            <h5 class="card-title">Total Quotations</h5>
                                            <h2 class="kpi-value" id="total_quotations">0</h2>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card o_kpi_card">
                                        <div class="card-body">
                                            <h5 class="card-title">Sales Orders</h5>
                                            <h2 class="kpi-value" id="total_sales">0</h2>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card o_kpi_card">
                                        <div class="card-body">
                                            <h5 class="card-title">Invoiced Amount</h5>
                                            <h2 class="kpi-value" id="total_invoiced">0</h2>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card o_kpi_card">
                                        <div class="card-body">
                                            <h5 class="card-title">Conversion Rate</h5>
                                            <h2 class="kpi-value" id="conversion_rate">0%</h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Charts Section -->
                            <div class="row o_dashboard_charts_section">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Monthly Sales Trend</h5>
                                        </div>
                                        <div class="card-body">
                                            <canvas id="salesTrendChart" width="400" height="200"></canvas>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Sales Distribution</h5>
                                        </div>
                                        <div class="card-body">
                                            <canvas id="salesDistributionChart" width="200" height="200"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_sales_dashboard" model="ir.actions.client">
        <field name="name">Executive Sales Dashboard</field>
        <field name="tag">sales_dashboard_action</field>
        <field name="target">current</field>
    </record>
</odoo>
