<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Dashboard View Definition -->
        <record id="view_sales_dashboard" model="ir.ui.view">
            <field name="name">sales.dashboard.view</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <div class="oe_title">
                            <h1>Executive Sales Dashboard</h1>
                        </div>
                    </header>
                    <sheet>
                        <div class="o_dashboard_container">
                            <!-- Dashboard content will be rendered by JavaScript component -->
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>