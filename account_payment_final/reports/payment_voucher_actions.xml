<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- OSUS Payment Voucher Report Action -->
        <record id="action_report_payment_voucher_osus" model="ir.actions.report">
            <field name="name">OSUS Payment Voucher</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">account_payment_final.report_payment_voucher_osus</field>
            <field name="print_report_name">
                ('Receipt Voucher - %s' if object.payment_type == 'inbound' else 'Payment Voucher - %s') % (object.voucher_number or object.name)
            </field>
            <field name="binding_model_id" ref="account.model_account_payment"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="base.paperformat_euro"/>
        </record>

        <!-- Standard Payment Voucher Report Action -->
        <record id="action_report_payment_voucher_standard" model="ir.actions.report">
            <field name="name">Standard Payment Voucher</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">account_payment_final.report_payment_voucher_standard</field>
            <field name="print_report_name">(object.voucher_number or 'Voucher')</field>
            <field name="binding_model_id" ref="account.model_account_payment"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="base.paperformat_euro"/>
        </record>
    </data>
</odoo>