<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Enhanced Payment Form View -->
        <record id="view_account_payment_form_enhanced" model="ir.ui.view">
            <field name="name">account.payment.form.enhanced</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                
                <!-- Replace header with enhanced workflow -->
                <xpath expr="//header" position="replace">
                    <header>
                        <!-- Enhanced Approval State Status Bar with real-time updates -->
                        <field name="approval_state" widget="statusbar" 
                               statusbar_visible="draft,waiting_approval,approved,posted"
                               statusbar_colors='{"draft":"blue","waiting_approval":"orange","approved":"green","posted":"success","cancelled":"secondary"}'
                               options="{'clickable_stages': [('draft', 'Set to Draft'), ('cancelled', 'Cancel')]}"
                               readonly="0"/>
                        
                        <!-- Enhanced Workflow Action Buttons with dynamic visibility -->
                        <button name="action_submit_for_approval" 
                                string="Submit for Approval" 
                                type="object" 
                                class="btn-primary"
                                invisible="approval_state != 'draft' or not partner_id or not amount"
                                confirm="Are you sure you want to submit this payment for approval?"/>
                        
                        <button name="action_approve_and_post" 
                                string="Approve &amp; Post" 
                                type="object" 
                                class="btn-success"
                                groups="account.group_account_invoice"
                                invisible="approval_state != 'waiting_approval'"
                                confirm="Are you sure you want to approve and post this payment?"/>
                        
                        <button name="action_reject_payment" 
                                string="Reject" 
                                type="object" 
                                class="btn-warning"
                                groups="account.group_account_invoice"
                                invisible="approval_state != 'waiting_approval'"
                                confirm="Are you sure you want to reject this payment?"/>
                        
                        <!-- Enhanced Post Button -->
                        <button name="action_post" 
                                string="Post Payment" 
                                type="object" 
                                class="btn-success"
                                invisible="approval_state != 'approved' or state != 'draft'"
                                confirm="Are you sure you want to post this payment?"/>
                        
                        <!-- Print Actions with enhanced visibility -->
                        <button name="action_print_osus_voucher" 
                                string="Print Voucher" 
                                type="object" 
                                class="btn-primary"
                                icon="fa-print"
                                invisible="approval_state in ['draft'] or not voucher_number"/>
                        
                        <!-- Enhanced Cancel/Reset Actions -->
                        <button name="action_cancel" 
                                string="Cancel" 
                                type="object" 
                                class="btn-secondary"
                                groups="account.group_account_manager"
                                confirm="Are you sure you want to cancel this payment? This action cannot be undone."
                                invisible="state in ['posted', 'cancel'] or approval_state in ['cancelled', 'posted']"/>
                        
                        <button name="action_draft" 
                                string="Reset to Draft" 
                                type="object" 
                                class="btn-warning"
                                groups="account.group_account_manager"
                                invisible="approval_state not in ['cancelled']"
                                confirm="Are you sure you want to reset this payment to draft?"/>
                        
                        <!-- Real-time Status Indicator -->
                        <div class="oe_button_box">
                            <button class="oe_stat_button" type="object" name="action_view_approval_details" icon="fa-info-circle">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="approval_state" readonly="1" string="Status"/>
                                    </span>
                                    <span class="o_stat_text">Current State</span>
                                </div>
                            </button>
                        </div>
                    </header>
                </xpath>
                
                <!-- Enhanced voucher fields with real-time updates -->
                <xpath expr="//field[@name='partner_id']" position="before">
                    <div class="oe_title">
                        <h1>
                            <field name="voucher_number" readonly="1" 
                                   placeholder="Will be auto-generated"
                                   class="o_field_highlight"/>
                        </h1>
                        <h3>
                            <field name="payment_type" widget="radio" 
                                   options="{'horizontal': true}"
                                   readonly="approval_state not in ['draft', 'cancelled']"
                                   class="o_field_payment_type"/>
                        </h3>
                        <!-- Real-time status indicator -->
                        <div class="alert alert-info" invisible="approval_state == 'draft'">
                            <strong>Status: </strong>
                            <field name="approval_state" readonly="1" string=""/>
                            <span invisible="not actual_approver_id"> | Approved by: </span>
                            <field name="actual_approver_id" invisible="not actual_approver_id" readonly="1"/>
                        </div>
                    </div>
                </xpath>
                
                <!-- Enhanced field attributes with dynamic readonly states -->
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="readonly">approval_state not in ['draft', 'cancelled']</attribute>
                    <attribute name="required">1</attribute>
                    <attribute name="placeholder">Select partner for payment</attribute>
                </xpath>
                
                <xpath expr="//field[@name='amount']" position="attributes">
                    <attribute name="readonly">approval_state not in ['draft', 'cancelled']</attribute>
                    <attribute name="required">1</attribute>
                    <attribute name="class">o_field_monetary</attribute>
                </xpath>
                
                <!-- Enhanced destination account field with responsiveness -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="destination_account_id" 
                           readonly="approval_state not in ['draft', 'cancelled']"
                           invisible="payment_type != 'outbound'"
                           string="Destination Account"/>
                </xpath>
                
                <!-- Enhanced journal field -->
                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name="readonly">approval_state not in ['draft', 'cancelled']</attribute>
                    <attribute name="required">1</attribute>
                </xpath>
                
                <!-- Enhanced date field -->
                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="readonly">approval_state not in ['draft', 'cancelled']</attribute>
                    <attribute name="required">1</attribute>
                </xpath>
                
                <!-- Enhanced reference field -->
                <!-- Enhanced Voucher Information Group -->
                <xpath expr="//field[@name='ref']" position="after">
                    <group name="voucher_info" string="Voucher Information" col="2">
                        <field name="remarks" 
                               readonly="approval_state == 'posted'"
                               placeholder="Additional remarks or notes"/>
                        <field name="voucher_number" readonly="1"/>
                        <field name="authorized_by" readonly="1" invisible="not authorized_by"/>
                        <field name="approver_date" readonly="1" invisible="not approver_date"/>
                    </group>
                    
                    <!-- Approval Workflow Information -->
                    <group name="approval_info" string="Approval Information" col="2" 
                           invisible="approval_state in ['draft']">
                        <field name="approver_id" readonly="1" invisible="not approver_id"/>
                        <field name="approval_state" readonly="1" widget="badge" 
                               decoration-info="approval_state == 'draft'"
                               decoration-warning="approval_state == 'waiting_approval'"
                               decoration-success="approval_state in ['approved', 'posted']"
                               decoration-muted="approval_state == 'cancelled'"/>
                    </group>
                    
                    <!-- QR Code Section -->
                    <group name="qr_info" string="QR Code" col="1" 
                           invisible="approval_state == 'draft' or not qr_code">
                        <field name="qr_in_report" widget="boolean_toggle"/>
                        <field name="qr_code" widget="image" 
                               readonly="1" 
                               class="oe_avatar"
                               options="{'size': [150, 150]}"/>
                    </group>
                </xpath>
                
                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="readonly">approval_state not in ['draft', 'cancelled']</attribute>
                </xpath>
                
                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name="readonly">approval_state not in ['draft', 'cancelled']</attribute>
                </xpath>
                
                <!-- Add custom fields to existing form -->
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="remarks" 
                           readonly="approval_state not in ['draft', 'cancelled']"
                           placeholder="Enter additional remarks or purpose for this payment..."
                           widget="text"/>
                </xpath>
                
                <!-- Add notebook at the end of sheet -->
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <!-- Approval Workflow Tab -->
                        <page string="Approval Workflow" name="approval_workflow">
                            <group string="Current Status">
                                <field name="approval_state" readonly="1" widget="badge"/>
                            </group>
                            
                            <group string="Approval Details" invisible="approval_state in ['draft']">
                                <group>
                                    <field name="approver_id" readonly="1"/>
                                    <field name="approver_date" readonly="1"/>
                                </group>
                                <group invisible="approval_state not in ['approved', 'posted']">
                                    <field name="actual_approver_id" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- QR Code Tab -->
                        <page string="QR Code &amp; Verification" name="qr_code" 
                              invisible="approval_state in ['draft']">
                            <group>
                                <group string="QR Code Settings">
                                    <field name="qr_in_report"/>
                                </group>
                                <group string="QR Code Preview" invisible="not qr_code">
                                    <field name="qr_code" widget="image" 
                                           options="{'size': [150, 150]}"/>
                                </group>
                            </group>
                            
                            <div class="alert alert-info" invisible="not qr_code">
                                <p><strong>QR Code Information:</strong></p>
                                <p>This QR code contains payment verification data and can be scanned 
                                to verify payment details securely.</p>
                            </div>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
        
        <!-- Enhanced Payment Tree View -->
        <record id="view_account_payment_tree_enhanced" model="ir.ui.view">
            <field name="name">account.payment.tree.enhanced</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="voucher_number" optional="show"/>
                    <field name="approval_state" widget="badge" optional="show"
                           decoration-info="approval_state == 'draft'"
                           decoration-warning="approval_state == 'waiting_approval'"
                           decoration-success="approval_state in ['approved', 'posted']"
                           decoration-danger="approval_state == 'cancelled'"/>
                </xpath>
                <xpath expr="//field[@name='amount_company_currency_signed']" position="after">
                    <field name="actual_approver_id" optional="hide"/>
                    <field name="approver_date" optional="hide"/>
                </xpath>
            </field>
        </record>
        
        <!-- Enhanced Payment Search View -->
        <record id="view_account_payment_search_enhanced" model="ir.ui.view">
            <field name="name">account.payment.search.enhanced</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="voucher_number"/>
                    <field name="approval_state"/>
                    <field name="remarks"/>
                    <separator/>
                    <filter string="Draft" name="filter_draft" 
                            domain="[('approval_state', '=', 'draft')]"/>
                    <filter string="Waiting Approval" name="filter_waiting" 
                            domain="[('approval_state', '=', 'waiting_approval')]"/>
                    <filter string="Approved" name="filter_approved" 
                            domain="[('approval_state', '=', 'approved')]"/>
                    <filter string="Posted" name="filter_posted" 
                            domain="[('approval_state', '=', 'posted')]"/>
                    <filter string="Cancelled" name="filter_cancelled" 
                            domain="[('approval_state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="My Approvals" name="filter_my_approvals"
                            domain="[('actual_approver_id', '=', uid)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_approval_state" string="Approval State" 
                                context="{'group_by': 'approval_state'}"/>
                        <filter name="group_approver" string="Approver" 
                                context="{'group_by': 'actual_approver_id'}"/>
                    </group>
                </xpath>
            </field>
        </record>
        
        <!-- Enhanced Payment Register Wizard -->
        <record id="view_account_payment_register_form_enhanced" model="ir.ui.view">
            <field name="name">account.payment.register.form.enhanced</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="remarks" 
                           placeholder="Enter additional remarks for the payment voucher..."
                           widget="text"/>
                </xpath>
            </field>
        </record>
        
        <!-- Actions -->
        <record id="action_payment_voucher_all" model="ir.actions.act_window">
            <field name="name">Payment Vouchers</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('payment_type', 'in', ['outbound', 'inbound'])]</field>
            <field name="context">{
                'default_payment_type': 'outbound',
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No payment vouchers found
                </p>
                <p>
                    Payment vouchers will appear here.
                </p>
            </field>
        </record>
        
        <record id="action_payment_my_submissions" model="ir.actions.act_window">
            <field name="name">My Submissions</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('create_uid', '=', uid)]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    You haven't created any payments yet
                </p>
                <p>
                    Payments you create will appear here.
                </p>
            </field>
        </record>
        
        <record id="action_payment_my_approvals" model="ir.actions.act_window">
            <field name="name">My Approvals</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('actual_approver_id', '=', uid)]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    You haven't approved any payments yet
                </p>
                <p>
                    Payments you approve will appear here.
                </p>
            </field>
        </record>
        
        <!-- Actions -->
        <record id="action_payment_pending_approval" model="ir.actions.act_window">
            <field name="name">Pending Approvals</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('approval_state', '=', 'waiting_approval')]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No payments pending approval
            </p>
            <p>
                Payments submitted for approval will appear here.
            </p>
            </field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_payment_vouchers_root"
              name="Payment Vouchers"
              parent="account.menu_finance_payables"
              sequence="10"/>
        
        <menuitem id="menu_payment_vouchers_all"
              name="All Vouchers"
              parent="menu_payment_vouchers_root"
              action="action_payment_voucher_all"
              sequence="10"/>
        
        <menuitem id="menu_payment_pending_approval"
              name="Pending Approvals"
              parent="menu_payment_vouchers_root"
              action="action_payment_pending_approval"
              groups="account.group_account_invoice"
              sequence="20"/>
        
        <menuitem id="menu_payment_my_submissions"
              name="My Submissions"
              parent="menu_payment_vouchers_root"
              action="action_payment_my_submissions"
              sequence="30"/>
        
        <menuitem id="menu_payment_my_approvals"
              name="My Approvals"
              parent="menu_payment_vouchers_root"
              action="action_payment_my_approvals"
              groups="account.group_account_invoice"
              sequence="40"/>
        </data>
    </odoo>