<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Enhanced Payment Form View -->
        <record id="view_account_payment_form_enhanced" model="ir.ui.view">
            <field name="name">account.payment.form.enhanced</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                
                <!-- Replace header with enhanced workflow -->
                <xpath expr="//header" position="replace">
                    <header>
                        <!-- Enhanced Approval State Status Bar with 4-stage workflow -->
                        <field name="approval_state" widget="statusbar" 
                               statusbar_visible="draft,under_review,for_approval,for_authorization,approved,posted"
                               statusbar_colors='{"draft":"blue","under_review":"orange","for_approval":"orange","for_authorization":"orange","approved":"green","posted":"success","cancelled":"secondary"}'
                               options="{'clickable_stages': [('draft', 'Set to Draft'), ('cancelled', 'Cancel')]}"
                               readonly="0"/>
                        
                        <!-- Enhanced Workflow Action Buttons with 4-stage logic -->
                        <button name="action_submit_for_review" 
                                string="Submit for Review" 
                                type="object" 
                                class="btn-primary"
                                invisible="approval_state != 'draft' or not partner_id or not amount"
                                confirm="Are you sure you want to submit this payment for review?"/>
                        
                        <!-- Review Stage Button -->
                        <button name="action_review_payment" 
                                string="Review &amp; Forward" 
                                type="object" 
                                class="btn-info"
                                groups="account_payment_final.group_payment_voucher_reviewer"
                                invisible="approval_state != 'under_review'"
                                confirm="Are you sure you want to review and forward this payment?"/>
                        
                        <!-- Approval Stage Button (Vendor payments) -->
                        <button name="action_approve_payment" 
                                string="Approve &amp; Forward" 
                                type="object" 
                                class="btn-warning"
                                groups="account_payment_final.group_payment_voucher_approver"
                                invisible="approval_state != 'for_approval' or payment_type != 'outbound'"
                                confirm="Are you sure you want to approve this vendor payment?"/>
                        
                        <!-- Direct Approval for Customer Receipts -->
                        <button name="action_approve_payment" 
                                string="Approve" 
                                type="object" 
                                class="btn-success"
                                groups="account_payment_final.group_payment_voucher_approver"
                                invisible="approval_state != 'under_review' or payment_type != 'inbound'"
                                confirm="Are you sure you want to approve this customer receipt?"/>
                        
                        <!-- Authorization Stage Button (Vendor payments only) -->
                        <button name="action_authorize_payment" 
                                string="Authorize" 
                                type="object" 
                                class="btn-warning"
                                groups="account_payment_final.group_payment_voucher_authorizer"
                                invisible="approval_state != 'for_authorization' or payment_type != 'outbound'"
                                confirm="Are you sure you want to authorize this payment?"/>
                        
                        <!-- Post Button -->
                        <button name="action_post_payment" 
                                string="Post Payment" 
                                type="object" 
                                class="btn-success"
                                groups="account_payment_final.group_payment_voucher_poster"
                                invisible="approval_state != 'approved'"
                                confirm="Are you sure you want to post this payment?"/>
                        
                        <!-- Reject Button (appears at multiple stages) -->
                        <button name="action_reject_payment" 
                                string="Reject" 
                                type="object" 
                                class="btn-danger"
                                invisible="approval_state not in ['under_review', 'for_approval', 'for_authorization']"
                                confirm="Are you sure you want to reject this payment? It will be returned to draft."/>
                        
                        <!-- Print Actions with enhanced visibility -->
                        <button name="action_print_osus_voucher" 
                                string="Print Voucher" 
                                type="object" 
                                class="btn-primary"
                                icon="fa-print"
                                invisible="approval_state in ['draft'] or not voucher_number"/>
                        
                        <!-- Enhanced Cancel/Reset Actions -->
                        <button name="action_cancel" 
                                string="Cancel" 
                                type="object" 
                                class="btn-secondary"
                                groups="account.group_account_manager"
                                confirm="Are you sure you want to cancel this payment? This action cannot be undone."
                                invisible="approval_state in ['cancelled', 'posted']"/>
                        
                        <button name="action_draft" 
                                string="Reset to Draft" 
                                type="object" 
                                class="btn-warning"
                                groups="account.group_account_manager"
                                invisible="approval_state not in ['cancelled']"
                                confirm="Are you sure you want to reset this payment to draft?"/>
                        
                        <!-- Real-time Status Indicator -->
                        <div class="oe_button_box">
                            <button class="oe_stat_button" type="object" name="action_view_approval_details" icon="fa-info-circle">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="approval_state" readonly="1" string="Status"/>
                                    </span>
                                    <span class="o_stat_text">Current State</span>
                                </div>
                            </button>
                        </div>
                    </header>
                </xpath>
                
                <!-- Enhanced voucher fields with real-time updates -->
                <xpath expr="//field[@name='partner_id']" position="before">
                    <div class="oe_title">
                        <h1>
                            <field name="voucher_number" readonly="1" 
                                   placeholder="Will be auto-generated"
                                   class="o_field_highlight"/>
                        </h1>
                        <h3>
                            <field name="payment_type" widget="radio" 
                                   options="{'horizontal': true}"
                                   readonly="approval_state not in ['draft', 'cancelled']"
                                   class="o_field_payment_type"/>
                        </h3>
                        <!-- Real-time status indicator with workflow stage info -->
                        <div class="alert alert-info" invisible="approval_state == 'draft'">
                            <strong>Status: </strong>
                            <field name="approval_state" readonly="1" string=""/>
                            
                            <!-- Show current stage handler -->
                            <span invisible="not reviewer_id and approval_state not in ['under_review', 'for_approval', 'for_authorization', 'approved', 'posted']"> | Reviewed by: </span>
                            <field name="reviewer_id" invisible="not reviewer_id" readonly="1"/>
                            
                            <span invisible="not approver_id and approval_state not in ['for_authorization', 'approved', 'posted']"> | Approved by: </span>
                            <field name="approver_id" invisible="not approver_id" readonly="1"/>
                            
                            <span invisible="not authorizer_id and approval_state not in ['approved', 'posted']"> | Authorized by: </span>
                            <field name="authorizer_id" invisible="not authorizer_id" readonly="1"/>
                            
                            <!-- Workflow type indicator -->
                            <div class="mt-2" invisible="approval_state == 'draft'">
                                <small class="text-muted">
                                    <span invisible="payment_type != 'outbound'">Vendor Payment Workflow: Draft → Review → Approval → Authorization → Posted</span>
                                    <span invisible="payment_type != 'inbound'">Customer Receipt Workflow: Draft → Review → Approval → Posted</span>
                                </small>
                            </div>
                        </div>
                    </div>
                </xpath>
                
                <!-- Enhanced field attributes with dynamic readonly states -->
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="readonly">approval_state not in ['draft', 'cancelled']</attribute>
                    <attribute name="required">1</attribute>
                    <attribute name="placeholder">Select partner for payment</attribute>
                </xpath>
                
                <xpath expr="//field[@name='amount']" position="attributes">
                    <attribute name="readonly">approval_state not in ['draft', 'cancelled']</attribute>
                    <attribute name="required">1</attribute>
                    <attribute name="class">o_field_monetary</attribute>
                </xpath>
                
                <!-- Enhanced destination account field with responsiveness -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="destination_account_id" 
                           readonly="approval_state not in ['draft', 'cancelled']"
                           invisible="payment_type != 'outbound'"
                           string="Destination Account"/>
                </xpath>
                
                <!-- Enhanced journal field -->
                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name="readonly">approval_state not in ['draft', 'cancelled']</attribute>
                    <attribute name="required">1</attribute>
                </xpath>
                
                <!-- Enhanced date field -->
                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="readonly">approval_state not in ['draft', 'cancelled']</attribute>
                    <attribute name="required">1</attribute>
                </xpath>
                
                <!-- Enhanced Voucher Information Group -->
                <xpath expr="//field[@name='ref']" position="after">
                    <group name="voucher_info" string="Voucher Information" col="2">
                        <field name="remarks" 
                               readonly="approval_state == 'posted'"
                               placeholder="Additional remarks or notes"/>
                        <field name="voucher_number" readonly="1"/>
                        <field name="authorized_by" readonly="1" invisible="not authorized_by"/>
                        <field name="reviewer_date" readonly="1" invisible="not reviewer_date"/>
                        <field name="approver_date" readonly="1" invisible="not approver_date"/>
                        <field name="authorizer_date" readonly="1" invisible="not authorizer_date"/>
                    </group>
                    
                    <!-- Enhanced 4-Stage Approval Workflow Information -->
                    <group name="approval_info" string="Approval Workflow" col="2" 
                           invisible="approval_state in ['draft']">
                        <!-- Review Stage -->
                        <group string="Review Stage" invisible="not reviewer_id">
                            <field name="reviewer_id" readonly="1"/>
                            <field name="reviewer_date" readonly="1"/>
                        </group>
                        
                        <!-- Approval Stage -->
                        <group string="Approval Stage" invisible="not approver_id">
                            <field name="approver_id" readonly="1"/>
                            <field name="approver_date" readonly="1"/>
                        </group>
                        
                        <!-- Authorization Stage (Vendor payments only) -->
                        <group string="Authorization Stage" invisible="not authorizer_id or payment_type != 'outbound'">
                            <field name="authorizer_id" readonly="1"/>
                            <field name="authorizer_date" readonly="1"/>
                        </group>
                        
                        <!-- Posted By -->
                        <group string="Posted Stage" invisible="approval_state != 'posted'">
                            <field name="actual_approver_id" readonly="1" string="Posted By"/>
                            <field name="write_date" readonly="1" string="Posted Date"/>
                        </group>
                        
                        <!-- Current Status Badge -->
                        <field name="approval_state" readonly="1" widget="badge" 
                               decoration-info="approval_state == 'draft'"
                               decoration-warning="approval_state in ['under_review', 'for_approval', 'for_authorization']"
                               decoration-success="approval_state in ['approved', 'posted']"
                               decoration-muted="approval_state == 'cancelled'"/>
                    </group>
                    
                    <!-- QR Code Section -->
                    <group name="qr_info" string="QR Code" col="1" 
                           invisible="approval_state == 'draft' or not qr_code">
                        <field name="qr_in_report" widget="boolean_toggle"/>
                        <field name="qr_code" widget="image" 
                               readonly="1" 
                               class="oe_avatar"
                               options="{'size': [150, 150]}"/>
                    </group>
                </xpath>
                
                <!-- Add custom fields to existing form -->
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="remarks" 
                           readonly="approval_state not in ['draft', 'cancelled']"
                           placeholder="Enter additional remarks or purpose for this payment..."
                           widget="text"/>
                    
                    <!-- Add notebook for approval workflow -->
                    <notebook>
                        <!-- Enhanced 4-Stage Approval Workflow Tab -->
                        <page string="Approval Workflow" name="approval_workflow">
                            <group string="Current Status">
                                <field name="approval_state" readonly="1" widget="badge"/>
                                <field name="payment_type" readonly="1" string="Workflow Type"/>
                            </group>
                            
                            <!-- Workflow Progress Indicator -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="alert alert-success" invisible="payment_type != 'outbound'">
                                        <h5>Vendor Payment Workflow Progress:</h5>
                                        <div class="progress-workflow">
                                            <span class="badge badge-primary" style="margin-right: 10px;">1. Draft</span>
                                            <span class="badge badge-secondary" style="margin-right: 10px;">2. Under Review</span>
                                            <span class="badge badge-secondary" style="margin-right: 10px;">3. For Approval</span>
                                            <span class="badge badge-secondary" style="margin-right: 10px;">4. For Authorization</span>
                                            <span class="badge badge-secondary">5. Posted</span>
                                        </div>
                                    </div>
                                    
                                    <div class="alert alert-info" invisible="payment_type != 'inbound'">
                                        <h5>Customer Receipt Workflow Progress:</h5>
                                        <div class="progress-workflow">
                                            <span class="badge badge-primary" style="margin-right: 10px;">1. Draft</span>
                                            <span class="badge badge-secondary" style="margin-right: 10px;">2. Under Review</span>
                                            <span class="badge badge-secondary" style="margin-right: 10px;">3. Approved</span>
                                            <span class="badge badge-secondary">4. Posted</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Stage Details -->
                            <group string="Stage Details" col="2">
                                <!-- Review Stage -->
                                <group string="1. Review Stage" invisible="approval_state == 'draft'">
                                    <field name="reviewer_id" readonly="1"/>
                                    <field name="reviewer_date" readonly="1"/>
                                </group>
                                
                                <!-- Approval Stage -->
                                <group string="2. Approval Stage" invisible="approval_state in ['draft', 'under_review']">
                                    <field name="approver_id" readonly="1"/>
                                    <field name="approver_date" readonly="1"/>
                                </group>
                                
                                <!-- Authorization Stage (Vendor only) -->
                                <group string="3. Authorization Stage" invisible="payment_type != 'outbound' or approval_state in ['draft', 'under_review', 'for_approval']">
                                    <field name="authorizer_id" readonly="1"/>
                                    <field name="authorizer_date" readonly="1"/>
                                </group>
                                
                                <!-- Posted Stage -->
                                <group string="Final Stage - Posted" invisible="approval_state != 'posted'">
                                    <field name="actual_approver_id" readonly="1" string="Posted By"/>
                                    <field name="authorized_by" readonly="1" string="Final Authority"/>
                                </group>
                            </group>
                            
                            <!-- Enhanced Audit Trail -->
                            <group string="Audit Information">
                                <group>
                                    <field name="create_uid" readonly="1" string="Created By"/>
                                    <field name="create_date" readonly="1" string="Created On"/>
                                </group>
                                <group>
                                    <field name="write_uid" readonly="1" string="Last Modified By"/>
                                    <field name="write_date" readonly="1" string="Last Modified On"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- QR Code Tab -->
                        <page string="QR Code &amp; Verification" name="qr_code" 
                              invisible="approval_state in ['draft']">
                            <group>
                                <group string="QR Code Settings">
                                    <field name="qr_in_report"/>
                                </group>
                                <group string="QR Code Preview" invisible="not qr_code">
                                    <field name="qr_code" widget="image" 
                                           options="{'size': [200, 200]}"/>
                                </group>
                            </group>
                            
                            <div class="alert alert-info" invisible="not qr_code">
                                <p><strong>QR Code Information:</strong></p>
                                <p>This QR code contains payment verification data and can be scanned 
                                to verify payment details securely.</p>
                                <group>
                                    <field name="voucher_number" readonly="1" string="Voucher Number"/>
                                    <field name="approval_state" readonly="1" string="Status" widget="badge"/>
                                </group>
                            </div>
                        </page>
                        
                        <!-- Enhanced Details Tab -->
                        <page string="Payment Details" name="payment_details">
                            <group string="Payment Information">
                                <group>
                                    <field name="payment_type" readonly="1"/>
                                    <field name="partner_type" readonly="1"/>
                                    <field name="destination_account_id" readonly="1"/>
                                </group>
                                <group>
                                    <field name="currency_id" readonly="1"/>
                                    <field name="company_id" readonly="1"/>
                                    <field name="journal_id" readonly="1"/>
                                </group>
                            </group>
                            
                            <group string="Remarks &amp; Notes">
                                <field name="remarks" nolabel="1" readonly="approval_state == 'posted'"/>
                            </group>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
        
        <!-- Enhanced Payment Tree View -->
        <record id="view_account_payment_tree_enhanced" model="ir.ui.view">
            <field name="name">account.payment.tree.enhanced</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="voucher_number" optional="show"/>
                    <field name="approval_state" widget="badge" optional="show"
                           decoration-info="approval_state == 'draft'"
                           decoration-warning="approval_state in ['under_review', 'for_approval', 'for_authorization']"
                           decoration-success="approval_state in ['approved', 'posted']"
                           decoration-danger="approval_state == 'cancelled'"/>
                </xpath>
                <xpath expr="//field[@name='amount_company_currency_signed']" position="after">
                    <field name="reviewer_id" optional="hide"/>
                    <field name="approver_id" optional="hide"/>
                    <field name="authorizer_id" optional="hide"/>
                    <field name="actual_approver_id" optional="hide" string="Posted By"/>
                    <field name="authorized_by" optional="hide"/>
                </xpath>
                <!-- Add remarks field to tree view -->
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="remarks" optional="hide"/>
                </xpath>
            </field>
        </record>
        
        <!-- Enhanced Payment Search View -->
        <record id="view_account_payment_search_enhanced" model="ir.ui.view">
            <field name="name">account.payment.search.enhanced</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="voucher_number"/>
                    <field name="approval_state"/>
                    <field name="remarks"/>
                    <field name="reviewer_id"/>
                    <field name="approver_id"/>
                    <field name="authorizer_id"/>
                    <field name="authorized_by"/>
                    <separator/>
                    <filter string="Draft" name="filter_draft" 
                            domain="[('approval_state', '=', 'draft')]"/>
                    <filter string="Under Review" name="filter_under_review" 
                            domain="[('approval_state', '=', 'under_review')]"/>
                    <filter string="For Approval" name="filter_for_approval" 
                            domain="[('approval_state', '=', 'for_approval')]"/>
                    <filter string="For Authorization" name="filter_for_authorization" 
                            domain="[('approval_state', '=', 'for_authorization')]"/>
                    <filter string="Approved" name="filter_approved" 
                            domain="[('approval_state', '=', 'approved')]"/>
                    <filter string="Posted" name="filter_posted" 
                            domain="[('approval_state', '=', 'posted')]"/>
                    <filter string="Cancelled" name="filter_cancelled" 
                            domain="[('approval_state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Vendor Payments" name="filter_vendor_payments"
                            domain="[('payment_type', '=', 'outbound')]"/>
                    <filter string="Customer Receipts" name="filter_customer_receipts"
                            domain="[('payment_type', '=', 'inbound')]"/>
                    <separator/>
                    <filter string="My Submissions" name="filter_my_submissions"
                            domain="[('create_uid', '=', uid)]"/>
                    <filter string="My Reviews" name="filter_my_reviews"
                            domain="[('reviewer_id', '=', uid)]"/>
                    <filter string="My Approvals" name="filter_my_approvals"
                            domain="[('approver_id', '=', uid)]"/>
                    <filter string="My Authorizations" name="filter_my_authorizations"
                            domain="[('authorizer_id', '=', uid)]"/>
                    <filter string="Posted by Me" name="filter_posted_by_me"
                            domain="[('actual_approver_id', '=', uid)]"/>
                    <separator/>
                    <filter string="Pending My Review" name="filter_pending_my_review"
                            domain="[('approval_state', '=', 'under_review')]"/>
                    <filter string="Pending My Approval" name="filter_pending_my_approval"
                            domain="[('approval_state', '=', 'for_approval')]"/>
                    <filter string="Pending My Authorization" name="filter_pending_my_authorization"
                            domain="[('approval_state', '=', 'for_authorization')]"/>
                    <separator/>
                    <filter string="High Amount (>10,000)" name="filter_high_amount"
                            domain="[('amount', '>', 10000)]"/>
                    <filter string="Today's Payments" name="filter_today"
                            domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_approval_state" string="Approval State" 
                                context="{'group_by': 'approval_state'}"/>
                        <filter name="group_payment_type" string="Payment Type" 
                                context="{'group_by': 'payment_type'}"/>
                        <filter name="group_reviewer" string="Reviewer" 
                                context="{'group_by': 'reviewer_id'}"/>
                        <filter name="group_approver" string="Approver" 
                                context="{'group_by': 'approver_id'}"/>
                        <filter name="group_authorizer" string="Authorizer" 
                                context="{'group_by': 'authorizer_id'}"/>
                        <filter name="group_partner" string="Partner" 
                                context="{'group_by': 'partner_id'}"/>
                        <filter name="group_date" string="Date" 
                                context="{'group_by': 'date'}"/>
                    </group>
                </xpath>
            </field>
        </record>
        
        <!-- Enhanced Payment Register Wizard -->
        <record id="view_account_payment_register_form_enhanced" model="ir.ui.view">
            <field name="name">account.payment.register.form.enhanced</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='communication']" position="after">
                    <group string="Additional Information">
                        <field name="remarks" 
                               placeholder="Enter additional remarks for the payment voucher..."
                               widget="text"/>
                    </group>
                </xpath>
            </field>
        </record>
        
        <!-- Actions -->
        <record id="action_payment_voucher_all" model="ir.actions.act_window">
            <field name="name">Payment Vouchers</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('payment_type', 'in', ['outbound', 'inbound'])]</field>
            <field name="context">{
                'default_payment_type': 'outbound',
                'search_default_filter_draft': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No payment vouchers found
                </p>
                <p>
                    Create your first payment voucher by clicking the "New" button.
                    Payment vouchers help you manage and track payment approvals efficiently.
                </p>
            </field>
        </record>
        
        <record id="action_payment_my_submissions" model="ir.actions.act_window">
            <field name="name">My Submissions</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('create_uid', '=', uid)]</field>
            <field name="context">{
                'search_default_filter_draft': 1,
                'search_default_filter_under_review': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    You haven't created any payments yet
                </p>
                <p>
                    Payments you create will appear here. You can track their approval status
                    through the 4-stage workflow process.
                </p>
            </field>
        </record>
        
        <!-- Enhanced Actions for 4-Stage Workflow -->
        <record id="action_payment_pending_review" model="ir.actions.act_window">
            <field name="name">Pending Review</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('approval_state', '=', 'under_review')]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No payments pending review
                </p>
                <p>
                    Payments submitted for review will appear here. Review each payment
                    for accuracy before forwarding to the approval stage.
                </p>
            </field>
        </record>

        <record id="action_payment_pending_approval" model="ir.actions.act_window">
            <field name="name">Pending Approval</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('approval_state', '=', 'for_approval')]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No payments pending approval
                </p>
                <p>
                    Payments awaiting approval will appear here. Review and approve
                    payments that have passed the initial review stage.
                </p>
            </field>
        </record>

        <record id="action_payment_pending_authorization" model="ir.actions.act_window">
            <field name="name">Pending Authorization</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('approval_state', '=', 'for_authorization')]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No payments pending authorization
                </p>
                <p>
                    Vendor payments awaiting final authorization will appear here.
                    Authorize payments to make them ready for posting.
                </p>
            </field>
