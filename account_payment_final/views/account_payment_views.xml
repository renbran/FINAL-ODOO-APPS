        <record id="action_payment_ready_to_post" model="ir.actions.act_window">
            <field name="name">Ready to Post</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('approval_state', '=', 'approved')]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No payments ready to post
                </p>
                <p>
                    Fully approved payments ready for posting will appear here.
                    These payments have completed all approval stages.
                </p>
            </field>
        </record>
        
        <record id="action_payment_my_reviews" model="ir.actions.act_window">
            <field name="name">My Reviews</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('reviewer_id', '=', uid)]</field>
            <field name="context">{
                'search_default_filter_under_review': 1,
                'search_default_filter_for_approval': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    You haven't reviewed any payments yet
                </p>
                <p>
                    Payments you review will appear here with their current status.
                </p>
            </field>
        </record>

        <record id="action_payment_my_approvals" model="ir.actions.act_window">
            <field name="name">My Approvals</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('approver_id', '=', uid)]</field>
            <field name="context">{
                'search_default_filter_for_authorization': 1,
                'search_default_filter_approved': 1,
                'search_default_filter_posted': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    You haven't approved any payments yet
                </p>
                <p>
                    Payments you approve will appear here with their workflow progress.
                </p>
            </field>
        </record>

        <record id="action_payment_my_authorizations" model="ir.actions.act_window">
            <field name="name">My Authorizations</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('authorizer_id', '=', uid)]</field>
            <field name="context">{
                'search_default_filter_approved': 1,
                'search_default_filter_posted': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    You haven't authorized any payments yet
                </p>
                <p>
                    Vendor payments you authorize will appear here.
                </p>
            </field>
        </record>

        <!-- Dashboard Action for Quick Overview -->
        <record id="action_payment_dashboard" model="ir.actions.act_window">
            <field name="name">Payment Dashboard</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('payment_type', 'in', ['outbound', 'inbound'])]</field>
            <field name="context">{
                'group_by': 'approval_state',
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Payment Voucher Dashboard
