<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Professional Payment Voucher Template -->
        <template id="payment_voucher_professional" name="Professional Payment Voucher">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="payment">
                    <div class="page voucher-page">
                        
                        <!-- Header Section -->
                        <div class="voucher-header">
                            <div class="row">
                                <div class="col-8">
                                    <div class="company-info">
                                        <h1 class="company-name" t-field="payment.company_id.name"/>
                                        <div class="company-address">
                                            <div t-field="payment.company_id.street" t-if="payment.company_id.street"/>
                                            <div>
                                                <span t-field="payment.company_id.city" t-if="payment.company_id.city"/>
                                                <span t-field="payment.company_id.state_id.name" t-if="payment.company_id.state_id"/>
                                                <span t-field="payment.company_id.zip" t-if="payment.company_id.zip"/>
                                            </div>
                                            <div t-field="payment.company_id.country_id.name" t-if="payment.company_id.country_id"/>
                                            <div t-if="payment.company_id.phone">
                                                Phone: <span t-field="payment.company_id.phone"/>
                                            </div>
                                            <div t-if="payment.company_id.email">
                                                Email: <span t-field="payment.company_id.email"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4 text-right">
                                    <div class="company-logo" t-if="payment.company_id.logo">
                                        <img t-att-src="image_data_uri(payment.company_id.logo)" 
                                             alt="Company Logo" 
                                             style="max-height: 100px; max-width: 200px;"/>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Voucher Title -->
                            <div class="voucher-title text-center">
                                <h2 class="document-title">
                                    <span t-if="payment.payment_type == 'outbound'">PAYMENT VOUCHER</span>
                                    <span t-if="payment.payment_type == 'inbound'">RECEIPT VOUCHER</span>
                                </h2>
                                <div class="voucher-number">
                                    No: <strong t-field="payment.name"/>
                                </div>
                            </div>
                        </div>

                        <!-- Payment Details Section -->
                        <div class="voucher-details">
                            <table class="table table-borderless voucher-info-table">
                                <tr>
                                    <td class="label-col"><strong>Date:</strong></td>
                                    <td class="value-col"><span t-field="payment.date"/></td>
                                    <td class="label-col"><strong>Amount:</strong></td>
                                    <td class="value-col">
                                        <strong t-field="payment.amount" 
                                                t-options="{'widget': 'monetary', 'display_currency': payment.currency_id}"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="label-col">
                                        <strong>
                                            <span t-if="payment.payment_type == 'outbound'">Pay To:</span>
                                            <span t-if="payment.payment_type == 'inbound'">Received From:</span>
                                        </strong>
                                    </td>
                                    <td class="value-col" colspan="3"><span t-field="payment.partner_id.name"/></td>
                                </tr>
                                <tr t-if="payment.ref">
                                    <td class="label-col"><strong>Reference:</strong></td>
                                    <td class="value-col" colspan="3"><span t-field="payment.ref"/></td>
                                </tr>
                                <tr>
                                    <td class="label-col"><strong>Payment Method:</strong></td>
                                    <td class="value-col"><span t-field="payment.journal_id.name"/></td>
                                    <td class="label-col"><strong>Currency:</strong></td>
                                    <td class="value-col"><span t-field="payment.currency_id.name"/></td>
                                </tr>
                            </table>

                            <!-- Amount in Words -->
                            <div class="amount-words">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="amount-words-box">
                                            <strong>Amount in Words: </strong>
                                            <span class="amount-text" t-esc="payment._amount_in_words()"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Description/Memo -->
                            <div class="description-section" t-if="payment.memo or payment.ref">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="description-box">
                                            <strong>Description/Memo:</strong><br/>
                                            <span t-field="payment.memo" t-if="payment.memo"/>
                                            <span t-field="payment.ref" t-if="payment.ref and not payment.memo"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 2x2 Signature Section as Requested -->
                        <div class="signature-section">
                            <h5 class="signature-header">APPROVALS &amp; AUTHORIZATION</h5>
                            
                            <div class="signature-grid">
                                <table class="signature-table">
                                    <tr>
                                        <!-- Top Left: Prepared By -->
                                        <td class="signature-cell">
                                            <div class="signature-box">
                                                <div class="signature-line"></div>
                                                <div class="signature-label">
                                                    <strong>Prepared By</strong><br/>
                                                    <span t-field="payment.create_uid.name" t-if="payment.create_uid"/>
                                                    <br/>
                                                    <small>Date: <span t-field="payment.create_date" t-options="{'widget': 'date'}"/></small>
                                                </div>
                                            </div>
                                        </td>
                                        
                                        <!-- Top Right: Reviewed By -->
                                        <td class="signature-cell">
                                            <div class="signature-box">
                                                <div class="signature-line"></div>
                                                <div class="signature-label">
                                                    <strong>Reviewed By</strong><br/>
                                                    <span t-field="payment.reviewer_id.name" t-if="payment.reviewer_id"/>
                                                    <span t-if="not payment.reviewer_id">_________________</span>
                                                    <br/>
                                                    <small>Date: _______________</small>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    
                                    <tr>
                                        <!-- Bottom Left: Approved By -->
                                        <td class="signature-cell">
                                            <div class="signature-box">
                                                <div class="signature-line"></div>
                                                <div class="signature-label">
                                                    <strong>Approved By</strong><br/>
                                                    <span t-field="payment.approver_id.name" t-if="payment.approver_id"/>
                                                    <span t-if="not payment.approver_id">_________________</span>
                                                    <br/>
                                                    <small>Date: _______________</small>
                                                </div>
                                            </div>
                                        </td>
                                        
                                        <!-- Bottom Right: Authorized By -->
                                        <td class="signature-cell">
                                            <div class="signature-box">
                                                <div class="signature-line"></div>
                                                <div class="signature-label">
                                                    <strong>Authorized By</strong><br/>
                                                    <span t-field="payment.authorizer_id.name" t-if="payment.authorizer_id"/>
                                                    <span t-if="not payment.authorizer_id">_________________</span>
                                                    <br/>
                                                    <small>Date: _______________</small>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="voucher-footer">
                            <div class="footer-note text-center">
                                <small>
                                    This document is system generated and requires proper authorization before processing.
                                    <br/>
                                    <strong t-field="payment.company_id.name"/> - Payment Management System
                                </small>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </template>

        <!-- Professional Voucher Styles -->
        <template id="payment_voucher_styles" name="Payment Voucher Styles">
            <style type="text/css">
                .voucher-page {
                    font-family: 'Arial', sans-serif;
                    font-size: 14px;
                    line-height: 1.4;
                    color: #333;
                    padding: 20px;
                    background: white;
                }

                /* Header Styling */
                .voucher-header {
                    border-bottom: 3px solid #2c3e50;
                    padding-bottom: 20px;
                    margin-bottom: 30px;
                }

                .company-name {
                    font-size: 28px;
                    font-weight: bold;
                    color: #2c3e50;
                    margin-bottom: 10px;
                }

                .company-address {
                    font-size: 12px;
                    color: #666;
                    line-height: 1.3;
                }

                .voucher-title {
                    margin-top: 20px;
                }

                .document-title {
                    font-size: 24px;
                    font-weight: bold;
                    color: #2c3e50;
                    margin-bottom: 10px;
                    letter-spacing: 2px;
                }

                .voucher-number {
                    font-size: 16px;
                    color: #666;
                }

                /* Details Section */
                .voucher-details {
                    margin-bottom: 40px;
                }

                .voucher-info-table {
                    width: 100%;
                    margin-bottom: 20px;
                }

                .voucher-info-table td {
                    padding: 8px 10px;
                    border-bottom: 1px solid #eee;
                    vertical-align: top;
                }

                .label-col {
                    width: 25%;
                    font-weight: bold;
                    color: #2c3e50;
                }

                .value-col {
                    color: #333;
                }

                /* Amount in Words */
                .amount-words {
                    margin: 20px 0;
                }

                .amount-words-box {
                    border: 2px solid #2c3e50;
                    padding: 15px;
                    background: #f8f9fa;
                    border-radius: 5px;
                }

                .amount-text {
                    font-style: italic;
                    font-weight: bold;
                    text-transform: uppercase;
                }

                /* Description Section */
                .description-section {
                    margin: 20px 0;
                }

                .description-box {
                    border: 1px solid #ddd;
                    padding: 15px;
                    border-radius: 5px;
                    min-height: 80px;
                    background: #fafafa;
                }

                /* 2x2 Signature Grid */
                .signature-section {
                    margin-top: 50px;
                    page-break-inside: avoid;
                }

                .signature-header {
                    text-align: center;
                    font-weight: bold;
                    color: #2c3e50;
                    margin-bottom: 30px;
                    font-size: 16px;
                    letter-spacing: 1px;
                }

                .signature-grid {
                    margin-top: 20px;
                }

                .signature-table {
                    width: 100%;
                    border-collapse: separate;
                    border-spacing: 20px;
                }

                .signature-cell {
                    width: 50%;
                    vertical-align: top;
                }

                .signature-box {
                    text-align: center;
                    padding: 20px 10px;
                    border: 1px solid #ddd;
                    border-radius: 8px;
                    background: #fafafa;
                    min-height: 120px;
                    display: flex;
                    flex-direction: column;
                    justify-content: space-between;
                }

                .signature-line {
                    border-top: 2px solid #333;
                    margin: 0 20px 15px 20px;
                    height: 50px;
                    position: relative;
                }

                .signature-label {
                    font-size: 12px;
                    color: #666;
                    line-height: 1.3;
                }

                .signature-label strong {
                    color: #2c3e50;
                    font-size: 13px;
                    display: block;
                    margin-bottom: 5px;
                }

                /* Footer */
                .voucher-footer {
                    margin-top: 40px;
                    border-top: 1px solid #ddd;
                    padding-top: 20px;
                }

                .footer-note {
                    color: #666;
                    font-size: 11px;
                    line-height: 1.4;
                }

                /* Print Specific Styles */
                @media print {
                    .voucher-page {
                        padding: 15px;
                        font-size: 12px;
                    }
                    
                    .signature-table {
                        border-spacing: 15px;
                    }
                    
                    .signature-box {
                        min-height: 100px;
                        padding: 15px 8px;
                    }
                    
                    .page {
                        page-break-after: always;
                    }
                    
                    .page:last-child {
                        page-break-after: avoid;
                    }
                }

                /* Responsive Design */
                @media (max-width: 768px) {
                    .signature-table {
                        border-spacing: 10px;
                    }
                    
                    .signature-cell {
                        width: 100%;
                        display: block;
                        margin-bottom: 15px;
                    }
                    
                    .voucher-info-table .label-col {
                        width: 35%;
                    }
                }
            </style>
        </template>

    </data>
</odoo>
