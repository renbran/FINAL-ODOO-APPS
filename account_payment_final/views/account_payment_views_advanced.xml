<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Enhanced Payment Form View - Safe Installation -->
        <record id="view_account_payment_form_enhanced_safe" model="ir.ui.view">
            <field name="name">account.payment.form.enhanced.safe</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account_payment_final.view_account_payment_form_basic"/>
            <field name="arch" type="xml">
                
                <!-- Safe statusbar replacement -->
                <xpath expr="//div[@class='payment-basic-info']" position="replace">
                    <field name="approval_state" widget="statusbar" 
                           statusbar_visible="draft,under_review,for_approval,for_authorization,approved,posted"/>
                </xpath>
                
                <!-- Safe button additions -->
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="voucher_number" readonly="1" 
                           attrs="{'invisible': [('voucher_number', '=', '/')]}" 
                           placeholder="Auto-generated"/>
                </xpath>
                
                <!-- Safe remarks field -->
                <xpath expr="//field[@name='amount']" position="after">
                    <field name="remarks" placeholder="Payment remarks"/>
                </xpath>
                
            </field>
        </record>

        <!-- Enhanced Tree View - Safe Installation -->
        <record id="view_account_payment_tree_enhanced_safe" model="ir.ui.view">
            <field name="name">account.payment.tree.enhanced.safe</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account_payment_final.view_account_payment_tree_enhanced"/>
            <field name="arch" type="xml">
                
                <!-- Safe field additions -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="voucher_number" optional="show"/>
                    <field name="approval_state" optional="show"/>
                </xpath>
                
            </field>
        </record>

    </data>
</odoo>
