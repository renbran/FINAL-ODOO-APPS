<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Enhanced Invoice/Bill Form View with Approval Workflow -->
        <record id="view_move_form_approval_workflow" model="ir.ui.view">
            <field name="name">account.move.form.approval.workflow</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <!-- Add approval statusbar for invoices and bills -->
                <xpath expr="//field[@name='state']" position="after">
                    <field name="approval_state" widget="statusbar" 
                           statusbar_visible="draft,under_review,for_approval,approved,posted"
                           statusbar_colors='{"draft":"secondary","under_review":"info","for_approval":"warning","approved":"success","posted":"success"}'
                           invisible="move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"/>
                </xpath>

                <!-- Add approval workflow buttons to header -->
                <xpath expr="//header" position="inside">
                    <!-- Invoice/Bill Approval Workflow Buttons -->
                    <button name="action_submit_for_review" 
                            string="Submit for Review" 
                            type="object" 
                            class="btn-primary"
                            invisible="approval_state != 'draft' or move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"
                            confirm="Submit this invoice/bill for review?"/>
                    
                    <button name="action_review_approve" 
                            string="Review &amp; Forward" 
                            type="object" 
                            class="btn-info"
                            groups="account_payment_final.group_payment_reviewer"
                            invisible="approval_state != 'under_review' or move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"/>
                    
                    <button name="action_final_approve" 
                            string="Approve Invoice/Bill" 
                            type="object" 
                            class="btn-warning"
                            groups="account_payment_final.group_payment_approver"
                            invisible="approval_state != 'for_approval' or move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"/>
                    
                    <button name="action_post_invoice_bill" 
                            string="Post to Ledger" 
                            type="object" 
                            class="btn-success"
                            groups="account_payment_final.group_payment_poster"
                            invisible="approval_state != 'approved' or move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"/>
                    
                    <button name="action_reject_invoice_bill" 
                            string="Reject" 
                            type="object" 
                            class="btn-danger"
                            groups="account_payment_final.group_payment_approver"
                            invisible="approval_state not in ['under_review', 'for_approval'] or move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"
                            confirm="Are you sure you want to reject this invoice/bill?"/>
                </xpath>

                <!-- Add approval workflow fields to the form -->
                <xpath expr="//page[@name='other_info']" position="inside">
                    <group name="approval_workflow" string="Approval Workflow" 
                           invisible="move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']">
                        <group>
                            <field name="reviewer_id" readonly="1"/>
                            <field name="reviewer_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="approver_id" readonly="1"/>
                            <field name="approver_date" readonly="1"/>
                        </group>
                    </group>
                </xpath>

                <!-- Override the default Post button to enforce approval workflow -->
                <xpath expr="//button[@name='action_post']" position="attributes">
                    <attribute name="invisible">move_type in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund'] and approval_state != 'approved'</attribute>
                </xpath>

                <!-- Hide the Post button for invoices/bills not approved -->
                <xpath expr="//button[@name='action_post']" position="after">
                    <button name="action_post_invoice_bill" 
                            string="Post" 
                            type="object" 
                            class="btn-primary"
                            invisible="move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund'] or approval_state == 'approved'"
                            confirm="This invoice/bill requires approval workflow. Please submit for review first."/>
                </xpath>

            </field>
        </record>

        <!-- Enhanced tree view to show approval state -->
        <record id="view_account_invoice_tree_approval" model="ir.ui.view">
            <field name="name">account.move.tree.approval</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="approval_state" 
                           decoration-info="approval_state == 'under_review'"
                           decoration-warning="approval_state == 'for_approval'"
                           decoration-success="approval_state == 'approved'"
                           decoration-danger="approval_state == 'cancelled'"
                           invisible="move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"/>
                </xpath>
            </field>
        </record>

        <!-- Kanban view enhancement for approval workflow -->
        <record id="view_account_invoice_kanban_approval" model="ir.ui.view">
            <field name="name">account.move.kanban.approval</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="approval_state"/>
                </xpath>
                
                <xpath expr="//div[@class='oe_kanban_bottom_right']" position="inside">
                    <span class="badge badge-pill float-right"
                          t-attf-class="badge-#{record.approval_state.raw_value == 'approved' ? 'success' : 
                                                   record.approval_state.raw_value == 'under_review' ? 'info' :
                                                   record.approval_state.raw_value == 'for_approval' ? 'warning' : 'secondary'}"
                          t-if="record.move_type.raw_value in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund'] and record.approval_state.raw_value">
                        <t t-esc="record.approval_state.value"/>
                    </span>
                </xpath>
            </field>
        </record>

        <!-- Search view enhancement -->
        <record id="view_account_invoice_filter_approval" model="ir.ui.view">
            <field name="name">account.move.search.approval</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='state_posted']" position="after">
                    <separator/>
                    <filter string="Pending Review" name="approval_under_review" 
                            domain="[('approval_state', '=', 'under_review')]"/>
                    <filter string="Pending Approval" name="approval_pending" 
                            domain="[('approval_state', '=', 'for_approval')]"/>
                    <filter string="Approved" name="approval_approved" 
                            domain="[('approval_state', '=', 'approved')]"/>
                </xpath>
                
                <xpath expr="//group" position="inside">
                    <filter string="Approval State" name="group_approval_state" 
                            domain="[]" context="{'group_by': 'approval_state'}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
