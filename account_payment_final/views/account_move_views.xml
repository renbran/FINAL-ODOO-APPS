<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Enhanced Invoice/Bill Form View with Approval Workflow -->
        <record id="view_move_form_approval_workflow" model="ir.ui.view">
            <field name="name">account.move.form.approval.workflow</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <!-- Add approval statusbar for invoices and bills -->
                <xpath expr="//field[@name='state']" position="after">
                    <field name="approval_state" widget="statusbar" 
                           statusbar_visible="draft,submitted,under_review,for_approval,approved,posted"
                           statusbar_colors='{"draft":"secondary","submitted":"info","under_review":"warning","for_approval":"warning","approved":"success","posted":"success"}'
                           invisible="move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"/>
                    <field name="requires_approval" invisible="1"/>
                </xpath>

                <!-- Add approval workflow buttons to header -->
                <xpath expr="//header" position="inside">
                    
                    <!-- Invoice/Bill Approval Workflow Buttons -->
                    <button name="action_submit_for_review" 
                            string="Submit for Review" 
                            type="object" 
                            class="btn-primary"
                            invisible="approval_state != 'draft' or move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund'] or not requires_approval"
                            confirm="Submit this invoice/bill for review?"/>
                    
                    <button name="action_review_approve" 
                            string="Review &amp; Forward" 
                            type="object" 
                            class="btn-success"
                            groups="account_payment_final.group_payment_voucher_reviewer"
                            invisible="approval_state != 'under_review' or move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"/>
                    
                    <button name="action_final_approve" 
                            string="Approve &amp; Post" 
                            type="object" 
                            class="btn-success"
                            groups="account_payment_final.group_invoice_approver"
                            invisible="approval_state != 'for_approval' or move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"/>
                    
                    <!-- Manual Post Button (only if auto-post failed or disabled) -->
                    <button name="action_post_invoice_bill" 
                            string="Post to Ledger" 
                            type="object" 
                            class="btn-primary"
                            groups="account_payment_final.group_payment_voucher_poster"
                            invisible="approval_state != 'approved' or move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"
                            confirm="Manually post this approved invoice/bill?"/>
                    
                    <button name="action_reject_invoice_bill" 
                            string="Reject" 
                            type="object" 
                            class="btn-danger"
                            groups="account_payment_final.group_payment_voucher_reviewer,account_payment_final.group_invoice_approver"
                            invisible="approval_state not in ['under_review', 'for_approval'] or move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"
                            confirm="Are you sure you want to reject this invoice/bill? It will return to draft state."/>

                    <!-- View Related Payment Vouchers -->
                    <button name="action_view_vouchers" 
                            string="Payment Vouchers" 
                            type="object" 
                            class="btn-outline-secondary"
                            invisible="voucher_count == 0">
                        <span class="badge badge-pill badge-primary" t-field="voucher_count"/>
                    </button>
                </xpath>

                <!-- Override the default Post button to enforce approval workflow for high-value invoices -->
                <xpath expr="//button[@name='action_post']" position="attributes">
                    <attribute name="invisible">move_type in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund'] and requires_approval and approval_state not in ['approved', 'posted']</attribute>
                </xpath>

                <!-- Add approval workflow information -->
                <xpath expr="//group[@name='header_left_group']" position="after">
                    <group name="approval_info" string="Approval Information" 
                           invisible="move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund'] or not requires_approval">
                        <group>
                            <field name="reviewer_id" readonly="1"/>
                            <field name="reviewer_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="approver_id" readonly="1"/>
                            <field name="approver_date" readonly="1"/>
                        </group>
                    </group>
                </xpath>

                <!-- Add approval remarks field -->
                <xpath expr="//field[@name='narration']" position="after">
                    <field name="approval_remarks" 
                           placeholder="Additional remarks for approval workflow..."
                           invisible="move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund'] or not requires_approval"/>
                </xpath>

                <!-- Add warning for high-value items requiring approval -->
                <xpath expr="//field[@name='invoice_line_ids']" position="before">
                    <div class="alert alert-warning" role="alert" 
                         invisible="move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund'] or not requires_approval or approval_state != 'draft'">
                        <strong>Approval Required:</strong> This invoice/bill exceeds the approval threshold and requires approval before posting.
                    </div>
                </xpath>

            </field>
        </record>

        <!-- Enhanced Invoice Tree View -->
        <record id="view_account_invoice_tree_approval" model="ir.ui.view">
            <field name="name">account.move.tree.approval</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                
                <!-- Add approval state column -->
                <xpath expr="//field[@name='state']" position="after">
                    <field name="approval_state" 
                           decoration-info="approval_state in ['submitted', 'under_review']"
                           decoration-warning="approval_state == 'for_approval'"
                           decoration-success="approval_state in ['approved', 'posted']"
                           decoration-danger="approval_state == 'cancelled'"
                           optional="show"
                           invisible="move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"/>
                </xpath>
                
                <!-- Add requires approval indicator -->
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="requires_approval" optional="hide"/>
                    <field name="voucher_count" optional="hide"/>
                </xpath>
                
            </field>
        </record>

        <!-- Enhanced Bill Tree View -->
        <record id="view_account_bill_tree_approval" model="ir.ui.view">
            <field name="name">account.move.bill.tree.approval</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_tree"/>
            <field name="arch" type="xml">
                
                <!-- Add approval state column -->
                <xpath expr="//field[@name='state']" position="after">
                    <field name="approval_state" 
                           decoration-info="approval_state in ['submitted', 'under_review']"
                           decoration-warning="approval_state == 'for_approval'"
                           decoration-success="approval_state in ['approved', 'posted']"
                           decoration-danger="approval_state == 'cancelled'"
                           optional="show"/>
                </xpath>
                
                <!-- Add requires approval indicator -->
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="requires_approval" optional="hide"/>
                    <field name="voucher_count" optional="hide"/>
                </xpath>
                
            </field>
        </record>

        <!-- Enhanced Search View -->
        <record id="view_account_invoice_filter_approval" model="ir.ui.view">
            <field name="name">account.move.search.approval</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                
                <!-- Add approval filters -->
                <xpath expr="//filter[@name='late']" position="after">
                    <separator/>
                    <filter string="Pending Review" name="approval_under_review" 
                            domain="[('approval_state', '=', 'under_review')]"/>
                    <filter string="Pending Approval" name="approval_pending" 
                            domain="[('approval_state', '=', 'for_approval')]"/>
                    <filter string="Approved" name="approval_approved" 
                            domain="[('approval_state', '=', 'approved')]"/>
                    <filter string="Requires Approval" name="requires_approval" 
                            domain="[('requires_approval', '=', True)]"/>
                </xpath>
                
                <!-- Add search by approval remarks -->
                <xpath expr="//field[@name='name']" position="after">
                    <field name="approval_remarks"/>
                </xpath>
                
                <!-- Add group by approval state -->
                <xpath expr="//group[@expand='0']" position="inside">
                    <filter string="Approval State" name="group_approval_state" 
                            domain="[]" context="{'group_by':'approval_state'}"/>
                </xpath>
                
            </field>
        </record>

    </data>
</odoo>