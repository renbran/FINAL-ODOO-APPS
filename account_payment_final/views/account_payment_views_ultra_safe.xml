<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Ultra Safe Payment Form View -->
        <record id="view_account_payment_form_ultra_safe" model="ir.ui.view">
            <field name="name">account.payment.form.ultra.safe</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                
                <!-- Add approval state field safely -->
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="approval_state" readonly="1"/>
                    <field name="voucher_number" readonly="1"/>
                </xpath>
                
            </field>
        </record>

    </data>
</odoo>
