<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Module Categories -->
        <record id="module_category_payment_voucher" model="ir.module.category">
            <field name="name">Payment Vouchers</field>
            <field name="description">Payment Voucher System Access Rights</field>
            <field name="sequence">30</field>
        </record>

        <!-- Security Groups for 4-Stage Payment Workflow -->
        <record id="group_payment_voucher_user" model="res.groups">
            <field name="name">Payment Voucher User</field>
            <field name="category_id" ref="module_category_payment_voucher"/>
            <field name="comment">Can create and submit payment vouchers for review</field>
        </record>
        
        <record id="group_payment_voucher_reviewer" model="res.groups">
            <field name="name">Payment Voucher Reviewer</field>
            <field name="category_id" ref="module_category_payment_voucher"/>
            <field name="implied_ids" eval="[(4, ref('group_payment_voucher_user'))]"/>
            <field name="comment">Can review payments and forward them for approval (Stage 1)</field>
        </record>
        
        <record id="group_payment_voucher_approver" model="res.groups">
            <field name="name">Payment Voucher Approver</field>
            <field name="category_id" ref="module_category_payment_voucher"/>
            <field name="implied_ids" eval="[(4, ref('group_payment_voucher_reviewer'))]"/>
            <field name="comment">Can approve payments and forward vendor payments for authorization (Stage 2)</field>
        </record>
        
        <record id="group_payment_voucher_authorizer" model="res.groups">
            <field name="name">Payment Voucher Authorizer</field>
            <field name="category_id" ref="module_category_payment_voucher"/>
            <field name="implied_ids" eval="[(4, ref('group_payment_voucher_approver'))]"/>
            <field name="comment">Can authorize vendor payments for final posting (Stage 3)</field>
        </record>
        
        <record id="group_payment_voucher_poster" model="res.groups">
            <field name="name">Payment Voucher Poster</field>
            <field name="category_id" ref="module_category_payment_voucher"/>
            <field name="implied_ids" eval="[(4, ref('group_payment_voucher_authorizer'))]"/>
            <field name="comment">Can post approved payments to accounting (Final Stage)</field>
        </record>
        
        <record id="group_payment_voucher_manager" model="res.groups">
            <field name="name">Payment Voucher Manager</field>
            <field name="category_id" ref="module_category_payment_voucher"/>
            <field name="implied_ids" eval="[(4, ref('group_payment_voucher_poster'))]"/>
            <field name="comment">Full access to payment voucher system including cancellation and reset</field>
        </record>

        <!-- Record Rules for Payment Vouchers -->
        <record id="payment_voucher_user_rule" model="ir.rule">
            <field name="name">Payment Voucher User Access</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_payment_voucher_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="payment_voucher_reviewer_rule" model="ir.rule">
            <field name="name">Payment Voucher Reviewer Access</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">['|', ('create_uid', '=', user.id), ('approval_state', '=', 'under_review')]</field>
            <field name="groups" eval="[(4, ref('group_payment_voucher_reviewer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="payment_voucher_approver_rule" model="ir.rule">
            <field name="name">Payment Voucher Approver Access</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">['|', ('create_uid', '=', user.id), ('approval_state', 'in', ['under_review', 'for_approval'])]</field>
            <field name="groups" eval="[(4, ref('group_payment_voucher_approver'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="payment_voucher_authorizer_rule" model="ir.rule">
            <field name="name">Payment Voucher Authorizer Access</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">['|', ('create_uid', '=', user.id), ('approval_state', 'in', ['under_review', 'for_approval', 'for_authorization'])]</field>
            <field name="groups" eval="[(4, ref('group_payment_voucher_authorizer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="payment_voucher_poster_rule" model="ir.rule">
            <field name="name">Payment Voucher Poster Access</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">['|', ('create_uid', '=', user.id), ('approval_state', 'in', ['under_review', 'for_approval', 'for_authorization', 'approved'])]</field>
            <field name="groups" eval="[(4, ref('group_payment_voucher_poster'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="payment_voucher_manager_rule" model="ir.rule">
            <field name="name">Payment Voucher Manager Access</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_payment_voucher_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>