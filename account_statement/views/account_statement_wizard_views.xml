<odoo>
    <record id="view_account_statement_wizard_form" model="ir.ui.view">
        <field name="name">account.statement.wizard.form</field>
        <field name="model">account.statement.wizard</field>
        <field name="arch" type="xml">
            <form string="Account Statement Report">
                <group>
                    <field name="partner_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_generate_pdf" type="object" string="Print PDF" class="btn-primary"/>
                    <button name="action_generate_excel" type="object" string="Export Excel"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_account_statement_wizard" model="ir.actions.act_window">
        <field name="name">Account Statement</field>
        <field name="res_model">account.statement.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_account_statement_wizard_form"/>
    </record>
    <menuitem id="menu_account_statement_report_root" name="Account Statement" parent="account.menu_finance_reports" sequence="10" action="action_account_statement_wizard"/>
</odoo>