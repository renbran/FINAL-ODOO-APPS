<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Override base_accounting_kit standard layout to remove background images -->
    <template id="standard_layout_transparent" inherit_id="base_accounting_kit.standard">
        <!-- Replace the article div with background logic with transparent version -->
        <xpath expr="//div[contains(@class, 'article')]" position="replace">
            <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout" 
                 style="background: transparent !important; background-image: none !important; background-color: transparent !important;"
                 t-att-data-oe-model="o and o._name" 
                 t-att-data-oe-id="o and o.id" 
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <div class="pt-5">
                    <!-- This div ensures that the address is not cropped by the header. -->
                    <t t-call="web.address_layout"/>
                </div>
                <t t-out="0"/>
            </div>
        </xpath>
    </template>

    <!-- Override the boxed layout if it exists -->
    <template id="boxed_layout_transparent" inherit_id="base_accounting_kit.boxed" optional="hide">
        <xpath expr="//div[contains(@class, 'article')]" position="replace">
            <div t-attf-class="article o_report_layout_boxed o_company_#{company.id}_layout" 
                 style="background: transparent !important; background-image: none !important; background-color: transparent !important;"
                 t-att-data-oe-model="o and o._name" 
                 t-att-data-oe-id="o and o.id" 
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <div class="pt-5">
                    <t t-call="web.address_layout"/>
                </div>
                <t t-out="0"/>
            </div>
        </xpath>
    </template>

    <!-- Override the striped layout if it exists -->
    <template id="striped_layout_transparent" inherit_id="base_accounting_kit.striped" optional="hide">
        <xpath expr="//div[contains(@class, 'article')]" position="replace">
            <div t-attf-class="article o_report_layout_striped o_company_#{company.id}_layout" 
                 style="background: transparent !important; background-image: none !important; background-color: transparent !important;"
                 t-att-data-oe-model="o and o._name" 
                 t-att-data-oe-id="o and o.id" 
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <div class="pt-5">
                    <t t-call="web.address_layout"/>
                </div>
                <t t-out="0"/>
            </div>
        </xpath>
    </template>
</odoo>
