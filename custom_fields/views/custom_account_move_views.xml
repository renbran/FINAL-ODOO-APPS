<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_sale_order_type" model="ir.ui.view">
        <field name="name">account.move.form.inherit.sale.order.type</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add the sale_order_type_id field after the partner_id field -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="sale_order_type_id"/>
            </xpath>
        </field>
    </record>
</odoo>
