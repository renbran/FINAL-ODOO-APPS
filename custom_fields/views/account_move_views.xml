<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Account Move Form View Enhancement - Safe inheritance -->
    <record id="view_move_form_inherit_custom_fields" model="ir.ui.view">
        <field name="name">account.move.form.inherit.custom.fields</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add custom fields in a dedicated group after partner_id for safe positioning -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <group name="custom_deal_info" string="Deal Information" 
                       attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}">
                    <group>
                        <field name="deal_id"/>
                        <field name="sale_value"/>
                        <field name="booking_date"/>
                        <field name="developer_commission" widget="percentage"/>
                    </group>
                    <group>
                        <field name="buyer_id" options="{'no_quick_create': False, 'no_create_edit': False}"/>
                        <field name="project_id" options="{'no_quick_create': False, 'no_create_edit': False}"/>
                        <field name="unit_id" options="{'no_quick_create': False, 'no_create_edit': False}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Account Move Tree View Enhancement -->
    <record id="view_move_tree_inherit_custom_fields" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.custom.fields</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="deal_id" optional="hide"/>
                <field name="sale_value" optional="hide"/>
                <field name="buyer_id" optional="hide"/>
                <field name="project_id" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Account Move Search View Enhancement -->
    <record id="view_account_invoice_filter_inherit_custom_fields" model="ir.ui.view">
        <field name="name">account.move.select.inherit.custom.fields</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="deal_id"/>
                <field name="buyer_id"/>
                <field name="project_id"/>
                <field name="unit_id"/>
                <group expand="0" string="Group By">
                    <filter string="Buyer" name="buyer" domain="[]" context="{'group_by': 'buyer_id'}"/>
                    <filter string="Project" name="project" domain="[]" context="{'group_by': 'project_id'}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>