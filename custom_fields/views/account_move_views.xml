<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_custom_fields" model="ir.ui.view">
        <field name="name">account.move.form.inherit.custom.fields</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Remove the individual field additions -->
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'always_reload': True}</attribute>
            </xpath>
            
            <!-- Add a new group for property-related fields after the invoice lines -->
            <xpath expr="//group[@name='invoice_info_group']" position="after">
                <group name="deal_information" string="Deal Information" 
                       options="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}">
                    <group>
                        <field name="buyer"/>
                        <field name="booking_date"/>
                        <field name="deal_id"/>
                        <field name="project"/>
                    </group>
                    <group>
                        <field name="unit"/>
                        <field name="sale_value"/>
                        <field name="developer_commission" widget="percentage"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>