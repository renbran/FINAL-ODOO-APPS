<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit the account move form view -->
        <record id="view_move_form_inherit_custom_fields" model="ir.ui.view">
            <field name="name">account.move.form.inherit.custom.fields</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Add a new page to the invoice form view -->
                <xpath expr="//sheet" position="inside">
                    <page string="Custom Invoice Information">
                        <group>
                            <field name="booking_date"/>
                            <field name="developer_commission"/>
                            <field name="buyer"/>
                            <field name="deal_id"/>
                            <field name="project"/>
                            <field name="sale_value"/>
                            <field name="unit"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Inherit the account move tree view -->
        <record id="view_move_tree_inherit_custom_fields" model="ir.ui.view">
            <field name="name">account.move.tree.inherit.custom.fields</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="booking_date" optional="show"/>
                    <field name="developer_commission" optional="show"/>
                    <field name="buyer" optional="show"/>
                    <field name="deal_id" optional="show"/>
                    <field name="project" optional="show"/>
                    <field name="sale_value" optional="show"/>
                    <field name="unit" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit the account move search view -->
        <record id="view_move_search_inherit_custom_fields" model="ir.ui.view">
            <field name="name">account.move.search.inherit.custom.fields</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="buyer" string="Buyer"/>
                    <field name="deal_id" string="Deal ID"/>
                    <field name="project" string="Project"/>
                </xpath>
                <xpath expr="//filter[@name='journal']" position="after">
                    <filter string="Booking Date" name="booking_date" context="{'group_by':'booking_date'}"/>
                    <filter string="Deal ID" name="deal_id" context="{'group_by':'deal_id'}"/>
                    <filter string="Project" name="project" context="{'group_by':'project'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>