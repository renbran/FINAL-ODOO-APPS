<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_order_form_inherit_custom_fields" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.custom.fields</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <page string="Custom Information">
                        <group string="Deal Details">
                            <group>
                                <field name="booking_date"/>
                                <field name="deal_id"/>
                            </group>
                            <group>
                                <field name="buyer_id"/>
                                <field name="developer_commission"/>
                            </group>
                        </group>
                        <group string="Project Details">
                            <field name="project_id"/>
                            <field name="unit_id"/>
                            <field name="sale_value"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_order_tree_inherit_custom_fields" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit.custom.fields</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="buyer_id" string="Buyer"/>
                    <field name="deal_id" optional="show"/>
                    <field name="sale_value" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_order_search_inherit_custom_fields" model="ir.ui.view">
            <field name="name">sale.order.search.inherit.custom.fields</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="buyer_id"/>
                    <field name="deal_id"/>
                </xpath>
                <xpath expr="//filter[@name='my_quotation']" position="after">
                    <filter string="Booking Date" name="booking_date" context="{'group_by':'booking_date'}"/>
                    <filter string="Deal ID" name="deal_id" context="{'group_by':'deal_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>