[MASTER]
# Odoo-specific pylint configuration
load-plugins=
ignore=migrations,demo,tests,__pycache__
persistent=yes
cache-size=500

[MESSAGES CONTROL]
# Disable all messages that are problematic for Odoo development
disable=all

[REPORTS]
output-format=text
reports=no
score=no

[VARIABLES]
# Dummy variables for Odoo patterns
dummy-variables-rgx=_.*|cr|uid|ids|context|vals

[FORMAT]
max-line-length=120
indent-string='    '

[DESIGN]
max-args=15
max-locals=25
max-returns=10
max-branches=20
max-statements=100
max-parents=15
max-attributes=15
max-public-methods=50
min-public-methods=0

[IMPORTS]
deprecated-modules=regsub,TERMIOS,Bastion,rexec
