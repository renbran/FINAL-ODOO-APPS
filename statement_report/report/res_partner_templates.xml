<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Statement report template-->
    <template id="res_partner_statement_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <!-- Import datetime for date formatting -->
                <t t-set="datetime" t-value="datetime"/>
                <div page="page">
                    <h3>Payment Statement Report</h3>
                </div><br/>
                <table border="0">
                    <tr><t t-esc="customer"/></tr><br/><br/>
                    <tr><t t-if="street"> <t t-esc="street"/></t></tr><br/>
                    <tr><t t-if="street2"> <t t-esc="street2"/></t></tr><br/>
                    <tr><t t-if="city"> <t t-esc="city"/></t></tr><br/>
                    <tr><t t-if="state"> <t t-esc="state"/></t></tr><br/>
                </table>
                <br/><br/>
                <table class="table" style="align-items: center;">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Invoice/Bill Number</th>
                            <th>Reference</th>
                            <th>Due Date</th>
                            <th>Invoices/Debit</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="my_data" t-as="line">
                            <tr>
                                <!-- Date with DD-MMM-YYYY format -->
                                <td align="center">
                                    <t t-call="statement_report.format_date">
                                        <t t-set="date_value" t-value="line['invoice_date']"/>
                                    </t>
                                </td>
                                
                                <!-- Invoice Number with conditional color for overdue -->
                                <td align="center">
                                    <t t-call="statement_report.format_overdue_text">
                                        <t t-set="text_value" t-value="line['name']"/>
                                        <t t-set="due_date" t-value="line['invoice_date_due']"/>
                                        <t t-set="is_overdue" t-value="line.get('is_overdue', False)"/>
                                    </t>
                                </td>
                                
                                <!-- Reference with conditional color for overdue -->
                                <td align="center">
                                    <t t-call="statement_report.format_overdue_text">
                                        <t t-set="text_value" t-value="line['ref'] or ''"/>
                                        <t t-set="due_date" t-value="line['invoice_date_due']"/>
                                        <t t-set="is_overdue" t-value="line.get('is_overdue', False)"/>
                                    </t>
                                </td>
                                
                                <!-- Due Date with DD-MMM-YYYY format and conditional color -->
                                <td align="center">
                                    <t t-call="statement_report.format_overdue_date">
                                        <t t-set="date_value" t-value="line['invoice_date_due']"/>
                                        <t t-set="is_overdue" t-value="line.get('is_overdue', False)"/>
                                    </t>
                                </td>
                                
                                <!-- Invoice Amount with professional number formatting -->
                                <td align="center">
                                    <t t-call="statement_report.format_overdue_currency">
                                        <t t-set="amount_value" t-value="line['sub_total']"/>
                                        <t t-set="currency_symbol" t-value="currency"/>
                                        <t t-set="is_overdue" t-value="line.get('is_overdue', False)"/>
                                    </t>
                                </td>
                                
                                <!-- Balance with professional number formatting -->
                                <td align="center">
                                    <t t-call="statement_report.format_overdue_currency">
                                        <t t-set="amount_value" t-value="line['balance']"/>
                                        <t t-set="currency_symbol" t-value="currency"/>
                                        <t t-set="is_overdue" t-value="line.get('is_overdue', False)"/>
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <br/>
                <t t-if="total">
                    <div class="clearfix" name="so_total_summary">
                        <div id="total" class="row" name="total">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                                <table class="table table-sm">
                                    <tbody>
                                        <tr>
                                            <td>Total Amount:</td>
                                            <td>
                                                <t t-call="statement_report.format_currency">
                                                    <t t-set="amount_value" t-value="total"/>
                                                    <t t-set="currency_symbol" t-value="currency"/>
                                                </t>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Total Balance:</td>
                                            <td>
                                                <t t-call="statement_report.format_currency">
                                                    <t t-set="amount_value" t-value="balance"/>
                                                    <t t-set="currency_symbol" t-value="currency"/>
                                                </t>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
                
                <!-- Enhanced Aging Buckets Summary -->
                <t t-if="aging_buckets">
                    <br/><br/>
                    <div class="clearfix" name="aging_summary" style="page-break-inside: avoid;">
                        <h4 style="text-align: center; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
                                   color: white; padding: 12px; border-radius: 5px; margin-bottom: 15px; 
                                   font-weight: bold; text-transform: uppercase; letter-spacing: 1px;">
                            📊 AGING ANALYSIS SUMMARY
                        </h4>
                        
                        <!-- Aging Buckets Table -->
                        <table class="table table-bordered" style="margin-top: 15px; border: 2px solid #dee2e6;">
                            <thead>
                                <tr style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                                    <th class="text-center" style="padding: 12px; font-weight: bold; border: 1px solid #adb5bd; color: #495057;">
                                        Current<br/><small>(0-30 days)</small>
                                    </th>
                                    <th class="text-center" style="padding: 12px; font-weight: bold; border: 1px solid #adb5bd; color: #495057;">
                                        Past Due<br/><small>(31-60 days)</small>
                                    </th>
                                    <th class="text-center" style="padding: 12px; font-weight: bold; border: 1px solid #adb5bd; color: #495057;">
                                        Overdue<br/><small>(61-90 days)</small>
                                    </th>
                                    <th class="text-center" style="padding: 12px; font-weight: bold; border: 1px solid #adb5bd; color: #495057;">
                                        Critical<br/><small>(91-120 days)</small>
                                    </th>
                                    <th class="text-center" style="padding: 12px; font-weight: bold; border: 1px solid #adb5bd; color: #495057;">
                                        Very Overdue<br/><small>(120+ days)</small>
                                    </th>
                                    <th class="text-center" style="padding: 12px; font-weight: bold; border: 1px solid #adb5bd; 
                                                                   background-color: #ffc107; color: #212529;">
                                        Total Outstanding
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-center" style="padding: 15px; border: 1px solid #dee2e6; 
                                                                    background-color: #d4edda; font-weight: bold; font-size: 14px;">
                                        <t t-esc="currency"/><t t-esc="'{:,.2f}'.format(aging_buckets.get('current', 0))"/>
                                    </td>
                                    <td class="text-center" style="padding: 15px; border: 1px solid #dee2e6; 
                                                                    background-color: #fff3cd; font-weight: bold; font-size: 14px;">
                                        <t t-esc="currency"/><t t-esc="'{:,.2f}'.format(aging_buckets.get('days_30', 0))"/>
                                    </td>
                                    <td class="text-center" style="padding: 15px; border: 1px solid #dee2e6; 
                                                                    background-color: #fdeaa7; font-weight: bold; font-size: 14px;">
                                        <t t-esc="currency"/><t t-esc="'{:,.2f}'.format(aging_buckets.get('days_60', 0))"/>
                                    </td>
                                    <td class="text-center" style="padding: 15px; border: 1px solid #dee2e6; 
                                                                    background-color: #f8d7da; font-weight: bold; font-size: 14px;">
                                        <t t-esc="currency"/><t t-esc="'{:,.2f}'.format(aging_buckets.get('days_90', 0))"/>
                                    </td>
                                    <td class="text-center" style="padding: 15px; border: 1px solid #dee2e6; 
                                                                    background-color: #f5c6cb; font-weight: bold; font-size: 14px;">
                                        <t t-esc="currency"/><t t-esc="'{:,.2f}'.format(aging_buckets.get('days_120', 0))"/>
                                    </td>
                                    <td class="text-center" style="padding: 15px; border: 2px solid #ffc107; 
                                                                    background-color: #fff3cd; font-weight: bold; font-size: 16px; color: #212529;">
                                        <t t-esc="currency"/><t t-esc="'{:,.2f}'.format(aging_buckets.get('total', 0))"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        
                        <!-- Aging Percentages Row -->
                        <t t-if="aging_buckets.get('total', 0) > 0">
                            <table class="table" style="margin-top: 10px;">
                                <thead>
                                    <tr style="background-color: #f1f3f4;">
                                        <th colspan="6" class="text-center" style="padding: 8px; font-weight: bold; color: #495057;">
                                            Percentage Distribution
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <t t-set="total_aging" t-value="aging_buckets.get('total', 0)"/>
                                        <td class="text-center" style="padding: 8px; font-size: 12px;">
                                            <t t-esc="'{:.1f}%'.format((aging_buckets.get('current', 0) / total_aging * 100) if total_aging > 0 else 0)"/>
                                        </td>
                                        <td class="text-center" style="padding: 8px; font-size: 12px;">
                                            <t t-esc="'{:.1f}%'.format((aging_buckets.get('days_30', 0) / total_aging * 100) if total_aging > 0 else 0)"/>
                                        </td>
                                        <td class="text-center" style="padding: 8px; font-size: 12px;">
                                            <t t-esc="'{:.1f}%'.format((aging_buckets.get('days_60', 0) / total_aging * 100) if total_aging > 0 else 0)"/>
                                        </td>
                                        <td class="text-center" style="padding: 8px; font-size: 12px;">
                                            <t t-esc="'{:.1f}%'.format((aging_buckets.get('days_90', 0) / total_aging * 100) if total_aging > 0 else 0)"/>
                                        </td>
                                        <td class="text-center" style="padding: 8px; font-size: 12px;">
                                            <t t-esc="'{:.1f}%'.format((aging_buckets.get('days_120', 0) / total_aging * 100) if total_aging > 0 else 0)"/>
                                        </td>
                                        <td class="text-center" style="padding: 8px; font-weight: bold; background-color: #e9ecef;">
                                            100.0%
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                        
                        <!-- Risk Assessment Summary -->
                        <t t-set="days_90_plus" t-value="aging_buckets.get('days_90', 0) + aging_buckets.get('days_120', 0)"/>
                        <t t-if="days_90_plus > 0">
                            <div style="margin-top: 15px; padding: 10px; background-color: #f8d7da; border: 1px solid #f5c6cb; border-radius: 5px;">
                                <strong style="color: #721c24;">⚠️ Risk Assessment:</strong>
                                <span t-esc="currency"/><span t-esc="'{:,.2f}'.format(days_90_plus)"/> 
                                (<span t-esc="'{:.1f}%'.format((days_90_plus / aging_buckets.get('total', 1) * 100))"/>)
                                is overdue by more than 90 days and requires immediate attention.
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Date Formatting Template: DD-MMM-YYYY -->
    <template id="format_date">
        <t t-if="date_value and str(date_value) != 'False'">
            <t t-if="hasattr(date_value, 'strftime')">
                <t t-esc="date_value.strftime('%d-%b-%Y')"/>
            </t>
            <t t-elif="'-' in str(date_value)">
                <t t-set="date_parts" t-value="str(date_value)[:10].split('-')"/>
                <t t-if="len(date_parts) == 3">
                    <t t-set="year" t-value="date_parts[0]"/>
                    <t t-set="month" t-value="date_parts[1]"/>
                    <t t-set="day" t-value="date_parts[2]"/>
                    <t t-set="month_names" t-value="['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec']"/>
                    <t t-set="month_idx" t-value="int(month) - 1"/>
                    <t t-if="month_idx >= 0 and month_idx &lt; 12">
                        <t t-esc="day"/>-<t t-esc="month_names[month_idx]"/>-<t t-esc="year"/>
                    </t>
                    <t t-else="">
                        <t t-esc="date_value"/>
                    </t>
                </t>
                <t t-else="">
                    <t t-esc="date_value"/>
                </t>
            </t>
            <t t-else="">
                <t t-esc="date_value"/>
            </t>
        </t>
    </template>

    <!-- Professional Number/Currency Formatting Template -->
    <template id="format_currency">
        <t t-if="amount_value != False">
            <t t-set="num_value" t-value="float(amount_value or 0)"/>
            <t t-set="formatted_num" t-value="'{:,.2f}'.format(num_value)"/>
            <!-- Remove trailing zeros after decimal point -->
            <t t-if="'.' in formatted_num">
                <t t-set="parts" t-value="formatted_num.split('.')"/>
                <t t-set="decimal_part" t-value="parts[1].rstrip('0')"/>
                <t t-if="decimal_part">
                    <t t-set="clean_amount" t-value="parts[0] + '.' + decimal_part"/>
                </t>
                <t t-else="">
                    <t t-set="clean_amount" t-value="parts[0]"/>
                </t>
            </t>
            <t t-else="">
                <t t-set="clean_amount" t-value="formatted_num"/>
            </t>
            <t t-esc="currency_symbol or ''"/><t t-esc="clean_amount"/>
        </t>
        <t t-else="">
            <t t-esc="currency_symbol or ''"/>0
        </t>
    </template>

    <!-- Overdue Text Formatting Template -->
    <template id="format_overdue_text">
        <t t-if="is_overdue">
            <span style="color: #dc3545; font-weight: 500;">
                <t t-esc="text_value or ''"/>
            </span>
        </t>
        <t t-else="">
            <span style="color: #000000;">
                <t t-esc="text_value or ''"/>
            </span>
        </t>
    </template>

    <!-- Overdue Date Formatting Template -->
    <template id="format_overdue_date">
        <t t-if="is_overdue">
            <span style="color: #dc3545; font-weight: 500;">
                <t t-call="statement_report.format_date">
                    <t t-set="date_value" t-value="date_value"/>
                </t>
            </span>
        </t>
        <t t-else="">
            <span style="color: #000000;">
                <t t-call="statement_report.format_date">
                    <t t-set="date_value" t-value="date_value"/>
                </t>
            </span>
        </t>
    </template>

    <!-- Overdue Currency Formatting Template -->
    <template id="format_overdue_currency">
        <t t-if="is_overdue">
            <span style="color: #dc3545; font-weight: 500;">
                <t t-call="statement_report.format_currency">
                    <t t-set="amount_value" t-value="amount_value"/>
                    <t t-set="currency_symbol" t-value="currency_symbol"/>
                </t>
            </span>
        </t>
        <t t-else="">
            <span style="color: #000000;">
                <t t-call="statement_report.format_currency">
                    <t t-set="amount_value" t-value="amount_value"/>
                    <t t-set="currency_symbol" t-value="currency_symbol"/>
                </t>
            </span>
        </t>
    </template>
</odoo>
