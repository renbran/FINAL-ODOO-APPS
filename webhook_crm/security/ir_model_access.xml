<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Access Rules for Webhook Mapping -->
    <record id="access_webhook_mapping_user" model="ir.model.access">
        <field name="name">webhook.mapping.user</field>
        <field name="model_id" ref="model_webhook_mapping"/>
        <field name="group_id" ref="base.group_user"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>

    <record id="access_webhook_field_mapping_user" model="ir.model.access">
        <field name="name">webhook.field.mapping.user</field>
        <field name="model_id" ref="model_webhook_field_mapping"/>
        <field name="group_id" ref="base.group_user"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>
</odoo>
