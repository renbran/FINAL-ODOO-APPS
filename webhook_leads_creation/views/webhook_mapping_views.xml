<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Webhook Mapping Form View -->
    <record id="webhook_mapping_form_view" model="ir.ui.view">
        <field name="name">webhook.mapping.form</field>
        <field name="model">webhook.mapping</field>
        <field name="arch" type="xml">
            <form string="Webhook Mapping">
                <header>
                    <button name="test_mapping" string="Test Mapping" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="source_name"/>
                            <field name="active"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Field Mappings">
                            <field name="field_mapping_ids">
                                <tree editable="bottom">
                                    <field name="source_field"/>
                                    <field name="target_field"/>
                                    <field name="transformation_type"/>
                                    <field name="transformation_params"/>
                                    <field name="required"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Default Values">
                            <group>
                                <field name="default_values" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        
                        <page string="Transformation Rules">
                            <group>
                                <field name="transformation_rules" widget="ace" options="{'mode': 'python'}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Webhook Mapping Tree View -->
    <record id="webhook_mapping_tree_view" model="ir.ui.view">
        <field name="name">webhook.mapping.tree</field>
        <field name="model">webhook.mapping</field>
        <field name="arch" type="xml">
            <tree string="Webhook Mappings">
                <field name="name"/>
                <field name="source_name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Webhook Mapping Action -->
    <record id="webhook_mapping_action" model="ir.actions.act_window">
        <field name="name">Webhook Mappings</field>
        <field name="res_model">webhook.mapping</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="webhook_mapping_menu"
              name="Webhook Mappings"
              parent="crm.crm_menu_config"
              action="webhook_mapping_action"
              sequence="20"/>
</odoo>
