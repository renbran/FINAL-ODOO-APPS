<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- OSUS Bulk Print Menu -->
    <menuitem id="menu_osus_bulk_print_root"
              name="OSUS Bulk Print"
              parent="account.menu_finance"
              sequence="50"/>

    <!-- Bulk Print Customer Invoices Menu -->
    <menuitem id="menu_osus_bulk_print_invoices"
              name="Bulk Print Invoices"
              parent="menu_osus_bulk_print_root"
              action="action_invoice_bulk_print_menu"
              sequence="10"/>

    <!-- Bulk Print Vendor Bills Menu -->
    <menuitem id="menu_osus_bulk_print_bills"
              name="Bulk Print Bills"
              parent="menu_osus_bulk_print_root"
              action="action_bill_bulk_print_menu"
              sequence="20"/>

    <!-- Bulk Print All Documents Menu -->
    <record id="action_all_documents_bulk_print_menu" model="ir.actions.act_window">
        <field name="name">Bulk Print All Documents</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', '=', 'posted')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Select multiple posted documents to print in bulk
            </p>
            <p>
                This view shows all posted accounting documents (invoices, bills, credit notes).
                Use the "Actions" menu to print selected documents as a single PDF file.
            </p>
        </field>
    </record>

    <menuitem id="menu_osus_bulk_print_all"
              name="Bulk Print All Documents"
              parent="menu_osus_bulk_print_root"
              action="action_all_documents_bulk_print_menu"
              sequence="30"/>
</odoo>
