<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Smart Report Dispatcher - Automatically chooses between invoice and bill templates 
         QR Code Policy:
         - Customer Invoices/Receipts: Include QR codes for payment convenience
         - Vendor Bills/Expenses: No QR codes (submitted in soft copy format)
    -->
    <template id="smart_report_dispatcher">
        <t t-foreach="docs" t-as="doc">
            <t t-if="doc.move_type == 'in_invoice'">
                <!-- Use Bill Template for Vendor Bills -->
                <t t-call="osus_invoice_report.report_osus_bill_document">
                    <t t-set="docs" t-value="[doc]"/>
                </t>
            </t>
            <t t-else="">
                <!-- Use Invoice Template for Customer Invoices -->
                <t t-call="osus_invoice_report.report_osus_invoice_document">
                    <t t-set="docs" t-value="[doc]"/>
                </t>
            </t>
        </t>
    </template>

    <!-- Enhanced Bill Report Template with Default Odoo Structure -->
    <template id="report_osus_enhanced_bill_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="o" t-value="doc.with_context(lang=lang)"/>
                <t t-set="format_uk_date" t-value="lambda d: d.strftime('%d/%m/%Y') if d else ''"/>
                <t t-set="format_number" t-value="lambda v: '{:,.2f}'.format(float(v)) if v else '0.00'"/>
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="container">
                            <!-- Header - Keep same as current bill template -->
                            <h2 class="text-center mb-4" style="color: #800020; font-size: 18px;">BILL <span t-field="o.name"/></h2>

                            <!-- Dates Section - Using Default Odoo Structure -->
                            <div class="row mb-4">
                                <div class="col-6">
                                    <strong style="color: black;">Bill Date:</strong> 
                                    <span style="color: black;" t-field="o.invoice_date" t-options="{'widget': 'date'}"/>
                                </div>
                                <div class="col-6">
                                    <strong style="color: black;">Due Date:</strong> 
                                    <span style="color: black;" t-field="o.invoice_date_due" t-options="{'widget': 'date'}"/>
                                </div>
                            </div>

                            <!-- Vendor Details -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 style="color: #800020; font-weight: bold; font-size: 14px;">VENDOR DETAILS</h5>
                                    <div style="color: black;" t-field="o.partner_id" 
                                         t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                                    <div t-if="o.partner_id.vat" style="color: black;">
                                        VAT: <span t-field="o.partner_id.vat"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Line Items Table - Standard Odoo Structure -->
                            <table class="table table-sm o_main_table">
                                <thead>
                                    <tr style="background-color: #800020; color: white; font-weight: bold;">
                                        <th name="th_description" class="text-left" style="color: white;">
                                            <span>Description</span>
                                        </th>
                                        <th name="th_quantity" class="text-right" style="color: white;">
                                            <span>Quantity</span>
                                        </th>
                                        <th name="th_priceunit" class="text-right" style="color: white;">
                                            <span>Unit Price</span>
                                        </th>
                                        <th name="th_price_unit" class="text-right" style="color: white;">
                                            <span groups="account.group_show_line_subtotals_tax_excluded">Price</span>
                                            <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                        </th>
                                        <th name="th_taxes" class="text-left" style="color: white;">
                                            <span>Taxes</span>
                                        </th>
                                        <th name="th_subtotal" class="text-right" style="color: white;">
                                            <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                            <span groups="account.group_show_line_subtotals_tax_included">Total Amount</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                    <t t-foreach="lines" t-as="line">
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                                <td name="account_invoice_line_name" style="color: black;">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                                <td class="text-right" style="color: black;">
                                                    <span t-field="line.quantity"/>
                                                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                                </td>
                                                <td class="text-right" style="color: black;">
                                                    <span class="text-nowrap" t-field="line.price_unit"/>
                                                </td>
                                                <td class="text-right" style="color: black;">
                                                    <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                    <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                                </td>
                                                <td class="text-left" style="color: black;">
                                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                                </td>
                                                <td class="text-right o_price_total" style="color: black;">
                                                    <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                    <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td colspan="99">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td colspan="99">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <!-- Totals Section - Standard Odoo Structure -->
                            <div class="clearfix">
                                <div id="total" class="row">
                                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                                        <table class="table table-sm" style="page-break-inside: avoid;">
                                            <!-- Tax totals -->
                                            <t t-set="tax_totals" t-value="o.tax_totals"/>
                                            <t t-call="account.document_tax_totals"/>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- Payment Terms -->
                            <div t-if="o.invoice_payment_term_id" class="mt-4">
                                <span t-field="o.invoice_payment_term_id.note"/>
                            </div>

                            <!-- No QR Code for Vendor Bills - Submitted in soft copy -->

                            <!-- Footer -->
                            <div class="text-center mt-4" style="color: black; font-size: 13px; border-top: 1px solid #eee; padding-top: 10px; font-weight: bold;">
                                This is a computer generated document. No signature or stamp required.
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
