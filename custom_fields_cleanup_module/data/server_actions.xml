<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Wizard Form View -->
        <record id="view_custom_fields_cleanup_wizard_form" model="ir.ui.view">
            <field name="name">custom.fields.cleanup.wizard.form</field>
            <field name="model">custom.fields.cleanup.wizard</field>
            <field name="arch" type="xml">
                <form string="Custom Fields Cleanup">
                    <sheet>
                        <div class="oe_title" attrs="{'invisible': [('state', '=', 'done')]}">
                            <h1>
                                <field name="state" invisible="1"/>
                                Custom Fields Cleanup
                            </h1>
                            <p>
                                This will fix orphaned references that cause '_unknown' object errors in account moves.
                                The following will be cleaned:
                            </p>
                            <ul>
                                <li>Orphaned sale_order_type_id references</li>
                                <li>Orphaned project/project_id references</li>
                                <li>Orphaned unit/unit_id references</li>
                                <li>Orphaned buyer/buyer_id references</li>
                                <li>Duplicate field definitions</li>
                                <li>Orphaned ir_model_data entries</li>
                            </ul>
                            <p class="alert alert-warning">
                                <strong>Warning:</strong> This will set invalid foreign key references to NULL.
                                Make sure you have a database backup before proceeding.
                            </p>
                        </div>
                        
                        <div class="oe_title" attrs="{'invisible': [('state', '!=', 'done')]}">
                            <h1>Cleanup Complete!</h1>
                        </div>
                        
                        <group attrs="{'invisible': [('state', '!=', 'done')]}">
                            <field name="log_message" widget="text" readonly="1" 
                                   attrs="{'invisible': [('log_message', '=', False)]}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_cleanup_fields" 
                                string="Start Cleanup" 
                                type="object" 
                                class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_close" 
                                string="Close" 
                                type="object" 
                                class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Server Action -->
        <record id="action_custom_fields_cleanup" model="ir.actions.server">
            <field name="name">Clean Custom Fields</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="binding_model_id" ref="base.model_res_users"/>
            <field name="state">code</field>
            <field name="code">
# Open the cleanup wizard
action = {
    'type': 'ir.actions.act_window',
    'name': 'Custom Fields Cleanup',
    'res_model': 'custom.fields.cleanup.wizard',
    'view_mode': 'form',
    'target': 'new',
    'context': env.context,
}
            </field>
        </record>

        <!-- Menu Item -->
        <record id="menu_custom_fields_cleanup" model="ir.ui.menu">
            <field name="name">Custom Fields Cleanup</field>
            <field name="parent_id" ref="base.menu_administration"/>
            <field name="action" ref="action_custom_fields_cleanup"/>
            <field name="sequence">100</field>
        </record>

    </data>
</odoo>
