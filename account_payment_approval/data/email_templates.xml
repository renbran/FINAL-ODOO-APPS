<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Email Template: Payment Submitted -->
    <record id="email_template_payment_submitted" model="mail.template">
        <field name="name">Payment Voucher Submitted</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="subject">Payment Voucher ${object.voucher_number} Submitted for Review</field>
        <field name="email_from">${object.company_id.email}</field>
        <field name="email_to">${','.join([user.email for user in object.next_action_user_ids if user.email])}</field>
        <field name="body_html"><![CDATA[
            <div style="margin: 0px; padding: 0px; font-family: Arial, Helvetica, sans-serif;">
                <table border="0" width="100%" cellpadding="0" cellspacing="0" style="padding: 20px; background-color: #F7F7F7;">
                    <tr><td align="center">
                        <table border="0" width="600" cellpadding="0" cellspacing="0" style="background-color: white; border: 1px solid #e0e0e0; border-radius: 5px;">
                            <!-- Header -->
                            <tr><td style="background: linear-gradient(135deg, #6B2B47 0%, #8B1538 100%); padding: 20px; text-align: center;">
                                <h1 style="color: white; margin: 0; font-size: 24px;">OSUS Properties</h1>
                                <p style="color: #D4AF37; margin: 5px 0 0 0; font-size: 14px;">Payment Voucher System</p>
                            </td></tr>
                            
                            <!-- Content -->
                            <tr><td style="padding: 30px;">
                                <h2 style="color: #6B2B47; margin-top: 0;">Payment Voucher Submitted</h2>
                                
                                <p>A new payment voucher has been submitted for your review:</p>
                                
                                <table style="width: 100%; border-collapse: collapse; margin: 20px 0;">
                                    <tr style="background-color: #f8f9fa;">
                                        <td style="padding: 10px; border: 1px solid #dee2e6; font-weight: bold;">Voucher Number:</td>
                                        <td style="padding: 10px; border: 1px solid #dee2e6;">${object.voucher_number}</td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 10px; border: 1px solid #dee2e6; font-weight: bold;">Partner:</td>
                                        <td style="padding: 10px; border: 1px solid #dee2e6;">${object.partner_id.name}</td>
                                    </tr>
                                    <tr style="background-color: #f8f9fa;">
                                        <td style="padding: 10px; border: 1px solid #dee2e6; font-weight: bold;">Amount:</td>
                                        <td style="padding: 10px; border: 1px solid #dee2e6;">${object.currency_id.symbol} ${'{:,.2f}'.format(object.amount)}</td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 10px; border: 1px solid #dee2e6; font-weight: bold;">Submitted By:</td>
                                        <td style="padding: 10px; border: 1px solid #dee2e6;">${object.create_uid.name}</td>
                                    </tr>
                                    <tr style="background-color: #f8f9fa;">
                                        <td style="padding: 10px; border: 1px solid #dee2e6; font-weight: bold;">Date:</td>
                                        <td style="padding: 10px; border: 1px solid #dee2e6;">${object.submitted_date.strftime('%B %d, %Y at %I:%M %p') if object.submitted_date else ''}</td>
                                    </tr>
                                </table>
                                
                                <p style="margin-top: 30px;">
                                    <a href="${object.get_base_url()}/web#id=${object.id}&amp;model=account.payment&amp;view_type=form" 
                                       style="background-color: #6B2B47; color: white; padding: 12px 24px; text-decoration: none; border-radius: 5px; display: inline-block;">
                                        Review Voucher
                                    </a>
                                </p>
                            </td></tr>
                            
                            <!-- Footer -->
                            <tr><td style="background-color: #f8f9fa; padding: 15px; text-align: center; border-top: 1px solid #dee2e6;">
                                <p style="margin: 0; color: #6c757d; font-size: 12px;">
                                    This is an automated message from OSUS Properties Payment Voucher System.
                                </p>
                            </td></tr>
                        </table>
                    </td></tr>
                </table>
            </div>
        ]]></field>
    </record>

    <!-- Email Template: Payment Reviewed -->
    <record id="email_template_payment_reviewed" model="mail.template">
        <field name="name">Payment Voucher Reviewed</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="subject">Payment Voucher ${object.voucher_number} Reviewed</field>
        <field name="email_from">${object.company_id.email}</field>
        <field name="email_to">${','.join([user.email for user in object.next_action_user_ids if user.email])}</field>
        <field name="body_html"><![CDATA[
            <div style="margin: 0px; padding: 0px; font-family: Arial, Helvetica, sans-serif;">
                <table border="0" width="100%" cellpadding="0" cellspacing="0" style="padding: 20px; background-color: #F7F7F7;">
                    <tr><td align="center">
                        <table border="0" width="600" cellpadding="0" cellspacing="0" style="background-color: white; border: 1px solid #e0e0e0; border-radius: 5px;">
                            <tr><td style="background: linear-gradient(135deg, #6B2B47 0%, #8B1538 100%); padding: 20px; text-align: center;">
                                <h1 style="color: white; margin: 0; font-size: 24px;">OSUS Properties</h1>
                                <p style="color: #D4AF37; margin: 5px 0 0 0; font-size: 14px;">Payment Voucher System</p>
                            </td></tr>
                            
                            <tr><td style="padding: 30px;">
                                <h2 style="color: #6B2B47; margin-top: 0;">Payment Voucher Reviewed</h2>
                                <p>Payment voucher ${object.voucher_number} has been reviewed and is ready for the next step.</p>
                                
                                <table style="width: 100%; border-collapse: collapse; margin: 20px 0;">
                                    <tr style="background-color: #f8f9fa;">
                                        <td style="padding: 10px; border: 1px solid #dee2e6; font-weight: bold;">Reviewed By:</td>
                                        <td style="padding: 10px; border: 1px solid #dee2e6;">${object.reviewer_id.name}</td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 10px; border: 1px solid #dee2e6; font-weight: bold;">Review Date:</td>
                                        <td style="padding: 10px; border: 1px solid #dee2e6;">${object.reviewed_date.strftime('%B %d, %Y at %I:%M %p') if object.reviewed_date else ''}</td>
                                    </tr>
                                </table>
                                
                                <p style="margin-top: 30px;">
                                    <a href="${object.get_base_url()}/web#id=${object.id}&amp;model=account.payment&amp;view_type=form" 
                                       style="background-color: #6B2B47; color: white; padding: 12px 24px; text-decoration: none; border-radius: 5px; display: inline-block;">
                                        View Voucher
                                    </a>
                                </p>
                            </td></tr>
                            
                            <tr><td style="background-color: #f8f9fa; padding: 15px; text-align: center; border-top: 1px solid #dee2e6;">
                                <p style="margin: 0; color: #6c757d; font-size: 12px;">OSUS Properties Payment Voucher System</p>
                            </td></tr>
                        </table>
                    </td></tr>
                </table>
            </div>
        ]]></field>
    </record>

    <!-- Similar templates for approved, authorized, posted, and rejected states... -->
    <!-- For brevity, I'll create simplified versions -->
    
    <record id="email_template_payment_approved" model="mail.template">
        <field name="name">Payment Voucher Approved</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="subject">Payment Voucher ${object.voucher_number} Approved</field>
        <field name="email_from">${object.company_id.email}</field>
        <field name="email_to">${','.join([user.email for user in object.next_action_user_ids if user.email])}</field>
        <field name="body_html"><![CDATA[<p>Payment voucher ${object.voucher_number} has been approved by ${object.approver_id.name}.</p>]]></field>
    </record>

    <record id="email_template_payment_authorized" model="mail.template">
        <field name="name">Payment Voucher Authorized</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="subject">Payment Voucher ${object.voucher_number} Authorized</field>
        <field name="email_from">${object.company_id.email}</field>
        <field name="email_to">${','.join([user.email for user in object.next_action_user_ids if user.email])}</field>
        <field name="body_html"><![CDATA[<p>Payment voucher ${object.voucher_number} has been authorized by ${object.authorizer_id.name}.</p>]]></field>
    </record>

    <record id="email_template_payment_posted" model="mail.template">
        <field name="name">Payment Voucher Posted</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="subject">Payment Voucher ${object.voucher_number} Posted</field>
        <field name="email_from">${object.company_id.email}</field>
        <field name="email_to">${object.create_uid.email}</field>
        <field name="body_html"><![CDATA[<p>Payment voucher ${object.voucher_number} has been posted successfully.</p>]]></field>
    </record>

    <record id="email_template_payment_rejected" model="mail.template">
        <field name="name">Payment Voucher Rejected</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="subject">Payment Voucher ${object.voucher_number} Rejected</field>
        <field name="email_from">${object.company_id.email}</field>
        <field name="email_to">${object.create_uid.email}</field>
        <field name="body_html"><![CDATA[<p>Payment voucher ${object.voucher_number} has been rejected. Reason: ${object.rejection_reason}</p>]]></field>
    </record>
</odoo>
