<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payment Approval Cron Jobs -->

    <!-- Payment Status Sync Cron Job -->
    <record id="cron_payment_status_sync" model="ir.cron">
        <field name="name">Payment Approval: Status Sync</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="state">code</field>
        <field name="code">model.cron_sync_payment_status()</field>
        <field name="interval_number">6</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
    </record>

    <!-- Payment Reminder Notifications -->
    <record id="cron_payment_reminder_notifications" model="ir.cron">
        <field name="name">Payment Approval: Reminder Notifications</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="state">code</field>
        <field name="code">model.cron_send_payment_reminders()</field>
        <field name="interval_number">24</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
    </record>

    <!-- Cleanup Expired QR Codes -->
    <record id="cron_cleanup_expired_qr_codes" model="ir.cron">
        <field name="name">Payment Approval: Cleanup Expired QR Codes</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="state">code</field>
        <field name="code">model.cron_cleanup_expired_qr_codes()</field>
        <field name="interval_number">7</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
    </record>

</odoo>
