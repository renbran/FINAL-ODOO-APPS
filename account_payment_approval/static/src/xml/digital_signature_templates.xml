<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="account_payment_approval.DigitalSignatureWidget" owl="1">
        <div class="o_digital_signature_widget" t-att-class="props.readonly ? 'o_readonly' : ''">
            <div class="o_signature_header">
                <h6 class="mb-2">
                    <i class="fa fa-edit"/>
 Digital Signature
                </h6>
                <div class="o_signature_controls" t-if="!state.isReadonly">
                    <button type="button" class="btn btn-sm btn-outline-danger" t-on-click="clearSignature" t-att-disabled="!state.hasSignature">
                        <i class="fa fa-trash"/>
 Clear
                    </button>
                </div>
            </div>
            <div class="o_signature_canvas_container">
                <canvas t-ref="signatureCanvas" class="o_signature_canvas" width="400" height="200" t-att-class="state.isReadonly ? 'readonly' : ''">
                </canvas>
                <div class="o_signature_placeholder" t-if="!state.hasSignature and !state.isReadonly">
                    <i class="fa fa-pencil-square-o fa-2x text-muted"/>
                    <p class="text-muted mt-2">Click and drag to sign</p>
                </div>
                <div class="o_signature_readonly_message" t-if="state.isReadonly and !state.hasSignature">
                    <i class="fa fa-info-circle text-muted"/>
                    <p class="text-muted">No signature provided</p>
                </div>
            </div>
            <div class="o_signature_footer mt-2" t-if="state.hasSignature">
                <small class="text-success">
                    <i class="fa fa-check-circle"/>
 Signature captured
                </small>
            </div>
        </div>
    </t>
</templates>
