<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payment_voucher_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <style>
                        :root{
                          --burgundy: #7C2439;
                          --gold: #BFA46F;
                          --off-white: #F5F5F5;
                          --text: #333;
                        }
                        
                        .voucher-page {
                          margin: 0;
                          background: var(--off-white);
                          font-family: 'Montserrat', -webkit-system-font, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
                          padding: 20px;
                          box-sizing: border-box;
                        }
                        
                        .voucher {
                          width: 210mm;
                          max-width: 100%;
                          background: #fff;
                          border: 2px solid var(--burgundy);
                          box-shadow: 0 8px 25px rgba(124, 36, 57, 0.15);
                          border-radius: 6px;
                          overflow: hidden;
                          display: flex;
                          flex-direction: column;
                          margin: 0 auto;
                        }
                        
                        .voucher-header {
                          background: var(--burgundy);
                          color: #fff;
                          padding: 12px 20px;
                          display: flex;
                          justify-content: space-between;
                          align-items: center;
                          min-height: 60px;
                        }
                        
                        .company-info {
                          display: flex;
                          align-items: center;
                          gap: 15px;
                        }
                        
                        .company-details {
                          font-size: 10px;
                          line-height: 1.3;
                          color: rgba(255, 255, 255, 0.9);
                        }
                        
                        .company-name {
                          font-size: 12px;
                          font-weight: 700;
                          color: #fff;
                          margin-bottom: 2px;
                        }
                        
                        .logo {
                          height: 45px;
                          width: auto;
                          max-width: 150px;
                        }
                        
                        .voucher-main-content {
                          flex: 1;
                          padding: 20px;
                          display: flex;
                          flex-direction: column;
                        }
                        
                        .voucher-title {
                          text-align: center;
                          font-size: 20px;
                          font-weight: 700;
                          color: var(--burgundy);
                          margin-bottom: 16px;
                        }
                        
                        .details-table {
                          width: 100%;
                          border-collapse: collapse;
                          margin-bottom: 16px;
                          flex: 1;
                        }
                        
                        .details-table th,
                        .details-table td {
                          padding: 6px 0;
                          text-align: left;
                          font-size: 12px;
                          border-bottom: 1px solid #eee;
                        }
                        
                        .details-table th {
                          color: var(--burgundy);
                          font-weight: 600;
                          width: 35%;
                        }
                        
                        .details-table td {
                          color: var(--text);
                        }
                        
                        .amount-section {
                          background: linear-gradient(135deg, var(--gold), #d4c195);
                          color: #fff;
                          padding: 12px;
                          border-radius: 4px;
                          text-align: center;
                          margin-bottom: 16px;
                        }
                        
                        .signature-section {
                          display: flex;
                          justify-content: space-between;
                          gap: 20px;
                          margin-top: auto;
                          padding-top: 12px;
                        }
                        
                        .signature-left,
                        .signature-right {
                          flex: 1;
                        }
                        
                        .signature-section h4 {
                          margin: 0 0 8px 0;
                          font-size: 12px;
                          font-weight: 600;
                          color: var(--burgundy);
                          text-align: center;
                        }
                        
                        .signature-line {
                          height: 2px;
                          background: #ddd;
                          margin: 20px 0 4px 0;
                          border-radius: 1px;
                        }
                        
                        .signature-label {
                          font-size: 10px;
                          color: #666;
                          text-align: center;
                          margin-bottom: 8px;
                        }
                        
                        .date-field,
                        .receiver-details {
                          font-size: 10px;
                          color: var(--text);
                        }
                        
                        .receiver-name {
                          font-size: 10px;
                          color: var(--text);
                          margin-bottom: 8px;
                        }
                        
                        .receiver-details {
                          display: flex;
                          flex-direction: column;
                          gap: 4px;
                        }
                        
                        .amount {
                          font-size: 22px;
                          font-weight: 700;
                          margin: 0;
                        }
                        
                        .voucher-footer {
                          background: var(--burgundy);
                          color: #fff;
                          text-align: center;
                          padding: 8px 16px;
                          font-size: 10px;
                          line-height: 1.3;
                        }
                        
                        .memo-section {
                          border: 1px solid #ddd;
                          border-radius: 4px;
                          padding: 10px;
                          margin-bottom: 16px;
                          background-color: #fafafa;
                        }
                        
                        .memo-title {
                          color: var(--burgundy);
                          font-weight: 600;
                          font-size: 12px;
                          margin-bottom: 5px;
                        }
                        
                        .memo-content {
                          font-size: 11px;
                          color: var(--text);
                          line-height: 1.4;
                        }
                        
                        @media print {
                          .voucher-page {
                            background: white;
                            padding: 0;
                          }
                          
                          .voucher {
                            box-shadow: none;
                            border: 1px solid var(--burgundy);
                          }
                        }
                    </style>
                    
                    <div class="voucher-page">
                        <div class="voucher">
                            <div class="voucher-header">
                                <div class="company-info">
                                    <div class="company-details">
                                        <div class="company-name">
                                            <span t-field="o.company_id.name"/>
                                        </div>
                                        <div t-if="o.company_id.street">
                                            <span t-field="o.company_id.street"/>
                                        </div>
                                        <div t-if="o.company_id.street2">
                                            <span t-field="o.company_id.street2"/>
                                        </div>
                                        <div>
                                            <span t-if="o.company_id.city" t-field="o.company_id.city"/>
                                            <span t-if="o.company_id.state_id">, <span t-field="o.company_id.state_id.name"/></span>
                                        </div>
                                        <div t-if="o.company_id.country_id">
                                            <span t-field="o.company_id.country_id.name"/>
                                        </div>
                                        <div t-if="o.company_id.vat">
                                            VAT: <span t-field="o.company_id.vat"/>
                                        </div>
                                    </div>
                                </div>
                                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" 
                                     t-att-alt="o.company_id.name" class="logo"/>
                            </div>
                            
                            <div class="voucher-main-content">
                                <h1 class="voucher-title">
                                    <t t-if="o.payment_type == 'inbound'">
                                        Customer Receipt Voucher
                                    </t>
                                    <t t-elif="o.payment_type == 'outbound'">
                                        Vendor Payment Voucher
                                    </t>
                                    <t t-else="">
                                        Payment Voucher
                                    </t>
                                </h1>
                                
                                <table class="details-table">
                                    <tr>
                                        <th>
                                            <t t-if="o.payment_type == 'inbound'">
                                                Issued To:
                                            </t>
                                            <t t-else="">
                                                Paid To:
                                            </t>
                                        </th>
                                        <td><span t-field="o.partner_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <th>Voucher Reference:</th>
                                        <td><span t-field="o.name"/></td>
                                    </tr>
                                    <tr>
                                        <th>Date:</th>
                                        <td><span t-field="o.date"/></td>
                                    </tr>
                                    <tr t-if="o.partner_id.street or o.partner_id.city">
                                        <th>Address:</th>
                                        <td>
                                            <span t-if="o.partner_id.street" t-field="o.partner_id.street"/>
                                            <span t-if="o.partner_id.street2">, <span t-field="o.partner_id.street2"/></span>
                                            <span t-if="o.partner_id.city">, <span t-field="o.partner_id.city"/></span>
                                            <span t-if="o.partner_id.state_id">, <span t-field="o.partner_id.state_id.name"/></span>
                                            <span t-if="o.partner_id.country_id">, <span t-field="o.partner_id.country_id.name"/></span>
                                        </td>
                                    </tr>
                                    <tr t-if="o.partner_id.phone or o.partner_id.mobile">
                                        <th>Phone:</th>
                                        <td>
                                            <span t-if="o.partner_id.phone" t-field="o.partner_id.phone"/>
                                            <span t-if="o.partner_id.mobile and o.partner_id.phone"> / </span>
                                            <span t-if="o.partner_id.mobile" t-field="o.partner_id.mobile"/>
                                        </td>
                                    </tr>
                                    <tr t-if="o.destination_account_id">
                                        <th>Bank Details:</th>
                                        <td><span t-field="o.destination_account_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <th>Payment Method:</th>
                                        <td><span t-field="o.payment_method_line_id.name"/></td>
                                    </tr>
                                </table>
                                
                                <!-- Memo/Purpose Section -->
                                <div class="memo-section" t-if="o.ref">
                                    <div class="memo-title">Memo/Purpose:</div>
                                    <div class="memo-content">
                                        <span t-field="o.ref"/>
                                    </div>
                                </div>
                                
                                <div class="amount-section">
                                    <p class="amount">
                                        Total Amount: 
                                        <span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </p>
                                </div>
                                
                                <!-- Computer Generated Disclaimer -->
                                <div class="disclaimer-section">
                                    <p class="disclaimer-text">
                                        <strong>This is Computer generated report no signature and stamp required.</strong>
                                    </p>
                                </div>
                                
                                <div class="signature-section">
                                    <div class="signature-left">
                                        <h4>Authorized Signatory</h4>
                                        <div class="signature-line"></div>
                                        <div class="signature-label">Signature</div>
                                        <div class="date-field">
                                            <span>Date: _________________</span>
                                        </div>
                                    </div>
                                    
                                    <div class="signature-right">
                                        <h4>
                                            <t t-if="o.payment_type == 'inbound'">
                                                Received By:
                                            </t>
                                            <t t-else="">
                                                Received By:
                                            </t>
                                        </h4>
                                        <div class="receiver-name">
                                            <span>Full Name: _________________________</span>
                                        </div>
                                        <div class="signature-line"></div>
                                        <div class="signature-label">Signature</div>
                                        <div class="receiver-details">
                                            <div>Date: _________________</div>
                                            <div>Mobile: _______________</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="voucher-footer">
                                Thank you for your business â€¢ 
                                <span t-if="o.company_id.phone">Confirm payment at <span t-field="o.company_id.phone"/></span>
                                <span t-if="not o.company_id.phone">System Generated Payment Voucher</span>
                                <br/>
                                <em>This is Computer generated report no signature and stamp required.</em>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
