<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Demo Dashboard Configurations -->
        <record id="demo_dashboard_sales_manager" model="crm.executive.dashboard">
            <field name="name">Sales Manager Dashboard</field>
            <field name="active" eval="True"/>
            <field name="date_from" eval="(DateTime.now() - relativedelta(months=3)).strftime('%Y-%m-%d')"/>
            <field name="date_to" eval="DateTime.now().strftime('%Y-%m-%d')"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>

        <record id="demo_dashboard_quarterly" model="crm.executive.dashboard">
            <field name="name">Quarterly Review Dashboard</field>
            <field name="active" eval="True"/>
            <field name="date_from" eval="(DateTime.now() - relativedelta(months=3)).strftime('%Y-%m-%d')"/>
            <field name="date_to" eval="DateTime.now().strftime('%Y-%m-%d')"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>

        <record id="demo_dashboard_monthly" model="crm.executive.dashboard">
            <field name="name">Monthly Performance Dashboard</field>
            <field name="active" eval="True"/>
            <field name="date_from" eval="(DateTime.now() - relativedelta(months=1)).strftime('%Y-%m-%d')"/>
            <field name="date_to" eval="DateTime.now().strftime('%Y-%m-%d')"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>

    </data>
</odoo>
