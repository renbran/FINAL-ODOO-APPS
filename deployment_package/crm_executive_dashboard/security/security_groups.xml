<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- CRM Executive Dashboard Manager Group -->
        <record id="group_crm_executive_dashboard_manager" model="res.groups">
            <field name="name">CRM Executive Dashboard Manager</field>
            <field name="category_id" ref="base.module_category_sales_management"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
            <field name="comment">Users with this group can manage CRM executive dashboard configurations and export data.</field>
        </record>

        <!-- CRM Executive Dashboard User Group -->
        <record id="group_crm_executive_dashboard_user" model="res.groups">
            <field name="name">CRM Executive Dashboard User</field>
            <field name="category_id" ref="base.module_category_sales_management"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="comment">Users with this group can view CRM executive dashboard.</field>
        </record>

        <!-- Record Rules -->
        <record id="crm_executive_dashboard_rule_user" model="ir.rule">
            <field name="name">CRM Executive Dashboard: User Access</field>
            <field name="model_id" ref="model_crm_executive_dashboard"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_crm_executive_dashboard_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="crm_executive_dashboard_rule_manager" model="ir.rule">
            <field name="name">CRM Executive Dashboard: Manager Access</field>
            <field name="model_id" ref="model_crm_executive_dashboard"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_crm_executive_dashboard_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
