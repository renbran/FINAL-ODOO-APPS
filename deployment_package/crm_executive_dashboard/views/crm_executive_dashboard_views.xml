<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- CRM Executive Dashboard Form View -->
        <record id="view_crm_executive_dashboard_form" model="ir.ui.view">
            <field name="name">crm.executive.dashboard.form</field>
            <field name="model">crm.executive.dashboard</field>
            <field name="arch" type="xml">
                <form string="CRM Executive Dashboard">
                    <header>
                        <button name="create_default_dashboard" type="object" 
                                string="Reset to Default" class="btn-secondary"
                                confirm="This will reset the dashboard to default settings. Continue?"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Dashboard Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group name="basic_info">
                                <field name="active"/>
                                <field name="user_id"/>
                                <field name="currency_id"/>
                            </group>
                            <group name="date_range">
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                        </group>
                        
                        <group string="Filters">
                            <field name="team_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- CRM Executive Dashboard Tree View -->
        <record id="view_crm_executive_dashboard_tree" model="ir.ui.view">
            <field name="name">crm.executive.dashboard.tree</field>
            <field name="model">crm.executive.dashboard</field>
            <field name="arch" type="xml">
                <tree string="CRM Executive Dashboards">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="team_ids" widget="many2many_tags"/>
                    <field name="active"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <!-- CRM Executive Dashboard Search View -->
        <record id="view_crm_executive_dashboard_search" model="ir.ui.view">
            <field name="name">crm.executive.dashboard.search</field>
            <field name="model">crm.executive.dashboard</field>
            <field name="arch" type="xml">
                <search string="Search Dashboards">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="team_ids"/>
                    
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    
                    <separator/>
                    <filter string="My Dashboards" name="my_dashboards" 
                            domain="[('user_id', '=', uid)]"/>
                    
                    <separator/>
                    <filter string="This Month" name="this_month" 
                            domain="[('date_from', '>=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                    ('date_to', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Date From" name="group_date_from" context="{'group_by': 'date_from'}"/>
                        <filter string="Active Status" name="group_active" context="{'group_by': 'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- CRM Executive Dashboard Action -->
        <record id="action_crm_executive_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard Configurations</field>
            <field name="res_model">crm.executive.dashboard</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_crm_executive_dashboard_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first CRM Executive Dashboard!
                </p>
                <p>
                    Configure dashboard settings to customize your CRM analytics view.
                    You can set date ranges, select specific teams, and personalize
                    your executive dashboard experience.
                </p>
            </field>
        </record>

        <!-- Main Dashboard Client Action -->
        <record id="action_crm_executive_dashboard_main" model="ir.actions.client">
            <field name="name">CRM Executive Dashboard</field>
            <field name="tag">crm_executive_dashboard</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>
