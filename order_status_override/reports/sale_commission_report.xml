<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Commission Report Definition -->
    <record id="report_sale_commission" model="ir.actions.report">
        <field name="name">Commission Report</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">order_status_override.sale_commission_document</field>
        <field name="report_file">order_status_override.sale_commission_document</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
        <field name="print_report_name">'Commission Report - %s' % (object.name)</field>
    </record>

    <!-- Menu Item for Commission Reports -->
    <menuitem id="menu_commission_reports"
              name="Commission Reports"
              parent="sale.sale_menu_root"
              sequence="99"/>
</odoo>
