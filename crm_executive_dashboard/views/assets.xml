<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Include Chart.js and Assets -->
        <template id="assets_backend" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <!-- Dashboard SCSS -->
                <link rel="stylesheet" type="text/scss" href="/crm_executive_dashboard/static/src/scss/_variables.scss"/>
                <link rel="stylesheet" type="text/scss" href="/crm_executive_dashboard/static/src/scss/dashboard.scss"/>
                
                <!-- Chart.js Library - Load synchronously without external CDN -->
                <script type="text/javascript" src="/crm_executive_dashboard/static/lib/chart.min.js"/>
                
                <!-- Dashboard JavaScript -->
                <script type="text/javascript" src="/crm_executive_dashboard/static/src/js/crm_executive_dashboard.js"/>
            </xpath>
        </template>

        <!-- Dashboard Templates -->
        <template id="dashboard_templates">
            <t t-call="crm_executive_dashboard.Dashboard"/>
        </template>

    </data>
</odoo>
