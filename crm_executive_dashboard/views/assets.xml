<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Asset bundles temporarily disabled - wildcard paths not supported in Odoo 17
         If you need to enable assets, list each file individually instead of using wildcards

    <template id="assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/crm_executive_dashboard/static/src/js/dashboard.js"/>
            <link rel="stylesheet" type="text/css" src="/crm_executive_dashboard/static/src/css/dashboard.css"/>
        </xpath>
    </template>
    -->
    
    <!-- QWeb Templates -->
    <template id="dashboard_template" name="crm_executive_dashboard.Dashboard">
        <div class="o_crm-executive-dashboard_dashboard">
            <div class="o_dashboard_header">
                <h2>OSUS Properties Dashboard</h2>
                <div class="o_dashboard_controls">
                    <button class="btn btn-primary" t-on-click="onRefreshData">
                        <i class="fa fa-refresh"/> Refresh
                    </button>
                </div>
            </div>
            <div class="o_dashboard_content">
                <t t-if="state.isLoading">
                    <div class="text-center p-4">
                        <i class="fa fa-spinner fa-spin fa-2x"/>
                        <p>Loading...</p>
                    </div>
                </t>
                <t t-elif="state.error">
                    <div class="alert alert-danger">
                        <strong>Error:</strong> <t t-esc="state.error"/>
                    </div>
                </t>
                <t t-else="">
                    <div class="row">
                        <div class="col-md-6">
                            <canvas t-ref="chart1"/>
                        </div>
                        <div class="col-md-6">
                            <canvas t-ref="chart2"/>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </template>
</odoo>
