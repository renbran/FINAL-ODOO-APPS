<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_template_saleorder_deal_status_reminder_agent1" model="mail.template">
        <field name="name">Deal Status Reminder to Agent</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="subject">Action Required: Deal Not Yet Invoiced</field>
        <field name="email_from">${(user.email or 'noreply@yourcompany.com')|safe}</field>
        <field name="email_to">${object.agent1_partner_id.email}</field>
        <field name="body_html"><![CDATA[
            <div style="font-family: Arial, sans-serif; color: #800020;">
                <h2 style="color: #800020;">Deal Status Reminder</h2>
                <p>Dear ${object.agent1_partner_id.name},</p>
                <p>We noticed that the following deal has not yet been invoiced, and it has been 30 days since the booking date:</p>
                <table style="border-collapse: collapse; width: 100%; margin: 20px 0;">
                    <thead>
                        <tr style="background: #f5f5f5; color: #800020;">
                            <th style="border: 1px solid #ddd; padding: 8px;">Partner</th>
                            <th style="border: 1px solid #ddd; padding: 8px;">Buyer</th>
                            <th style="border: 1px solid #ddd; padding: 8px;">Project</th>
                            <th style="border: 1px solid #ddd; padding: 8px;">Unit</th>
                            <th style="border: 1px solid #ddd; padding: 8px;">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="border: 1px solid #ddd; padding: 8px;">${object.partner_id.name}</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">${object.buyer_id.name}</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">${object.project_id.name}</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">${object.unit_id.name}</td>
                            <td style="border: 1px solid #ddd; padding: 8px;">${object.price_unit}</td>
                        </tr>
                    </tbody>
                </table>
                <p style="margin-top: 20px;">If you would like us to initiate the invoice to the developer, please click the button below:</p>
                <a href="https://form.jotform.com/251853806964064" style="display: inline-block; background: #800020; color: #fff; padding: 12px 28px; border-radius: 4px; text-decoration: none; font-weight: bold;">Initiate Invoice Request</a>
                <p style="margin-top: 20px;">Thank you for your attention to this matter!</p>
                <p style="color: #888; font-size: 12px;">This is an automated message. Please do not reply directly to this email.<br/>
                If you believe you received this email in error, please <a href='mailto:r.antthony@osusproperties.com' style='color:#800020;text-decoration:underline;'>contact us</a>.</p>
            </div>
        ]]></field>
        <field name="auto_delete" eval="True"/>
    </record>
</odoo>
