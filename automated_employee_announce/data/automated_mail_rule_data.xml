<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Mail Templates for Birthday and Anniversary -->
    <record id="mail_template_employee_birthday" model="mail.template">
        <field name="name">Employee Birthday Announcement</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="subject">Happy Birthday, ${object.name}!</field>
        <field name="email_from">${(user.email or 'noreply@yourcompany.com')|safe}</field>
        <field name="email_to">${object.work_email}</field>
        <field name="body_html"><![CDATA[
            <div style="font-family: Arial, sans-serif; color: #800020;">
                <h2 style="color: #800020;">Happy Birthday!</h2>
                <p>Dear Team,</p>
                <p>Today is <strong>${object.name}</strong>'s birthday! ðŸŽ‰<br/>
                Please join us in wishing them a wonderful day.</p>
                <p style="color: #888; font-size: 12px;">This is an automated message. Please do not reply directly to this email.<br/>
                If you believe you received this email in error, please <a href='mailto:r.antthony@osusproperties.com' style='color:#800020;text-decoration:underline;'>contact us</a>.</p>
            </div>
        ]]></field>
    </record>
    
    <record id="mail_template_employee_anniversary" model="mail.template">
        <field name="name">Employee Work Anniversary Announcement</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="subject">Happy Work Anniversary, ${object.name}!</field>
        <field name="email_from">${(user.email or 'noreply@yourcompany.com')|safe}</field>
        <field name="email_to">${object.work_email}</field>
        <field name="body_html"><![CDATA[
            <div style="font-family: Arial, sans-serif; color: #800020;">
                <h2 style="color: #800020;">Happy Work Anniversary!</h2>
                <p>Dear Team,</p>
                <p>Today marks <strong>${object.name}</strong>'s work anniversary! ðŸŽŠ<br/>
                Let's congratulate them on their journey with us.</p>
                <p style="color: #888; font-size: 12px;">This is an automated message. Please do not reply directly to this email.<br/>
                If you believe you received this email in error, please <a href='mailto:r.antthony@osusproperties.com' style='color:#800020;text-decoration:underline;'>contact us</a>.</p>
            </div>
        ]]></field>
    </record>

    <!-- Automated Mail Rules -->
    <record id="rule_birthday_announcement" model="automated.mail.rule">
        <field name="name">Employee Birthday Announcements</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="active" eval="True"/>
        <field name="mail_template_id" ref="mail_template_employee_birthday"/>
        <field name="rule_type">birthday</field>
    </record>

    <record id="rule_anniversary_announcement" model="automated.mail.rule">
        <field name="name">Employee Work Anniversary Announcements</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="active" eval="True"/>
        <field name="mail_template_id" ref="mail_template_employee_anniversary"/>
        <field name="rule_type">work_anniversary</field>
    </record>
</odoo>
