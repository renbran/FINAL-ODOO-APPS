<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_automated_mail_rule_form" model="ir.ui.view">
        <field name="name">automated.mail.rule.form</field>
        <field name="model">automated.mail.rule</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="active"/>
                    <field name="last_run" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Rule Name..."/></h1>
                    </div>
                    <group>
                        <field name="model_id"/>
                        <field name="rule_type"/>
                        <field name="mail_template_id"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_automated_mail_rule_tree" model="ir.ui.view">
        <field name="name">automated.mail.rule.tree</field>
        <field name="model">automated.mail.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_id"/>
                <field name="rule_type"/>
                <field name="active"/>
                <field name="last_run"/>
            </tree>
        </field>
    </record>
    <record id="action_automated_mail_rule" model="ir.actions.act_window">
        <field name="name">Automated Mail Rules</field>
        <field name="res_model">automated.mail.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Manage automated mail rules for employee birthdays and work anniversaries.</p>
        </field>
    </record>
</odoo>
