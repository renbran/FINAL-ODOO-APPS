<odoo>
    <data noupdate="1">
        <record id="group_sales_admin" model="res.groups">
            <field name="name">Sales Admin</field>
            <field name="category_id" ref="base.module_category_sales_management"/>
        </record>

        <record id="group_accountant" model="res.groups">
            <field name="name">Accountant</field>
            <field name="category_id" ref="base.module_category_accounting"/>
        </record>

        <record id="group_cfo" model="res.groups">
            <field name="name">CFO</field>
            <field name="category_id" ref="base.module_category_accounting"/>
        </record>

        <record id="group_ceo" model="res.groups">
            <field name="name">CEO</field>
            <field name="category_id" ref="base.module_category_sales_management"/>
        </record>

        <record id="access_hr_employee_position" model="ir.rule">
            <field name="name">Employee Position Access</field>
            <field name="model_id" ref="model_hr_employee_position"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('employee_access_manager.group_sales_admin')), (4, ref('employee_access_manager.group_accountant')), (4, ref('employee_access_manager.group_cfo')), (4, ref('employee_access_manager.group_ceo'))]"/>
        </record>

        <record id="access_position_access_template" model="ir.rule">
            <field name="name">Position Access Template Access</field>
            <field name="model_id" ref="model_position_access_template"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('employee_access_manager.group_sales_admin')), (4, ref('employee_access_manager.group_cfo'))]"/>
        </record>

        <record id="access_res_users_inherit" model="ir.rule">
            <field name="name">User Access Based on Position</field>
            <field name="model_id" ref="model_res_users_inherit"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('employee_access_manager.group_ceo'))]"/>
        </record>
    </data>
</odoo>