<odoo>
    <data>
        <record id="view_hr_employee_position_tree" model="ir.ui.view">
            <field name="name">hr.employee.position.tree</field>
            <field name="model">hr.employee.position</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="access_rights"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_employee_position_form" model="ir.ui.view">
            <field name="name">hr.employee.position.form</field>
            <field name="model">hr.employee.position</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="access_rights"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hr_employee_position" model="ir.actions.act_window">
            <field name="name">Employee Positions</field>
            <field name="res_model">hr.employee.position</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_hr_employee_position" name="Employee Positions" parent="base.menu_hr_root" action="action_hr_employee_position"/>
    </data>
</odoo>