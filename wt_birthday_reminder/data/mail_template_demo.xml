    <div class="email-container">
        <div class="content-wrapper">
            <!-- OSUS Properties Header -->
            <div class="header">
                <div class="header-content">
                    <div class="header-left">
                        <div class="alert-badge">🎉 Birthday Celebration Alert</div>
