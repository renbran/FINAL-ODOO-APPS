<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mail_template_birthday_wish" model="mail.template">
            <field name="name">Enhanced Birthday Wish</field>
            <field name="model_id" ref="wt_birthday_reminder.model_hr_employee"/>
            <field name="email_from">{{object.company_id.email}}</field>
            <field name="subject">🎉 Happy Birthday {{object.name}}! - OSUS Properties</field>
            <field name="email_to">{{object.work_email}}</field>
            <field name="body_html" type="html"><![CDATA[
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Happy Birthday - OSUS Properties</title>
    <style>
        body { 
            margin: 0; 
            padding: 0; 
            font-family: 'Work Sans', Arial, Helvetica, sans-serif; 
            background-color: #a9d9ff;
        }
        .email-container { 
            max-width: 600px; 
            margin: 0 auto; 
            background: #a9d9ff; 
            padding: 20px; 
        }
        .content-wrapper {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        }
        .header { 
            background: linear-gradient(135deg, #f1ffff 0%, #e8f4ff 100%); 
            padding: 20px; 
            text-align: center; 
            border-bottom: 3px solid #417CD6; 
        }
        .logo { 
            height: 50px; 
            opacity: 0.9; 
        }
        .main-content { 
            background: linear-gradient(135deg, #510710 0%, #800020 50%, #a0002a 100%); 
            color: white; 
            padding: 50px 30px; 
            text-align: center; 
            position: relative;
        }
        .birthday-banner {
            width: 100%;
            max-width: 500px;
            margin-bottom: 30px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(68, 5, 13, 0.5);
        }
        .birthday-name { 
            font-size: 42px; 
            font-weight: 700; 
            color: #ffffff; 
            text-transform: uppercase; 
            margin: 25px 0; 
            text-shadow: 3px 3px 6px rgba(0,0,0,0.7);
            background: linear-gradient(45deg, #ffffff, #ffd700);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: 3px;
        }
        .name-container {
            background: rgba(255,255,255,0.15);
            border-radius: 20px;
            padding: 30px;
            margin: 25px auto;
            max-width: 500px;
            backdrop-filter: blur(15px);
            border: 3px solid rgba(255,215,0,0.4);
            box-shadow: 0 12px 40px rgba(0,0,0,0.4);
        }
        .decorative-border {
            border: 4px solid #ffd700;
            border-radius: 25px;
            padding: 20px;
            background: rgba(255,215,0,0.1);
            position: relative;
        }
        .celebration-text {
            color: #ffd700;
            font-size: 18px;
            font-weight: 600;
            margin-top: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.6);
        }
        .company-branding {
            font-size: 14px;
            color: rgba(255,255,255,0.8);
            margin: 20px 0;
            font-style: italic;
        }
        .birthday-message {
            font-size: 16px;
            line-height: 1.8;
            margin: 30px 0;
            color: #ffffff;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.5);
        }
        .cta-section {
            background: rgba(255,255,255,0.1);
            border-radius: 15px;
            padding: 25px;
            margin: 30px 0;
        }
        .cta-button { 
            display: inline-block; 
            background: linear-gradient(135deg, #ffd700 0%, #ffed4e 50%, #ffd700 100%); 
            color: #800020; 
            padding: 18px 35px; 
            text-decoration: none; 
            border-radius: 50px; 
            font-weight: 700; 
            font-size: 16px;
            text-transform: uppercase;
            letter-spacing: 2px;
            box-shadow: 0 6px 20px rgba(255, 215, 0, 0.4);
            border: 3px solid #ffd700;
            transition: all 0.3s ease;
        }
        .birthday-elements {
            margin: 30px 0;
        }
        .cake-section {
            font-size: 28px;
            margin: 25px 0;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }
        .balloons {
            font-size: 38px;
            margin: 25px 0;
            letter-spacing: 5px;
        }
        .quote-box {
            background: rgba(255,255,255,0.15);
            border-radius: 20px;
            padding: 25px;
            margin: 30px 0;
            border: 2px solid rgba(255,215,0,0.3);
            backdrop-filter: blur(10px);
        }
        .quote-title {
            font-size: 22px;
            color: #ffd700;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.6);
        }
        .quote-text {
            font-size: 16px;
            font-style: italic;
            line-height: 1.6;
        }
        .decorative-elements {
            font-size: 32px;
            margin: 25px 0;
            letter-spacing: 8px;
        }
        .sparkle-stars {
            font-size: 28px;
            color: #ffd700;
            margin: 30px 0;
            letter-spacing: 6px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }
        .footer { 
            background: linear-gradient(135deg, #800020 0%, #a0002a 100%); 
            color: white; 
            padding: 25px; 
            text-align: center; 
            font-size: 14px; 
        }
        .footer-branding {
            font-weight: 600;
            margin-bottom: 12px;
        }
        .footer-contact {
            font-size: 12px;
            opacity: 0.9;
            margin-top: 10px;
        }
        .footer-contact a {
            color: #ffd700;
            text-decoration: none;
        }
        @media screen and (max-width: 620px) {
            .birthday-name { 
                font-size: 28px; 
                letter-spacing: 1px; 
            }
            .name-container { 
                margin: 15px 20px; 
                padding: 20px; 
            }
            .main-content {
                padding: 30px 20px;
            }
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="content-wrapper">
            <!-- OSUS Properties Header -->
            <div class="header">
                <img src="https://osusproperties.com/wp-content/uploads/2025/02/OSUS-logotype-2.png" 
                     alt="OSUS Properties" class="logo"/>
            </div>
            
            <!-- Main Birthday Content -->
            <div class="main-content">
                <!-- Birthday Banner Image -->
                <img src="https://cloudfilesdm.com/postcards/image-172969713055515-76aacb73.png" 
                     alt="Birthday Celebration Banner" class="birthday-banner"/>
                
                <!-- Enhanced Name Section with OSUS Branding -->
                <div class="name-container">
                    <div class="decorative-border">
                        <div class="birthday-name">
                            <t t-out="object.name or 'Dear Colleague'"/>
                        </div>
                        <div class="celebration-text">
                            ✨ Celebrating You Today ✨
                        </div>
                    </div>
                </div>
                
                <!-- OSUS Properties Company Branding -->
                <div class="company-branding">
                    Brought to you with love by <strong><t t-out="object.company_id.name or 'OSUS Properties'"/></strong>
                </div>
                
                <!-- Birthday Message -->
                <div class="birthday-message">
                    Hi <strong><t t-out="object.name or 'Dear Colleague'"/></strong>,<br/><br/>
                    
                    Wishing you a day filled with joy, laughter, and countless blessings from all of us at 
                    <strong><t t-out="object.company_id.name or 'OSUS Properties'"/></strong>.<br/><br/>
                    
                    Birthdays are more than just milestones — they're a beautiful reminder of how far you've come, 
                    the lives you've touched, and the purpose that continues to guide you.<br/><br/>
                    
                    You are one of our most valuable team members, and on your precious day we wish nothing 
                    but good luck and a successful year ahead.<br/><br/>
                    
                    May this new chapter bring you renewed strength, wisdom, and peace.
                    Here's to new beginnings, lasting success, and a heart full of gratitude and grace.<br/><br/>
                    
                    <strong>Party Hard, Stay Safe! 🎉</strong><br/><br/>
                    
                    With warmest birthday wishes,<br/>
                    <strong style="color: #ffd700;"><t t-out="object.company_id.name or 'OSUS Properties'"/> Family</strong>
                </div>
                
                <!-- Call to Action with OSUS Telegram -->
                <div class="cta-section">
                    <a href="https://t.me/+bWdZc6_TZME5ODM0" target="_blank" class="cta-button">
                        🎉 Join OSUS Birthday Celebration 🎉
                    </a>
                </div>
                
                <!-- Birthday Design Elements -->
                <div class="birthday-elements">
                    <!-- Birthday Cake -->
                    <div class="cake-section">
                        🕯️🎂🕯️<br/>
                        <span style="font-size: 18px;">Make a wish!</span>
                    </div>
                    
                    <!-- Birthday Balloons -->
                    <div class="balloons">🎈🎈🎈🎈🎈</div>
                    
                    <!-- Inspirational Quote Box -->
                    <div class="quote-box">
                        <div class="quote-title">"Another Year of Blessings"</div>
                        <div class="quote-text">
                            Every birthday is a gift. Every day is an opportunity.<br/>
                            Every moment is a blessing to celebrate life! 🌟
                        </div>
                    </div>
                    
                    <!-- Gift Elements -->
                    <div class="decorative-elements">🎁 🎊 🎉 🎁</div>
                    
                    <!-- Sparkle Stars -->
                    <div class="sparkle-stars">⭐ ✨ 🌟 ✨ ⭐</div>
                </div>
            </div>
            
            <!-- OSUS Properties Footer -->
            <div class="footer">
                <div class="footer-branding">
                    <t t-out="object.company_id.name or 'OSUS Properties'"/> - Wishing you happiness always! 🌟
                </div>
                <div class="footer-contact">
                    <t t-if="object.company_id.phone" t-out="object.company_id.phone"/>
                    <t t-if="object.company_id.email">
                        | <a t-attf-href="mailto:{{object.company_id.email}}" t-out="object.company_id.email"/>
                    </t>
                    <t t-if="object.company_id.website">
                        | <a t-attf-href="{{object.company_id.website}}" t-out="object.company_id.website"/>
                    </t>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
            ]]></field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">{{object.lang}}</field>
        </record>

        <record id="mail_template_birthday_reminder" model="mail.template">
            <field name="name">Enhanced Birthday Reminder</field>
            <field name="model_id" ref="wt_birthday_reminder.model_hr_employee"/>
            <field name="email_from">{{object.company_id.email}}</field>
            <field name="subject">🎉 Today is {{object.name}}'s Birthday - Let's Celebrate! - OSUS Properties</field>
            <field name="email_to">{{object.work_email}}</field>
            <field name="body_html" type="html"><![CDATA[
