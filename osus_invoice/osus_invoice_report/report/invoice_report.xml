<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_osus_invoice_document">
        <t t-call="web.external_layout">
            <div style="background: transparent; padding: 0;">
                <!-- Header Section -->
                <div style="display: flex; justify-content: space-between;">
                    <div>
                        <strong>COMPANY DETAILS</strong><br/>
                        OSUS PROPERTIES<br/>
                        SINGLE BUSINESS TOWER FLOOR 29 OFFICE 02 & 03<br/>
                        BUSINESS BAY<br/>
                        Dubai 00000<br/>
                        United Arab Emirates<br/>
                        VAT: 100236589600003
                    </div>
                    <div style="text-align: right;">
                        <strong>VENDOR DETAILS</strong><br/>
                        G J R E REAL ESTATE LLC<br/>
                        Sky Spiral Building (Ground Floor)<br/>
                        VAT: 104072243900003
                    </div>
                </div>
                <h2 style="text-align: center; color: #b20000; margin-top: 20px;">TAX INVOICE INV/<span t-esc="o.name"/></h2>
                <!-- Invoice Info -->
                <table style="width: 100%; margin-bottom: 10px;">
                    <tr>
                        <td><strong>Invoice Date:</strong> <span t-esc="o.invoice_date"/></td>
                        <td><strong>Due Date:</strong> <span t-esc="o.invoice_date_due"/></td>
                        <td><strong>Booking Date:</strong> <span t-esc="o.invoice_date"/></td>
                    </tr>
                </table>
                <!-- Buyer Table -->
                <table class="table table-sm" style="width: 100%; border: 1px solid #b20000;">
                    <thead style="background: #b20000; color: #fff;">
                        <tr>
                            <th>BUYER</th>
                            <th>PROJECT</th>
                            <th>UNIT</th>
                            <th>COMMISSION RATE</th>
                            <th>SALE VALUE</th>
                            <th>VAT</th>
                            <th>VAT AMOUNT</th>
                            <th>AMOUNT</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td t-esc="o.partner_id.name"/>
                            <td>BILTMORE</td>
                            <td>809</td>
                            <td>2.00%</td>
                            <td>2,608,128.00 AED</td>
                            <td>5.00%</td>
                            <td>2,608.13 AED</td>
                            <td t-esc="o.amount_total"/>
                        </tr>
                    </tbody>
                </table>
                <!-- Amounts -->
                <div style="margin-top: 10px; text-align: right;">
                    <table style="float: right;">
                        <tr><td>Untaxed Amount</td><td t-esc="o.amount_untaxed"/></tr>
                        <tr><td>VAT</td><td t-esc="o.amount_tax"/></tr>
                        <tr style="font-weight: bold; color: #b20000;"><td>Total</td><td t-esc="o.amount_total"/></tr>
                    </table>
                </div>
                <!-- Amount in Words -->
                <div style="margin-top: 40px;">
                    <strong>Amount in Words (Total):</strong><br/>
                    <span t-esc="o.currency_id.amount_to_text(o.amount_total)"/>
                </div>
                <!-- Payment Instructions -->
                <div style="margin-top: 20px; background: #b20000; color: #fff; padding: 5px 10px; font-weight: bold;">Payment Instructions</div>
                <div style="border: 1px solid #b20000; padding: 10px;">
                    Please pay to this Account Details in Cheque or Bank Transfer
                    <table style="width: 100%; margin-top: 10px;">
                        <tr><td><strong>Bank Name</strong></td><td>ABU DHABI COMMERCIAL BANK (ADCB)</td></tr>
                        <tr><td><strong>Account Name</strong></td><td>OSUS REAL ESTATE BROKERAGE LLC</td></tr>
                        <tr><td><strong>Account No.</strong></td><td>14041417820001 - AED</td></tr>
                        <tr><td><strong>IBAN</strong></td><td>AE35003001404141782000</td></tr>
                        <tr><td><strong>Branch</strong></td><td>Business Bay</td></tr>
                    </table>
                    <i>Please include your reference number when making the payment</i>
                </div>
                <div style="margin-top: 20px; font-size: 10px; color: #888; text-align: center;">
                    This is a computer generated document. No signature or stamp required.<br/>
                    <span style="color: #b20000;">&#9742; +971 55 775 6776 | &#9993; info@osusproperties.com</span> | 2902 - 2903, Single Tower, Business Bay, Dubai, UAE
                </div>
            </div>
        </t>
    </template>
</odoo>
