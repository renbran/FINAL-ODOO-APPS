<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Enhanced Sale Order List View -->
    <record id="view_order_tree_enhanced" model="ir.ui.view">
        <field name="name">sale.order.tree.enhanced</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <!-- Make client reference more prominent -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="client_order_ref" string="Client Reference" decoration-info="client_order_ref" decoration-bf="client_order_ref"/>
                <field name="reference_priority" string="Priority" decoration-danger="reference_priority == 'urgent'" decoration-warning="reference_priority == 'high'"/>
            </xpath>
        </field>
    </record>

    <!-- Enhanced Sale Order Form View -->
    <record id="view_order_form_enhanced" model="ir.ui.view">
        <field name="name">sale.order.form.enhanced</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add client reference section -->
            <xpath expr="//field[@name='client_order_ref']" position="replace">
                <div class="o_row">
                    <field name="client_order_ref" placeholder="Enter client order reference..." class="o_field_highlight"/>
                    <field name="reference_priority" widget="priority"/>
                </div>
            </xpath>

            <!-- Add reference notes section -->
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="order_reference_notes" placeholder="Additional notes about the order reference..." class="o_field_text"/>
            </xpath>

            <!-- Add computed display field -->
            <xpath expr="//field[@name='order_reference_notes']" position="after">
                <field name="client_order_ref_display" readonly="1" class="o_field_computed"/>
            </xpath>
        </field>
    </record>

    <!-- Sale Order Search View Enhancement -->
    <record id="view_sales_order_filter_enhanced" model="ir.ui.view">
        <field name="name">sale.order.search.enhanced</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <!-- Add client reference search -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="client_order_ref" string="Client Reference" filter_domain="[('client_order_ref', 'ilike', self)]"/>
                <field name="client_order_ref_display" string="Reference Display" filter_domain="[('client_order_ref_display', 'ilike', self)]"/>
            </xpath>

            <!-- Add reference priority filter -->
            <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                <separator/>
                <filter name="urgent_references" string="Urgent Priority" domain="[('reference_priority', '=', 'urgent')]"/>
                <filter name="high_references" string="High Priority" domain="[('reference_priority', '=', 'high')]"/>
                <filter name="with_client_ref" string="Has Client Reference" domain="[('client_order_ref', '!=', False)]"/>
            </xpath>

            <!-- Add groupby options -->
            <xpath expr="//group[@name='group_by']" position="inside">
                <filter name="group_by_reference_priority" string="Reference Priority" context="{'group_by': 'reference_priority'}"/>
            </xpath>
        </field>
    </record>

    <!-- Portal Sale Order Enhancement -->
    <record id="portal_sale_order_page_enhanced" model="ir.ui.view">
        <field name="name">portal.sale_order.enhanced</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_portal_template"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='row mt-4']" position="before">
                <div class="row mt-3" t-if="sale_order.client_order_ref">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">
                                    <i class="fa fa-tag"/>
 Order Reference Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>Client Order Reference:</strong>
                                        <p class="text-primary">
                                            <t t-esc="sale_order.client_order_ref"/>
                                        </p>
                                    </div>
                                    <div class="col-md-6" t-if="sale_order.reference_priority != 'normal'">
                                        <strong>Priority:</strong>
                                        <p>
                                            <span t-if="sale_order.reference_priority == 'urgent'" class="badge badge-danger">Urgent</span>
                                            <span t-elif="sale_order.reference_priority == 'high'" class="badge badge-warning">High</span>
                                            <span t-elif="sale_order.reference_priority == 'low'" class="badge badge-info">Low</span>
                                            <span t-else="" class="badge badge-secondary">
                                                <t t-esc="sale_order.reference_priority.title()"/>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                <div class="row" t-if="sale_order.order_reference_notes">
                                    <div class="col-12">
                                        <strong>Reference Notes:</strong>
                                        <p>
                                            <t t-esc="sale_order.order_reference_notes"/>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Action for Enhanced Sale Orders -->
    <record id="action_orders_enhanced" model="ir.actions.act_window">
        <field name="name">Sales Orders (Enhanced)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sales order with enhanced reference tracking!
            </p>
            <p>
                This enhanced view includes client order references and priority management.
            </p>
        </field>
    </record>

    <!-- Menu item for enhanced view -->
    <menuitem id="menu_sale_orders_enhanced" name="Sales Orders (Enhanced)" parent="sale.sale_menu_root" action="action_orders_enhanced" sequence="10"/>
</odoo>
