<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_property_sale">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Property Sale Report</h2>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Sale Reference:</strong>
                                <span t-field="o.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Sale Date:</strong>
                                <span t-field="o.sale_date"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <strong>Customer:</strong>
                                <span t-field="o.partner_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Property:</strong>
                                <span t-field="o.property_id.name"/>
                            </div>
                        </div>
                        <h3>Installment Plan</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Installment #</th>
                                    <th>Type</th>
                                    <th>Amount</th>
                                    <th>Due Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.property_sale_line_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.serial_number"/></td>
                                        <td><span t-field="line.line_type"/></td>
                                        <td><span t-field="line.capital_repayment"/></td>
                                        <td><span t-field="line.collection_date"/></td>
                                        <td><span t-field="line.collection_status"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_property_sale" model="ir.actions.report">
        <field name="name">Property Sale Report</field>
        <field name="model">property.sale</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">property_sale_management.report_property_sale</field>
        <field name="report_file">property_sale_management.report_property_sale</field>
        <field name="binding_model_id" ref="model_property_sale"/>
        <field name="binding_type">report</field>
    </record>
</odoo>