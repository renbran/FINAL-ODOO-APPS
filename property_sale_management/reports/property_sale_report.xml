<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_property_sale" model="ir.actions.report">
        <field name="name">Property Sale Report</field>
        <field name="model">property.sale</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">property_sale_management.report_property_sale</field>
        <field name="report_file">property_sale_management.report_property_sale</field>
        <field name="print_report_name">'Property Sale - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_property_sale"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_property_sale">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Property Sale Report</h2>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Customer:</strong> <span t-field="o.partner_id"/>
                                <br/>
                                <strong>Property:</strong> <span t-field="o.property_id"/>
                                <br/>
                                <strong>Sale Date:</strong> <span t-field="o.sale_date"/>
                            </div>
                            <div class="col-6">
                                <strong>Reference:</strong> <span t-field="o.name"/>
                                <br/>
                                <strong>Status:</strong> <span t-field="o.state"/>
                                <br/>
                                <strong>Payment Plan:</strong> <span t-field="o.payment_plan"/>
                            </div>
                        </div>

                        <h3>Financial Details</h3>
                        <table class="table table-sm">
                            <tr>
                                <td><strong>Property Value:</strong></td>
                                <td class="text-right">
                                    <span t-field="o.property_value" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Down Payment:</strong></td>
                                <td class="text-right">
                                    <span t-field="o.down_payment" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>DLD Fee:</strong></td>
                                <td class="text-right">
                                    <span t-field="o.dld_fee" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Admin Fee:</strong></td>
                                <td class="text-right">
                                    <span t-field="o.admin_fee" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Total Selling Price:</strong></td>
                                <td class="text-right">
                                    <span t-field="o.total_selling_price" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Remaining Balance:</strong></td>
                                <td class="text-right">
                                    <span t-field="o.remaining_balance" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </table>

                        <h3>Installment Lines</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Installment #</th>
                                    <th>Type</th>
                                    <th>Amount</th>
                                    <th>Due Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.property_sale_line_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.serial_number"/></td>
                                        <td><span t-field="line.line_type"/></td>
                                        <td class="text-right">
                                            <span t-field="line.capital_repayment" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td><span t-field="line.collection_date"/></td>
                                        <td><span t-field="line.collection_status"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div class="row mt32">
                            <div class="col-12">
                                <strong>Payment Progress:</strong>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" t-att-style="'width: %s%%' % o.payment_progress" t-att-aria-valuenow="o.payment_progress" aria-valuemin="0" aria-valuemax="100">
                                        <t t-esc="o.payment_progress"/>%
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>