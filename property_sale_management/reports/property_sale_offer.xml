<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_property_sale_offer">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Property Sale Offer</h2>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Property:</strong>
                                <span t-field="o.property_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Offer Date:</strong>
                                <span t-field="o.offer_date"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <strong>Customer:</strong>
                                <span t-field="o.partner_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Offer Amount:</strong>
                                <span t-field="o.offer_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </div>
                        </div>
                        
                        <!-- Payment Schedule Table -->
                        <div class="row mt32">
                            <div class="col-12">
                                <h3>Payment Schedule</h3>
                                <table class="table table-bordered mt16">
                                    <thead>
                                        <tr>
                                            <th>Installment</th>
                                            <th>Due Date</th>
                                            <th>Amount</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.payment_schedule_ids" t-as="payment">
                                            <tr>
                                                <td><span t-field="payment.installment_number"/></td>
                                                <td><span t-field="payment.due_date"/></td>
                                                <td>
                                                    <span t-field="payment.amount" 
                                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                                <td>
                                                    <span t-field="payment.state"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr t-if="not o.payment_schedule_ids">
                                            <td colspan="4" class="text-center">No payment schedule defined</td>
                                        </tr>
                                    </tbody>
                                    <tfoot t-if="o.payment_schedule_ids">
                                        <tr>
                                            <td colspan="2"><strong>Total</strong></td>
                                            <td>
                                                <span t-field="o.total_payment_amount" 
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                            <td></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_property_sale_offer" model="ir.actions.report">
        <field name="name">Property Sale Offer</field>
        <field name="model">property.sale</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">property_sale_management.report_property_sale_offer</field>
        <field name="report_file">property_sale_management.report_property_sale_offer</field>
        <field name="binding_model_id" ref="model_property_sale"/>
        <field name="binding_type">report</field>
    </record>
</odoo>