<!-- Enhanced Property Sale Ledger Report -->
<template id="report_property_sale_ledger">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Property Sale Ledger - <span t-field="o.name"/></h2>
                    
                    <!-- Client and Property Summary -->
                    <div class="row mt32 mb32">
                        <div class="col-6">
                            <strong>Client:</strong> <span t-field="o.partner_id"/><br/>
                            <strong>Client ID:</strong> <span t-field="o.partner_id.ref"/><br/>
                            <strong>Contact:</strong> <span t-field="o.partner_id.phone"/>
                        </div>
                        <div class="col-6">
                            <strong>Property:</strong> <span t-field="o.property_id"/><br/>
                            <strong>Reference:</strong> <span t-field="o.property_id.property_reference"/><br/>
                            <strong>Sale Date:</strong> <span t-field="o.sale_date"/>
                        </div>
                    </div>

                    <!-- Financial Summary -->
                    <h3>Financial Summary</h3>
                    <table class="table table-sm">
                        <tr>
                            <td><strong>Total Property Value:</strong></td>
                            <td class="text-right">
                                <span t-field="o.property_value" t-options='{"widget": "monetary"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Amount Paid:</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_paid" t-options='{"widget": "monetary"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Balance Due:</strong></td>
                            <td class="text-right">
                                <span t-field="o.remaining_balance" t-options='{"widget": "monetary"}'/>
                            </td>
                        </tr>
                    </table>

                    <!-- Detailed Ledger -->
                    <h3>Payment Ledger</h3>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Reference</th>
                                <th>Amount</th>
                                <th>Balance</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.property_sale_line_ids" t-as="line">
                                <tr>
                                    <td><span t-field="line.collection_date"/></td>
                                    <td><span t-field="line.line_type"/></td>
                                    <td><span t-field="line.name"/></td>
                                    <td class="text-right">
                                        <span t-field="line.capital_repayment" t-options='{"widget": "monetary"}'/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.remaining_capital" t-options='{"widget": "monetary"}'/>
                                    </td>
                                    <td><span t-field="line.collection_status"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    
                    <!-- Payment Progress and Notes -->
                    <div class="row mt32">
                        <div class="col-6">
                            <strong>Payment Progress:</strong>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" 
                                     t-att-style="'width: %s%%' % o.payment_progress" 
                                     t-att-aria-valuenow="o.payment_progress">
                                    <t t-esc="o.payment_progress"/>%
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <strong>Notes:</strong>
                            <p>Please make payments by the due date to avoid late fees.</p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </t>
</template>