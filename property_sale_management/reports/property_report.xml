<xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_property_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <div class="page">
                <h2>Property Details</h2>
                <div class="row mt32 mb32">
                    <div class="col-6">
                        <strong>Name:</strong> <span t-field="doc.name"/>
                        <br/>
                        <strong>Reference:</strong> <span t-field="doc.property_reference"/>
                        <br/>
                        <strong>Project:</strong> <span t-field="doc.project_name"/>
                        <br/>
                        <strong>Unit No:</strong> <span t-field="doc.unit_no"/>
                    </div>
                    <div class="col-6">
                        <strong>Price:</strong> <span t-field="doc.property_price"/>
                        <br/>
                        <strong>Status:</strong> <span t-field="doc.state"/>
                        <br/>
                        <strong>Total Sqft:</strong> <span t-field="doc.total_sqft"/>
                        <br/>
                        <strong>Price/Sqft:</strong> <span t-field="doc.price_per_sqft"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <strong>Description:</strong>
                        <p t-field="doc.description"/>
                    </div>
                </div>
                <div class="row mt32">
                    <div class="col-4">
                        <strong>Property Image</strong>
                        <img t-if="doc.property_image" t-att-src="image_data_uri(doc.property_image)" style="max-width: 100%;"/>
                    </div>
                    <div class="col-4">
                        <strong>Floor Plan</strong>
                        <img t-if="doc.floor_plan" t-att-src="image_data_uri(doc.floor_plan)" style="max-width: 100%;"/>
                    </div>
                    <div class="col-4">
                        <strong>Interior View</strong>
                        <img t-if="doc.interior_image" t-att-src="image_data_uri(doc.interior_image)" style="max-width: 100%;"/>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="report_property">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="property_sale_management.report_property_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_property" model="ir.actions.report">
        <field name="name">Property Report</field>
        <field name="model">property.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">property_sale_management.report_property</field>
        <field name="report_file">property_sale_management.report_property</field>
        <field name="print_report_name">'Property Report - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_property_property"/>
        <field name="binding_type">report</field>
    </record>
</odoo>