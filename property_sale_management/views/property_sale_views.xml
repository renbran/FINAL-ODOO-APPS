<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_property_sale_form" model="ir.ui.view">
        <field name="name">property.sale.form</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <form string="Property Sale">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" modifiers="draft"/>
                    <button name="action_generate_all_invoices" string="Generate Invoices" type="object" class="oe_highlight" modifiers="confirm"/>
                    <button name="action_cancel" string="Cancel" type="object" modifiers="draft,confirm"/>
                    <button name="action_draft" string="Set to Draft" type="object" modifiers="cancelled"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,invoiced,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="offer_id" widget="many2one_quick_create"/>
                            <field name="property_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="seller_id"/>
                        </group>
                        <group>
                            <field name="sale_date"/>
                            <field name="start_date"/>
                            <field name="payment_plan"/>
                            <field name="no_of_installments"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Financial Details">
                            <group>
                                <group>
                                    <field name="property_value"/>
                                    <field name="down_payment_percentage"/>
                                    <field name="down_payment"/>
                                    <field name="dld_fee"/>
                                    <field name="admin_fee"/>
                                </group>
                                <group>
                                    <field name="total_selling_price"/>
                                    <field name="remaining_balance"/>
                                    <field name="amount_per_installment"/>
                                    <field name="payment_progress" widget="progressbar"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Payment Schedule">
                            <field name="property_sale_line_ids">
                                <tree editable="bottom" string="Installment Plan">
                                    <field name="serial_number"/>
                                    <field name="line_type"/>
                                    <field name="capital_repayment"/>
                                    <field name="collection_date"/>
                                    <field name="collection_status" widget="selection_badge"/>
                                    <field name="invoice_id" widget="many2one_button"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="serial_number"/>
                                        <field name="line_type"/>
                                        <field name="capital_repayment"/>
                                        <field name="collection_date"/>
                                        <field name="collection_status"/>
                                        <field name="invoice_id"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        
                        <page string="Broker Commission">
                            <group>
                                <field name="broker_commission_percentage"/>
                                <field name="broker_commission_invoice_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="broker_id"/>
                                        <field name="commission_amount"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </group>
                            <button name="action_create_broker_commission" 
                                    string="Create Commission" 
                                    type="object" 
                                    class="oe_highlight"
                                    options="{'invisible': [('broker_commission_invoice_ids', '!=', False)]}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_property_sale_tree" model="ir.ui.view">
        <field name="name">property.sale.tree</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <tree string="Property Sales" decoration-info="state == 'draft'" decoration-muted="state == 'cancelled'" decoration-success="state == 'invoiced'">
                <field name="name"/>
                <field name="offer_id" widget="many2one_button"/>
                <field name="partner_id"/>
                <field name="property_id"/>
                <field name="sale_date"/>
                <field name="total_selling_price"/>
                <field name="payment_progress" widget="progressbar"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_property_sale_search" model="ir.ui.view">
        <field name="name">property.sale.search</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <search string="Search Property Sales">
                <field name="name" filter_domain="[('name','ilike',self)]"/>
                <field name="offer_id"/>
                <field name="partner_id"/>
                <field name="property_id"/>
                <field name="payment_plan"/>
                
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirm')]"/>
                <filter string="Invoiced" name="invoiced" domain="[('state','=','invoiced')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                
                <filter string="This Month" name="this_month" domain="[('sale_date','>=',context_today().replace(day=1)),('sale_date','&lt;=',context_today())]"/>
                <filter string="Overdue Payments" name="overdue" domain="[('property_sale_line_ids.collection_date','&lt;',context_today()),('property_sale_line_ids.collection_status','=','unpaid')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_by_partner" context="{'group_by':'partner_id'}"/>
                    <filter string="Property" name="group_by_property" context="{'group_by':'property_id'}"/>
                    <filter string="Payment Plan" name="group_by_plan" context="{'group_by':'payment_plan'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_property_sale" model="ir.actions.act_window">
        <field name="name">Property Sales</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">property.sale</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_by_state': 1}</field>
        <field name="search_view_id" ref="view_property_sale_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property sale!
            </p>
            <p>
                All property sales must originate from an accepted offer.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_property_sale"
              name="Property Sales"
              parent="menu_property_management_root"
              action="action_property_sale"
              sequence="20"/>
</odoo>