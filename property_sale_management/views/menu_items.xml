<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu -->
    <menuitem id="menu_property_root" name="Real Estate" web_icon="property_sale_management,static/description/icon.png" sequence="10"/>

    <!-- Properties -->
    <record id="action_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">property.property</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <menuitem id="menu_property_list" name="Properties" parent="menu_property_root" action="action_property" sequence="10"/>

    <!-- Offers -->
    <record id="action_property_offer" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_property_offer_list" name="Offers" parent="menu_property_root" action="action_property_offer" sequence="20"/>

    <!-- Sales -->
    <record id="action_property_sale" model="ir.actions.act_window">
        <field name="name">Sales Orders</field>
        <field name="res_model">property.sale</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_property_sale_list" name="Sales Orders" parent="menu_property_root" action="action_property_sale" sequence="30"/>

    <!-- Configuration -->
    <menuitem id="menu_property_config" name="Configuration" parent="menu_property_root" sequence="100"/>
    <record id="action_property_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">property.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_property_type" name="Property Types" parent="menu_property_config" action="action_property_type" sequence="10"/>
    <record id="action_property_tag" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_property_tag" name="Property Tags" parent="menu_property_config" action="action_property_tag" sequence="20"/>
</odoo>
