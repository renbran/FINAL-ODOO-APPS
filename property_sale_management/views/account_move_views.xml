<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Add fields to existing account.move form view -->
    <record id="view_move_form_inherit_property_sale" model="ir.ui.view">
        <field name="name">account.move.form.inherit.property.sale</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="broker_commission_id" readonly="1" 
                       options="{'invisible': [('broker_commission_id', '=', False)]}"/>
                <field name="internal_commission_id" readonly="1" 
                       options="{'invisible': [('internal_commission_id', '=', False)]}"/>
                <field name="type_id" options="{'no_create': True}" 
                       options="{'invisible': [('move_type', 'not in', ['out_invoice', 'in_invoice'])]}"/>
            </xpath>
        </field>
    </record>

    <!-- Define account.move.type views -->
    <record id="view_account_move_type_tree" model="ir.ui.view">
        <field name="name">account.move.type.tree</field>
        <field name="model">account.move.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_account_move_type_form" model="ir.ui.view">
        <field name="name">account.move.type.form</field>
        <field name="model">account.move.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu items for invoice types -->
    <record id="action_account_move_type" model="ir.actions.act_window">
        <field name="name">Invoice Types</field>
        <field name="res_model">account.move.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>