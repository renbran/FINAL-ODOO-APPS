<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_internal_commission_form" model="ir.ui.view">
        <field name="name">internal.commission.form</field>
        <field name="model">internal.commission</field>
        <field name="arch" type="xml">
            <form string="Internal Commission">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,paid"/>
                    <button name="action_generate_vendor_bill" string="Generate Vendor Bill" type="object" class="oe_highlight" options="{'invisible': [('state', '!=', 'confirmed')]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="broker_commission_id"/>
                            <field name="position"/>
                            <field name="partner_id"/>
                            <field name="percentage"/>
                        </group>
                        <group>
                            <field name="amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="notes"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Vendor Bills">
                            <field name="bill_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="amount_total"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="bill_total">
                                <field name="bill_count"/>
                                <field name="total_billed" widget="monetary"/>
                                <field name="total_paid" widget="monetary"/>
                                <field name="bill_payment_progress" widget="percentage"/>
                                <field name="bill_payment_state"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_internal_commission_tree" model="ir.ui.view">
        <field name="name">internal.commission.tree</field>
        <field name="model">internal.commission</field>
        <field name="arch" type="xml">
            <tree string="Internal Commissions" decoration-info="state == 'draft'" decoration-success="state == 'paid'" decoration-muted="state == 'cancelled'">
                <field name="display_name"/>
                <field name="broker_commission_id"/>
                <field name="position"/>
                <field name="partner_id"/>
                <field name="percentage"/>
                <field name="amount" sum="Total Amount" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_internal_commission_search" model="ir.ui.view">
        <field name="name">internal.commission.search</field>
        <field name="model">internal.commission</field>
        <field name="arch" type="xml">
            <search string="Search Internal Commissions">
                <field name="display_name"/>
                <field name="broker_commission_id"/>
                <field name="partner_id"/>
                <field name="position"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="Paid" name="paid" domain="[('state','=','paid')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Broker Commission" name="group_by_broker_commission" context="{'group_by':'broker_commission_id'}"/>
                    <filter string="Position" name="group_by_position" context="{'group_by':'position'}"/>
                    <filter string="Partner" name="group_by_partner" context="{'group_by':'partner_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_internal_commission" model="ir.actions.act_window">
        <field name="name">Internal Commissions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">internal.commission</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_internal_commission_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first internal commission!
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_internal_commission"
              name="Internal Commissions"
              parent="menu_property_sale_management"
              action="action_internal_commission"
              sequence="30"/>
</odoo>