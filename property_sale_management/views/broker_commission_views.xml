<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_broker_commission_invoice_tree" model="ir.ui.view">
            <field name="name">broker.commission.invoice.tree</field>
            <field name="model">broker.commission.invoice</field>
            <field name="arch" type="xml">
                <tree string="Broker Commission Invoices" decoration-info="state == 'draft'" decoration-success="state == 'confirmed'" decoration-muted="state == 'cancelled'">
                    <field name="display_name"/>
                    <field name="property_sale_id"/>
                    <field name="seller_id"/>
                    <field name="commission_percentage"/>
                    <field name="commission_amount" widget="monetary" options='{"currency_field": "currency_id"}'/>
                    <field name="total_invoiced" widget="monetary" options='{"currency_field": "currency_id"}'/>
                    <field name="total_paid" widget="monetary" options='{"currency_field": "currency_id"}'/>
                    <field name="payment_progress" widget="progressbar"/>
                    <field name="payment_state"/>
                    <field name="state"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_broker_commission_invoice_form" model="ir.ui.view">
            <field name="name">broker.commission.invoice.form</field>
            <field name="model">broker.commission.invoice</field>
            <field name="arch" type="xml">
                <form string="Broker Commission Invoice">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn btn-primary" modifiers="draft"/>
                        <button name="action_generate_customer_invoice" string="Generate Invoice" type="object" class="btn btn-success" modifiers="confirmed"/>
                        <button name="action_view_invoices" string="View Invoices" type="object" class="btn btn-info" invisible="{'invisible': [('invoice_ids', '=', [])]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn btn-danger" modifiers="draft,confirmed"/>
                        <button name="action_draft" string="Set to Draft" type="object" class="btn btn-secondary" modifiers="cancelled"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,invoiced,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="property_sale_id"/>
                                <field name="seller_id"/>
                                <field name="commission_percentage"/>
                                <field name="commission_amount" widget="monetary" options='{"currency_field": "currency_id"}'/>
                                <field name="currency_id" groups="base.group_multi_currency"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="total_invoiced" widget="monetary" options='{"currency_field": "currency_id"}'/>
                                <field name="total_paid" widget="monetary" options='{"currency_field": "currency_id"}'/>
                                <field name="payment_progress" widget="progressbar"/>
                                <field name="payment_state"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Invoices" name="invoices">
                                <field name="invoice_ids">
                                    <tree string="Invoices" editable="bottom" decoration-success="payment_state == 'paid'" decoration-info="payment_state == 'partial'">
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="amount_total" widget="monetary" options='{"currency_field": "currency_id"}'/>
                                        <field name="amount_residual" widget="monetary" options='{"currency_field": "currency_id"}'/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="invoice_date"/>
                                        <field name="payment_state"/>
                                        <field name="state"/>
                                        <button name="action_register_payment" string="Register Payment" type="object" class="btn-link" invisible="{'invisible': [('state', '!=', 'posted')]}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_broker_commission_invoice_search" model="ir.ui.view">
            <field name="name">broker.commission.invoice.search</field>
            <field name="model">broker.commission.invoice</field>
            <field name="arch" type="xml">
                <search string="Broker Commission Invoice">
                    <field name="display_name"/>
                    <field name="property_sale_id"/>
                    <field name="seller_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Invoiced" name="invoiced" domain="[('state', '=', 'invoiced')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <filter string="Not Paid" name="not_paid" domain="[('payment_state', '=', 'not_invoiced')]"/>
                    <filter string="Partially Paid" name="partial" domain="[('payment_state', '=', 'partial')]"/>
                    <filter string="Fully Paid" name="paid" domain="[('payment_state', '=', 'paid')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Property Sale" name="property_sale" context="{'group_by': 'property_sale_id'}"/>
                        <filter string="Broker" name="seller" context="{'group_by': 'seller_id'}"/>
                        <filter string="Payment Status" name="payment_state" context="{'group_by': 'payment_state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_broker_commission_invoice" model="ir.actions.act_window">
            <field name="name">Broker Commissions</field>
            <field name="res_model">broker.commission.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_broker_commission_invoice_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first broker commission
                </p>
                <p>
                    Track and manage commission payments to brokers.
                </p>
            </field>
        </record>
        <!-- Menu Item -->
        <menuitem id="menu_broker_commission" name="Broker Commissions" parent="menu_property_sale_root" action="action_broker_commission_invoice" sequence="20"/>
    </data>
</odoo>