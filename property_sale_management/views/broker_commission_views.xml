<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Broker Commission Form View -->
        <record id="view_broker_commission_invoice_form" model="ir.ui.view">
            <field name="name">broker.commission.invoice.form</field>
            <field name="model">broker.commission.invoice</field>
            <field name="arch" type="xml">
                <form string="Broker Commission">
                    <header>
                        <button name="action_generate_invoice" string="Generate Invoice" type="object" class="oe_highlight"
                                options="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="oe_highlight"
                                options="{'invisible': [('state', '=', 'cancelled')]}"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" class="oe_highlight"
                                options="{'invisible': [('state', '!=', 'cancelled')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="property_sale_id" readonly="1"/>
                            <field name="seller_id" readonly="1"/>
                            <field name="commission_percentage" readonly="1"/>
                            <field name="commission_amount" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Invoices">
                                <field name="invoice_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="amount_total"/>
                                        <field name="payment_state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Broker Commission Tree View -->
        <record id="view_broker_commission_invoice_tree" model="ir.ui.view">
            <field name="name">broker.commission.invoice.tree</field>
            <field name="model">broker.commission.invoice</field>
            <field name="arch" type="xml">
                <tree string="Broker Commissions">
                    <field name="name"/>
                    <field name="property_sale_id"/>
                    <field name="seller_id"/>
                    <field name="commission_amount"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>