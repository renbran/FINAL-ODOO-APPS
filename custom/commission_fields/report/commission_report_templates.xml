<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_commission_document">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Commission Report</h2>
                <div class="row mt32 mb32">
                    <div class="col-6">
                        <strong>Order Reference:</strong>
                        <p t-field="doc.name"/>
                        <strong>Deal ID:</strong>
                        <p t-field="doc.deal_id"/>
                        <strong>Customer:</strong>
                        <p t-field="doc.partner_id"/>
                    </div>
                    <div class="col-6">
                        <strong>Booking Date:</strong>
                        <p t-field="doc.booking_date"/>
                        <strong>Commission Status:</strong>
                        <p t-field="doc.commission_status"/>
                        <strong>Commission Reference:</strong>
                        <p t-field="doc.commission_reference"/>
                    </div>
                </div>

                <h3>Commission Details</h3>
                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th class="text-right">Amount</th>
                            <th class="text-right">Percentage</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Broker Commission</td>
                            <td class="text-right">
                                <span t-field="doc.broker_commission"/>
                            </td>
                            <td class="text-right">
                                <span t-field="doc.commission_percentage"/>%
                            </td>
                        </tr>
                        <tr>
                            <td>Internal Commission</td>
                            <td class="text-right">
                                <span t-field="doc.total_internal_commission"/>
                            </td>
                            <td class="text-right"></td>
                        </tr>
                        <tr>
                            <td>External Commission</td>
                            <td class="text-right">
                                <span t-field="doc.total_external_commission"/>
                            </td>
                            <td class="text-right"></td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-12">
                        <strong>Notes:</strong>
                        <p t-field="doc.commission_notes"/>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="report_commission">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="commission_fields.report_commission_document"/>
            </t>
        </t>
    </template>
</odoo>
