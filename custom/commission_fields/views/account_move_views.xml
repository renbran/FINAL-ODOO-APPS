<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_commission_deal" model="ir.ui.view">
        <field name="name">account.move.form.commission.deal</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_origin']" position="after">
                <field name="deal_id"/>
                <field name="booking_date"/>
                <field name="buyer_id"/>
                <field name="project_id"/>
                <field name="unit_id"/>
                <field name="sale_value"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_commission_deal" model="ir.ui.view">
        <field name="name">account.move.tree.commission.deal</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_origin']" position="after">
                <field name="deal_id"/>
                <field name="booking_date"/>
                <field name="buyer_id"/>
                <field name="project_id"/>
                <field name="unit_id"/>
                <field name="sale_value"/>
            </xpath>
        </field>
    </record>
</odoo>
