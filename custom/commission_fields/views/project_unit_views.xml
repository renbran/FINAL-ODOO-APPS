<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Views -->
    <record id="view_sale_order_project_tree" model="ir.ui.view">
        <field name="name">sale.order.project.tree</field>
        <field name="model">sale.order.project</field>
        <field name="arch" type="xml">
            <tree string="Projects">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="view_sale_order_project_form" model="ir.ui.view">
        <field name="name">sale.order.project.form</field>
        <field name="model">sale.order.project</field>
        <field name="arch" type="xml">
            <form string="Project">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Unit Views -->
    <record id="view_sale_order_unit_tree" model="ir.ui.view">
        <field name="name">sale.order.unit.tree</field>
        <field name="model">sale.order.unit</field>
        <field name="arch" type="xml">
            <tree string="Units">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="view_sale_order_unit_form" model="ir.ui.view">
        <field name="name">sale.order.unit.form</field>
        <field name="model">sale.order.unit</field>
        <field name="arch" type="xml">
            <form string="Unit">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Menus -->
    <menuitem id="menu_sale_order_project_root" name="Sales Projects & Units" parent="sale.sale_menu_root" sequence="100"/>
    <menuitem id="menu_sale_order_project" name="Projects" parent="menu_sale_order_project_root" action="action_sale_order_project" sequence="10"/>
    <menuitem id="menu_sale_order_unit" name="Units" parent="menu_sale_order_project_root" action="action_sale_order_unit" sequence="20"/>
    <!-- Actions -->
    <record id="action_sale_order_project" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">sale.order.project</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Manage sales order projects here.</p>
        </field>
    </record>
    <record id="action_sale_order_unit" model="ir.actions.act_window">
        <field name="name">Units</field>
        <field name="res_model">sale.order.unit</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Manage sales order units here.</p>
        </field>
    </record>
</odoo>
