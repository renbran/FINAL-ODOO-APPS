<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Graph View -->
    <record id="property_graph_view" model="ir.ui.view">
        <field name="name">property.property.graph</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <graph string="Properties Analysis" type="bar">
                <field name="property_type_id"/>
                <field name="price" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="property_pivot_view" model="ir.ui.view">
        <field name="name">property.property.pivot</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <pivot string="Properties Analysis">
                <field name="property_type_id" type="row"/>
                <field name="status" type="col"/>
                <field name="price" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Dashboard Form View -->
    <record id="view_property_property_dashboard" model="ir.ui.view">
        <field name="name">property.property.dashboard</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <form string="Property Dashboard">
                <board style="2-1">
                    <column>
                        <h2>Property Analysis</h2>
                        <action name="%(property_graph_view_action)d" string="Properties by Type"/>
                        <action name="%(property_pivot_view_action)d" string="Property Analysis"/>
                    </column>
                    <column>
                        <h2>Status Summary</h2>
                        <action name="%(property_status_count_action)d" string="Properties by Status"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <!-- Property Dashboard Form View -->
    <record id="view_property_dashboard_form" model="ir.ui.view">
        <field name="name">property.dashboard.form</field>
        <field name="model">property.dashboard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Dashboard Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="user_id"/>
                    </group>
                    <notebook>
                        <page string="Metrics">
                            <group>
                                <group>
                                    <field name="total_properties"/>
                                    <field name="available_properties"/>
                                    <field name="reserved_properties"/>
                                </group>
                                <group>
                                    <field name="sold_properties"/>
                                    <field name="rented_properties"/>
                                    <field name="maintenance_properties"/>
                                </group>
                            </group>
                            <group>
                                <field name="total_value" widget="monetary"/>
                                <field name="avg_property_price" widget="monetary"/>
                            </group>
                        </page>
                        <page string="Trending Properties">
                            <field name="trending_property_ids" mode="tree">
                                <tree>
                                    <field name="name"/>
                                    <field name="property_type_id"/>
                                    <field name="location"/>
                                    <field name="price"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Property Dashboard Tree View -->
    <record id="view_property_dashboard_tree" model="ir.ui.view">
        <field name="name">property.dashboard.tree</field>
        <field name="model">property.dashboard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="total_properties"/>
                <field name="available_properties"/>
                <field name="sold_properties"/>
                <field name="total_value"/>
            </tree>
        </field>
    </record>
</odoo>