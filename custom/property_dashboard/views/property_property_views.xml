<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_property_property_form" model="ir.ui.view">
        <field name="name">property.property.form</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <form string="Property Details">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Property Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="status"/>
                            <field name="property_type_id"/>
                            <field name="location"/>
                            <field name="price"/>
                        </group>
                        <group>
                            <field name="bedrooms"/>
                            <field name="bathrooms"/>
                            <field name="area"/>
                            <field name="last_inspection_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Specifications">
                            <group>
                                <field name="garage"/>
                                <field name="balcony"/>
                                <field name="pool"/>
                            </group>
                        </page>
                        <page string="Pricing Details">
                            <group>
                                <field name="rental_price"/>
                                <field name="sale_price"/>
                            </group>
                        </page>
                        <page string="Description">
                            <field name="description" placeholder="Add a detailed description..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_property_property_tree" model="ir.ui.view">
        <field name="name">property.property.tree</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="status"/>
                <field name="property_type_id"/>
                <field name="location"/>
                <field name="price"/>
                <field name="bedrooms"/>
                <field name="bathrooms"/>
                <field name="area"/>
                <field name="last_inspection_date"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_property_property_search" model="ir.ui.view">
        <field name="name">property.property.search</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"/>
                <field name="location"/>
                <field name="property_type_id"/>
                <filter string="New" name="new" domain="[('status','=','new')]"/>
                <filter string="Rented" name="rented" domain="[('status','=','rented')]"/>
                <filter string="Sold" name="sold" domain="[('status','=','sold')]"/>
                <filter string="Under Maintenance" name="maintenance" domain="[('status','=','under_maintenance')]"/>
                <filter string="Reserved" name="reserved" domain="[('status','=','reserved')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="status" context="{'group_by':'status'}"/>
                    <filter string="Property Type" name="property_type" context="{'group_by':'property_type_id'}"/>
                    <filter string="Location" name="location" context="{'group_by':'location'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_property_property_graph" model="ir.ui.view">
        <field name="name">property.property.graph</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <graph string="Properties Analysis" type="bar">
                <field name="property_type_id"/>
                <field name="price" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_property_property_pivot" model="ir.ui.view">
        <field name="name">property.property.pivot</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <pivot string="Properties Analysis">
                <field name="property_type_id" type="row"/>
                <field name="status" type="col"/>
                <field name="price" type="measure"/>
            </pivot>
        </field>
    </record>
</odoo>