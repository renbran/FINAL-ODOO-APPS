<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Property Property Actions -->
    <record id="action_property_property_list" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">property.property</field>
        <field name="view_mode">tree,form,graph,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property
            </p>
        </field>
    </record>

    <!-- Property Type Actions -->
    <record id="action_property_type_list" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property type
            </p>
        </field>
    </record>

    <!-- Dashboard Actions -->
    <record id="action_property_dashboard" model="ir.actions.act_window">
        <field name="name">Property Dashboard</field>
        <field name="res_model">property.property</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_property_property_dashboard"/>
        <field name="target">current</field>
        <field name="context">{'no_breadcrumbs': True}</field>
    </record>

    <!-- Graph View Action -->
    <record id="property_graph_view_action" model="ir.actions.act_window">
        <field name="name">Properties by Type</field>
        <field name="res_model">property.property</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="property_graph_view"/>
    </record>

    <!-- Pivot View Action -->
    <record id="property_pivot_view_action" model="ir.actions.act_window">
        <field name="name">Property Analysis</field>
        <field name="res_model">property.property</field>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="property_pivot_view"/>
    </record>

    <!-- Status Count Action -->
    <record id="property_status_count_action" model="ir.actions.act_window">
        <field name="name">Properties by Status</field>
        <field name="res_model">property.property</field>
        <field name="view_mode">pivot</field>
        <field name="context">{'pivot_measures': ['__count'], 'pivot_row_groupby': ['status']}</field>
    </record>

    <!-- Property Dashboard List Action -->
    <record id="action_property_dashboard_list" model="ir.actions.act_window">
        <field name="name">Property Dashboards</field>
        <field name="res_model">property.dashboard</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>
</odoo>