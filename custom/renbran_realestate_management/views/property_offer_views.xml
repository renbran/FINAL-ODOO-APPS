<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Property Offer Form View -->
    <record id="view_property_offer_form" model="ir.ui.view">
        <field name="name">property.offer.form</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <header>
                    <button name="action_draft" string="Reset to Draft" type="object" 
                            modifiers="open,refused,cancelled" groups="base.group_user"/>
                    <button name="action_open" string="Open Offer" type="object" 
                            modifiers="draft" class="oe_highlight" groups="base.group_user"/>
                    <button name="action_accept" string="Accept Offer" type="object" 
                            modifiers="open" class="oe_highlight"
                            options="{'invisible': [('document_verified', '=', False)]}"
                            groups="base.group_user"/>
                    <button name="action_refuse" string="Refuse Offer" type="object" 
                            modifiers="draft,open" groups="base.group_user"/>
                    <button name="action_verify_documents" string="Verify Documents" type="object" 
                            modifiers="draft,open" class="oe_highlight"
                            options="{'invisible': [('document_verified', '=', True)]}"
                            groups="base.group_user"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            modifiers="draft,open,refused" groups="base.group_user"/>
                    <button name="action_create_sale" string="Create Sale" type="object" 
                            modifiers="accepted" class="oe_highlight"
                            options="{'invisible': [('property_sale_id', '!=', False)]}"
                            groups="base.group_user"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,open,accepted,refused"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sale" type="object" 
                                class="oe_stat_button" icon="fa-dollar" 
                                options="{'invisible': [('property_sale_id', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Sale</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="property_id" options="{'no_create': True, 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="partner_id" options="{'no_create': True, 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="date" options="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="validity" options="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="date_deadline" readonly="1"/>
                        </group>
                        <group>
                            <field name="price" options="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="property_price" readonly="1"/>
                            <field name="price_difference" readonly="1"/>
                            <field name="price_difference_percent" readonly="1" widget="percentage"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group string="Document Verification">
                        <group>
                            <field name="document_verified" readonly="1"/>
                            <field name="document_verification_date" readonly="1" 
                                   options="{'invisible': [('document_verification_date', '=', False)]}"/>
                            <field name="document_verified_by" readonly="1" 
                                   options="{'invisible': [('document_verified_by', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="down_payment_percentage" 
                                   options="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="payment_term_id" options="{'no_create': True, 'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Add internal notes..."/>
                        </page>
                        <page string="Sale Information" name="sale_info" 
                              options="{'invisible': [('property_sale_id', '=', False)]}">
                            <group>
                                <field name="property_sale_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Property Offer Tree View -->
    <record id="view_property_offer_tree" model="ir.ui.view">
        <field name="name">property.offer.tree</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offers" decoration-bf="state=='accepted'" 
                  decoration-info="state=='open'" decoration-danger="state=='refused'" 
                  decoration-muted="state=='cancelled'" sample="1">
                <field name="name"/>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="date_deadline"/>
                <field name="price" sum="Total Offers"/>
                <field name="property_price"/>
                <field name="price_difference"/>
                <field name="price_difference_percent" widget="percentage"/>
                <field name="document_verified" widget="boolean_toggle"/>
                <field name="state" decoration-info="state == 'draft'" 
                       decoration-success="state == 'accepted'" decoration-danger="state == 'refused'" 
                       decoration-muted="state == 'cancelled'" widget="badge"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Property Offer Search View -->
    <record id="view_property_offer_search" model="ir.ui.view">
        <field name="name">property.offer.search</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <search string="Search Property Offers">
                <field name="name"/>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="price"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Open" name="open" domain="[('state', '=', 'open')]"/>
                <filter string="Accepted" name="accepted" domain="[('state', '=', 'accepted')]"/>
                <filter string="Refused" name="refused" domain="[('state', '=', 'refused')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <filter string="Documents Verified" name="verified" domain="[('document_verified', '=', True)]"/>
                <filter string="Documents Pending" name="not_verified" domain="[('document_verified', '=', False)]"/>
                <filter string="Expired" name="expired" domain="[('date_deadline', '&lt;', context_today().strftime('%Y-%m-%d')), ('state', 'in', ['draft', 'open'])]"/>
                <filter string="My Offers" name="my_offers" domain="[('create_uid', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Property" name="group_property" domain="[]" context="{'group_by': 'property_id'}"/>
                    <filter string="Customer" name="group_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Status" name="group_state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Offer Date" name="group_date" domain="[]" context="{'group_by': 'date'}"/>
                    <filter string="Deadline" name="group_deadline" domain="[]" context="{'group_by': 'date_deadline'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Property Offer Kanban View -->
    <record id="view_property_offer_kanban" model="ir.ui.view">
        <field name="name">property.offer.kanban</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="state"/>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="price"/>
                <field name="property_price"/>
                <field name="date"/>
                <field name="date_deadline"/>
                <field name="document_verified"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="property_id"/>
                                </div>
                                <div class="o_kanban_tags_section">
                                    <span class="oe_kanban_partner_categories"/>
                                    <span class="oe_kanban_attachments"/>
                                </div>
                                <ul>
                                    <li><strong>Customer:</strong> <field name="partner_id"/></li>
                                    <li><strong>Price:</strong> <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/></li>
                                    <li><strong>Deadline:</strong> <field name="date_deadline"/></li>
                                </ul>
                                <div class="oe_kanban_bottom_left">
                                    <span t-if="record.document_verified.raw_value" class="oe_kanban_align badge badge-success">Verified</span>
                                    <span t-if="!record.document_verified.raw_value" class="oe_kanban_align badge badge-warning">Not Verified</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Property Offer Calendar View -->
    <record id="view_property_offer_calendar" model="ir.ui.view">
        <field name="name">property.offer.calendar</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <calendar string="Property Offers" date_start="date" date_stop="date_deadline" color="state" mode="month">
                <field name="name"/>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="price"/>
            </calendar>
        </field>
    </record>

    <!-- Property Offer Graph View -->
    <record id="view_property_offer_graph" model="ir.ui.view">
        <field name="name">property.offer.graph</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <graph string="Property Offers" sample="1">
                <field name="property_id"/>
                <field name="price" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Property Offer Action -->
    <record id="action_property_offer" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">property.offer</field>
        <field name="view_mode">tree,kanban,form,calendar,graph</field>
        <field name="context">{'search_default_open': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new property offer
            </p>
            <p>
                Track offers on your properties with validity dates, status,
                and document verification.
            </p>
        </field>
    </record>

    <!-- Menu Item for Property Offers -->
    <menuitem id="menu_property_offer"
              name="Offers"
              parent="menu_property_root"
              action="action_property_offer"
              sequence="20"/>
</odoo>
