<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Property Type Tree View -->
    <record id="view_property_type_tree" model="ir.ui.view">
        <field name="name">property.type.tree</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="property_count" widget="statinfo"/>
            </tree>
        </field>
    </record>

    <!-- Property Type Form View -->
    <record id="view_property_type_form" model="ir.ui.view">
        <field name="name">property.type.form</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                    <field name="property_ids" mode="tree,kanban">
                        <tree>
                            <field name="name"/>
                            <field name="property_reference"/>
                            <field name="property_price"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Property Tag Tree View -->
    <record id="view_property_tag_tree" model="ir.ui.view">
        <field name="name">property.tag.tree</field>
        <field name="model">property.tag</field>
        <field name="arch" type="xml">
            <tree colors="gray:name=='Archived';red:name=='Urgent'">
                <field name="name"/>
                <field name="color" widget="color"/>
            </tree>
        </field>
    </record>

    <!-- Property Tag Form View -->
    <record id="view_property_tag_form" model="ir.ui.view">
        <field name="name">property.tag.form</field>
        <field name="model">property.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="color" widget="color"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>