<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Property Sale Tree View -->
    <record id="view_property_sale_tree" model="ir.ui.view">
        <field name="name">property.sale.tree</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="property_value"/>
                <field name="total_selling_price"/>
                <field name="state" widget="badge"/>
                <field name="start_date"/>
                <field name="sale_date"/>
                <field name="payment_progress" widget="progressbar" options="{'current_value': payment_progress, 'max_value': 100}"/>
            </tree>
        </field>
    </record>

    <!-- Property Sale Form View -->
    <record id="view_property_sale_form" model="ir.ui.view">
        <field name="name">property.sale.form</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" clickable="1"/>
                    <button name="action_confirm" string="Confirm" modifiers="draft"/>
                    <button name="action_cancel" string="Cancel" modifiers="draft,confirm,invoiced"/>
                    <button name="action_draft" string="Set to Draft" modifiers="cancelled"/>
                    <button name="action_generate_all_invoices" string="Generate Invoices" modifiers="confirm"/>
                    <button name="action_view_invoices" string="View Invoices" options="{'invisible': [('invoice_count', '=', 0)]}"/>
                    <button name="action_generate_broker_commission_invoice" string="Generate Broker Commission" modifiers="confirm,invoiced"/>
                    <button name="action_generate_internal_commission" string="Generate Internal Commission" modifiers="confirm,invoiced"/>
                    <button name="action_view_broker_commissions" string="View Broker Commissions" options="{'invisible': [('broker_commission_count', '=', 0)]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="property_id"/>
                            <field name="partner_id"/>
                            <field name="property_offer_id"/>
                            <field name="state"/>
                            <field name="start_date"/>
                            <field name="sale_date"/>
                            <field name="completion_date"/>
                        </group>
                        <group>
                            <field name="property_value"/>
                            <field name="total_selling_price"/>
                            <field name="down_payment"/>
                            <field name="remaining_balance"/>
                            <field name="payment_progress" widget="progressbar" options="{'current_value': payment_progress, 'max_value': 100}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payment Plan">
                            <group>
                                <group>
                                    <field name="down_payment_percentage"/>
                                    <field name="no_of_installments"/>
                                    <field name="amount_per_installment"/>
                                    <field name="payment_term_id"/>
                                    <field name="desired_years"/>
                                </group>
                                <group>
                                    <field name="dld_fee"/>
                                    <field name="admin_fee"/>
                                </group>
                            </group>
                            <field name="property_sale_line_ids" mode="tree,form">
                                <tree>
                                    <field name="serial_number"/>
                                    <field name="line_type"/>
                                    <field name="capital_repayment"/>
                                    <field name="collection_date"/>
                                    <field name="collection_status" widget="badge"/>
                                    <field name="payment_date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Commissions">
                            <group>
                                <group>
                                    <field name="seller_name"/>
                                    <field name="broker_commission_percentage"/>
                                    <field name="broker_commission_total_amount"/>
                                </group>
                                <group>
                                    <field name="sales_person_id"/>
                                    <field name="internal_commission_percentage"/>
                                    <field name="internal_commission_amount"/>
                                </group>
                            </group>
                        </page>
                        <page string="Invoices" options="{'invisible': [('invoice_count', '=', 0)]}">
                            <field name="invoice_ids" mode="tree,kanban">
                                <tree>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="invoice_date"/>
                                    <field name="amount_total"/>
                                    <field name="payment_state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Property Sale Search View -->
    <record id="view_property_sale_search" model="ir.ui.view">
        <field name="name">property.sale.search</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Sale Reference"/>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="start_date"/>
                <field name="sale_date"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirm')]"/>
                <filter string="Invoiced" name="invoiced" domain="[('state','=','invoiced')]"/>
                <filter string="Today's Sales" name="today" domain="[('sale_date','=',context_today())]"/>
                <filter string="This Month" name="this_month" domain="[('sale_date','&gt;=',context_today().replace(day=1)),('sale_date','&lt;=',context_today())]"/>
                <group expand="0" string="Group By">
                    <filter string="Property" name="group_by_property" context="{'group_by':'property_id'}"/>
                    <filter string="State" name="group_by_state" context="{'group_by':'state'}"/>
                    <filter string="Customer" name="group_by_customer" context="{'group_by':'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>