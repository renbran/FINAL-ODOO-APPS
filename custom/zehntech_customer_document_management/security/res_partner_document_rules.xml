<odoo>



    <!-- Rule: Admins Can Access All Documents -->
    <record id="res_partner_document_rule_admin" model="ir.rule">
        <field name="name">Admin Full Access to Documents</field>
        <field name="model_id" ref="model_res_partner_document"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>
    <record id="res_partner_document_rule_user_own_documents" model="ir.rule">
        <field name="name">User: Own Documents Only</field>
        <field name="model_id" ref="model_res_partner_document"/>
        <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    
    <!-- Rule: Customers Can Only See Their Own Documents -->
    <record id="res_partner_document_rule_customer" model="ir.rule">
        <field name="name">Customers Can See Their Documents Only</field>
        <field name="model_id" ref="model_res_partner_document"/>
        <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Document Manager Group Access -->
    <record id="access_res_partner_document_manager" model="ir.model.access">
        <field name="name">res.partner.document manager</field>
        <field name="model_id" ref="model_res_partner_document"/>
        <field name="group_id" ref="base.group_system"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <!-- Document User Group Access -->
    <record id="access_res_partner_document_user" model="ir.model.access">
        <field name="name">res.partner.document user</field>
        <field name="model_id" ref="model_res_partner_document"/>
        <field name="group_id" ref="base.group_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <!-- Document Category Manager Group -->
    <record id="group_document_category_manager" model="res.groups">
        <field name="name">Document Category Manager</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="access_document_category_manager" model="ir.model.access">
        <field name="name">access_document_category_manager</field>
        <field name="model_id" ref="model_res_partner_document_category"/>
        <field name="group_id" ref="group_document_category_manager"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
   
    <record id="ir_attachment_rule_user_own" model="ir.rule">
        <field name="name">User: Own Attachments</field>
        <field name="model_id" ref="base.model_ir_attachment"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
    <record id="ir_attachment_rule_admin" model="ir.rule">
        <field name="name">Admin: Full Attachment Access</field>
        <field name="model_id" ref="base.model_ir_attachment"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>
        
    
