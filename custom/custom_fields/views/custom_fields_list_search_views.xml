<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order List/Form/Search Views -->
    <record id="view_sale_order_custom_fields_tree" model="ir.ui.view">
        <field name="name">sale.order.custom.fields.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="booking_date"/>
                <field name="developer_commission" widget="float"/>
                <field name="sale_value" widget="monetary"/>
                <field name="deal_id"/>
                <field name="buyer_id"/>
            </xpath>
        </field>
    </record>

    <!-- Account Move List/Form/Search Views -->
    <record id="view_account_move_custom_fields_tree" model="ir.ui.view">
        <field name="name">account.move.custom.fields.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="deal_id" optional="hide"/>
                <field name="sale_value" optional="hide"/>
                <field name="buyer_id" optional="hide"/>
                <field name="project_id" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>