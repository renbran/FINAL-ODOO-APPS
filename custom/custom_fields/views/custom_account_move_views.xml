<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_sale_order_type" model="ir.ui.view">
        <field name="name">account.move.form.inherit.sale.order.type</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="custom_fields.view_move_form_inherit_custom_fields"/>
        <field name="arch" type="xml">
            <!-- Add the sale_order_type_id field to the Deal Information tab -->
            <xpath expr="//group[@name='additional_group']" position="inside">
                <field name="sale_order_type_id" 
                       options="{'no_create': True, 'no_create_edit': True}"
                       placeholder="Select sales order type..."/>
            </xpath>
        </field>
    </record>
</odoo>
