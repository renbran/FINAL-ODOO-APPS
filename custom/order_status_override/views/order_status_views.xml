<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_custom_status" model="ir.ui.view">
            <field name="name">sale.order.form.custom.status</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="custom_status" widget="statusbar"/>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="action_set_custom_review" type="object" string="Set Custom Review" attrs="{'invisible': [('custom_status', '=', 'custom_review')]}" class="btn-primary"/>
                    <button name="action_set_custom_approved" type="object" string="Set Custom Approved" attrs="{'invisible': [('custom_status', '=', 'custom_approved')]}" class="btn-success"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
