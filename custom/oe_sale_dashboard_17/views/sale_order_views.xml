<odoo>
    
    <!-- Add booking_date and sale_value to sale order form view -->
    <record id="view_order_form_booking_date" model="ir.ui.view">
        <field name="name">sale.order.form.booking_date</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="booking_date" string="Booking Date"/>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="inside">
                <group>
                    <field name="sale_value" string="Sale Value"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Add booking_date and sale_value to sale order tree view -->
    <record id="view_quotation_tree_booking_date" model="ir.ui.view">
        <field name="name">sale.order.tree.booking_date</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="booking_date" string="Booking Date"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="sale_value" string="Sale Value"/>
            </xpath>
        </field>
    </record>

    <!-- Add fields to search view for filtering -->
    <record id="view_sales_order_filter_booking_date" model="ir.ui.view">
        <field name="name">sale.order.search.booking_date</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='order_date']" position="after">
                <filter string="Booking Date" name="booking_date" domain="[]" context="{'group_by':'booking_date:month'}"/>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="booking_date"/>
            </xpath>
        </field>
    </record>

</odoo>
