<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_commission_document">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Commission Report</h2>
                <div class="row mt32 mb32">
                    <div class="col-6">
                        <strong>Order Reference:</strong>
                        <p t-field="doc.name"/>
                        <strong>Deal ID:</strong>
                        <p t-field="doc.deal_id"/>
                        <strong>Customer:</strong>
                        <p t-field="doc.partner_id"/>
                    </div>
                    <div class="col-6">
                        <strong>Booking Date:</strong>
                        <p t-field="doc.booking_date"/>
                        <strong>Commission Status:</strong>
                        <p t-field="doc.commission_status"/>
                        <strong>Commission Reference:</strong>
                        <p t-field="doc.commission_reference"/>
                    </div>
                </div>

                <h3>Commission Summary</h3>
                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th>Label</th>
                            <th class="text-right">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Gross Commission Base</td>
                            <td class="text-right"><span t-field="doc.gross_commission_base"/></td>
                        </tr>
                        <tr>
                            <td>Total External Allocation</td>
                            <td class="text-right"><span t-field="doc.total_external_allocation"/></td>
                        </tr>
                        <tr>
                            <td>Total Internal Allocation</td>
                            <td class="text-right"><span t-field="doc.total_internal_allocation"/></td>
                        </tr>
                        <tr>
                            <td>Grand Total Commission</td>
                            <td class="text-right"><span t-field="doc.grand_total_commission"/></td>
                        </tr>
                        <tr>
                            <td><strong>Company Net</strong></td>
                            <td class="text-right"><strong><span t-field="doc.total_company_net"/></strong></td>
                        </tr>
                        <tr>
                            <td>Commission %</td>
                            <td class="text-right"><span t-field="doc.commission_percentage"/>%</td>
                        </tr>
                        <tr>
                            <td>Allocation Status</td>
                            <td class="text-right"><span t-field="doc.commission_allocation_status"/></td>
                        </tr>
                        <tr>
                            <td>Variance</td>
                            <td class="text-right"><span t-field="doc.commission_variance"/></td>
                        </tr>
                    </tbody>
                </table>

                <h4>Commission Breakdown</h4>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Partner</th>
                            <th class="text-right">Rate (%)</th>
                            <th class="text-right">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Broker/Agency</td>
                            <td><span t-field="doc.broker_agency_partner_id"/></td>
                            <td class="text-right"><span t-field="doc.broker_agency_rate"/></td>
                            <td class="text-right"><span t-field="doc.broker_agency_amount"/></td>
                        </tr>
                        <tr>
                            <td>Referral</td>
                            <td><span t-field="doc.referral_partner_id"/></td>
                            <td class="text-right"><span t-field="doc.referral_rate"/></td>
                            <td class="text-right"><span t-field="doc.referral_amount"/></td>
                        </tr>
                        <tr>
                            <td>Cashback</td>
                            <td><span t-field="doc.cashback_partner_id"/></td>
                            <td class="text-right"><span t-field="doc.cashback_rate"/></td>
                            <td class="text-right"><span t-field="doc.cashback_amount"/></td>
                        </tr>
                        <tr>
                            <td>Other External</td>
                            <td><span t-field="doc.other_external_partner_id"/></td>
                            <td class="text-right"><span t-field="doc.other_external_rate"/></td>
                            <td class="text-right"><span t-field="doc.other_external_amount"/></td>
                        </tr>
                        <tr>
                            <td>Agent 1</td>
                            <td><span t-field="doc.agent1_id"/></td>
                            <td class="text-right"><span t-field="doc.agent1_rate"/></td>
                            <td class="text-right"><span t-field="doc.agent1_amount"/></td>
                        </tr>
                        <tr>
                            <td>Agent 2</td>
                            <td><span t-field="doc.agent2_id"/></td>
                            <td class="text-right"><span t-field="doc.agent2_rate"/></td>
                            <td class="text-right"><span t-field="doc.agent2_amount"/></td>
                        </tr>
                        <tr>
                            <td>Manager</td>
                            <td><span t-field="doc.manager_id"/></td>
                            <td class="text-right"><span t-field="doc.manager_rate"/></td>
                            <td class="text-right"><span t-field="doc.manager_amount"/></td>
                        </tr>
                        <tr>
                            <td>Director</td>
                            <td><span t-field="doc.director_id"/></td>
                            <td class="text-right"><span t-field="doc.director_rate"/></td>
                            <td class="text-right"><span t-field="doc.director_amount"/></td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-12">
                        <strong>Notes:</strong>
                        <p t-field="doc.commission_notes"/>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="report_commission">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="commission_fields.report_commission_document"/>
            </t>
        </t>
    </template>
</odoo>
