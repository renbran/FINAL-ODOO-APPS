<odoo>
    <record id="view_custom_sales_order_tree" model="ir.ui.view">
        <field name="name">custom.sales.order.tree</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="custom_field_1"/>
                <field name="custom_field_2"/>
                <field name="custom_field_3"/>
                <field name="partner_id"/>
                <field name="amount_total"/>
            </tree>
        </field>
    </record>

    <record id="view_custom_sales_order_form" model="ir.ui.view">
        <field name="name">custom.sales.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='order_lines']" position="after">
                <group string="Custom Fields">
                    <field name="custom_field_1"/>
                    <field name="custom_field_2"/>
                    <field name="custom_field_3"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
