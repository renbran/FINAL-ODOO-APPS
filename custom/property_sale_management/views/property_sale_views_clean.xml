<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_property_sale_form" model="ir.ui.view">
        <field name="name">property.sale.form</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <form string="Property Sale">
                <header>
                    <button string="Confirm Sale" name="action_confirm" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button string="Generate Invoice" name="action_generate_invoice" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button string="Cancel" name="action_cancel" type="object" attrs="{'invisible': [('state', 'in', ['cancelled', 'invoiced'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,invoiced"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="property_id"/>
                            <field name="sale_date"/>
                        </group>
                        <group>
                            <field name="property_value"/>
                            <field name="down_payment"/>
                            <field name="total_selling_price"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Broker Commission">
                            <field name="broker_commission_invoice_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="broker_id"/>
                                    <field name="commission_amount"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_property_sale_tree" model="ir.ui.view">
        <field name="name">property.sale.tree</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <tree string="Property Sales" decoration-info="state == 'draft'" decoration-muted="state == 'cancelled'" decoration-success="state == 'invoiced'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="property_id"/>
                <field name="sale_date"/>
                <field name="total_selling_price"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_property_sale_search" model="ir.ui.view">
        <field name="name">property.sale.search</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <search string="Property Sales">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="property_id"/>
                <field name="state"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Invoiced" name="invoiced" domain="[('state', '=', 'invoiced')]"/>
                <group string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Customer" name="group_partner" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_property_sale" model="ir.actions.act_window">
        <field name="name">Property Sales</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">property.sale</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property sale!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_property_sale"
              name="Property Sales"
              parent="menu_property_main"
              action="action_property_sale"
              sequence="20"/>

</odoo>
