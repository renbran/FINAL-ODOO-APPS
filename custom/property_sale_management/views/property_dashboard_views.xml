<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Property Types Views -->
        <record id="view_property_type_form" model="ir.ui.view">
            <field name="name">property.type.form</field>
            <field name="model">property.type</field>
            <field name="arch" type="xml">
                <form string="Property Type">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_properties"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-building-o"
                                    options="{'invisible': [('property_count', '=', 0)]}">
                                <div class="o_stat_info">
                                    <field name="property_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Properties</span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="default_price_per_sqft"/>
                                <field name="min_sqft"/>
                                <field name="max_sqft"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Internal notes about this property type..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_property_type_tree" model="ir.ui.view">
            <field name="name">property.type.tree</field>
            <field name="model">property.type</field>
            <field name="arch" type="xml">
                <tree string="Property Types">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="default_price_per_sqft"/>
                    <field name="property_count"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_property_type_search" model="ir.ui.view">
            <field name="name">property.type.search</field>
            <field name="model">property.type</field>
            <field name="arch" type="xml">
                <search string="Search Property Types">
                    <field name="name"/>
                    <field name="code"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_property_type" model="ir.actions.act_window">
            <field name="name">Property Types</field>
            <field name="res_model">property.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first property type!
                </p>
                <p>
                    Define different types of properties with their characteristics to better organize your real estate.
                </p>
            </field>
        </record>

        <!-- Dashboard View -->
        <record id="view_property_dashboard_pivot" model="ir.ui.view">
            <field name="name">property.dashboard.pivot</field>
            <field name="model">property.dashboard</field>
            <field name="arch" type="xml">
                <pivot string="Property Dashboard" display_quantity="true">
                    <field name="project_name" type="row"/>
                    <field name="state" type="col"/>
                    <field name="property_price" type="measure"/>
                    <field name="payment_progress" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_property_dashboard_graph" model="ir.ui.view">
            <field name="name">property.dashboard.graph</field>
            <field name="model">property.dashboard</field>
            <field name="arch" type="xml">
                <graph string="Property Dashboard" type="bar">
                    <field name="project_name"/>
                    <field name="state"/>
                    <field name="property_price" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="view_property_dashboard_tree" model="ir.ui.view">
            <field name="name">property.dashboard.tree</field>
            <field name="model">property.dashboard</field>
            <field name="arch" type="xml">
                <tree string="Property Dashboard"
                      decoration-info="state == 'available'"
                      decoration-warning="state == 'reserved'"
                      decoration-success="state == 'booked'"
                      decoration-danger="state == 'sold'">
                    <field name="name"/>
                    <field name="project_name"/>
                    <field name="property_type"/>
                    <field name="total_sqft"/>
                    <field name="property_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="state"/>
                    <field name="payment_progress" widget="progressbar"/>
                    <field name="partner_id"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_property_dashboard_search" model="ir.ui.view">
            <field name="name">property.dashboard.search</field>
            <field name="model">property.dashboard</field>
            <field name="arch" type="xml">
                <search string="Search Properties">
                    <field name="name"/>
                    <field name="project_name"/>
                    <field name="property_type"/>
                    <field name="partner_id"/>
                    <filter name="state_available" string="Available" domain="[('state', '=', 'available')]"/>
                    <filter name="state_reserved" string="Reserved" domain="[('state', '=', 'reserved')]"/>
                    <filter name="state_booked" string="Booked" domain="[('state', '=', 'booked')]"/>
                    <filter name="state_sold" string="Sold" domain="[('state', '=', 'sold')]"/>
                    <filter name="sale_rent_sale" string="For Sale" domain="[('sale_rent', '=', 'for_sale')]"/>
                    <filter name="sale_rent_rent" string="For Rent" domain="[('sale_rent', '=', 'for_rent')]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_project" string="Project" context="{'group_by':'project_name'}"/>
                        <filter name="group_by_state" string="Status" context="{'group_by':'state'}"/>
                        <filter name="group_by_type" string="Type" context="{'group_by':'property_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_property_dashboard" model="ir.actions.act_window">
            <field name="name">Property Dashboard</field>
            <field name="res_model">property.dashboard</field>
            <field name="view_mode">tree,pivot,graph</field>
            <field name="context">{
                'search_default_group_by_project': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No properties found!
                </p>
                <p>
                    Create properties to see them in the dashboard.
                </p>
            </field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_property_sale_management_root"
                  name="Property Management"
                  web_icon="property_sale_management,static/description/icon.png"
                  sequence="50"/>

        <menuitem id="menu_property_sale_management_properties"
                  name="Properties"
                  parent="menu_property_sale_management_root"
                  sequence="10"/>

        <menuitem id="menu_property_sale_management_sales"
                  name="Sales"
                  parent="menu_property_sale_management_root"
                  sequence="20"/>

        <menuitem id="menu_property_sale_management_reporting"
                  name="Reporting"
                  parent="menu_property_sale_management_root"
                  sequence="80"/>

        <menuitem id="menu_property_sale_management_configuration"
                  name="Configuration"
                  parent="menu_property_sale_management_root"
                  sequence="100"/>

        <menuitem id="menu_property_sale_management_property"
                  name="Properties"
                  parent="menu_property_sale_management_properties"
                  action="action_property_property"
                  sequence="10"/>

        <menuitem id="menu_property_sale_management_property_sale"
                  name="Property Sales"
                  parent="menu_property_sale_management_sales"
                  action="action_property_sale"
                  sequence="10"/>

        <menuitem id="menu_property_sale_management_broker_commissions"
                  name="Broker Commissions"
                  parent="menu_property_sale_management_sales"
                  action="action_broker_commission_invoice"
                  sequence="20"/>

        <menuitem id="menu_property_sale_management_dashboard"
                  name="Dashboard"
                  parent="menu_property_sale_management_reporting"
                  action="action_property_dashboard"
                  sequence="10"/>

        <menuitem id="menu_property_sale_management_property_types"
                  name="Property Types"
                  parent="menu_property_sale_management_configuration"
                  action="action_property_type"
                  sequence="10"/>
    </data>
</odoo>