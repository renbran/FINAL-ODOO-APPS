<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_inherit_property_sale" model="ir.ui.view">
        <field name="name">account.move.form.inherit.property.sale</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_commission" type="object" class="oe_stat_button" icon="fa-money" 
                        options="{'invisible': [('is_commission_bill', '=', False)]}">
                    <field name="is_commission_bill" invisible="1"/>
                    <span>Commission</span>
                </button>
            </xpath>
            <xpath expr="//group[@name='accounting_info_group']" position="inside">
                <field name="internal_commission_id" options="{'invisible': [('internal_commission_id', '=', False)]}"/>
                <field name="broker_commission_id" options="{'invisible': [('broker_commission_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_filter_inherit_property_sale" model="ir.ui.view">
        <field name="name">account.move.select.inherit.property.sale</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='posted']" position="after">
                <separator/>
                <filter string="Commission Bills" name="commission_bills" domain="[('is_commission_bill', '=', True)]"/>
            </xpath>
        </field>
    </record>

    <record id="action_move_commission_bill_type" model="ir.actions.act_window">
        <field name="name">Commission Bills</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="account.view_invoice_tree"/>
        <field name="search_view_id" ref="account.view_account_move_filter"/>
        <field name="domain">[('is_commission_bill', '=', True)]</field>
        <field name="context">{'default_move_type': 'in_invoice'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new commission bill
            </p>
        </field>
    </record>

    <menuitem id="menu_commission_bills"
              name="Commission Bills"
              parent="account.menu_finance_payables"
              action="action_move_commission_bill_type"
              sequence="5"/>
</odoo>