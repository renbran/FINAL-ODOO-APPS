<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_broker_commission_invoice_form" model="ir.ui.view">
        <field name="name">broker.commission.invoice.form</field>
        <field name="model">broker.commission.invoice</field>
        <field name="arch" type="xml">
            <form string="Broker Commission">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" modifiers="draft" class="oe_highlight"/>
                    <button name="action_create_invoice" string="Create Invoice" type="object" modifiers="confirmed" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object" modifiers="draft,confirmed"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,invoiced,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="property_sale_id"/>
                            <field name="broker_id"/>
                            <field name="commission_percentage"/>
                            <field name="commission_amount"/>
                        </group>
                        <group>
                            <field name="currency_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="total_internal_commission"/>
                            <field name="company_share"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Internal Commissions">
                            <field name="internal_commission_ids">
                                <tree editable="bottom">
                                    <field name="position"/>
                                    <field name="partner_id"/>
                                    <field name="percentage"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_broker_commission_invoice_tree" model="ir.ui.view">
        <field name="name">broker.commission.invoice.tree</field>
        <field name="model">broker.commission.invoice</field>
        <field name="arch" type="xml">
            <tree string="Broker Commissions" decoration-info="state == 'draft'" decoration-muted="state == 'cancelled'" decoration-success="state in ('invoiced', 'paid')">
                <field name="name"/>
                <field name="property_sale_id"/>
                <field name="broker_id"/>
                <field name="commission_amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_broker_commission_invoice_search" model="ir.ui.view">
        <field name="name">broker.commission.invoice.search</field>
        <field name="model">broker.commission.invoice</field>
        <field name="arch" type="xml">
            <search string="Search Broker Commissions">
                <field name="name"/>
                <field name="property_sale_id"/>
                <field name="broker_id"/>
                <field name="state"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Invoiced" name="invoiced" domain="[('state', '=', 'invoiced')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                <group expand="0" string="Group By">
                    <filter string="Broker" name="group_by_broker" context="{'group_by': 'broker_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Property Sale" name="group_by_property_sale" context="{'group_by': 'property_sale_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Update the action to include the search view -->
    <record id="action_broker_commission_invoice" model="ir.actions.act_window">
        <field name="name">Broker Commissions</field>
        <field name="res_model">broker.commission.invoice</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_broker_commission_invoice_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new broker commission invoice
            </p>
        </field>
    </record>

    <record id="action_broker_commission_invoice" model="ir.actions.act_window">
        <field name="name">Broker Commissions</field>
        <field name="res_model">broker.commission.invoice</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_broker_commission_invoice"
              name="Broker Commissions"
              parent="menu_property_sale_management"
              action="action_broker_commission_invoice"
              sequence="20"/>
</odoo>