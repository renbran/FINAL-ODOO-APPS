<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payment Security Groups -->
    
    <!-- Base Categories -->
    <record id="module_category_payment_approval" model="ir.module.category">
        <field name="name">Payment Approval</field>
        <field name="description">Access levels for payment approval system</field>
        <field name="sequence">10</field>
    </record>

    <!-- Security Groups with 6-tier hierarchy -->
    
    <!-- 1. Payment User - Can create and view own payments -->
    <record id="group_payment_user" model="res.groups">
        <field name="name">Payment User</field>
        <field name="category_id" ref="module_category_payment_approval"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Can create payment vouchers and view own payments</field>
    </record>

    <!-- 2. Payment Reviewer - Can review submitted payments -->
    <record id="group_payment_reviewer" model="res.groups">
        <field name="name">Payment Reviewer</field>
        <field name="category_id" ref="module_category_payment_approval"/>
        <field name="implied_ids" eval="[(4, ref('group_payment_user'))]"/>
        <field name="comment">Can review and validate payment vouchers</field>
    </record>

    <!-- 3. Payment Approver - Can approve reviewed payments -->
    <record id="group_payment_approver" model="res.groups">
        <field name="name">Payment Approver</field>
        <field name="category_id" ref="module_category_payment_approval"/>
        <field name="implied_ids" eval="[(4, ref('group_payment_reviewer'))]"/>
        <field name="comment">Can approve payment vouchers after review</field>
    </record>

    <!-- 4. Payment Authorizer - Can authorize approved payments -->
    <record id="group_payment_authorizer" model="res.groups">
        <field name="name">Payment Authorizer</field>
        <field name="category_id" ref="module_category_payment_approval"/>
        <field name="implied_ids" eval="[(4, ref('group_payment_approver'))]"/>
        <field name="comment">Can authorize final payment execution</field>
    </record>

    <!-- 5. Payment Manager - Full workflow management -->
    <record id="group_payment_manager" model="res.groups">
        <field name="name">Payment Manager</field>
        <field name="category_id" ref="module_category_payment_approval"/>
        <field name="implied_ids" eval="[(4, ref('group_payment_authorizer'))]"/>
        <field name="comment">Can manage payment workflows and configurations</field>
    </record>

    <!-- 6. Payment Administrator - System administration -->
    <record id="group_payment_admin" model="res.groups">
        <field name="name">Payment Administrator</field>
        <field name="category_id" ref="module_category_payment_approval"/>
        <field name="implied_ids" eval="[(4, ref('group_payment_manager'))]"/>
        <field name="comment">Full administrative access to payment system</field>
    </record>

</odoo>
