<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Enhanced Payment Form View with 4-Stage Workflow -->
        <record id="view_account_payment_form_enhanced" model="ir.ui.view">
            <field name="name">account.payment.form.enhanced</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">

                <!-- Replace header with workflow statusbar -->
                <xpath expr="//header" position="replace">
                    <header>
                        <!-- 4-Stage Approval Workflow Statusbar -->
                        <field name="approval_state" widget="statusbar" statusbar_visible="draft,under_review,for_approval,for_authorization,approved,posted" statusbar_colors='{"draft":"secondary","under_review":"info","for_approval":"warning","for_authorization":"warning","approved":"success","posted":"success"}' invisible="not approval_state"/>

                        <!-- Legacy verification status for backward compatibility -->
                        <field name="verification_status" widget="statusbar" statusbar_visible="pending,verified,rejected" statusbar_colors='{"pending":"info","verified":"success","rejected":"danger"}' invisible="approval_state"/>

                        <!-- Hidden fields for button conditions -->
                        <field name="state" invisible="1"/>
                        <field name="payment_type" invisible="1"/>
                        <field name="can_verify" invisible="1"/>
                        <field name="can_submit_for_review" invisible="1"/>
                        <field name="can_review" invisible="1"/>
                        <field name="can_approve" invisible="1"/>
                        <field name="can_authorize" invisible="1"/>

                        <!-- 4-Stage Workflow Buttons -->
                        <div class="workflow-buttons" invisible="not approval_state">
                            <button name="action_submit_for_review" string="Submit for Review" type="object" class="btn-primary" invisible="approval_state != 'draft'"/>

                            <button name="action_review_payment" string="Review" type="object" class="btn-success" groups="account_payment_final.group_payment_reviewer" invisible="approval_state != 'under_review'"/>

                            <button name="action_approve_payment" string="Approve" type="object" class="btn-success" groups="account_payment_final.group_payment_approver" invisible="approval_state != 'for_approval'"/>

                            <button name="action_authorize_payment" string="Authorize" type="object" class="btn-success" groups="account_payment_final.group_payment_authorizer" invisible="approval_state != 'for_authorization' or payment_type != 'outbound'"/>

                            <button name="action_post" string="Post Payment" type="object" class="btn-primary" groups="account_payment_final.group_payment_poster" invisible="approval_state != 'approved'"/>

                            <button name="action_reject_payment" string="Reject" type="object" class="btn-danger" groups="account_payment_final.group_payment_approver" invisible="approval_state in ['draft', 'posted', 'cancelled']" confirm="Are you sure you want to reject this payment?"/>
                        </div>

                        <!-- Legacy Verification Buttons -->
                        <div class="verification-buttons" invisible="approval_state">
                            <button name="action_verify_payment" string="Verify Payment" type="object" class="btn-success" invisible="not can_verify"/>

                            <button name="action_reject_payment_verification" string="Reject Verification" type="object" class="btn-danger" groups="account_payment_final.group_payment_verifier" invisible="verification_status == 'rejected'"/>
                        </div>
                    </header>
                </xpath>

                <!-- Add voucher number and QR code fields -->
                <xpath expr="//field[@name='name']" position="before">
                    <field name="voucher_number" readonly="1" class="oe_inline"/>
                </xpath>

                <xpath expr="//field[@name='amount']" position="after">
                    <field name="remarks" placeholder="Enter additional remarks..."/>
                </xpath>

                <!-- Add workflow and QR tabs -->
                <xpath expr="//notebook" position="inside">

                    <!-- Approval Workflow Tab -->
                    <page string="Approval Workflow" name="approval_workflow" invisible="not approval_state">
                        <group>
                            <group string="Workflow Status">
                                <field name="approval_state" readonly="1"/>
                                <field name="reviewer_id" readonly="1"/>
                                <field name="approver_id" readonly="1"/>
                                <field name="authorizer_id" readonly="1" invisible="payment_type != 'outbound'"/>
                                <field name="actual_approver_id" readonly="1"/>
                            </group>
                            <group string="Workflow Dates">
                                <field name="reviewer_date" readonly="1"/>
                                <field name="approver_date" readonly="1"/>
                                <field name="authorizer_date" readonly="1" invisible="payment_type != 'outbound'"/>
                            </group>
                        </group>

                        <!-- Approval History -->
                        <field name="approval_history_ids" readonly="1">
                            <tree>
                                <field name="approval_date"/>
                                <field name="action_type"/>
                                <field name="stage_from"/>
                                <field name="stage_to"/>
                                <field name="user_id"/>
                                <field name="duration_in_stage" widget="float_time"/>
                                <field name="comments"/>
                            </tree>
                        </field>
                    </page>

                    <!-- QR Code and Verification Tab -->
                    <page string="QR Verification" name="qr_verification">
                        <group>
                            <group string="QR Code Settings">
                                <field name="qr_in_report"/>
                                <field name="qr_code" widget="image" options="{'size': [200, 200]}" readonly="1" invisible="not qr_code"/>
                            </group>
                            <group string="Verification Status">
                                <field name="verification_status" readonly="1"/>
                                <button name="action_verify_payment" string="Verify Payment" type="object" class="btn-success" invisible="not can_verify"/>
                            </group>
                        </group>

                        <!-- QR Verification History -->
                        <field name="qr_verification_ids" readonly="1">
                            <tree>
                                <field name="verification_date"/>
                                <field name="verification_code"/>
                                <field name="verification_method"/>
                                <field name="verification_status"/>
                                <field name="verifier_ip"/>
                            </tree>
                        </field>
                    </page>

                </xpath>
            </field>
        </record>

        <!-- Enhanced Payment Tree View -->
        <record id="view_account_payment_tree_enhanced" model="ir.ui.view">
            <field name="name">account.payment.tree.enhanced</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="voucher_number" optional="show"/>
                </xpath>

                <xpath expr="//field[@name='state']" position="after">
                    <field name="approval_state" widget="badge" optional="show" decoration-info="approval_state == 'draft'" decoration-warning="approval_state in ['under_review', 'for_approval', 'for_authorization']" decoration-success="approval_state in