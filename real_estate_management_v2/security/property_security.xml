<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Security Groups -->
        <record id="group_real_estate_salesperson" model="res.groups">
            <field name="name">Real Estate / Salesperson</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_real_estate_manager" model="res.groups">
            <field name="name">Real Estate / Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('group_real_estate_salesperson'))]"/>
        </record>

        <record id="group_real_estate_admin" model="res.groups">
            <field name="name">Real Estate / Administrator</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('group_real_estate_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="property_salesperson_rule" model="ir.rule">
            <field name="name">Salesperson: see own and team properties</field>
            <field name="model_id" ref="model_property_property"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_real_estate_salesperson'))]"/>
        </record>

        <record id="property_manager_rule" model="ir.rule">
            <field name="name">Manager: see all properties</field>
            <field name="model_id" ref="model_property_property"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_real_estate_manager'))]"/>
        </record>
    </data>
</odoo>