<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_property_offer_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="page">
                <div class="oe_structure"/>
                <h2>Property Offer</h2>
                <h3>
                    <span t-field="doc.name"/>
                </h3>
                
                <div class="row mt32 mb32">
                    <div class="col-6">
                        <strong>Customer:</strong>
                        <p t-field="doc.partner_id"/>
                        <strong>Property:</strong>
                        <p t-field="doc.property_id"/>
                        <strong>Offer Date:</strong>
                        <p t-field="doc.offer_date"/>
                    </div>
                    <div class="col-6">
                        <strong>Salesperson:</strong>
                        <p t-field="doc.user_id"/>
                        <strong>Validity Date:</strong>
                        <p t-field="doc.validity_date"/>
                        <strong>Status:</strong>
                        <p t-field="doc.state"/>
                    </div>
                </div>

                <h4>Offer Details</h4>
                <table class="table table-sm">
                    <tr>
                        <td><strong>Property Listed Price:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.property_price" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Offer Price:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.offer_price" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Payment Option:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.payment_option"/>
                        </td>
                    </tr>
                </table>

                <h4>Payment Plan</h4>
                <table class="table table-sm">
                    <tr>
                        <td><strong>Down Payment Percentage:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.down_payment_percentage"/>%
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Down Payment Amount:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.down_payment" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>DLD Fee Percentage:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.dld_fee_percentage"/>%
                        </td>
                    </tr>
                    <tr>
                        <td><strong>DLD Fee Amount:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.dld_fee" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Admin Fee:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.admin_fee" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                    <tr class="border-top">
                        <td><strong>Total Amount:</strong></td>
                        <td class="text-right">
                            <strong><span t-field="doc.total_amount" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></strong>
                        </td>
                    </tr>
                </table>

                <t t-if="doc.payment_option == 'installment'">
                    <h4>Installment Details</h4>
                    <table class="table table-sm">
                        <tr>
                            <td><strong>Number of Installments:</strong></td>
                            <td class="text-right">
                                <span t-field="doc.no_of_installments"/>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Installment Frequency:</strong></td>
                            <td class="text-right">
                                <span t-field="doc.installment_frequency"/>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Remaining Balance:</strong></td>
                            <td class="text-right">
                                <span t-field="doc.remaining_balance" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Amount Per Installment:</strong></td>
                            <td class="text-right">
                                <span t-field="doc.amount_per_installment" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                        </tr>
                    </table>
                </t>

                <div class="row mt64">
                    <div class="col-6">
                        <strong>Customer Signature:</strong>
                        <p>_______________________</p>
                        <p t-field="doc.partner_id.name"/>
                    </div>
                    <div class="col-6 text-right">
                        <strong>Company Representative:</strong>
                        <p>_______________________</p>
                        <p t-field="doc.user_id.name"/>
                    </div>
                </div>
                
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="report_property_offer">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="real_estate_management_v2.report_property_offer_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_property_offer" model="ir.actions.report">
        <field name="name">Property Offer</field>
        <field name="model">property.offer</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">real_estate_management_v2.report_property_offer</field>
        <field name="report_file">real_estate_management_v2.report_property_offer</field>
        <field name="binding_model_id" ref="model_property_offer"/>
        <field name="binding_type">report</field>
    </record>
</odoo>