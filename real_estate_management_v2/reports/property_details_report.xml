<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_property_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang if doc.partner_id else doc.env.user.lang)"/>
            <div class="page">
                <div class="oe_structure"/>
                <h2>Property Details</h2>
                <h3>
                    <span t-field="doc.name"/>
                </h3>
                
                <div class="row mt32 mb32">
                    <div class="col-6">
                        <div t-if="doc.property_image" class="mt16">
                            <img t-att-src="image_data_uri(doc.property_image)" style="max-height: 300px;" alt="Property Image"/>
                        </div>
                    </div>
                    <div class="col-6">
                        <div t-if="doc.floor_plan" class="mt16">
                            <img t-att-src="image_data_uri(doc.floor_plan)" style="max-height: 300px;" alt="Floor Plan"/>
                        </div>
                    </div>
                </div>
                
                <div class="row mt32 mb32">
                    <div class="col-6">
                        <strong>Reference:</strong>
                        <p t-field="doc.reference"/>
                        <strong>Salesperson:</strong>
                        <p t-field="doc.user_id"/>
                        <strong>Owner:</strong>
                        <p t-field="doc.partner_id"/>
                        <strong>Status:</strong>
                        <p t-field="doc.state"/>
                    </div>
                    <div class="col-6">
                        <strong>Property Type:</strong>
                        <p t-field="doc.property_type_id"/>
                        <strong>Project:</strong>
                        <p t-field="doc.project_id"/>
                        <strong>Tower:</strong>
                        <p t-field="doc.tower"/>
                        <strong>Level:</strong>
                        <p t-field="doc.level"/>
                        <strong>Unit No:</strong>
                        <p t-field="doc.unit_no"/>
                    </div>
                </div>

                <h4>Property Specifications</h4>
                <table class="table table-sm">
                    <tr>
                        <td><strong>Total Area:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.total_sqft"/> sqft
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Bedrooms:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.bedrooms"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Bathrooms:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.bathrooms"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Garage:</strong></td>
                        <td class="text-right">
                            <span t-if="doc.garage">Yes</span>
                            <span t-else="">No</span>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Garden:</strong></td>
                        <td class="text-right">
                            <span t-if="doc.garden">Yes</span>
                            <span t-else="">No</span>
                        </td>
                    </tr>
                    <tr t-if="doc.garden">
                        <td><strong>Garden Area:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.garden_area"/> sqft
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Unit View:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.unit_view"/>
                        </td>
                    </tr>
                </table>

                <h4>Financial Details</h4>
                <table class="table table-sm">
                    <tr>
                        <td><strong>Property Price:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.property_price" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Price per sqft:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.price_per_sqft" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>/sqft
                        </td>
                    </tr>
                    <tr t-if="doc.active_sale_id">
                        <td><strong>Payment Progress:</strong></td>
                        <td class="text-right">
                            <span t-field="doc.payment_progress"/>%
                        </td>
                    </tr>
                </table>

                <t t-if="doc.description">
                    <h4>Description</h4>
                    <p t-field="doc.description"/>
                </t>

                <t t-if="doc.address">
                    <h4>Address</h4>
                    <p t-field="doc.address"/>
                </t>
                
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="report_property">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="real_estate_management_v2.report_property_document" t-lang="doc.partner_id.lang if doc.partner_id else doc.env.user.lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_property" model="ir.actions.report">
        <field name="name">Property Details</field>
        <field name="model">property.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">real_estate_management_v2.report_property</field>
        <field name="report_file">real_estate_management_v2.report_property</field>
        <field name="binding_model_id" ref="model_property_property"/>
        <field name="binding_type">report</field>
    </record>
</odoo>