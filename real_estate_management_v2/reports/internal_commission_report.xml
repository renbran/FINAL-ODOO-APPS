<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_internal_commission">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">Internal Commission Report</h2>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Reference:</strong> <span t-field="doc.name"/>
                                <br/>
                                <strong>Date:</strong> <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                                <br/>
                                <strong>Status:</strong> <span t-field="doc.state"/>
                            </div>
                            <div class="col-6">
                                <strong>Salesperson:</strong> <span t-field="doc.user_id"/>
                                <br/>
                                <strong>Customer:</strong> <span t-field="doc.partner_id"/>
                                <br/>
                                <strong>Property:</strong> <span t-field="doc.property_id.name"/>
                            </div>
                        </div>
                        
                        <h4>Commission Details</h4>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Property Sale</th>
                                    <th>Property Value</th>
                                    <th>Commission Type</th>
                                    <th t-if="doc.commission_type == 'percentage'">Percentage</th>
                                    <th>Commission Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span t-field="doc.property_sale_id.name"/></td>
                                    <td><span t-field="doc.property_value" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                                    <td><span t-field="doc.commission_type"/></td>
                                    <td t-if="doc.commission_type == 'percentage'"><span t-field="doc.commission_percentage"/>%</td>
                                    <td><span t-field="doc.commission_amount" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                                </tr>
                            </tbody>
                        </table>
                        
                        <div t-if="doc.state in ['confirmed', 'paid']" class="row mt32">
                            <div class="col-12">
                                <h4>Payment Information</h4>
                                <p t-if="doc.payment_date">Payment Date: <span t-field="doc.payment_date"/></p>
                                <p t-if="doc.payment_method_id">Payment Method: <span t-field="doc.payment_method_id.name"/></p>
                                <p t-if="doc.payment_reference">Payment Reference: <span t-field="doc.payment_reference"/></p>
                            </div>
                        </div>
                        
                        <div t-if="doc.notes" class="row mt32">
                            <div class="col-12">
                                <h4>Notes</h4>
                                <p t-field="doc.notes"/>
                            </div>
                        </div>
                        
                        <div class="row mt32">
                            <div class="col-12">
                                <p>This document is computer generated and does not require a signature.</p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    
    <record id="action_report_internal_commission" model="ir.actions.report">
        <field name="name">Internal Commission Report</field>
        <field name="model">internal.commission</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">real_estate_management_v2.report_internal_commission</field>
        <field name="report_file">real_estate_management_v2.report_internal_commission</field>
        <field name="binding_model_id" ref="model_internal_commission"/>
        <field name="binding_type">report</field>
    </record>
</odoo>