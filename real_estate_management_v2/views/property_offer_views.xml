<odoo>
    <record id="view_property_offer_tree" model="ir.ui.view">
        <field name="name">property.offer.tree</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="offer_price"/>
                <field name="state"/>
                <field name="validity_date"/>
            </tree>
        </field>
    </record>

    <record id="view_property_offer_form" model="ir.ui.view">
        <field name="name">property.offer.form</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send" string="Send" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_negotiate" string="Negotiate" type="object" invisible="state not in ('draft', 'sent')"/>
                    <button name="action_accept" string="Accept" type="object" invisible="state not in ('sent', 'negotiation')" class="oe_highlight"/>
                    <button name="action_reject" string="Reject" type="object" invisible="state not in ('sent', 'negotiation')"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ('accepted', 'rejected')"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="property_id"/>
                            <field name="partner_id"/>
                            <field name="user_id"/>
                            <field name="offer_date"/>
                            <field name="validity_days"/>
                            <field name="validity_date"/>
                        </group>
                        <group>
                            <field name="property_price" readonly="1"/>
                            <field name="offer_price"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="payment_option"/>
                            <field name="state" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Payment Details">
                            <group>
                                <field name="down_payment_percentage"/>
                                <field name="down_payment"/>
                                <field name="dld_fee_percentage"/>
                                <field name="dld_fee"/>
                                <field name="admin_fee"/>
                                <field name="total_amount"/>
                                <field name="remaining_balance"/>
                            </group>
                            
                            <group invisible="payment_option != 'installment'">
                                <field name="no_of_installments"/>
                                <field name="installment_frequency"/>
                                <field name="amount_per_installment"/>
                            </group>
                        </page>
                        
                        <page string="Related Sale" invisible="state != 'accepted'">
                            <field name="sale_id">
                                <form>
                                    <field name="name"/>
                                    <field name="sale_date"/>
                                    <field name="sale_price"/>
                                    <field name="state"/>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>