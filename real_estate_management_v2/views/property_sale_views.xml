<odoo>
    <record id="view_property_sale_tree" model="ir.ui.view">
        <field name="name">property.sale.tree</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="sale_price"/>
                <field name="state"/>
                <field name="commission_count" widget="statinfo"/>
            </tree>
        </field>
    </record>

    <record id="view_property_sale_form" model="ir.ui.view">
        <field name="name">property.sale.form</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'confirmed'"/>
                    <button name="action_complete" string="Mark as Completed" type="object" invisible="state != 'confirmed'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,completed,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="property_id"/>
                            <field name="offer_id"/>
                            <field name="partner_id"/>
                            <field name="user_id"/>
                            <field name="sale_date"/>
                        </group>
                        <group>
                            <field name="sale_price"/>
                            <field name="payment_option"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="state" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Commissions" invisible="commission_count == 0">
                            <field name="commission_ids" mode="tree,kanban">
                                <tree>
                                    <field name="name"/>
                                    <field name="user_id"/>
                                    <field name="commission_type"/>
                                    <field name="commission_amount"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_property_sale" model="ir.actions.act_window">
        <field name="name">Property Sales</field>
        <field name="res_model">property.sale</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_property_sale"
              name="Property Sales"
              action="action_property_sale"
              parent="menu_real_estate_management"
              sequence="20"/>
</odoo>