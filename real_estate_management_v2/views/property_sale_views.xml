<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Property Sale Tree View -->
    <record id="view_property_sale_tree" model="ir.ui.view">
        <field name="name">property.sale.tree</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <tree string="Property Sales" decoration-info="state == 'draft'" decoration-success="state == 'confirmed'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="sale_date"/>
                <field name="sale_price"/>
                <field name="currency_id" invisible="1"/>
                <field name="payment_option"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Property Sale Form View -->
    <record id="view_property_sale_form" model="ir.ui.view">
        <field name="name">property.sale.form</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <form string="Property Sale">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_complete" string="Mark as Completed" type="object" class="oe_highlight" states="confirmed"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,confirmed"/>
                    <button name="action_create_commission" string="Create Commission" type="object" 
                            attrs="{'invisible': ['|', ('state', '!=', 'confirmed'), ('has_commission', '=', True)]}" 
                            class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_property" type="object" class="oe_stat_button" icon="fa-building">
                            <field name="property_id" string="Property" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="property_id" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="partner_id" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="user_id" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="sale_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="offer_id" options="{'no_create': True}" readonly="1"/>
                            <field name="has_commission" invisible="1"/>
                        </group>
                        <group>
                            <field name="property_value"/>
                            <field name="sale_price" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payment Details">
                            <group>
                                <group>
                                    <field name="payment_option" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="down_payment_percentage" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('payment_option', '!=', 'installment')]}"/>
                                    <field name="dld_fee_percentage" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="admin_fee" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                </group>
                                <group>
                                    <field name="no_of_installments" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('payment_option', '!=', 'installment')]}"/>
                                    <field name="installment_frequency" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('payment_option', '!=', 'installment')]}"/>
                                    <field name="down_payment"/>
                                    <field name="dld_fee"/>
                                    <field name="total_amount"/>
                                    <field name="remaining_balance" attrs="{'invisible': [('payment_option', '!=', 'installment')]}"/>
                                </group>
                            </group>
                            <field name="payment_line_ids" attrs="{'readonly': [('state', '=', 'cancelled')]}">
                                <tree string="Payment Schedule" editable="bottom" decoration-success="state == 'paid'" decoration-danger="state == 'overdue'" decoration-info="state == 'pending'">
                                    <field name="name"/>
                                    <field name="due_date"/>
                                    <field name="amount"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="payment_date"/>
                                    <field name="payment_reference"/>
                                    <field name="state"/>
                                    <button name="action_mark_as_paid" string="Mark as Paid" type="object" icon="fa-check" attrs="{'invisible': [('state', '=', 'paid')]}"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Commissions">
                            <field name="internal_commission_ids" readonly="1">
                                <tree string="Internal Commissions">
                                    <field name="name"/>
                                    <field name="user_id"/>
                                    <field name="commission_type"/>
                                    <field name="commission_percentage"/>
                                    <field name="commission_amount"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Add notes here..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Property Sale Search View -->
    <record id="view_property_sale_search" model="ir.ui.view">
        <field name="name">property.sale.search</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <search string="Search Property Sales">
                <field name="name"/>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Property" name="property_id" context="{'group_by': 'property_id'}"/>
                    <filter string="Customer" name="partner_id" context="{'group_by': 'partner_id'}"/>
                    <filter string="Salesperson" name="user_id" context="{'group_by': 'user_id'}"/>
                    <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Sale Date" name="sale_date" context="{'group_by': 'sale_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Property Sale Action -->
    <record id="action_property_sale" model="ir.actions.act_window">
        <field name="name">Property Sales</field>
        <field name="res_model">property.sale</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property sale!
            </p>
        </field>
    </record>

    <!-- Property Sale Line Form View -->
    <!-- Property Sale Line Form View -->
    <record id="view_property_sale_line_form" model="ir.ui.view">
        <field name="name">property.sale.line.form</field>
        <field name="model">property.sale.line</field>
        <field name="arch" type="xml">
            <form string="Payment Line">
                <header>
                    <button name="action_mark_as_paid" string="Mark as Paid" type="object" class="oe_highlight" invisible="state == 'paid'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sale_id" options="{'no_create': True}"/>
                            <field name="due_date"/>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="payment_date"/>
                            <field name="payment_reference"/>
                            <field name="is_down_payment"/>
                            <field name="is_dld_fee"/>
                            <field name="is_admin_fee"/>
                            <field name="is_installment"/>
                        </group>
                    </group>
                    <field name="notes" placeholder="Add notes here..."/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>