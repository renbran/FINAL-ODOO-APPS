<odoo>
    <record id="view_property_tree" model="ir.ui.view">
        <field name="name">property.tree</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="reference"/>
                <field name="property_type_id"/>
                <field name="property_price"/>
                <field name="state"/>
                <field name="user_id"/>
                <field name="offer_count" widget="statinfo"/>
                <field name="sale_count" widget="statinfo"/>
            </tree>
        </field>
    </record>

    <record id="view_property_form" model="ir.ui.view">
        <field name="name">property.form</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_offer" string="Create Offer" type="object" class="oe_highlight"/>
                    <button name="action_create_sale" string="Create Direct Sale" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="available,reserved,booked,sold"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                        <h2><field name="reference"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="property_image" widget="image" class="oe_avatar"/>
                            <field name="floor_plan" widget="image"/>
                        </group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="project_id"/>
                            <field name="user_id"/>
                            <field name="partner_id"/>
                            <field name="sale_rent"/>
                            <field name="property_price"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="tower"/>
                                <field name="level"/>
                                <field name="unit_no"/>
                                <field name="unit_view"/>
                                <field name="total_sqft"/>
                                <field name="price_per_sqft"/>
                                <field name="bedrooms"/>
                                <field name="bathrooms"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                            </group>
                            <field name="address"/>
                            <field name="description"/>
                        </page>
                        
                        <page string="Financial">
                            <group>
                                <field name="revenue_account_id"/>
                                <field name="payment_progress" widget="progressbar"/>
                                <field name="total_invoiced"/>
                                <field name="total_paid"/>
                                <field name="remaining_amount"/>
                            </group>
                        </page>
                        
                        <page string="Offers" attrs="{'invisible': [('offer_count', '=', 0)]}">
                            <field name="property_offer_ids" mode="tree,kanban">
                                <tree>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="offer_price"/>
                                    <field name="state"/>
                                    <field name="validity_date"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Sales" attrs="{'invisible': [('sale_count', '=', 0)]}">
                            <field name="property_sale_ids" mode="tree,kanban">
                                <tree>
                                    <field name="name"/>
                                    <field name="sale_date"/>
                                    <field name="sale_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>