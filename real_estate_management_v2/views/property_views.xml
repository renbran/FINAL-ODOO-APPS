<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Property Tree View -->
    <record id="view_property_tree" model="ir.ui.view">
        <field name="name">property.property.tree</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <tree string="Properties" decoration-success="state=='available'" decoration-info="state=='reserved'" decoration-warning="state=='booked'" decoration-danger="state=='sold'">
                <field name="reference"/>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="project_id"/>
                <field name="property_price" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="total_sqft"/>
                <field name="bedrooms"/>
                <field name="bathrooms"/>
                <field name="user_id"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>
    
    <!-- Property Form View -->
    <record id="view_property_form" model="ir.ui.view">
        <field name="name">property.property.form</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="action_mark_as_available" string="Mark as Available" type="object" class="oe_highlight" invisible="state == 'available'"/>
                    <button name="action_mark_as_reserved" string="Mark as Reserved" type="object" class="oe_highlight" invisible="state == 'reserved'"/>
                    <button name="action_mark_as_booked" string="Mark as Booked" type="object" class="oe_highlight" invisible="state == 'booked'"/>
                    <button name="action_generate_report" string="Generate Report" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="available,reserved,booked,sold"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_offers" type="object" class="oe_stat_button" icon="fa-handshake-o">
                            <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>
                    <field name="property_image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Property Name"/>
                        </h1>
                        <h3>
                            <field name="reference"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="user_id"/>
                            <field name="property_price"/>
                            <field name="currency_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="project_id"/>
                            <field name="tower"/>
                            <field name="level"/>
                            <field name="unit_no"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Property Details">
                            <group>
                                <group>
                                    <field name="total_sqft"/>
                                    <field name="bedrooms"/>
                                    <field name="bathrooms"/>
                                </group>
                                <group>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="garden == False"/>
                                </group>
                            </group>
                            <group string="Description">
                                <field name="description" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="property_offer_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="offer_date"/>
                                    <field name="offer_price" widget="monetary"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Property Search View -->
    <record id="view_property_search" model="ir.ui.view">
        <field name="name">property.property.search</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"/>
                <field name="reference"/>
                <field name="property_type_id"/>
                <field name="project_id"/>
                <field name="user_id"/>
                <filter string="Available" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Reserved" name="reserved" domain="[('state', '=', 'reserved')]"/>
                <filter string="Booked" name="booked" domain="[('state', '=', 'booked')]"/>
                <filter string="Sold" name="sold" domain="[('state', '=', 'sold')]"/>
                <group expand="0" string="Group By">
                    <filter string="Property Type" name="group_by_type" context="{'group_by': 'property_type_id'}"/>
                    <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Salesperson" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Property Action -->
    <record id="action_property_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">property.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property!
            </p>
        </field>
    </record>
</odoo>