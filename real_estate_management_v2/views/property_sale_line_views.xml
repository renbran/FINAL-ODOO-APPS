<odoo>
    <record id="view_property_sale_line_tree" model="ir.ui.view">
        <field name="name">property.sale.line.tree</field>
        <field name="model">property.sale.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="due_date"/>
                <field name="amount"/>
                <field name="state" widget="badge"/>
                <field name="payment_date"/>
            </tree>
        </field>
    </record>

    <record id="view_property_sale_line_form" model="ir.ui.view">
        <field name="name">property.sale.line.form</field>
        <field name="model">property.sale.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="sale_id"/>
                            <field name="name"/>
                            <field name="due_date"/>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="payment_date"/>
                            <field name="payment_reference"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="is_down_payment" readonly="1"/>
                        <field name="is_dld_fee" readonly="1"/>
                        <field name="is_admin_fee" readonly="1"/>
                        <field name="is_installment" readonly="1"/>
                    </group>
                    
                    <field name="notes"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>