<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Calendar Extended Menu Items -->
    
    <!-- Main Menu -->
    <menuitem id="calendar_extended_main_menu"
              name="Meeting Announcements"
              parent="calendar.mail_menu_calendar"
              sequence="5"/>
    
    <!-- Meeting Announcements Menu -->
    <menuitem id="calendar_announcement_menu"
              name="Announcements"
              parent="calendar_extended_main_menu"
              action="calendar_announcement_action"
              sequence="10"/>
    
    <!-- Configuration Menu -->
    <menuitem id="calendar_extended_config_menu"
              name="Configuration"
              parent="calendar_extended_main_menu"
              groups="calendar_extended.group_calendar_manager"
              sequence="90"/>
    
    <!-- Departments Menu (under Configuration) -->
    <menuitem id="calendar_departments_menu"
              name="Departments"
              parent="calendar_extended_config_menu"
              action="hr.open_module_tree_department"
              groups="calendar_extended.group_calendar_manager"
              sequence="10"/>
</odoo>
