<?xml version="1.0" encoding="UTF-8"?>
<templates>
    
    <!-- Calendar Extended Widget Template -->
    <t t-name="calendar_extended.CalendarExtendedWidget" owl="1">
        <div class="calendar_extended_widget">
            <div class="calendar_extended_header mb-3">
                <div class="row">
                    <div class="col-md-6">
                        <h4>Internal Meetings</h4>
                    </div>
                    <div class="col-md-6 text-right">
                        <button class="btn btn-primary" t-on-click="createQuickMeeting">
                            <i class="fa fa-plus"/> Quick Meeting
                        </button>
                    </div>
                </div>
                
                <div class="row mt-3">
                    <div class="col-md-4">
                        <select class="form-control" t-on-change="onDepartmentChange">
                            <option value="">All Departments</option>
                            <option t-foreach="state.departments" t-as="dept" 
                                    t-key="dept.id" t-att-value="dept.id">
                                <t t-esc="dept.name"/>
                            </option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="calendar_extended_content">
                <div t-if="state.loading" class="text-center p-4">
                    <i class="fa fa-spinner fa-spin fa-2x"/>
                    <p class="mt-2">Loading meetings...</p>
                </div>
                
                <div t-else="" class="calendar_extended_meetings">
                    <div t-if="!state.meetings.length" class="alert alert-info">
                        No meetings found for the selected criteria.
                    </div>
                    
                    <div t-else="" class="row">
                        <div t-foreach="state.meetings" t-as="meeting" t-key="meeting.id" 
                             class="col-md-6 col-lg-4 mb-3">
                            <div class="card calendar_extended_meeting_card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <strong t-esc="meeting.name"/>
                                    <span t-att-class="'badge ' + getStateClass(meeting.state)"
                                          t-esc="getStateLabel(meeting.state)"/>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        <i class="fa fa-user"/> <t t-esc="meeting.organizer_id[1]"/>
                                    </p>
                                    <p class="card-text">
                                        <i class="fa fa-clock-o"/> <t t-esc="formatDateTime(meeting.start_datetime)"/>
                                    </p>
                                    <p class="card-text">
                                        <i class="fa fa-users"/> <t t-esc="meeting.attendee_ids.length"/> attendees
                                    </p>
                                </div>
                                <div class="card-footer" t-if="meeting.state === 'pending_approval'">
                                    <button class="btn btn-sm btn-success mr-2" 
                                            t-on-click="() => this.approveMeeting(meeting.id)">
                                        <i class="fa fa-check"/> Approve
                                    </button>
                                    <button class="btn btn-sm btn-danger" 
                                            t-on-click="() => this.rejectMeeting(meeting.id)">
                                        <i class="fa fa-times"/> Reject
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
    
    <!-- Department Group Selector Template -->
    <t t-name="calendar_extended.DepartmentGroupSelector" owl="1">
        <div class="calendar_extended_department_selector">
            <div class="form-group">
                <label class="form-label">Select Department Groups:</label>
                <div t-if="state.loading" class="text-center p-2">
                    <i class="fa fa-spinner fa-spin"/> Loading groups...
                </div>
                <div t-else="" class="calendar_extended_department_list">
                    <div t-foreach="state.departmentGroups" t-as="group" t-key="group.id"
                         class="calendar_extended_department_group">
                        <div class="form-check">
                            <input type="checkbox" 
                                   class="form-check-input"
                                   t-att-id="'group_' + group.id"
                                   t-att-checked="isGroupSelected(group.id)"
                                   t-on-change="() => this.onGroupToggle(group.id)"/>
                            <label class="form-check-label" t-att-for="'group_' + group.id">
                                <strong t-esc="group.name"/>
                                <small class="text-muted">
                                    (<t t-esc="group.employee_ids.length"/> employees)
                                </small>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            
            <div t-if="state.selectedEmployees.length" class="mt-3">
                <p class="text-muted">
                    <strong t-esc="state.selectedEmployees.length"/> employees selected
                </p>
            </div>
        </div>
    </t>
    
    <!-- Meeting Approval Widget Template -->
    <t t-name="calendar_extended.MeetingApprovalWidget" owl="1">
        <div class="calendar_extended_approval_widget">
            <div class="form-group">
                <label class="form-label">Approval Notes:</label>
                <textarea class="form-control" 
                          rows="3" 
                          placeholder="Add notes about your approval decision..."
                          t-att-value="state.approvalNotes"
                          t-on-input="onNotesChange"/>
            </div>
            
            <div class="d-flex justify-content-end mt-3">
                <button class="btn btn-success mr-2" 
                        t-att-disabled="state.processing"
                        t-on-click="approveMeeting">
                    <i class="fa fa-check"/>
                    <span t-if="state.processing">Processing...</span>
                    <span t-else="">Approve Meeting</span>
                </button>
                <button class="btn btn-danger" 
                        t-att-disabled="state.processing"
                        t-on-click="rejectMeeting">
                    <i class="fa fa-times"/>
                    <span t-if="state.processing">Processing...</span>
                    <span t-else="">Reject Meeting</span>
                </button>
            </div>
        </div>
    </t>

</templates>
