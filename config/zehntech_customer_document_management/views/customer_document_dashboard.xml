<odoo>
    <record id="view_customer_document_dashboard_tree" model="ir.ui.view">
        <field name="name">customer.document.dashboard.tree</field>
        <field name="model">customer.document.dashboard</field>
        <field name="arch" type="xml">
            <tree decoration-bf="count > 0" create="false">
                
                <!-- Section Title -->
                <field name="dashboard_title" string="📊 Document Status Overview" readonly="1"/>
                
                <!-- Highlighted Document Count -->
                <field name="name" string="Status"/>
                <field name="count" string="🧾 Document Count"/>
    
                <!-- Spacer field for visual separation -->
               
    
                <!-- Buttons with spacing between them using dummy invisible fields -->
                <button name="action_open_total_documents"
                        type="object"
                        string="📄 Total Documents"
                        class="oe_stat_button btn btn-outline-primary dashboard-btn"/>

                <button name="action_open_expired_documents"
                        type="object"
                        string="⛔ Expired Documents"
                        class="oe_stat_button btn btn-outline-danger dashboard-btn"/>

                <button name="action_open_not_expired_documents"
                        type="object"
                        string="✅ Not Expired Documents"
                        class="oe_stat_button btn btn-outline-success dashboard-btn"/>

                <button name="action_open_expiring_soon_documents"
                        type="object"
                        string="⏰ Expiring Soon (7 Days)"
                        class="oe_stat_button btn btn-outline-warning dashboard-btn"/>

    
            </tree>
        </field>
    </record>

