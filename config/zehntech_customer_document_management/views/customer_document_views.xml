    <record id="customer_document_tree_view" model="ir.ui.view">
        <field name="name">customer.document.tree.view</field>
        <field name="model">customer.document</field>
        <field name="arch" type="xml">
            <tree string="Customer Documents" create="false">
                <field name="name" />
                <field name="expiry_date" />
                <field name="expiry_status" widget="statusbar"
                    options="{'expired': 'red', 'not_expired': 'green'}" />
            </tree>
        </field>
    </record>


    <!-- Action to Show All Documents -->
    <record id="action_customer_document_tree" model="ir.actions.act_window">
        <field name="name">All Documents</field>
        <field name="res_model">customer.document</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_customer_document_tree" />
        <field name="domain">[]</field> <!-- Ensures all documents are displayed -->
    </record>

    <record id="action_customer_document_category" model="ir.actions.act_window">
        <field name="name">Document Categories</field>
        <field name="res_model">res.partner.document.category</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>


