<odoo>

    <!-- First form view -->
    <record id="view_customer_document_form_1" model="ir.ui.view">
        <field name="name">customer.document.form.view</field>
        <field name="model">customer.document</field>
        <field name="arch" type="xml">
            <form string="Customer Document">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="partner_id" />
                        <field name="expiry_date" />
                        <field name="category_id" />
                        <field name="is_expired" readonly="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_customer_document_form" model="ir.ui.view">
        <field name="name">customer.document.form.view</field>
        <field name="model">res.partner.document</field>
        <field name="arch" type="xml">
            <form string="Customer Document">
                <sheet>
                    <group>
                        <field name="name" required="1" />
                        <field name="attachment" required="1"/>
                        <field name="document_url" required="1"/>
                        <!-- <field name="expiry_date" required="1" /> -->
                        <field name="expiry_date" required="1" widget="expiry_date"/>

                        <field name="email" required="1" />
                        <field name="partner_id" required="1" />
                        <field name="category_id" required="1"/>
                        <field name="tags" widget="many2many_tags" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Second form view -->
    <record id="view_customer_document_form_2" model="ir.ui.view">
