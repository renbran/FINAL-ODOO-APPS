<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Account Move (Invoice/Bill) Form View Enhancement -->
    <record id="view_move_form_inherit_osus_invoice" model="ir.ui.view">
        <field name="name">account.move.form.osus.invoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add custom print buttons in header -->
            <xpath expr="//header" position="inside">
                <button name="action_print_custom_invoice" 
                        string="Print OSUS Invoice" 
                        type="object" 
                        class="btn-secondary"
                        visibility="move_type == 'out_invoice' and state in ['posted', 'draft']"/>
                <button name="action_print_custom_bill" 
                        string="Print OSUS Bill" 
                        type="object" 
                        class="btn-secondary"
                        visibility="move_type == 'in_invoice' and state in ['posted', 'draft']"/>
                <button name="action_print_custom_receipt" 
                        string="Print OSUS Receipt" 
                        type="object" 
                        class="btn-secondary"
                        visibility="move_type == 'out_refund' and state in ['posted', 'draft']"/>
            </xpath>

            <!-- Add Deal Tracking tab after other_info -->
            <xpath expr="//notebook" position="inside">
                <page string="Deal Information" name="deal_info" 
                      visibility="move_type in ['out_invoice', 'out_refund']">
                    <group string="Property Deal Information">
                        <group>
                            <field name="is_property_deal"/>
                            <field name="booking_date" visibility="is_property_deal"/>
                            <field name="deal_id" visibility="is_property_deal"/>
                        </group>
                        <group>
                            <field name="sale_value" widget="monetary" visibility="is_property_deal"/>
                            <field name="developer_commission" widget="percentage" visibility="is_property_deal"/>
                            <field name="commission_amount" widget="monetary" visibility="is_property_deal"/>
                        </group>
                    </group>
                    
                    <group string="Property Details" visibility="is_property_deal">
                        <group>
                            <field name="buyer_id" options="{'quick_create': True, 'create_edit': True}"/>
                            <field name="project_id" options="{'quick_create': True, 'create_edit': True}"/>
                        </group>
                        <group>
                            <field name="unit_id" options="{'quick_create': True, 'create_edit': True}"/>
                            <field name="property_type_id" options="{'quick_create': True, 'create_edit': True}"/>
                        </group>
                    </group>
                    
                    <group string="QR Code Settings">
                        <group>
                            <field name="qr_in_report"/>
                        </group>
                        <group>
                            <field name="qr_image" widget="image" visibility="qr_image" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Computed Fields">
                        <field name="amount_total_words" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Account Move List View Enhancement with Bulk Print Actions -->
    <record id="view_move_tree_inherit_osus_bulk_print" model="ir.ui.view">
        <field name="name">account.move.tree.osus.bulk.print</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <!-- Add bulk print buttons in header -->
            <xpath expr="//tree" position="attributes">
                <attribute name="js_class">osus_bulk_print_list</attribute>
            </xpath>
            
            <!-- Add deal tracking fields after invoice date -->
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="booking_date" optional="hide"/>
                <field name="deal_id" optional="hide"/>
                <field name="is_property_deal" optional="hide"/>
            </xpath>
            
            <!-- Add property fields after partner -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="buyer_id" optional="hide"/>
                <field name="project_id" optional="hide"/>
                <field name="unit_id" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Bulk Print Actions for Customer Invoices -->
    <record id="action_bulk_print_customer_invoices" model="ir.actions.server">
        <field name="name">Bulk Print Customer Invoices</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
action = model.action_bulk_print_invoices()
        </field>
    </record>

    <!-- Bulk Print Actions for Vendor Bills -->
    <record id="action_bulk_print_vendor_bills" model="ir.actions.server">
        <field name="name">Bulk Print Vendor Bills</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
action = model.action_bulk_print_bills()
        </field>
    </record>

    <!-- Bulk Print Actions for Mixed Documents -->
    <record id="action_bulk_print_mixed_documents" model="ir.actions.server">
        <field name="name">Bulk Print All Documents</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
action = model.action_bulk_print_mixed()
        </field>
    </record>

    <!-- Custom Menu Actions for Easy Access -->
    <record id="action_invoice_bulk_print_menu" model="ir.actions.act_window">
        <field name="name">Bulk Print Invoices</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('move_type', '=', 'out_invoice'), ('state', '=', 'posted')]</field>
        <field name="context">{'default_move_type': 'out_invoice'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Select multiple posted invoices to print in bulk
            </p>
            <p>
                Use the "Actions" menu to print selected invoices as a single PDF file.
            </p>
        </field>
    </record>

    <record id="action_bill_bulk_print_menu" model="ir.actions.act_window">
        <field name="name">Bulk Print Bills</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('move_type', '=', 'in_invoice'), ('state', '=', 'posted')]</field>
        <field name="context">{'default_move_type': 'in_invoice'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Select multiple posted bills to print in bulk
            </p>
            <p>
                Use the "Actions" menu to print selected bills as a single PDF file.
            </p>
        </field>
    </record>

    <!-- Account Move Search View Enhancement -->
    <record id="view_account_invoice_filter_inherit_osus" model="ir.ui.view">
        <field name="name">account.move.select.osus</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <!-- Add deal tracking filters -->
            <xpath expr="//filter[@name='late']" position="after">
                <separator/>
                <filter string="Property Deals" name="property_deals" 
                        domain="[('is_property_deal', '=', True)]"/>
                <filter string="Regular Invoices" name="regular_invoices" 
                        domain="[('is_property_deal', '=', False)]"/>
            </xpath>
            
            <!-- Add search fields -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="buyer_id"/>
                <field name="project_id"/>
                <field name="unit_id"/>
                <field name="deal_id"/>
                <field name="booking_date"/>
            </xpath>
        </field>
    </record>
</odoo>
