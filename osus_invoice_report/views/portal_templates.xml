<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Override the main invoice document template to use our OSUS template -->
    <template id="report_invoice_document_inherit" inherit_id="account.report_invoice_document" priority="99">
        <xpath expr="//t[@t-call='web.html_container']" position="replace">
            <t t-call="osus_invoice_report.report_osus_invoice_document"/>
        </xpath>
    </template>

    <!-- Override portal invoice report specifically -->
    <template id="portal_invoice_report_inherit" inherit_id="account.portal_invoice_report">
        <xpath expr="//t[@t-call='account.report_invoice_document']" position="replace">
            <t t-call="osus_invoice_report.report_osus_invoice_document"/>
        </xpath>
    </template>

    <!-- Alternative method: override the report action to use our template -->
    <data noupdate="0">
        <record id="account.account_invoices" model="ir.actions.report">
            <field name="report_name">osus_invoice_report.report_osus_invoice_document</field>
        </record>
    </data>
</odoo>
