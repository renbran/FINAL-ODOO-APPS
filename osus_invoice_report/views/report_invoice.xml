<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- OSUS Custom Tax Invoice Report Template -->
    <template id="report_custom_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang or 'en_US'"/>
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="container-fluid">
                            <!-- Header Section -->
                            <div class="osus-invoice-header">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="osus-section-header">COMPANY DETAILS</div>
                                        <strong t-field="o.company_id.name"/>
                                        <div t-field="o.company_id.street"/>
                                        <div>
                                            <span t-field="o.company_id.city"/>
                                            <span t-if="o.company_id.zip">, <span t-field="o.company_id.zip"/></span>
                                        </div>
                                        <div t-field="o.company_id.state_id.name"/>
                                        <div t-field="o.company_id.country_id.name"/>
                                        <div t-if="o.company_id.phone">Phone: <span t-field="o.company_id.phone"/></div>
                                        <div t-if="o.company_id.email">Email: <span t-field="o.company_id.email"/></div>
                                        <div t-if="o.company_id.vat"><strong>TRN: <span t-field="o.company_id.vat"/></strong></div>
                                    </div>
                                    <div class="col-6 text-end">
                                        <div class="osus-section-header">CUSTOMER DETAILS</div>
                                        <strong t-field="o.partner_id.name"/>
                                        <div t-field="o.partner_id.street"/>
                                        <div t-field="o.partner_id.street2"/>
                                        <div>
                                            <span t-field="o.partner_id.city"/>
                                            <span t-if="o.partner_id.zip">, <span t-field="o.partner_id.zip"/></span>
                                        </div>
                                        <div t-field="o.partner_id.state_id.name"/>
                                        <div t-field="o.partner_id.country_id.name"/>
                                        <div t-if="o.partner_id.phone">Phone: <span t-field="o.partner_id.phone"/></div>
                                        <div t-if="o.partner_id.email">Email: <span t-field="o.partner_id.email"/></div>
                                        <div t-if="o.partner_id.vat"><strong>TRN: <span t-field="o.partner_id.vat"/></strong></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Invoice Title -->
                            <h1 class="osus-invoice-title">
                                <t t-if="o.move_type == 'out_invoice'">TAX INVOICE</t>
                                <t t-elif="o.move_type == 'out_refund'">CREDIT NOTE</t>
                                <t t-else="">DOCUMENT</t>
                                <span t-field="o.name"/>
                            </h1>

                            <!-- Invoice Information Row -->
                            <div class="row mb-4">
                                <div class="col-4">
                                    <strong>Invoice Date:</strong><br/>
                                    <span t-field="o.invoice_date" t-options="{'widget': 'date', 'format': 'dd/MM/yyyy'}"/>
                                </div>
                                <div class="col-4 text-center">
                                    <strong>Due Date:</strong><br/>
                                    <span t-field="o.invoice_date_due" t-options="{'widget': 'date', 'format': 'dd/MM/yyyy'}"/>
                                </div>
                                <div class="col-4 text-end">
                                    <strong>Booking Date:</strong><br/>
                                    <span t-field="o.booking_date" t-options="{'widget': 'date', 'format': 'dd/MM/yyyy'}" t-if="o.booking_date"/>
                                    <span t-if="not o.booking_date">-</span>
                                </div>
                            </div>

                            <!-- Real Estate Commission Details (Updated field references) -->
                            <t t-if="o.buyer_id or o.project_id or o.unit_id or o.developer_commission or o.sale_value or o.deal_id">
                                <div class="osus-section-header">REAL ESTATE DEAL INFORMATION</div>
                                <div class="row mb-4">
                                    <div class="col-4" t-if="o.buyer_id">
                                        <strong>Buyer:</strong><br/>
                                        <span t-field="o.buyer_id.name"/>
                                        <div t-if="o.buyer_id.phone" class="small text-muted">
                                            Phone: <span t-field="o.buyer_id.phone"/>
                                        </div>
                                        <div t-if="o.buyer_id.email" class="small text-muted">
                                            Email: <span t-field="o.buyer_id.email"/>
                                        </div>
                                    </div>
                                    <div class="col-4" t-if="o.project_id">
                                        <strong>Project:</strong><br/>
                                        <span t-field="o.project_id.name"/>
                                        <!-- If project is linked to product template -->
                                        <div t-if="o.project_id.description" class="small text-muted">
                                            <span t-field="o.project_id.description"/>
                                        </div>
                                    </div>
                                    <div class="col-4" t-if="o.unit_id">
                                        <strong>Unit:</strong><br/>
                                        <span t-field="o.unit_id"/>
                                        <!-- If unit is linked to product variant, show additional details -->
                                    </div>
                                </div>
                                <div class="row mb-4">
                                    <div class="col-4" t-if="o.deal_id">
                                        <strong>Deal Reference:</strong><br/>
                                        <span t-field="o.deal_id"/>
                                    </div>
                                    <div class="col-4" t-if="o.sale_value">
                                        <strong>Property Sale Value:</strong><br/>
                                        <span t-field="o.sale_value" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </div>
                                    <div class="col-4" t-if="o.developer_commission">
                                        <strong>Broker Commission Rate:</strong><br/>
                                        <span t-field="o.developer_commission" t-options="{'widget': 'float', 'precision': 2}"/>%
                                        <t t-if="o.sale_value and o.developer_commission">
                                            <br/>
                                            <small class="text-muted">
                                                Amount: <span t-esc="'%.2f' % ((o.sale_value * o.developer_commission) / 100)" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            </small>
                                        </t>
                                    </div>
                                </div>
                            </t>

                            <!-- Invoice Line Items -->
                            <div class="osus-section-header">INVOICE DETAILS</div>
                            <table class="table table-bordered mb-4">
                                <thead class="osus-table-header">
                                    <tr>
                                        <th style="width: 40%;">Description</th>
                                        <th style="width: 10%;" class="text-center">Qty</th>
                                        <th style="width: 15%;" class="text-end">Unit Price</th>
                                        <th style="width: 10%;" class="text-center">Tax</th>
                                        <th style="width: 15%;" class="text-end">Subtotal</th>
                                        <th style="width: 15%;" class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.invoice_line_ids.filtered(lambda line: not line.display_type)" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-field="line.name"/>
                                                <div t-if="line.product_id" class="small text-muted">
                                                    Product: <span t-field="line.product_id.name"/>
                                                </div>
                                                <!-- Show analytic account if available -->
                                                <div t-if="line.analytic_distribution" class="small text-muted">
                                                    <t t-foreach="line.analytic_distribution.items()" t-as="analytic_item">
                                                        Analytic: <span t-esc="analytic_item[0]"/> (<span t-esc="analytic_item[1]"/>%)
                                                    </t>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.quantity"/>
                                                <span t-field="line.product_uom_id.name" groups="uom.group_uom"/>
                                            </td>
                                            <td class="text-end">
                                                <span t-field="line.price_unit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"/>
                                            </td>
                                            <td class="text-end">
                                                <span t-field="line.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            </td>
                                            <td class="text-end">
                                                <span t-field="line.price_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <!-- Totals Section -->
                            <div class="row justify-content-end">
                                <div class="col-md-6 col-lg-4">
                                    <table class="table table-bordered">
                                        <tr>
                                            <td><strong>Subtotal (Excl. VAT)</strong></td>
                                            <td class="text-end">
                                                <span t-field="o.amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                            <tr>
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span t-if="len(amount_by_group) > 2 and amount_by_group[2] == 1"> (Included)</span>
                                                </td>
                                                <td class="text-end">
                                                    <span t-esc="amount_by_group[1]" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr class="osus-table-total">
                                            <td><strong>Total Amount</strong></td>
                                            <td class="text-end">
                                                <strong>
                                                    <span t-field="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                </strong>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <!-- Amount in Words -->
                            <div class="osus-amount-words" t-if="o.amount_total_words">
                                <strong>Amount in Words:</strong><br/>
                                <span t-field="o.amount_total_words"/>
                            </div>

                            <!-- Payment Instructions -->
                            <div class="osus-payment-info">
                                <h4 class="mb-3">Payment Instructions</h4>
                                <p class="mb-3">Please make payment to the following account details via cheque or bank transfer:</p>
                                <div class="row">
                                    <div class="col-md-6">
                                        <table class="table table-sm">
                                            <tr>
                                                <td style="width: 40%;"><strong>Bank Name:</strong></td>
                                                <td>ABU DHABI COMMERCIAL BANK (ADCB)</td>
                                            </tr>
                                            <tr>
                                                <td><strong>Account Name:</strong></td>
                                                <td>OSUS REAL ESTATE BROKERAGE LLC</td>
                                            </tr>
                                            <tr>
                                                <td><strong>Account Number:</strong></td>
                                                <td>14041417820001 - AED</td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-6">
                                        <table class="table table-sm">
                                            <tr>
                                                <td style="width: 40%;"><strong>IBAN:</strong></td>
                                                <td>AE35003001404141782000</td>
                                            </tr>
                                            <tr>
                                                <td><strong>Branch:</strong></td>
                                                <td>Business Bay</td>
                                            </tr>
                                            <tr>
                                                <td><strong>SWIFT Code:</strong></td>
                                                <td>ADCBAEAA</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <p class="text-muted fst-italic mt-3 mb-0">
                                    <i class="fa fa-info-circle"/> Please include your invoice number <strong t-field="o.name"/> when making the payment for faster processing.
                                </p>
                            </div>

                            <!-- Terms and Conditions -->
                            <div class="mt-4" t-if="o.narration">
                                <div class="osus-section-header">Terms and Conditions</div>
                                <div t-field="o.narration"/>
                            </div>

                            <!-- Footer -->
                            <div class="osus-footer-note">
                                <div class="row">
                                    <div class="col-6 text-start">
                                        <small>Generated on: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/></small>
                                    </div>
                                    <div class="col-6 text-end">
                                        <small><i class="fa fa-desktop"/> This is a computer-generated document. No signature or stamp required.</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>