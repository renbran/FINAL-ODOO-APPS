<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Payment Reference Sequences -->
        <record id="sequence_payment_voucher" model="ir.sequence">
            <field name="name">Payment Voucher Reference</field>
            <field name="code">payment.voucher.reference</field>
            <field name="prefix">PV</field>
            <field name="suffix">/%(year)s</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="sequence_receipt_voucher" model="ir.sequence">
            <field name="name">Receipt Voucher Reference</field>
            <field name="code">receipt.voucher.reference</field>
            <field name="prefix">RV</field>
            <field name="suffix">/%(year)s</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
