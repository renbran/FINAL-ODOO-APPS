<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- OSUS Invoice Report Template -->
        <template id="report_osus_invoice_document">
            <t t-call="web.external_layout">
                <div class="page" style="font-family: Arial, sans-serif;">
                    <style>
                        .osus-header {
                            display: flex;
                            justify-content: space-between;
                            margin-bottom: 20px;
                            padding-bottom: 15px;
                            border-bottom: 2px solid #b20000;
                        }
                        .osus-company-details, .osus-vendor-details {
                            width: 45%;
                        }
                        .osus-title {
                            text-align: center;
                            color: #b20000;
                            font-size: 24px;
                            font-weight: bold;
                            margin: 20px 0;
                        }
                        .osus-info-table {
                            width: 100%;
                            margin-bottom: 20px;
                        }
                        .osus-info-table td {
                            padding: 5px 10px;
                            border: none;
                        }
                        .osus-main-table {
                            width: 100%;
                            border-collapse: collapse;
                            margin-bottom: 20px;
                        }
                        .osus-main-table th {
                            background: #b20000;
                            color: white;
                            padding: 10px;
                            text-align: left;
                            font-weight: bold;
                        }
                        .osus-main-table td {
                            padding: 8px 10px;
                            border: 1px solid #ddd;
                        }
                        .osus-totals {
                            float: right;
                            margin-top: 20px;
                        }
                        .osus-totals table {
                            border-collapse: collapse;
                        }
                        .osus-totals td {
                            padding: 5px 15px;
                            border: none;
                            text-align: right;
                        }
                        .osus-total-row {
                            font-weight: bold;
                            color: #b20000;
                            font-size: 16px;
                        }
                        .osus-payment-section {
                            margin-top: 40px;
                            clear: both;
                        }
                        .osus-payment-header {
                            background: #b20000;
                            color: white;
                            padding: 8px 15px;
                            font-weight: bold;
                            margin-bottom: 0;
                        }
                        .osus-payment-content {
                            border: 2px solid #b20000;
                            padding: 15px;
                            margin-top: 0;
                        }
                        .osus-bank-table {
                            width: 100%;
                            margin-top: 10px;
                        }
                        .osus-bank-table td {
                            padding: 5px;
                            border: none;
                        }
                        .osus-footer {
                            margin-top: 30px;
                            font-size: 10px;
                            color: #888;
                            text-align: center;
                            border-top: 1px solid #ddd;
                            padding-top: 15px;
                        }
                        .osus-contact {
                            color: #b20000;
                            font-weight: bold;
                        }
                    </style>
                    
                    <!-- Header Section -->
                    <div class="osus-header">
                        <div class="osus-company-details">
                            <strong>COMPANY DETAILS</strong><br/>
                            <strong>OSUS PROPERTIES</strong><br/>
                            SINGLE BUSINESS TOWER FLOOR 29 OFFICE 02 &amp; 03<br/>
                            BUSINESS BAY<br/>
                            Dubai 00000<br/>
                            United Arab Emirates<br/>
                            <strong>VAT:</strong> 100236589600003
                        </div>
                        <div class="osus-vendor-details">
                            <strong>CLIENT DETAILS</strong><br/>
                            <strong t-field="o.partner_id.name"/><br/>
                            <t t-if="o.partner_id.street">
                                <span t-field="o.partner_id.street"/><br/>
                            </t>
                            <t t-if="o.partner_id.street2">
                                <span t-field="o.partner_id.street2"/><br/>
                            </t>
                            <t t-if="o.partner_id.city">
                                <span t-field="o.partner_id.city"/>
                            </t>
                            <t t-if="o.partner_id.state_id">
                                <span t-field="o.partner_id.state_id.name"/>
                            </t>
                            <t t-if="o.partner_id.zip">
                                <span t-field="o.partner_id.zip"/>
                            </t><br/>
                            <t t-if="o.partner_id.country_id">
                                <span t-field="o.partner_id.country_id.name"/><br/>
                            </t>
                            <t t-if="o.partner_id.vat">
                                <strong>VAT:</strong> <span t-field="o.partner_id.vat"/>
                            </t>
                        </div>
                    </div>

                    <!-- Invoice Title -->
                    <h2 class="osus-title">TAX INVOICE INV/<span t-field="o.name"/></h2>

                    <!-- Invoice Information -->
                    <table class="osus-info-table">
                        <tr>
                            <td><strong>Invoice Date:</strong> <span t-field="o.invoice_date"/></td>
                            <td><strong>Due Date:</strong> <span t-field="o.invoice_date_due"/></td>
                            <td><strong>Reference:</strong> <span t-field="o.ref"/></td>
                        </tr>
                    </table>

                    <!-- Main Invoice Table -->
                    <table class="osus-main-table">
                        <thead>
                            <tr>
                                <th style="width: 40%;">DESCRIPTION</th>
                                <th style="width: 10%;">QTY</th>
                                <th style="width: 15%;">UNIT PRICE</th>
                                <th style="width: 10%;">VAT %</th>
                                <th style="width: 15%;">VAT AMOUNT</th>
                                <th style="width: 15%;">TOTAL</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.invoice_line_ids.filtered(lambda l: not l.display_type)" t-as="line">
                                <td><span t-field="line.name"/></td>
                                <td><span t-field="line.quantity"/></td>
                                <td><span t-field="line.price_unit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                                <td>
                                    <span t-if="line.tax_ids">
                                        <t t-foreach="line.tax_ids" t-as="tax">
                                            <span t-field="tax.amount"/>%<t t-if="not tax_last">, </t>
                                        </t>
                                    </span>
                                </td>
                                <td><span t-field="line.price_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    - <span t-field="line.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                                <td><span t-field="line.price_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Totals Section -->
                    <div class="osus-totals">
                        <table>
                            <tr>
                                <td><strong>Subtotal:</strong></td>
                                <td><span t-field="o.amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                            </tr>
                            <tr>
                                <td><strong>VAT:</strong></td>
                                <td><span t-field="o.amount_tax" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                            </tr>
                            <tr class="osus-total-row">
                                <td><strong>TOTAL:</strong></td>
                                <td><strong><span t-field="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></strong></td>
                            </tr>
                        </table>
                    </div>

                    <!-- Amount in Words -->
                    <div style="margin-top: 60px; clear: both;">
                        <strong>Amount in Words:</strong><br/>
                        <em><span t-field="o.currency_id.amount_to_text(o.amount_total)"/></em>
                    </div>

                    <!-- Payment Instructions -->
                    <div class="osus-payment-section">
                        <div class="osus-payment-header">Payment Instructions</div>
                        <div class="osus-payment-content">
                            <strong>Please pay to this Account Details by Cheque or Bank Transfer</strong>
                            <table class="osus-bank-table">
                                <tr>
                                    <td style="width: 25%;"><strong>Bank Name:</strong></td>
                                    <td>ABU DHABI COMMERCIAL BANK (ADCB)</td>
                                </tr>
                                <tr>
                                    <td><strong>Account Name:</strong></td>
                                    <td>OSUS REAL ESTATE BROKERAGE LLC</td>
                                </tr>
                                <tr>
                                    <td><strong>Account No.:</strong></td>
                                    <td>14041417820001 - AED</td>
                                </tr>
                                <tr>
                                    <td><strong>IBAN:</strong></td>
                                    <td>AE35003001404141782000</td>
                                </tr>
                                <tr>
                                    <td><strong>Branch:</strong></td>
                                    <td>Business Bay</td>
                                </tr>
                            </table>
                            <br/>
                            <em><strong>Please include your reference number when making the payment: <span t-field="o.name"/></strong></em>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div class="osus-footer">
                        This is a computer generated document. No signature or stamp required.<br/>
                        <span class="osus-contact">☎ +971 55 775 6776 | ✉ info@osusproperties.com</span><br/>
                        2902 - 2903, Single Tower, Business Bay, Dubai, UAE
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>