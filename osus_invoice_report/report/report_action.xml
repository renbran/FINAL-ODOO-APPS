<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report
        id="action_report_osus_invoice"
        model="account.move"
        string="OSUS Invoice"
        report_type="qweb-pdf"
        name="osus_invoice_report.report_osus_invoice_document"
        file="osus_invoice_report.report_osus_invoice_document"
        print_report_name="'Invoice - %s' % (object.name)"
    />
    <record id="view_move_form_inherit_osus_invoice" model="ir.ui.view">
        <field name="name">account.move.form.osus.invoice.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_print_osus_invoice" type="object" string="Print OSUS Invoice" class="btn-primary" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                <button name="action_print_osus_bill" type="object" string="Print OSUS Bill" class="btn-secondary" attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
