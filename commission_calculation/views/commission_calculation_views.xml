<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_commission" model="ir.ui.view">
        <field name="name">sale.order.form.commission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']" position="after">
                <page string="Commission Calculation" name="commission_calculation">
                    <group>
                        <group string="Summary">
                            <field name="amount_untaxed" readonly="1"/>
                            <field name="total_external_commission" readonly="1"/>
                            <field name="total_internal_commission" readonly="1"/>
                            <field name="total_payable" readonly="1"/>
                            <field name="company_net_commission" readonly="1"/>
                            <field name="remaining_unallocated_amount" readonly="1"/>
                            <field name="commission_percentage" readonly="1"/>
                            <field name="commission_allocation_status" readonly="1"/>
                        </group>
                        <group string="Workflow">
                            <field name="commission_status"/>
                            <field name="commission_payment_date"/>
                            <field name="commission_reference"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="External Commission">
                            <group string="Broker">
                                <field name="broker_partner_id"/>
                                <field name="broker_commission_type"/>
                                <field name="broker_rate" modifiers="{&quot;invisible&quot;: [[&quot;broker_commission_type&quot;, &quot;=&quot;, &quot;fixed&quot;]]}"/>
                                <field name="broker_commission_amount" readonly="1"/>
                            </group>
                            <group string="Referral">
                                <field name="referral_partner_id"/>
                                <field name="referral_commission_type"/>
                                <field name="referral_rate" modifiers="{&quot;invisible&quot;: [[&quot;referral_commission_type&quot;, &quot;=&quot;, &quot;fixed&quot;]]}"/>
                                <field name="referral_commission_amount" readonly="1"/>
                            </group>
                            <group string="Cashback">
                                <field name="cashback_partner_id"/>
                                <field name="cashback_commission_type"/>
                                <field name="cashback_rate" modifiers="{&quot;invisible&quot;: [[&quot;cashback_commission_type&quot;, &quot;=&quot;, &quot;fixed&quot;]]}"/>
                                <field name="cashback_commission_amount" readonly="1"/>
                            </group>
                            <group string="Other">
                                <field name="other_partner_id"/>
                                <field name="other_commission_type"/>
                                <field name="other_rate" modifiers="{&quot;invisible&quot;: [[&quot;other_commission_type&quot;, &quot;!=&quot;, &quot;untaxed_total&quot;]]}"/>
                                <field name="other_fixed_amount" modifiers="{&quot;invisible&quot;: [[&quot;other_commission_type&quot;, &quot;!=&quot;, &quot;fixed&quot;]]}"/>
                                <field name="other_commission_amount" readonly="1"/>
                            </group>
                        </page>
                        <page string="Internal Commission">
                            <field name="internal_commission_type"/>
                            <field name="internal_commission_base" readonly="1"/>
                            <group string="Agent 1">
                                <field name="agent1_id"/>
                                <field name="agent1_rate" modifiers="{&quot;invisible&quot;: [[&quot;internal_commission_type&quot;, &quot;=&quot;, &quot;fixed&quot;]]}"/>
                                <field name="agent1_fixed_amount" modifiers="{&quot;invisible&quot;: [[&quot;internal_commission_type&quot;, &quot;!=&quot;, &quot;fixed&quot;]]}"/>
                                <field name="agent1_commission_amount" readonly="1"/>
                            </group>
                            <group string="Agent 2">
                                <field name="agent2_id"/>
                                <field name="agent2_rate" modifiers="{&quot;invisible&quot;: [[&quot;internal_commission_type&quot;, &quot;=&quot;, &quot;fixed&quot;]]}"/>
                                <field name="agent2_fixed_amount" modifiers="{&quot;invisible&quot;: [[&quot;internal_commission_type&quot;, &quot;!=&quot;, &quot;fixed&quot;]]}"/>
                                <field name="agent2_commission_amount" readonly="1"/>
                            </group>
                            <group string="Manager">
                                <field name="manager_id"/>
                                <field name="manager_rate" modifiers="{&quot;invisible&quot;: [[&quot;internal_commission_type&quot;, &quot;=&quot;, &quot;fixed&quot;]]}"/>
                                <field name="manager_fixed_amount" modifiers="{&quot;invisible&quot;: [[&quot;internal_commission_type&quot;, &quot;!=&quot;, &quot;fixed&quot;]]}"/>
                                <field name="manager_commission_amount" readonly="1"/>
                            </group>
                            <group string="Director">
                                <field name="director_id"/>
                                <field name="director_rate" modifiers="{&quot;invisible&quot;: [[&quot;internal_commission_type&quot;, &quot;=&quot;, &quot;fixed&quot;]]}"/>
                                <field name="director_fixed_amount" modifiers="{&quot;invisible&quot;: [[&quot;internal_commission_type&quot;, &quot;!=&quot;, &quot;fixed&quot;]]}"/>
                                <field name="director_commission_amount" readonly="1"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="commission_notes"/>
                        </page>
                    </notebook>
                </page>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_calculate_commission" string="Calculate Commission" type="object" class="btn-primary" modifiers="{&quot;invisible&quot;: [[&quot;can_calculate_commission&quot;, &quot;=&quot;, false]]}"/>
                <button name="action_confirm_commission" string="Confirm Commission" type="object" class="btn-primary" modifiers="{&quot;invisible&quot;: [[&quot;can_confirm_commission&quot;, &quot;=&quot;, false]]}"/>
                <button name="action_pay_commission" string="Pay Commission" type="object" class="btn-success" modifiers="{&quot;invisible&quot;: [[&quot;can_pay_commission&quot;, &quot;=&quot;, false]]}"/>
                <button name="action_reset_commission" string="Reset Commission" type="object" class="btn-secondary" modifiers="{&quot;invisible&quot;: [[&quot;can_reset_commission&quot;, &quot;=&quot;, false]]}"/>
            </xpath>
        </field>
    </record>
</odoo>