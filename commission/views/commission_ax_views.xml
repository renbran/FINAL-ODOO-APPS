<odoo>
    <record id="view_commission_ax_form" model="ir.ui.view">
        <field name="name">commission.ax.form</field>
        <field name="model">commission.ax</field>
        <field name="arch" type="xml">
            <form string="Commission AX">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="order_id"/>
                        <field name="invoice_id"/>
                        <field name="state"/>
                        <field name="amount"/>
                    </group>
                    <footer>
                        <button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
                        <button name="action_manual_process" type="object" string="Process Manually" class="btn-secondary"/>
                        <button name="action_create_vendor_bill" type="object" string="Create Vendor Bill" class="btn-success"/>
                        <button name="action_cancel" type="object" string="Cancel" class="btn-danger"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
