<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View Extension -->
    <record id="view_order_form_commission" model="ir.ui.view">
        <field name="name">sale.order.form.commission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="deal_id" string="Deal ID"/>
                <field name="booking_date"/>
                <field name="buyer_id"/>
                <field name="project_id"/>
                <field name="unit_id"/>
                <field name="sale_value"/>
            </xpath>

            <xpath expr="//page[@name='other_information']" position="after">
                <page string="Commission" name="commission">                    <group>
                        <group string="Commission Status">
                            <field name="commission_status" widget="badge" 
                                   decoration-info="commission_status == 'draft'" 
                                   decoration-warning="commission_status == 'calculated'"
                                   decoration-success="commission_status in ['confirmed', 'paid']"
                                   decoration-danger="commission_status == 'canceled'"/>
                            <field name="commission_sequence" readonly="1"/>
                            <field name="commission_payment_date"/>
                            <field name="commission_reference"/>
                            <field name="commission_rejected_by" readonly="1" invisible="commission_status != 'canceled'"/>
                            <field name="commission_rejected_date" readonly="1" invisible="commission_status != 'canceled'"/>
                        </group>
                        <group string="Commission Notes">
                            <field name="commission_notes" widget="html"/>
                        </group>
                    </group>

                    <!-- New Clear Summary Structure -->
                    <group string="Commission Summary">
                        <group string="Commission Base &amp; Status">
                            <field name="gross_commission_base" readonly="1" widget="monetary"/>
                            <field name="commission_allocation_status" readonly="1" widget="badge"
                                   decoration-success="commission_allocation_status == 'full'"
                                   decoration-warning="commission_allocation_status == 'under'"
                                   decoration-danger="commission_allocation_status == 'over'"/>
                            <field name="commission_percentage" readonly="1" widget="percentage"/>
                            <field name="commission_variance" readonly="1" widget="monetary"/>
                        </group>
                        <group string="Allocation Totals">
                            <field name="total_external_allocation" readonly="1" widget="monetary"/>
                            <field name="total_internal_allocation" readonly="1" widget="monetary"/>
                            <field name="grand_total_commission" readonly="1" widget="monetary"/>
                            <field name="total_company_net" readonly="1" widget="monetary" 
                                   decoration-success="total_company_net &gt; 0"
                                   decoration-warning="total_company_net == 0"
                                   decoration-danger="total_company_net &lt; 0"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="External Commission">
                            <group>
                                <group string="Broker/Agency">
                                    <field name="broker_agency_partner_id"/>
                                    <field name="broker_agency_commission_type"/>
                                    <field name="broker_agency_rate" widget="percentage"/>
                                    <field name="broker_agency_amount" widget="monetary"/>
                                </group>
                                <group string="Referral">
                                    <field name="referral_partner_id"/>
                                    <field name="referral_commission_type"/>
                                    <field name="referral_rate" widget="percentage"/>
                                    <field name="referral_amount" widget="monetary"/>
                                </group>
                            </group>
                            <group>
                                <group string="Cashback">
                                    <field name="cashback_partner_id"/>
                                    <field name="cashback_commission_type"/>
                                    <field name="cashback_rate" widget="percentage"/>
                                    <field name="cashback_amount" widget="monetary"/>
                                </group>
                                <group string="Other External">
                                    <field name="other_external_partner_id"/>
                                    <field name="other_external_commission_type"/>
                                    <field name="other_external_rate" widget="percentage"/>
                                    <field name="other_external_amount" widget="monetary"/>
                                </group>
                            </group>
                        </page>

                        <page string="Internal Commission">
                            <group>
                                <group string="Agent 1">
                                    <field name="agent1_id"/>
                                    <field name="agent1_commission_type"/>
                                    <field name="agent1_rate" widget="percentage"/>
                                    <field name="agent1_amount" widget="monetary"/>
                                </group>
                                <group string="Agent 2">
                                    <field name="agent2_id"/>
                                    <field name="agent2_commission_type"/>
                                    <field name="agent2_rate" widget="percentage"/>
                                    <field name="agent2_amount" widget="monetary"/>
                                </group>
                            </group>
                            <group>
                                <group string="Manager">
                                    <field name="manager_id"/>
                                    <field name="manager_commission_type"/>
                                    <field name="manager_rate" widget="percentage"/>
                                    <field name="manager_amount" widget="monetary"/>
                                </group>
                                <group string="Director">
                                    <field name="director_id"/>
                                    <field name="director_commission_type"/>
                                    <field name="director_rate" widget="percentage"/>
                                    <field name="director_amount" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </page>
            </xpath>

            <!-- Add commission buttons to header -->
            <xpath expr="//header//button[@name='action_confirm']" position="before">
                <button name="action_calculate_commission" 
                        string="Calculate Commission" 
                        type="object" 
                        class="btn-primary"
                        invisible="not show_calculate_button"/>
                <button name="action_confirm_commission" 
                        string="Confirm Commission" 
                        type="object" 
                        class="btn-primary"
                        invisible="not show_confirm_button"/>
                <button name="action_pay_commission" 
                        string="Mark as Paid" 
                        type="object" 
                        class="btn-success"
                        invisible="not show_pay_button"/>
                <button name="action_reset_commission" 
                        string="Reset Commission" 
                        type="object" 
                        class="btn-secondary"
                        invisible="not show_reset_button"/>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="action_create_commission_purchase_order"
                        type="object"
                        string="Create Commission Purchase Order"
                        icon="fa-shopping-cart"/>
            </xpath>

            <!-- Invisible fields for button visibility -->
            <xpath expr="//sheet" position="inside">
                <group string="Commission Computation" invisible="1">
                    <!-- Button visibility fields -->
                    <field name="show_calculate_button" invisible="1"/>
                    <field name="show_confirm_button" invisible="1"/>
                    <field name="show_reset_button" invisible="1"/>
                    <field name="show_pay_button" invisible="1"/>
                    <field name="show_reject_button" invisible="1"/>
                </group>
            </xpath>

            <xpath expr="//sheet/notebook" position="before">
                <notebook>
                    <page string="Deal Information" name="deal_information">
                        <group>
                            <field name="deal_id" string="Deal ID"/>
                            <field name="booking_date"/>
                            <field name="buyer_id"/>
                            <field name="project_id" string="Project Name"/>
                            <field name="unit_id"/>
                            <field name="sale_value"/>
                        </group>
                    </page>
                </notebook>
            </xpath>

            <!-- Smart button for Purchase Orders only, with short label -->
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button name="action_view_related_purchase_orders"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-shopping-cart"
                        string="Purchase Orders"/>
            </xpath>
        </field>
    </record>

    <!-- Tree View Extension -->
    <record id="view_order_tree_commission" model="ir.ui.view">
        <field name="name">sale.order.tree.commission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="deal_id"/>
                <field name="booking_date"/>
                <field name="buyer_id"/>
                <field name="project_id"/>
                <field name="unit_id"/>
                <field name="sale_value"/>
                <field name="commission_status"/>
                <field name="total_external_allocation"/>
                <field name="total_internal_allocation"/>
                <field name="grand_total_commission"/>
                <field name="total_company_net"/>
            </xpath>
        </field>
    </record>

    <!-- Custom Tree View to match the required column layout -->
    <record id="view_order_tree_custom_layout" model="ir.ui.view">
        <field name="name">sale.order.tree.custom.layout</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="replace">
                <tree string="Sales Orders">
                    <field name="deal_id" string="Deal ID"/>
                    <field name="booking_date" string="Booking Date"/>
                    <field name="partner_id" string="Customer"/>
                    <field name="buyer_id" string="Buyer Name"/>
                    <field name="project_id" string="Project"/>
                    <field name="unit_id" string="Unit"/>
                    <field name="sale_value" string="Sale Value"/>
                    <field name="developer_commission" string="Broker Commission"/>
                    <field name="total_external_allocation" string="External Total"/>
                    <field name="total_internal_allocation" string="Internal Total"/>
                    <field name="grand_total_commission" string="Total Commission"/>
                    <field name="total_company_net" string="Company Net"/>
                    <field name="state" string="Order Status"/>
                    <field name="invoice_status" string="Invoice Status"/>
                    <field name="commission_status" string="Commission Status"/>
                </tree>
            </xpath>
        </field>
    </record>
</odoo>