<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View Extension -->
    <record id="view_order_form_commission" model="ir.ui.view">
        <field name="name">sale.order.form.commission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="deal_id" string="Deal ID"/>
                <field name="booking_date"/>
                <field name="buyer_id"/>
                <field name="project_id" string="Project Name"/>
                <field name="unit_id" string="Unit"/>
                <field name="sale_value"/>
            </xpath>

            <xpath expr="//page[@name='other_information']" position="after">
                <page string="Commission" name="commission">
                    <group>
                        <group string="Commission Status">
                            <field name="commission_status"/>
                            <field name="commission_sequence" readonly="1"/>
                            <field name="commission_payment_date"/>
                            <field name="commission_reference"/>
                            <field name="commission_notes" widget="html"/>
                        </group>
                        <group string="Commission Summary">
                            <field name="developer_commission"/>
                            <field name="total_internal_commission" readonly="1"/>
                            <field name="total_external_commission" readonly="1"/>
                            <field name="grand_total_commission" readonly="1"/>
                            <field name="commission_allocation_status" readonly="1"/>
                            <field name="commission_variance" readonly="1"/>
                            <field name="commission_percentage" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="External Commission">
                            <group>
                                <group string="Referral">
                                    <field name="referral_partner_id"/>
                                    <field name="referral_commission_type"/>
                                    <field name="referral_rate" visibility="referral_commission_type != 'fixed'"/>
                                    <field name="referral_fixed_amount" visibility="referral_commission_type == 'fixed'"/>
                                    <field name="referral_total" readonly="1"/>
                                </group>
                                <group string="Cashback">
                                    <field name="cashback_partner_id"/>
                                    <field name="cashback_commission_type"/>
                                    <field name="cashback_rate" visibility="cashback_commission_type != 'fixed'"/>
                                    <field name="cashback_fixed_amount" visibility="cashback_commission_type == 'fixed'"/>
                                    <field name="cashback_total" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Other External">
                                    <field name="other_external_partner_id"/>
                                    <field name="other_external_commission_type"/>
                                    <field name="other_external_rate" visibility="other_external_commission_type != 'fixed'"/>
                                    <field name="other_external_fixed_amount" visibility="other_external_commission_type == 'fixed'"/>
                                    <field name="other_external_total" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Internal Commission">
                            <group>
                                <field name="internal_commission_type"/>
                            </group>
                            <group>
                                <group string="Agent 1">
                                    <field name="agent1_id"/>
                                    <field name="agent1_rate" invisible="not show_agent1_rate"/>
                                    <field name="agent1_fixed" invisible="not show_agent1_fixed"/>
                                    <field name="agent1_commission" readonly="1"/>
                                </group>
                                <group string="Agent 2">
                                    <field name="agent2_id"/>
                                    <field name="agent2_rate" invisible="not show_agent2_rate"/>
                                    <field name="agent2_fixed" invisible="not show_agent2_fixed"/>
                                    <field name="agent2_commission" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Manager">
                                    <field name="manager_id"/>
                                    <field name="manager_rate" invisible="not show_manager_rate"/>
                                    <field name="manager_fixed" invisible="not show_manager_fixed"/>
                                    <field name="manager_commission" readonly="1"/>
                                </group>
                                <group string="Director">
                                    <field name="director_id"/>
                                    <field name="director_rate" invisible="not show_director_rate"/>
                                    <field name="director_fixed" invisible="not show_director_fixed"/>
                                    <field name="director_commission" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </page>
            </xpath>

            <!-- Add commission buttons to header -->
            <xpath expr="//header//button[@name='action_confirm']" position="before">
                <button name="action_calculate_commission" string="Calculate Commission" type="object" class="btn-primary"/>
                <button name="action_confirm_commission" string="Confirm Commission" type="object" class="btn-primary"/>
                <button name="action_pay_commission" string="Mark as Paid" type="object" class="btn-primary"/>
                <button name="action_reset_commission" string="Reset Commission" type="object" class="btn-secondary"/>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="action_create_commission_purchase_order"
                        type="object"
                        string="Create Commission Purchase Order"
                        icon="fa-shopping-cart"/>
            </xpath>

            <!-- Invisible fields for commission calculation -->
            <xpath expr="//sheet" position="inside">
                <group string="Commission Computation">
                    <field name="show_external_fixed_amount" invisible="1"/>
                    <field name="show_agent1_rate" invisible="1"/>
                    <field name="show_agent1_fixed" invisible="1"/>
                    <field name="show_agent2_rate" invisible="1"/>
                    <field name="show_agent2_fixed" invisible="1"/>
                    <field name="show_manager_rate" invisible="1"/>
                    <field name="show_manager_fixed" invisible="1"/>
                    <field name="show_director_rate" invisible="1"/>
                    <field name="show_director_fixed" invisible="1"/>
                </group>
            </xpath>

            <xpath expr="//sheet/notebook" position="before">
                <notebook>
                    <page string="Deal Information" name="deal_information">
                        <group>
                            <field name="deal_id" string="Deal ID"/>
                            <field name="booking_date"/>
                            <field name="buyer_id"/>
                            <field name="project_id" string="Project Name"/>
                            <field name="unit_id" string="Unit"/>
                            <field name="sale_value"/>
                        </group>
                    </page>
                </notebook>
            </xpath>

            <!-- Smart button for Purchase Orders only, with short label -->
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button name="action_view_related_purchase_orders"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-shopping-cart"
                        string="Purchase Orders"/>
            </xpath>
        </field>
    </record>

    <!-- Tree View Extension -->
    <record id="view_order_tree_commission" model="ir.ui.view">
        <field name="name">sale.order.tree.commission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="deal_id"/>
                <field name="booking_date"/>
                <field name="buyer_id"/>
                <field name="project_id"/>
                <field name="unit_id"/>
                <field name="sale_value"/>
                <field name="commission_status"/>
                <field name="grand_total_commission"/>
            </xpath>
        </field>
    </record>

    <!-- Custom Tree View to match the required column layout -->
    <record id="view_order_tree_custom_layout" model="ir.ui.view">
        <field name="name">sale.order.tree.custom.layout</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="replace">
                <tree string="Sales Orders">
                    <field name="deal_id" string="Deal ID"/>
                    <field name="booking_date" string="Booking Date"/>
                    <field name="partner_id" string="Customer"/>
                    <field name="buyer_id" string="Buyer Name"/>
                    <field name="project_id" string="Project"/>
                    <field name="unit_id" string="Unit"/>
                    <field name="sale_value" string="Sale Value"/>
                    <field name="developer_commission" string="Broker Commission"/>
                    <field name="agent1_commission" string="Agent 1"/>
                    <field name="grand_total_commission" string="Total"/>
                    <!-- <field name="invoiced_amount" string="Total Invoiced"/> -->
                    <field name="state" string="Order Status"/>
                    <field name="invoice_status" string="Invoice Status"/>
                    <!-- <field name="payment_state" string="Payment Status"/> -->
                </tree>
            </xpath>
        </field>
    </record>
</odoo>