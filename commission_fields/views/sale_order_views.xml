<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View Extension -->
    <record id="view_order_form_commission" model="ir.ui.view">
        <field name="name">sale.order.form.commission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="deal_id" string="Deal ID"/>
                <field name="booking_date"/>
                <field name="buyer_id" options="{'no_create': True}"/>
                <field name="project_id" string="Project Name" options="{'no_create': True}" domain="[('detailed_type', '=', 'service')]"/>
                <field name="unit_id" options="{'no_create': True}"/>
                <field name="sale_value"/>
            </xpath>

            <xpath expr="//page[@name='other_information']" position="after">
                <page string="Commission" name="commission">
                    <group>
                        <group string="Commission Status">
                            <field name="commission_status"/>
                            <field name="commission_sequence" readonly="1"/>
                            <field name="commission_payment_date"/>
                            <field name="commission_reference"/>
                            <field name="commission_notes" widget="html"/>
                        </group>
                        <group string="Commission Summary">
                            <field name="developer_commission"/>
                            <field name="total_internal_commission" readonly="1"/>
                            <field name="total_external_commission" readonly="1"/>
                            <field name="grand_total_commission" readonly="1"/>
                            <field name="commission_allocation_status" readonly="1"/>
                            <field name="commission_variance" readonly="1"/>
                            <field name="commission_percentage" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="External Commission">
                            <group>
                                <group string="External Partner">
                                    <field name="external_partner_id"/>
                                    <field name="external_calculation_type"/>
                                    <field name="external_percentage" invisible="not show_external_percentage"/>
                                    <field name="external_fixed_amount" invisible="not show_external_fixed_amount"/>
                                    <field name="external_commission_amount" readonly="1"/>
                                </group>
                                <group string="Broker/Agency">
                                    <field name="broker_agency_name"/>
                                    <field name="broker_agency_commission_type"/>
                                    <field name="broker_agency_rate"/>
                                    <field name="broker_agency_total" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Referral">
                                    <field name="referral_name"/>
                                    <field name="referral_commission_type"/>
                                    <field name="referral_rate"/>
                                    <field name="referral_total" readonly="1"/>
                                </group>
                                <group string="Cashback">
                                    <field name="cashback_name"/>
                                    <field name="cashback_commission_type"/>
                                    <field name="cashback_rate"/>
                                    <field name="cashback_total" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Other External">
                                    <field name="other_external_name"/>
                                    <field name="other_external_commission_type"/>
                                    <field name="other_external_rate"/>
                                    <field name="other_external_total" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Internal Commission">
                            <group>
                                <field name="internal_commission_type"/>
                            </group>
                            <group>
                                <group string="Agent 1">
                                    <field name="agent1_id"/>
                                    <field name="agent1_rate" invisible="not show_agent1_rate"/>
                                    <field name="agent1_fixed" invisible="not show_agent1_fixed"/>
                                    <field name="agent1_commission" readonly="1"/>
                                </group>
                                <group string="Agent 2">
                                    <field name="agent2_id"/>
                                    <field name="agent2_rate" invisible="not show_agent2_rate"/>
                                    <field name="agent2_fixed" invisible="not show_agent2_fixed"/>
                                    <field name="agent2_commission" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Manager">
                                    <field name="manager_id"/>
                                    <field name="manager_rate" invisible="not show_manager_rate"/>
                                    <field name="manager_fixed" invisible="not show_manager_fixed"/>
                                    <field name="manager_commission" readonly="1"/>
                                </group>
                                <group string="Director">
                                    <field name="director_id"/>
                                    <field name="director_rate" invisible="not show_director_rate"/>
                                    <field name="director_fixed" invisible="not show_director_fixed"/>
                                    <field name="director_commission" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </page>
            </xpath>

            <!-- Add commission buttons to header -->
            <xpath expr="//header//button[@name='action_confirm']" position="before">
                <button name="action_calculate_commission" string="Calculate Commission" type="object" class="btn-primary" attrs="{'invisible': [('commission_status', 'not in', ['draft'])]}"/>
                <button name="action_confirm_commission" string="Confirm Commission" type="object" class="btn-primary" attrs="{'invisible': [('commission_status', '!=', 'calculated')]}"/>
                <button name="action_pay_commission" string="Mark as Paid" type="object" class="btn-primary" attrs="{'invisible': [('commission_status', '!=', 'confirmed')]}"/>
                <button name="action_reset_commission" string="Reset Commission" type="object" class="btn-secondary" attrs="{'invisible': [('commission_status', 'in', ['draft', 'paid'])]}"/>
            </xpath>
        </field>
    </record>

    <!-- Tree View Extension -->
    <record id="view_order_tree_commission" model="ir.ui.view">
        <field name="name">sale.order.tree.commission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="deal_id"/>
                <field name="commission_status"/>
                <field name="grand_total_commission"/>
            </xpath>
        </field>
    </record>

    <!-- Search View Extension -->
    <record id="view_order_search_commission" model="ir.ui.view">
        <field name="name">sale.order.search.commission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_orders']" position="after">
                <filter name="commission_status" string="Commission Status" help="Commission Status">
                    <field name="commission_status"/>
                    <separator/>
                    <filter string="Draft" domain="[('commission_status','=','draft')]"/>
                    <filter string="Calculated" domain="[('commission_status','=','calculated')]"/>
                    <filter string="Confirmed" domain="[('commission_status','=','confirmed')]"/>
                    <filter string="Paid" domain="[('commission_status','=','paid')]"/>
                </filter>
                <filter name="deal_id" string="Deal ID"/>
                <filter name="project_id" string="Project Name"/>
            </xpath>
        </field>
    </record>
</odoo>