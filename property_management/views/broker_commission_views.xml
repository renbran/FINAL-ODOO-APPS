<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_broker_commission_invoice_tree" model="ir.ui.view">
            <field name="name">broker.commission.invoice.tree</field>
            <field name="model">broker.commission.invoice</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="display_name"/>
                    <field name="property_sale_id"/>
                    <field name="seller_id"/>
                    <field name="commission_amount"/>
                    <field name="state"/>
                    <field name="payment_state"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_broker_commission_invoice_form" model="ir.ui.view">
            <field name="name">broker.commission.invoice.form</field>
            <field name="model">broker.commission.invoice</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_generate_customer_invoice" string="Generate Invoice" type="object" class="oe_highlight" invisible="state != 'confirmed'"/>
                        <button name="action_cancel" string="Cancel" type="object" invisible="state in ('cancelled', 'invoiced')"/>
                        <button name="action_draft" string="Set to Draft" type="object" invisible="state != 'cancelled'"/>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                                <field name="invoice_count" widget="statinfo" string="Invoices"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="property_sale_id"/>
                                <field name="property_offer_id"/>
                                <field name="seller_id"/>
                            </group>
                            <group>
                                <field name="commission_percentage"/>
                                <field name="commission_amount"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Invoices" name="invoices">
                                <field name="invoice_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="amount_total"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_broker_commission_invoice_search" model="ir.ui.view">
            <field name="name">broker.commission.invoice.search</field>
            <field name="model">broker.commission.invoice</field>
            <field name="arch" type="xml">
                <search>
                    <field name="display_name"/>
                    <field name="property_sale_id"/>
                    <field name="seller_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Invoiced" name="invoiced" domain="[('state', '=', 'invoiced')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Property Sale" name="group_by_property_sale" context="{'group_by': 'property_sale_id'}"/>
                        <filter string="Seller/Broker" name="group_by_seller" context="{'group_by': 'seller_id'}"/>
                        <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="Payment Status" name="group_by_payment_state" context="{'group_by': 'payment_state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_broker_commission_invoice" model="ir.actions.act_window">
            <field name="name">Broker Commissions</field>
            <field name="res_model">broker.commission.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_broker_commission_invoice_search"/>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new broker commission invoice
                </p>
            </field>
        </record>
    </data>
</odoo>