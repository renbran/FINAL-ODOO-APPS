<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Broker Commission Tree View -->
    <record id="view_broker_commission_tree" model="ir.ui.view">
        <field name="name">broker.commission.tree</field>
        <field name="model">broker.commission</field>
        <field name="arch" type="xml">
            <tree string="Broker Commissions" decoration-success="state == 'paid'" decoration-info="state == 'draft'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="broker_id"/>
                <field name="property_sale_id"/>
                <field name="property_id"/>
                <field name="commission_type"/>
                <field name="commission_amount" widget="monetary" sum="Total"/>
                <field name="currency_id" invisible="1"/>
                <field name="payment_date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>
    
    <!-- Broker Commission Form View -->
    <record id="view_broker_commission_form" model="ir.ui.view">
        <field name="name">broker.commission.form</field>
        <field name="model">broker.commission</field>
        <field name="arch" type="xml">
            <form string="Broker Commission">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_pay" string="Mark as Paid" type="object" class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state == 'cancelled'"/>
                    <button name="action_draft" string="Set to Draft" type="object" invisible="state != 'cancelled'"/>
                    <button name="action_generate_report" string="Generate Report" type="object"/>
                    <button name="action_create_invoice" string="Create Invoice" type="object" 
                            invisible="state != 'confirmed' or invoice_id" 
                            class="oe_highlight"/>
                    <button name="action_view_invoice" string="View Invoice" type="object" 
                            invisible="not invoice_id" 
                            class="btn-info"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="broker_id"/>
                            <field name="property_sale_id"/>
                            <field name="property_id"/>
                            <field name="sale_price" widget="monetary"/>
                        </group>
                        <group>
                            <field name="commission_type"/>
                            <field name="commission_percentage" invisible="commission_type != 'percentage'" required="commission_type == 'percentage'"/>
                            <field name="fixed_amount" invisible="commission_type != 'fixed'" required="commission_type == 'fixed'"/>
                            <field name="commission_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payment Information" invisible="state in ('draft', 'cancelled')">
                            <group>
                                <group>
                                    <field name="payment_date"/>
                                    <field name="payment_method_id"/>
                                </group>
                                <group>
                                    <field name="payment_reference"/>
                                    <field name="invoice_id" readonly="1" invisible="not invoice_id"/>
                                    <field name="invoice_state" invisible="not invoice_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Broker Commission Search View -->
    <record id="view_broker_commission_search" model="ir.ui.view">
        <field name="name">broker.commission.search</field>
        <field name="model">broker.commission</field>
        <field name="arch" type="xml">
            <search string="Search Broker Commissions">
                <field name="name"/>
                <field name="broker_id"/>
                <field name="property_sale_id"/>
                <field name="property_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Broker" name="group_by_broker" context="{'group_by': 'broker_id'}"/>
                    <filter string="Property" name="group_by_property" context="{'group_by': 'property_id'}"/>
                    <filter string="Sale" name="group_by_sale" context="{'group_by': 'property_sale_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Broker Commission Action -->
    <record id="action_broker_commission" model="ir.actions.act_window">
        <field name="name">Broker Commissions</field>
        <field name="res_model">broker.commission</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first broker commission!
            </p>
        </field>
    </record>
    
    <!-- Add to menu -->
    <menuitem id="menu_broker_commission"
              name="Broker Commissions"
              parent="menu_real_estate_commission"
              action="action_broker_commission"
              sequence="20"/>
</odoo>