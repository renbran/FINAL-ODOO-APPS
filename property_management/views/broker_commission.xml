<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_broker_commission_invoice_tree" model="ir.ui.view">
        <field name="name">broker.commission.invoice.tree</field>
        <field name="model">broker.commission.invoice</field>
        <field name="arch" type="xml">
            <tree string="Broker Commissions" decoration-info="state == 'draft'" decoration-success="state == 'invoiced'" decoration-muted="state == 'cancelled'">
                <field name="display_name"/>
                <field name="property_sale_id"/>
                <field name="property_offer_id"/>
                <field name="seller_id"/>
                <field name="commission_percentage"/>
                <field name="commission_amount" sum="Total Commission"/>
                <field name="total_paid" sum="Total Paid"/>
                <field name="payment_progress" widget="progressbar"/>
                <field name="payment_state"/>
                <field name="state"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_broker_commission_invoice_form" model="ir.ui.view">
        <field name="name">broker.commission.invoice.form</field>
        <field name="model">broker.commission.invoice</field>
        <field name="arch" type="xml">
            <form string="Broker Commission">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" 
                            options="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_generate_customer_invoice" string="Generate Invoice" type="object" class="oe_highlight" 
                            options="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            options="{'invisible': [('state', 'in', ['cancelled'])]}"/>
                    <button name="action_draft" string="Reset to Draft" type="object" 
                            options="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,invoiced"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-dollar"
                                options="{'invisible': [('invoice_ids', '=', [])]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Invoices</span>
                            </div>
                        </button>
                        <button name="action_view_property_sale" type="object" class="oe_stat_button" icon="fa-home">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Sale</span>
                            </div>
                        </button>
                        <button name="action_view_property_offer" type="object" class="oe_stat_button" icon="fa-handshake-o"
                                options="{'invisible': [('property_offer_id', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Offer</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name"/>
                        </h1>
                    </div>
                    <group>
                        <group>                        <group>
                                                    <field name="property_sale_id" options="{'no_create': True}" options="{'readonly': [('state', '!=', 'draft')]}"/>
                                                    <field name="property_offer_id" options="{'no_create': True}" options="{'readonly': [('state', '!=', 'draft')]}"/>
                                                    <field name="seller_id" options="{'no_create': True}" options="{'readonly': [('state', '!=', 'draft')]}"/>
                                                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                                                </group>
                                                <group>
                                                    <field name="commission_percentage" options="{'readonly': [('state', '!=', 'draft')]}"/>
                                                    <field name="commission_amount" options="{'readonly': [('state', '!=', 'draft')]}"/>
                                                    <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_currency"/>
                                                </group>
                                            </group>
                                            <notebook>
                                                <page string="Payment Information" name="payment_info">
                                                    <group>
                                                        <group>
                                                            <field name="total_invoiced"/>
                                                            <field name="total_paid"/>
                                                        </group>
                                                        <group>
                                                            <field name="payment_progress" widget="progressbar"/>
                                                            <field name="payment_state"/>
                                                        </group>
                                                    </group>
                                                    <field name="invoice_ids" readonly="1">
                                                        <tree>
                                                            <field name="name"/>
                                                            <field name="partner_id"/>
                                                            <field name="invoice_date"/>
                                                            <field name="amount_total"/>
                                                            <field name="amount_residual"/>
                                                            <field name="payment_state"/>
                                                            <field name="state"/>
                                                            <field name="currency_id" invisible="1"/>
                                                        </tree>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                        <div class="oe_chatter">
                                            <field name="message_follower_ids" widget="mail_followers"/>
                                            <field name="activity_ids" widget="mail_activity"/>
                                            <field name="message_ids" widget="mail_thread"/>
                                        </div>
                                    </form>
                                </field>
                            </record>
                        
                            <!-- Search View -->
                            <record id="view_broker_commission_invoice_search" model="ir.ui.view">
                                <field name="name">broker.commission.invoice.search</field>
                                <field name="model">broker.commission.invoice</field>
                                <field name="arch" type="xml">
                                    <search string="Search Broker Commissions">
                                        <field name="display_name"/>
                                        <field name="property_sale_id"/>
                                        <field name="property_offer_id"/>
                                        <field name="seller_id"/>
                                        <separator/>
                                        <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                                        <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                                        <filter string="Invoiced" name="invoiced" domain="[('state', '=', 'invoiced')]"/>
                                        <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                                        <separator/>
                                        <filter string="Not Paid" name="not_paid" domain="[('payment_state', '=', 'not_paid')]"/>
                                        <filter string="Partially Paid" name="partial" domain="[('payment_state', '=', 'partial')]"/>
                                        <filter string="Fully Paid" name="paid" domain="[('payment_state', '=', 'paid')]"/>
                                        <group expand="0" string="Group By">
                                            <filter string="Property Sale" name="group_by_sale" context="{'group_by': 'property_sale_id'}"/>
                                            <filter string="Property Offer" name="group_by_offer" context="{'group_by': 'property_offer_id'}"/>
                                            <filter string="Seller/Broker" name="group_by_seller" context="{'group_by': 'seller_id'}"/>
                                            <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                                            <filter string="Payment Status" name="group_by_payment" context="{'group_by': 'payment_state'}"/>
                                        </group>
                                    </search>
                                </field>
                            </record>
                        
                            <!-- Action -->
                            <record id="action_broker_commission_invoice" model="ir.actions.act_window">
                                <field name="name">Broker Commissions</field>
                                <field name="res_model">broker.commission.invoice</field>
                                <field name="view_mode">tree,form</field>
                                <field name="context">{'search_default_draft': 1}</field>
                                <field name="help" type="html">
                                    <p class="o_view_nocontent_smiling_face">
                                        Create a new broker commission
                                    </p>
                                    <p>
                                        Manage broker commissions for property sales.
                                    </p>
                                </field>
                            </record>
                        
                            <!-- Menu Item -->
                            <menuitem id="menu_broker_commission_invoice"
                                      name="Broker Commissions"
                                      parent="menu_property_sale_root"
                                      action="action_broker_commission_invoice"
                                      sequence="30"/>
                        </odoo>