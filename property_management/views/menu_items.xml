<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Root menu for Property Management -->
        <menuitem id="menu_property_management_root"
                  name="Property Sale Management"
                  web_icon="property_management,static/description/icon.png"
                  sequence="10"/>

        <!-- Properties Menu -->
        <menuitem id="menu_property_management_properties"
                  name="Properties"
                  parent="menu_property_management_root"
                  sequence="10"/>

        <menuitem id="menu_property_management_property_list"
                  name="Property List"
                  parent="menu_property_management_properties"
                  action="action_property_property"
                  sequence="10"/>

        <!-- Sales Menu -->
        <menuitem id="menu_property_management_sales"
                  name="Sales"
                  parent="menu_property_management_root"
                  sequence="20"/>

        <menuitem id="menu_property_management_sale_list"
                  name="Sale List"
                  parent="menu_property_management_sales"
                  action="action_property_sale"
                  sequence="10"/>

        <!-- Offers Menu: This section is responsible for managing property sale offers, 
             including listing and handling offers made on properties. -->
        <menuitem id="menu_property_management_offers"
                  name="Offers"
                  parent="menu_property_management_root"
                  sequence="30"/>

        <menuitem id="menu_property_management_offer_list"
                  name="Offer List"
                  parent="menu_property_management_offers"
                  action="action_property_sale_offer"
                  sequence="10"/>
    </data>
</odoo>