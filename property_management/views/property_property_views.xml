<odoo>
    <data>
        <!-- Action definition -->
        <record id="action_property_property" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">property.property</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu items -->
        <menuitem id="menu_property_root" name="Properties" sequence="5"/>
        <menuitem id="menu_property_property" name="Manage Properties" parent="menu_property_root" action="action_property_property" sequence="10"/>

        <!-- Tree view -->
        <record id="view_property_property_tree" model="ir.ui.view">
            <field name="name">property.property.tree</field>
            <field name="model">property.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="property_reference"/>
                    <field name="name"/>
                    <field name="project_name"/>
                    <field name="tower"/>
                    <field name="unit_no"/>
                    <field name="total_sqft"/>
                    <field name="price_per_sqft"/>
                    <field name="total_sale_value"/>
                    <field name="property_price"/>
                    <field name="property_image" widget="image"/>
                    <field name="floor_plan" widget="image"/>
                    <field name="sale_rent"/>
                    <field name="status"/>
                    <field name="payment_progress" widget="progressbar"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_property_property_form" model="ir.ui.view">
            <field name="name">property.property.form</field>
            <field name="model">property.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_create_sale" string="Create Sale" type="object" 
                                class="oe_highlight" invisible="state == 'sold'"/>
                        <field name="state" widget="statusbar" statusbar_visible="available,reserved,booked,sold"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_sales" type="object" class="oe_stat_button" icon="fa-money"
                                    invisible="sale_count == 0">
                                <field name="sale_count" widget="statinfo" string="Sales"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                            <div invisible="payment_progress == 0" class="mt-2">
                                <label for="payment_progress" string="Payment Progress"/>
                                <field name="payment_progress" widget="progressbar"/>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="property_reference"/>
                                <field name="project_name"/>
                                <field name="tower"/>
                                <field name="level"/>
                                <field name="unit_no"/>
                                <field name="unit_view"/>
                                <field name="property_type"/>
                            </group>
                            <group>
                                <field name="total_sqft"/>
                                <field name="price_per_sqft"/>
                                <field name="total_sale_value"/>
                                <field name="property_price" widget="monetary"/>
                                <field name="currency_id"/>
                                <field name="sale_rent"/>
                                <field name="revenue_account_id"/>
                            </group>
                        </group>
                        <group invisible="state != 'sold'">
                            <group>
                                <field name="partner_id"/>
                                <field name="total_invoiced" widget="monetary"/>
                                <field name="total_paid" widget="monetary"/>
                                <field name="remaining_amount" widget="monetary"/>
                            </group>
                            <group>
                                <field name="active_sale_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Address">
                                <field name="address"/>
                            </page>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Images">
                                <field name="property_image" widget="image"/>
                                <field name="floor_plan" widget="image"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Corrected Search view -->
        <record id="view_property_property_search" model="ir.ui.view">
            <field name="name">property.property.search</field>
            <field name="model">property.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="property_reference"/>
                    <field name="project_name"/>
                    <field name="unit_no"/>
                    <field name="partner_id"/>
                    
                    <separator/>
                    
                    <filter name="available" string="Available" domain="[('state','=','available')]"/>
                    <filter name="reserved" string="Reserved" domain="[('state','=','reserved')]"/>
                    <filter name="booked" string="Booked" domain="[('state','=','booked')]"/>
                    <filter name="sold" string="Sold" domain="[('state','=','sold')]"/>
                    
                    <separator/>
                    
                    <filter name="for_sale" string="For Sale" domain="[('sale_rent','=','for_sale')]"/>
                    <filter name="for_rent" string="For Rent" domain="[('sale_rent','=','for_rent')]"/>
                    
                    <group string="Group By" expand="0">
                        <filter name="group_by_state" string="Status" context="{'group_by':'state'}"/>
                        <filter name="group_by_project" string="Project" context="{'group_by':'project_name'}"/>
                        <filter name="group_by_tower" string="Tower" context="{'group_by':'tower'}"/>
                        <filter name="group_by_partner" string="Customer" context="{'group_by':'partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>