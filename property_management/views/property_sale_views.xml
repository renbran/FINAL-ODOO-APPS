<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_property_sale_form" model="ir.ui.view">
        <field name="name">property.sale.form</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <form string="Property Sale">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" 
                            options="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_generate_all_invoices" string="Generate Invoices" type="object" class="oe_highlight" 
                            options="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_view_invoices" string="View Invoices" type="object" 
                            options="{'invisible': [('state', '!=', 'invoiced')]}"/>
                    <button name="action_generate_broker_commission_invoice" string="Generate Broker Commission" type="object" 
                            options="{'invisible': ['|', ('state', '!=', 'confirmed'), ('seller_name', '=', False)]}"/>
                    <button name="action_view_broker_commissions" string="View Broker Commissions" type="object" 
                            options="{'invisible': [('broker_commission_count', '=', 0)]}"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            options="{'invisible': [('state', '=', 'cancelled')]}"/>
                    <button name="action_draft" string="Reset to Draft" type="object" 
                            options="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,invoiced"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-dollar"
                                options="{'invisible': [('state', '!=', 'invoiced')]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Invoices</span>
                            </div>
                        </button>
                        <button name="action_view_broker_commissions" type="object" class="oe_stat_button" icon="fa-money"
                                options="{'invisible': [('broker_commission_count', '=', 0)]}">
                            <field name="broker_commission_count" string="Commissions"/>
                        </button>
                        <button name="action_view_property_offer" type="object" class="oe_stat_button" icon="fa-handshake-o"
                                options="{'invisible': [('property_offer_id', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Offer</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" options="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="property_id" options="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="sale_date" options="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="start_date" options="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="payment_option" options="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="property_offer_id" options="{'readonly': True}" invisible="1"/>
                        </group>
                        <group>
                            <field name="property_value" readonly="1"/>
                            <field name="sale_price" readonly="1"/>
                            <field name="down_payment_percentage" options="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="down_payment" readonly="1"/>
                            <field name="dld_fee" readonly="1"/>
                            <field name="admin_fee" options="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="remaining_balance" readonly="1"/>
                            <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_currency"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Installment Details" name="installment_details">
                            <group>
                                <group>
                                    <field name="no_of_installments" options="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="amount_per_installment" readonly="1"/>
                                </group>
                                <group>
                                    <field name="payment_progress"/>
                                </group>
                            </group>
                            <field name="property_sale_line_ids" readonly="1">
                                <tree>
                                    <field name="serial_number"/>
                                    <field name="line_type"/>
                                    <field name="collection_date"/>
                                    <field name="capital_repayment" sum="Total"/>
                                    <field name="remaining_capital"/>
                                    <field name="collection_status"/>
                                    <field name="invoice_id"/>
                                    <field name="currency_id" invisible="1"/>
                                    <button name="action_generate_invoice" string="Generate Invoice" type="object" icon="fa-dollar" 
                                            options="{'invisible': ['|', ('collection_status', '!=', 'unpaid'), ('collection_date', '>', context_today)]}"/>
                                    <button name="action_view_invoice" string="View Invoice" type="object" icon="fa-eye" 
                                            options="{'invisible': [                                            
                                                ('invoice_id', '=', False)]}"/>
                                                                            </tree>
                                                                        </field>
                                                                    </page>
                                                                    <page string="Broker Commission" name="broker_commission">
                                                                        <group>
                                                                            <group>
                                                                                <field name="seller_name" options="{'readonly': [('state', '!=', 'draft')]}"/>
                                                                                <field name="broker_commission_percentage" options="{'readonly': [('state', '!=', 'draft')]}"/>
                                                                            </group>
                                                                            <group>
                                                                                <field name="broker_commission_total_amount" readonly="1"/>
                                                                                <field name="broker_commission_invoice_ids" invisible="1"/>
                                                                            </group>
                                                                        </group>
                                                                    </page>
                                                                    <page string="Notes" name="notes">
                                                                        <field name="notes" placeholder="Add any additional notes or terms for this sale..."/>
                                                                    </page>
                                                                </notebook>
                                                            </sheet>
                                                            <div class="oe_chatter">
                                                                <field name="message_follower_ids" widget="mail_followers"/>
                                                                <field name="activity_ids" widget="mail_activity"/>
                                                                <field name="message_ids" widget="mail_thread"/>
                                                            </div>
                                                        </form>
                                                    </field>
                                                </record>
                                            </odoo>