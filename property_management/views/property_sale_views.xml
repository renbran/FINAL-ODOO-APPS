<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Property Sale Tree View -->
        <record id="view_property_sale_tree" model="ir.ui.view">
            <field name="name">property.sale.tree</field>
            <field name="model">property.sale</field>
            <field name="arch" type="xml">
                <tree string="Property Sales">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="property_id"/>
                    <field name="state" widget="statusbar"/>
                    <field name="sale_price"/>
                    <field name="sale_date"/>
                </tree>
            </field>
        </record>

        <!-- Property Sale Form View -->
        <record id="view_property_sale_form" model="ir.ui.view">
            <field name="name">property.sale.form</field>
            <field name="model">property.sale</field>
            <field name="arch" type="xml">
                <form string="Property Sale">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" options="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="oe_highlight" options="{'invisible': [('state', 'not in', ['confirmed', 'draft'])]}"/>
                        <button name="action_draft" string="Reset to Draft" type="object" options="{'invisible': [('state', '!=', 'cancelled')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="property_id"/>
                                <!-- Corrected field name -->
                                <field name="property_sale_offer_id"/>
                                <field name="seller_name"/>
                            </group>
                            <group>
                                <field name="sale_date"/>
                                <field name="start_date"/>
                                <field name="payment_option"/>
                                <field name="no_of_installments"/>
                                <field name="payment_progress" widget="progressbar"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Financial Details">
                                <group>
                                    <group>
                                        <field name="property_value"/>
                                        <field name="down_payment_percentage"/>
                                        <field name="down_payment"/>
                                        <field name="dld_fee"/>
                                    </group>
                                    <group>
                                        <field name="admin_fee"/>
                                        <field name="total_selling_price"/>
                                        <field name="remaining_balance"/>
                                        <field name="amount_per_installment"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Broker Commission">
                                <group>
                                    <field name="broker_commission_percentage"/>
                                    <field name="broker_commission_total_amount"/>
                                    <field name="broker_commission_count" widget="statinfo"/>
                                </group>
                                <div class="oe_button_box" name="button_box">
                                    <button name="action_generate_broker_commission_invoice" 
                                            type="object" 
                                            string="Generate Commission" 
                                            class="oe_stat_button"
                                            icon="fa-money"/>
                                    <!-- Updated context for proper filtering -->
                                    <button name="action_view_broker_commissions" 
                                            type="object" 
                                            string="Commissions" 
                                            class="oe_stat_button"
                                            icon="fa-list"
                                            context="{'search_default_property_sale_id': active_id}"/>
                                </div>
                                <field name="broker_commission_invoice_ids">
                                    <tree>
                                        <field name="display_name"/>
                                        <field name="commission_amount"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Installments">
                                <field name="property_sale_line_ids">
                                    <tree>
                                        <field name="serial_number"/>
                                        <field name="line_type"/>
                                        <field name="capital_repayment"/>
                                        <field name="collection_date"/>
                                        <field name="collection_status"/>
                                        <field name="invoice_id" widget="many2one_button"/>
                                        <!-- Added visibility condition -->
                                        <button name="action_generate_invoice" 
                                                type="object" 
                                                string="Create Invoice" 
                                                class="oe_stat_button"
                                                icon="fa-file-text-o"
                                                options="{'invisible': [('invoice_id', '!=', False)]}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action for Property Sales -->
        <record id="action_property_sale" model="ir.actions.act_window">
            <field name="name">Property Sales</field>
            <field name="res_model">property.sale</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create your first property sale!</p>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_property_sale_search" model="ir.ui.view">
            <field name="name">property.sale.search</field>
            <field name="model">property.sale</field>
            <field name="arch" type="xml">
                <search>
                    <field name="partner_id"/>
                    <field name="property_id"/>
                    <field name="property_sale_offer_id"/>  <!-- Added offer field -->
                    <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                    <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                    <filter string="This Month" name="current_month" domain="[('sale_date','>=', (context_today() - datetime.timedelta(days=30)).strftime('%%Y-%%m-%%d'))]"/>
                </search>
            </field>
        </record>
    </data>
</odoo>