<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Property Detail Report Template -->
    <template id="property_detail_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <!-- Header with Property Name and Reference -->
                        <div class="row mb-4">
                            <div class="col-8">
                                <h2 class="mt-0"><span t-field="doc.name"/></h2>
                                <h5 class="text-muted">Ref: <span t-field="doc.id"/></h5>
                            </div>
                            <div class="col-4 text-right">
                                <div class="badge badge-pill p-2" t-attf-style="background-color: #{doc.state == 'available' ? '#28a745' : (doc.state == 'sold' ? '#17a2b8' : '#dc3545')}; color: white; font-size: 14px;">
                                    <span t-field="doc.state" class="text-capitalize"/>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Property Image and Key Details Section -->
                        <div class="row mb-4">
                            <!-- Property Image - Left Side -->
                            <div class="col-5">
                                <div class="border" style="height: 250px; overflow: hidden;">
                                    <img t-if="doc.image" t-att-src="'data:image/png;base64,%s' % to_text(doc.image)" class="img-fluid" style="max-height: 250px; width: 100%; object-fit: cover;"/>
                                    <div t-else="" class="text-center h-100 d-flex align-items-center justify-content-center bg-light">
                                        <span>No Image Available</span>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Key Details - Right Side -->
                            <div class="col-7">
                                <div class="card h-100">
                                    <div class="card-header bg-primary text-white">
                                        <h4 class="mb-0">Property Overview</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-6">
                                                <p><strong>Property Type:</strong> <span t-field="doc.property_type_id.name"/></p>
                                                <p><strong>Expected Price:</strong> <span t-field="doc.expected_price" t-options='{"widget": "monetary"}'/></p>
                                                <p><strong>Living Area:</strong> <span t-field="doc.living_area"/> m²</p>
                                                <p><strong>Bedrooms:</strong> <span t-field="doc.bedrooms"/></p>
                                            </div>
                                            <div class="col-6">
                                                <p><strong>Selling Price:</strong> <span t-field="doc.selling_price" t-options='{"widget": "monetary"}'/></p>
                                                <p><strong>Postcode:</strong> <span t-field="doc.postcode"/></p>
                                                <p><strong>Available From:</strong> <span t-field="doc.date_availability"/></p>
                                                <p><strong>Total Area:</strong> <span t-field="doc.total_area"/> m²</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Property Description -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h4 class="mb-0">Description</h4>
                                    </div>
                                    <div class="card-body">
                                        <p t-field="doc.description"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Features and Amenities -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h4 class="mb-0">Features &amp; Amenities</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-4">
                                                <p><i t-if="doc.garage" class="fa fa-check text-success"/> 
                                                <i t-else="" class="fa fa-times text-danger"/> Garage</p>
                                            </div>
                                            <div class="col-4">
                                                <p><i t-if="doc.garden" class="fa fa-check text-success"/> 
                                                <i t-else="" class="fa fa-times text-danger"/> Garden 
                                                <t t-if="doc.garden and doc.garden_area">(<span t-field="doc.garden_area"/> m²)</t></p>
                                            </div>
                                            <div class="col-4">
                                                <p><i t-if="doc.facades > 0" class="fa fa-check text-success"/> 
                                                <i t-else="" class="fa fa-times text-danger"/> Facades: <span t-field="doc.facades"/></p>
                                            </div>
                                        </div>
                                        <!-- Property Tags -->
                                        <div class="mt-3">
                                            <strong>Tags: </strong>
                                            <t t-foreach="doc.tag_ids" t-as="tag">
                                                <span class="badge badge-pill badge-info mr-1" t-field="tag.name"/>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Payment Schedule Section -->
                        <div class="row mb-4" t-if="doc.offer_ids">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-primary text-white">
                                        <h4 class="mb-0">Payment Schedule</h4>
                                    </div>
                                    <div class="card-body p-0">
                                        <table class="table table-sm table-striped mb-0">
                                            <thead>
                                                <tr>
                                                    <th>Offer Date</th>
                                                    <th>Price</th>
                                                    <th>Validity</th>
                                                    <th>Status</th>
                                                    <th>Partner</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr t-foreach="doc.offer_ids" t-as="offer">
                                                    <td><span t-field="offer.create_date" t-options='{"widget": "date"}'/></td>
                                                    <td><span t-field="offer.price" t-options='{"widget": "monetary"}'/></td>
                                                    <td><span t-field="offer.validity"/> days</td>
                                                    <td>
                                                        <span t-field="offer.status" class="badge" 
                                                            t-attf-style="background-color: #{offer.status == 'accepted' ? '#28a745' : (offer.status == 'refused' ? '#dc3545' : '#6c757d')}; color: white;"/>
                                                    </td>
                                                    <td><span t-field="offer.partner_id.name"/></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Contact Information -->
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h4 class="mb-0">Contact Information</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-6">
                                                <p><strong>Salesperson:</strong> <span t-field="doc.salesperson_id.name"/></p>
                                                <p t-if="doc.salesperson_id.phone"><strong>Phone:</strong> <span t-field="doc.salesperson_id.phone"/></p>
                                                <p t-if="doc.salesperson_id.email"><strong>Email:</strong> <span t-field="doc.salesperson_id.email"/></p>
                                            </div>
                                            <div class="col-6" t-if="doc.buyer_id">
                                                <p><strong>Buyer:</strong> <span t-field="doc.buyer_id.name"/></p>
                                                <p t-if="doc.buyer_id.phone"><strong>Phone:</strong> <span t-field="doc.buyer_id.phone"/></p>
                                                <p t-if="doc.buyer_id.email"><strong>Email:</strong> <span t-field="doc.buyer_id.email"/></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>