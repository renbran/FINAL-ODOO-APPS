<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_property_offer_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <div class="page">
                <div class="oe_structure"/>
                <h2 class="text-center">
                    <span t-if="doc.state == 'draft'">Draft Property Offer</span>
                    <span t-elif="doc.state == 'sent'">Property Offer</span>
                    <span t-elif="doc.state == 'accepted'">Accepted Property Offer</span>
                    <span t-elif="doc.state == 'rejected'">Rejected Property Offer</span>
                    <span t-else="">Property Offer</span>
                </h2>

                <div class="row mt32 mb32">
                    <div class="col-6">
                        <strong>Reference:</strong> <span t-field="doc.name"/><br/>
                        <strong>Offer Date:</strong> <span t-field="doc.offer_date"/><br/>
                        <strong>Expiration Date:</strong> <span t-field="doc.expiration_date"/><br/>
                        <strong>Status:</strong> <span t-field="doc.state"/>
                    </div>
                    <div class="col-6">
                        <strong>Customer:</strong> <span t-field="doc.partner_id"/><br/>
                        <strong>Seller/Broker:</strong> <span t-field="doc.seller_id"/><br/>
                        <strong>Property:</strong> <span t-field="doc.property_id"/>
                    </div>
                </div>

                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th class="text-left">Description</th>
                            <th class="text-right">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Property List Price</td>
                            <td class="text-right">
                                <span t-field="doc.property_price" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Offer Price</td>
                            <td class="text-right">
                                <span t-field="doc.offer_price" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Price Difference</td>
                            <td class="text-right">
                                <span t-field="doc.price_difference" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                (<span t-field="doc.price_difference_percent"/>%)
                            </td>
                        </tr>
                        <tr>
                            <td>Down Payment</td>
                            <td class="text-right">
                                <span t-field="doc.down_payment" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>DLD Fee</td>
                            <td class="text-right">
                                <span t-field="doc.dld_fee" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Admin Fee</td>
                            <td class="text-right">
                                <span t-field="doc.admin_fee" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Broker Commission</td>
                            <td class="text-right">
                                <span t-field="doc.broker_commission_amount" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                (<span t-field="doc.broker_commission_percentage"/>%)
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="row mt32 mb32" t-if="doc.notes">
                    <div class="col-12">
                        <strong>Notes:</strong>
                        <p t-field="doc.notes"/>
                    </div>
                </div>

                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="report_property_offer">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="property_management.report_property_offer_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_property_offer" model="ir.actions.report">
        <field name="name">Property Offer</field>
        <field name="model">property.sale.offer</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name"><?xml version="1.0" encoding="utf-8"?>
        <odoo>
            <record id="action_report_property_offer" model="ir.actions.report">
                <field name="name">Property Offer</field>
                <field name="model">property.sale.offer</field>
                <field name="report_type">qweb-pdf</field>
                <field name="report_name">property_management.report_property_offer</field>
                <field name="report_file">property_management.report_property_offer</field>
                <field name="binding_model_id" ref="model_property_sale_offer"/>
                <field name="binding_type">report</field>
            </record>
        </odoo>