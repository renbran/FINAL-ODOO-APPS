<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="property_offer_report_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <h2>Property Offer Report</h2>
                    <div class="row mt32 mb32">
                        <div class="col-3">
                            <strong>Property:</strong>
                            <p t-field="doc.property_id.name"/>
                        </div>
                        <div class="col-3">
                            <strong>Offer Price:</strong>
                            <p t-field="doc.offer_price" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </div>
                        <div class="col-3">
                            <strong>Offer Date:</strong>
                            <p t-field="doc.offer_date"/>
                        </div>
                        <div class="col-3">
                            <strong>Status:</strong>
                            <p t-field="doc.state"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <strong>Buyer:</strong>
                            <p t-field="doc.partner_id.name"/>
                            <p t-field="doc.partner_id.street"/>
                            <p t-field="doc.partner_id.city"/>
                            <p t-field="doc.partner_id.country_id.name"/>
                        </div>
                        <div class="col-6">
                            <strong>Seller/Broker:</strong>
                            <p t-field="doc.seller_id.name"/>
                            <p t-field="doc.seller_id.street"/>
                            <p t-field="doc.seller_id.city"/>
                            <p t-field="doc.seller_id.country_id.name"/>
                        </div>
                    </div>
                    <div class="row mt32">
                        <div class="col-12">
                            <strong>Notes:</strong>
                            <p t-field="doc.notes"/>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>