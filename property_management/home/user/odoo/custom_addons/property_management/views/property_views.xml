<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_property_tree" model="ir.ui.view">
            <field name="name">property.property.tree</field>
            <field name="model">property.property</field>
            <field name="arch" type="xml">
                <tree string="Properties">
                    <field name="name"/>
                    <field name="property_type"/>
                    <field name="sale_rent"/>
                    <field name="property_price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_property_form" model="ir.ui.view">
            <field name="name">property.property.form</field>
            <field name="model">property.property</field>
            <field name="arch" type="xml">
                <form string="Property">
                    <header>
                        <button name="action_available" string="Set Available" type="object" class="oe_highlight" attrs="{'invisible': [('state', '=', 'available')]}"/>
                        <button name="action_reserved" string="Set Reserved" type="object" attrs="{'invisible': [('state', '=', 'reserved')]}"/>
                        <button name="action_sold" string="Set Sold" type="object" attrs="{'invisible': [('state', '=', 'sold')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="available,reserved,sold"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_offers" type="object" class="oe_stat_button" icon="fa-handshake-o">
                                <field name="offer_count" widget="statinfo" string="Offers"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Property Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="property_type"/>
                                <field name="sale_rent"/>
                                <field name="property_price"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="active_sale_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>
                            <page string="Sales">
                                <field name="property_sale_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="start_date"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_property_search" model="ir.ui.view">
            <field name="name">property.property.search</field>
            <field name="model">property.property</field>
            <field name="arch" type="xml">
                <search string="Search Properties">
                    <field name="name"/>
                    <field name="property_type"/>
                    <field name="partner_id"/>
                    <filter string="Available" name="available" domain="[('state','=','available')]"/>
                    <filter string="Reserved" name="reserved" domain="[('state','=','reserved')]"/>
                    <filter string="Sold" name="sold" domain="[('state','=','sold')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Type" name="group_by_type" context="{'group_by':'property_type'}"/>
                        <filter string="Sale/Rent" name="group_by_sale_rent" context="{'group_by':'sale_rent'}"/>
                        <filter string="Status" name="group_by_state" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">property.property</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_property_search"/>
            <field name="context">{'search_default_available': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new property
                </p>
            </field>
        </record>
    </data>
</odoo>