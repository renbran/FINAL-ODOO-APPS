<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Extend the Document Layout model to include invoice customization fields -->
    <record id="doc_layout_model_extension" model="ir.model.fields">
        <field name="name">invoice_layout</field>
        <field name="model">doc.layout</field>
        <field name="field_description">Invoice Layout</field>
        <field name="ttype">boolean</field>
    </record>
    
    <!-- Create a custom model for invoice layout configuration -->
    <record id="model_invoice_layout_config" model="ir.model">
        <field name="name">invoice.layout.config</field>
        <field name="model">invoice.layout.config</field>
        <field name="description">Invoice Layout Configuration</field>
    </record>
    
    <record id="invoice_layout_config_field_model" model="ir.model.fields">
        <field name="name">name</field>
        <field name="model">invoice.layout.config</field>
        <field name="field_description">Name</field>
        <field name="ttype">char</field>
        <field name="required">True</field>
    </record>
    
    <record id="invoice_layout_config_field_header_color" model="ir.model.fields">
        <field name="name">header_color</field>
        <field name="model">invoice.layout.config</field>
        <field name="field_description">Header Color</field>
        <field name="ttype">char</field>
        <field name="default">#8b0000</field>
    </record>
    
    <record id="invoice_layout_config_field_text_color" model="ir.model.fields">
        <field name="name">text_color</field>
        <field name="model">invoice.layout.config</field>
        <field name="field_description">Text Color</field>
        <field name="ttype">char</field>
        <field name="default">#000000</field>
    </record>
    
    <record id="invoice_layout_config_field_show_qr" model="ir.model.fields">
        <field name="name">show_qr_code</field>
        <field name="model">invoice.layout.config</field>
        <field name="field_description">Show QR Code</field>
        <field name="ttype">boolean</field>
        <field name="default">True</field>
    </record>

    <!-- View for Invoice Layout Configuration -->
    <record id="view_invoice_layout_config_form" model="ir.ui.view">
        <field name="name">invoice.layout.config.form</field>
        <field name="model">invoice.layout.config</field>
        <field name="arch" type="xml">
            <form string="Invoice Layout Configuration">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="header_color" widget="color"/>
                        <field name="text_color" widget="color"/>
                        <field name="show_qr_code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Add invoice layout to Document Layout form -->
    <record id="doc_layout_invoice_extension" model="ir.ui.view">
        <field name="name">doc.layout.invoice.extension</field>
        <field name="model">doc.layout</field>
        <field name="inherit_id" ref="documents_custom_tempates"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Invoice Layout" name="invoice_layout">
                    <group>
                        <field name="invoice_layout"/>
                        <field name="layout_config_id" 
                               options="{'invisible': [('invoice_layout', '=', False)], 'required': [('invoice_layout', '=', True)]}"
                               domain="[('create_uid', '=', uid)]"
                               context="{'default_name': name}"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Add related field to doc.layout model -->
    <record id="doc_layout_invoice_config_field" model="ir.model.fields">
        <field name="name">layout_config_id</field>
        <field name="model">doc.layout</field>
        <field name="field_description">Invoice Layout Configuration</field>
        <field name="ttype">many2one</field>
        <field name="relation">invoice.layout.config</field>
    </record>

    <!-- Action for Invoice Layout Configuration -->
    <record id="action_invoice_layout_config" model="ir.actions.act_window">
        <field name="name">Invoice Layout Configuration</field>
        <field name="res_model">invoice.layout.config</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu for Invoice Layout Configuration -->
    <menuitem id="menu_invoice_layout_config" 
              name="Invoice Layout"
              parent="account.menu_finance_configuration"
              action="action_invoice_layout_config"
              sequence="20"/>
</odoo>