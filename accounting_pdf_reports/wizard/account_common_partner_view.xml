<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_common_partner_report_view" model="ir.ui.view">
        <field name="name">Account Common Partner Report</field>
        <field name="model">account.common.partner.report</field>
        <field name="arch" type="xml">
        <form string="Partner Report Options">
            <group col="4">
                <field name="target_move" widget="radio"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="result_selection"/>
            </group>
            <group>
                <field name="partner_ids" widget="many2many_tags" 
                       options="{'no_open': True, 'no_create': True}"/>
                <field name="journal_ids" widget="many2many_tags" 
                       options="{'no_create': True}"/>
                <field name="company_id" invisible="1"/>
            </group>
            <footer>
                <button name="check_report" string="Print" type="object" 
                        default_focus="1" class="oe_highlight" data-hotkey="q"/>
                <button string="Cancel" class="btn btn-secondary" 
                        special="cancel" data-hotkey="z" />
            </footer>
        </form>
        </field>
    </record>
</odoo>
