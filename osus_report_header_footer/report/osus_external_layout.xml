<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- OSUS Report Header -->
        <template id="osus_external_layout_header">
            <div class="osus-header" style="background: linear-gradient(135deg, #800020 0%, #5a0f1a 100%); padding: 15px 20px; border-radius: 8px 8px 0 0;">
                <div class="row">
                    <div class="col-4">
                        <!-- OSUS Logo -->
                        <img src="https://osusproperties.com/images/osus.png" alt="OSUS Properties" class="osus-logo" style="max-height: 70px; max-width: 200px; background: white; padding: 8px; border-radius: 6px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);"/>
                    </div>
                    <div class="col-8 text-end">
                        <!-- Company Information -->
                        <div class="osus-company-info">
                            <h4 class="mb-1" style="color: #FFD700; font-weight: 700; text-shadow: 1px 1px 2px rgba(0,0,0,0.3); font-size: 16pt;">
                                <span t-field="company.name"/>
                            </h4>
                            <div class="osus-contact-details" style="font-size: 10pt; color: #ffffff; text-shadow: 1px 1px 1px rgba(0,0,0,0.2);">
                                <div t-if="company.street" style="margin-bottom: 3px;">
                                    <i class="fa fa-map-marker" style="color: #FFD700; margin-right: 6px;"/>
                                    <span t-field="company.street"/>
                                    <span t-if="company.street2" t-field="company.street2"/>
                                </div>
                                <div t-if="company.city or company.zip" style="margin-bottom: 3px;">
                                    <span t-if="company.zip" t-field="company.zip"/>
                                    <span t-if="company.city" t-field="company.city"/>
                                    <span t-if="company.state_id" t-field="company.state_id.name"/>
                                    <span t-if="company.country_id" t-field="company.country_id.name"/>
                                </div>
                                <div t-if="company.phone" style="margin-bottom: 3px;">
                                    <i class="fa fa-phone" style="color: #FFD700; margin-right: 6px;"/>
                                    <span t-field="company.phone"/>
                                </div>
                                <div t-if="company.email" style="margin-bottom: 3px;">
                                    <i class="fa fa-envelope" style="color: #FFD700; margin-right: 6px;"/>
                                    <span t-field="company.email"/>
                                </div>
                                <div t-if="company.website" style="margin-bottom: 3px;">
                                    <i class="fa fa-globe" style="color: #FFD700; margin-right: 6px;"/>
                                    <span t-field="company.website"/>
                                </div>
                                <div t-if="company.vat" style="margin-top: 5px;">
                                    <strong style="color: #FFD700;">TRN:</strong>
                                    <span style="font-weight: 600;" t-field="company.vat"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <hr class="osus-header-line" style="border: 0; border-top: 3px solid #FFD700; margin: 10px 0 0 0; box-shadow: 0 2px 4px rgba(255,215,0,0.3);"/>
                    </div>
                </div>
            </div>
        </template>

        <!-- OSUS Report Footer -->
        <template id="osus_external_layout_footer">
            <div class="osus-footer">
                <div class="row">
                    <div class="col-12">
                        <hr class="osus-footer-line" style="border-top: 2px solid #004a7c; margin: 8px 0;"/>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-6">
                        <div class="osus-footer-info" style="font-size: 8pt; color: #666;">
                            <div>
                                <strong>
                                    <span t-field="company.name"/>
                                </strong>
                            </div>
                            <div t-if="company.phone">
                                Tel: <span t-field="company.phone"/>
                            </div>
                            <div t-if="company.email">
                                Email: <span t-field="company.email"/>
                            </div>
                            <div t-if="company.website">
                                Web: <span t-field="company.website"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 text-end">
                        <div class="osus-page-number" style="font-size: 9pt; color: #666;">
                            <div>
                                Page <span class="page"/>
 of <span class="topage"/>
                        </div>
                        <div style="font-size: 8pt; margin-top: 4px;">
                                Printed on: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-1" t-if="company.vat">
                <div class="col-12 text-center">
                    <div style="font-size: 7pt; color: #999;">
                            TRN: <span t-field="company.vat"/>
 | This is a computer-generated document
                    </div>
                </div>
            </div>
        </div>
    </template>

    <!-- OSUS External Layout (Inherits from web.external_layout_standard) -->
    <template id="osus_external_layout" inherit_id="web.external_layout_standard" priority="99">
        <!-- Replace header -->
        <xpath expr="//div[@class='header']" position="replace">
            <div class="header">
                <t t-call="osus_report_header_footer.osus_external_layout_header"/>
            </div>
        </xpath>

        <!-- Replace footer -->
        <xpath expr="//div[@class='footer']" position="replace">
            <div class="footer o_background_footer">
                <t t-call="osus_report_header_footer.osus_external_layout_footer"/>
            </div>
        </xpath>
    </template>

    <!-- Alternative: Primary External Layout Override -->
    <template id="osus_external_layout_background" inherit_id="web.external_layout_background" priority="99">
        <!-- Replace header -->
        <xpath expr="//div[hasclass('header')]" position="replace">
            <div class="header">
                <t t-call="osus_report_header_footer.osus_external_layout_header"/>
            </div>
        </xpath>

        <!-- Replace footer -->
        <xpath expr="//div[hasclass('footer')]" position="replace">
            <div class="footer o_background_footer">
                <t t-call="osus_report_header_footer.osus_external_layout_footer"/>
            </div>
        </xpath>
    </template>

    <!-- Clean Layout for Reports without header/footer -->
    <template id="osus_external_layout_clean" inherit_id="web.external_layout_clean" priority="99">
        <!-- This layout intentionally has no header/footer, keep it clean -->
    </template>

</data>
</odoo>
