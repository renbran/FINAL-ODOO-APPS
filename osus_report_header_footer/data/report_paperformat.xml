<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- OSUS Custom Paper Format -->
        <record id="paperformat_osus_standard" model="report.paperformat">
            <field name="name">OSUS Standard A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">90</field>
            <field name="margin_bottom">35</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">80</field>
            <field name="dpi">90</field>
        </record>

        <!-- Update company to use OSUS paper format -->
        <function model="res.company" name="write">
            <value eval="[ref('base.main_company')]"/>
            <value eval="{'paperformat_id': ref('paperformat_osus_standard')}"/>
        </function>

    </data>
</odoo>
