<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Account Payment Form View Enhancement for QR Code -->
    <record id="account_payment_form_view_qr_inh" model="ir.ui.view">
        <field name="name">account.payment.form.view.qr.inh</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <!-- Add QR code settings after journal_id -->
            <field name="journal_id" position="after">
                <field name="qr_in_report" string="Display QR Code in Report"/>
                <field name="validation_url" string="Validation URL" readonly="1" widget="url" invisible="not validation_url"/>
            </field>
            
            <!-- Add QR code image at the top right of the form -->
            <xpath expr="//sheet/div[hasclass('oe_title')]" position="before">
                <field name="qr_code" invisible="state == 'draft' or not qr_in_report" widget="image" class="oe_avatar" options="{'size': [150, 150]}"/>
            </xpath>
            
            <!-- Add validation section as a new page in notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Validation &amp; QR Code" name="validation_info" invisible="state == 'draft'">
                    <group>
                        <group string="Validation Token">
                            <field name="validation_token" readonly="1"/>
                            <field name="validation_token_expiry" readonly="1"/>
                            <field name="validation_access_count" readonly="1"/>
                            <field name="last_validation_access" readonly="1"/>
                        </group>
                        <group string="Actions">
                            <button name="regenerate_validation_token" 
                                    string="Regenerate Token" 
                                    type="object" 
                                    class="btn-warning"
                                    confirm="This will invalidate the current QR code. Continue?"
                                    invisible="state != 'posted'"/>
                            <button name="action_open_validation_page" 
                                    string="Open Validation Page" 
                                    type="object" 
                                    class="btn-primary"
                                    invisible="not validation_token"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Account Payment Tree View Enhancement -->
    <record id="account_payment_tree_view_qr_inh" model="ir.ui.view">
        <field name="name">account.payment.tree.view.qr.inh</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="qr_in_report" string="QR Enabled" widget="boolean_toggle"/>
            </field>
        </field>
    </record>
</odoo>
