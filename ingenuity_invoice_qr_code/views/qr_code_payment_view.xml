<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Account Payment Form View Enhancement for QR Code -->
    <record id="account_payment_form_view_qr_inh" model="ir.ui.view">
        <field name="name">account.payment.form.view.qr.inh</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <!-- Add QR code settings after partner_id -->
            <field name="journal_id" position="after">
                <field name="qr_in_report" string="Display QR Code in Report"/>
            </field>
            
            <!-- Add QR code image at the top right of the form -->
            <xpath expr="//sheet/div[hasclass('oe_title')]" position="before">
                <field name="qr_code" invisible="state == 'draft' or not qr_in_report" widget="image" class="oe_avatar" options="{'size': [150, 150]}"/>
            </xpath>
        </field>
    </record>

    <!-- Account Payment Tree View Enhancement -->
    <record id="account_payment_tree_view_qr_inh" model="ir.ui.view">
        <field name="name">account.payment.tree.view.qr.inh</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="qr_in_report" string="QR Enabled" widget="boolean_toggle"/>
            </field>
        </field>
    </record>
</odoo>
