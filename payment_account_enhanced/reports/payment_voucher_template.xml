<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_payment_voucher">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page" style="font-size: 11px;">
                        <!-- Compact Header -->
                        <div class="row mb-2">
                            <div class="col-4">
                                <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" 
                                     style="max-height: 40px; max-width: 100px;" alt="Company Logo"/>
                            </div>
                            <div class="col-8 text-right">
                                <h4 class="mb-0" style="font-size: 16px; font-weight: bold;">
                                    <span t-if="doc.payment_type == 'outbound'">PAYMENT VOUCHER</span>
                                    <span t-if="doc.payment_type == 'inbound'">RECEIPT VOUCHER</span>
                                </h4>
                                <small class="text-muted">
                                    <div><span t-field="doc.company_id.name"/></div>
                                    <div t-if="doc.company_id.phone">Tel: <span t-field="doc.company_id.phone"/></div>
                                </small>
                            </div>
                        </div>
                        
                        <!-- Voucher Details in Two Columns -->
                        <div class="row" style="border: 1px solid #ddd; padding: 8px; margin-bottom: 8px; background-color: #f8f9fa;">
                            <div class="col-6">
                                <table class="table-sm" style="width: 100%; font-size: 10px;">
                                    <tr><td style="width: 35%;"><b>Voucher No:</b></td><td><span t-field="doc.voucher_number"/></td></tr>
                                    <tr><td><b>Date:</b></td><td><span t-field="doc.date" t-options="{'widget': 'date'}"/></td></tr>
                                    <tr><td><b>Method:</b></td><td><span t-field="doc.payment_method_line_id.name"/></td></tr>
                                </table>
                            </div>
                            <div class="col-6">
                                <table class="table-sm" style="width: 100%; font-size: 10px;">
                                    <tr><td style="width: 30%;"><b>Ref:</b></td><td><span t-field="doc.ref"/></td></tr>
                                    <tr t-if="doc.authorization_code"><td><b>Auth:</b></td><td><span t-field="doc.authorization_code"/></td></tr>
                                    <tr><td><b>Status:</b></td>
                                        <td>
                                            <span t-if="doc.state == 'draft'" style="background: #6c757d; color: white; padding: 1px 4px; border-radius: 3px; font-size: 9px;">Draft</span>
                                            <span t-if="doc.state == 'posted'" style="background: #28a745; color: white; padding: 1px 4px; border-radius: 3px; font-size: 9px;">Posted</span>
                                            <span t-if="doc.state == 'cancelled'" style="background: #dc3545; color: white; padding: 1px 4px; border-radius: 3px; font-size: 9px;">Cancelled</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        
                        <!-- Partner Info (Compact) -->
                        <div class="row mb-2" t-if="not doc.is_internal_transfer">
                            <div class="col-12">
                                <div style="border: 1px solid #ddd; padding: 6px; font-size: 10px;">
                                    <b>
                                        <span t-if="doc.payment_type == 'outbound'">Pay To: </span>
                                        <span t-if="doc.payment_type == 'inbound'">Received From: </span>
                                    </b>
                                    <span t-field="doc.partner_id.name" style="font-weight: bold;"/>
                                    <span t-if="doc.partner_id.street"> | <span t-field="doc.partner_id.street"/></span>
                                    <span t-if="doc.partner_id.phone"> | Tel: <span t-field="doc.partner_id.phone"/></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Payment Details Table -->
                        <table class="table table-bordered table-sm" style="margin-bottom: 8px;">
                            <thead style="background-color: #343a40; color: white; font-size: 10px;">
                                <tr>
                                    <th style="padding: 4px;">Description</th>
                                    <th style="padding: 4px; text-align: right; width: 25%;">Amount</th>
                                </tr>
                            </thead>
                            <tbody style="font-size: 10px;">
                                <tr>
                                    <td style="padding: 4px;">
                                        <span t-if="doc.payment_description" t-field="doc.payment_description"/>
                                        <span t-else="">
                                            <span t-if="doc.payment_type == 'outbound'">Payment</span>
                                            <span t-if="doc.payment_type == 'inbound'">Receipt</span>
                                            <span t-if="doc.partner_id and not doc.is_internal_transfer"> - <span t-field="doc.partner_id.name"/></span>
                                            <span t-if="doc.is_internal_transfer"> - Internal Transfer</span>
                                        </span>
                                    </td>
                                    <td style="padding: 4px; text-align: right; font-weight: bold;">
                                        <span t-field="doc.amount" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot style="background-color: #f8f9fa; font-weight: bold; font-size: 11px;">
                                <tr>
                                    <th style="padding: 4px;">TOTAL AMOUNT</th>
                                    <th style="padding: 4px; text-align: right;">
                                        <span t-field="doc.amount" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                        
                        <!-- Additional Info in Columns -->
                        <div class="row" style="font-size: 10px;">
                            <div class="col-6">
                                <table class="table-sm" style="width: 100%;">
                                    <tr><td style="width: 30%;"><b>Journal:</b></td><td><span t-field="doc.journal_id.name"/></td></tr>
                                    <tr t-if="doc.destination_account_id"><td><b>Account:</b></td><td><span t-field="doc.destination_account_id.code"/> - <span t-field="doc.destination_account_id.name"/></td></tr>
                                    <tr t-if="doc.partner_bank_id"><td><b>Bank:</b></td><td><span t-field="doc.partner_bank_id.acc_number"/></td></tr>
                                </table>
                            </div>
                            <div class="col-6">
                                <table class="table-sm" style="width: 100%;">
                                    <tr t-if="doc.received_by"><td style="width: 30%;"><b>Received By:</b></td><td><span t-field="doc.received_by"/></td></tr>
                                    <tr t-if="doc.received_by"><td><b>Signature:</b></td><td>____________________</td></tr>
                                    <tr t-if="not doc.received_by"><td><b>Prepared By:</b></td><td><span t-esc="user.name"/></td></tr>
                                    <tr><td><b>Print Time:</b></td><td><span t-esc="datetime.datetime.now().strftime('%Y-%m-%d %H:%M')"/></td></tr>
                                </table>
                            </div>
                        </div>
                        
                        <!-- Footer -->
                        <div style="margin-top: 10px; text-align: center; border-top: 1px solid #ddd; padding-top: 5px;">
                            <small class="text-muted" style="font-size: 9px;">
                                This is a computer generated voucher. No signature required.
                                <span t-if="doc.company_id.website"> | <span t-field="doc.company_id.website"/></span>
                            </small>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>