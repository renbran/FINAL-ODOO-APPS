
<odoo>
  <data>
    <!--
      Payment Voucher Report Template
      - Odoo 17 QWeb, BEM class naming, SCSS-ready, accessible, no inline styles
      - All custom classes prefixed: o_payment_account_enhanced_voucher__*
      - Ready for responsive and theming via SCSS
    -->
    <template id="report_receipt_voucher">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <!-- Helper: split reference string into bullet list -->
          <t t-set="ref_list" t-value="(o.ref or '').split(',')"/>

          <div class="o_payment_account_enhanced_voucher o_report_page" role="region" aria-label="Payment Voucher">
            <!-- Header -->
            <header class="o_payment_account_enhanced_voucher__header">
              <div class="o_payment_account_enhanced_voucher__header-left">
                <h1 class="o_payment_account_enhanced_voucher__title">RECEIPT VOUCHER</h1>
                <div class="o_payment_account_enhanced_voucher__company" t-esc="o.company_id.name"/>
              </div>
              <div class="o_payment_account_enhanced_voucher__header-right">
                <img t-if="o.company_id.logo" t-att-src="o.company_id.logo" class="o_payment_account_enhanced_voucher__logo" alt="Company Logo"/>
              </div>
            </header>

            <!-- Body -->
            <main class="o_payment_account_enhanced_voucher__body">
              <table class="o_payment_account_enhanced_voucher__table" aria-label="Payment Details">
                <tr>
                  <th class="o_payment_account_enhanced_voucher__label" scope="row">Issued To</th>
                  <td t-field="o.partner_id.name"/>
                </tr>
                <tr>
                  <th class="o_payment_account_enhanced_voucher__label" scope="row">Voucher Number</th>
                  <td t-field="o.name"/>
                </tr>
                <tr>
                  <th class="o_payment_account_enhanced_voucher__label" scope="row">Date</th>
                  <td t-field="o.date" t-options='{"widget":"date","format":"dd MMMM yyyy"}'/>
                </tr>
                <tr>
                  <th class="o_payment_account_enhanced_voucher__label" scope="row">Address</th>
                  <td>
                    <t t-if="o.partner_id.street"><span t-field="o.partner_id.street"/></t>
                    <t t-if="o.partner_id.street2"><br/><span t-field="o.partner_id.street2"/></t>
                    <t t-if="o.partner_id.city"><br/><span t-field="o.partner_id.city"/></t>
                  </td>
                </tr>
                <tr>
                  <th class="o_payment_account_enhanced_voucher__label" scope="row">Phone</th>
                  <td><t t-if="o.partner_id.phone"><span t-field="o.partner_id.phone"/></t></td>
                </tr>
                <tr>
                  <th class="o_payment_account_enhanced_voucher__label" scope="row">Bank Details</th>
                  <td>
                    <t t-if="o.partner_bank_id">
                      <span t-field="o.partner_bank_id.acc_number"/>
                      <t t-if="o.partner_bank_id.bank_id"> (<span t-field="o.partner_bank_id.bank_id.name"/>)</t>
                    </t>
                  </td>
                </tr>
                <tr>
                  <th class="o_payment_account_enhanced_voucher__label" scope="row">Payment Method</th>
                  <td t-field="o.journal_id.name"/>
                </tr>
                <tr t-if="o.ref">
                  <th class="o_payment_account_enhanced_voucher__label" scope="row">Reference</th>
                  <td>
                    <ul class="o_payment_account_enhanced_voucher__ref-list">
                      <li t-foreach="ref_list" t-as="ref_line" t-esc="ref_line.strip()"/>
                    </ul>
                  </td>
                </tr>
              </table>

              <!-- Amount Block -->
              <section class="o_payment_account_enhanced_voucher__amount-block" aria-label="Amount">
                <div class="o_payment_account_enhanced_voucher__amount-value">
                  <span t-field="o.amount" t-options='{"widget":"monetary","display_currency":o.currency_id}'/>
                </div>
                <div class="o_payment_account_enhanced_voucher__amount-text">
                  <span t-esc="o.currency_id.amount_to_text(o.amount)"/> only
                </div>
              </section>

              <!-- Authorization & Acknowledgment -->
              <section class="o_payment_account_enhanced_voucher__auth-row" aria-label="Authorization and Acknowledgment">
                <div class="o_payment_account_enhanced_voucher__auth-block">
                  <strong>INITIATED BY</strong><br/>
                  <span t-field="o.create_uid.name"/><br/>
                  <small t-field="o.create_date" t-options='{"widget":"datetime","format":"dd/MM/yyyy HH:mm"}'/>
                </div>
                <div class="o_payment_account_enhanced_voucher__auth-block">
                  <strong>APPROVED BY</strong><br/>
                  <t t-if="o.state=='posted'">
                    <span t-field="o.write_uid.name"/><br/>
                    <small t-field="o.write_date" t-options='{"widget":"datetime","format":"dd/MM/yyyy HH:mm"}'/>
                  </t>
                  <t t-else=""><span class="o_payment_account_enhanced_voucher__pending" aria-live="polite">Pending Approval</span></t>
                </div>
                <div class="o_payment_account_enhanced_voucher__auth-block">
                  <strong>RECEIVED BY</strong>
                  <div class="o_payment_account_enhanced_voucher__signature-line" aria-hidden="true"></div>
                  <div class="o_payment_account_enhanced_voucher__signature-labels">
                    <span>Signature</span><span>Date</span><span>Mobile</span>
                  </div>
                </div>
              </section>
            </main>

            <!-- Footer -->
            <footer class="o_payment_account_enhanced_voucher__footer">
              <span t-esc="o.company_id.payment_voucher_footer or 'Thank you for your business â€¢ For payment confirmation, please contact: 056 390 5772'"/><br/>
              <em>This is a computer-generated document. No physical signature or stamp required for system verification.</em>
            </footer>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>