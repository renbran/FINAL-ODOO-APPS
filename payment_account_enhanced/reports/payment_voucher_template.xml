<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Payment Voucher Report Template -->
        <template id="report_payment_voucher">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page" style="font-size: 12px; font-family: 'Times New Roman', serif;">
                        
                        <!-- Header Section -->
                        <div class="row mb-3">
                            <div class="col-4">
                                <img t-if="doc.company_id.logo" 
                                     t-att-src="image_data_uri(doc.company_id.logo)" 
                                     style="max-height: 60px; max-width: 150px;" 
                                     alt="Company Logo"/>
                            </div>
                            <div class="col-8 text-right">
                                <h3 class="mb-1" style="font-size: 20px; font-weight: bold; color: #2c3e50;">
                                    <t t-if="doc.payment_type == 'outbound'">PAYMENT VOUCHER</t>
                                    <t t-if="doc.payment_type == 'inbound'">RECEIPT VOUCHER</t>
                                </h3>
                                <div style="font-size: 14px; color: #7f8c8d;">
                                    <div><strong t-field="doc.company_id.name"/></div>
                                    <div t-if="doc.company_id.street" t-field="doc.company_id.street"/>
                                    <div>
                                        <span t-if="doc.company_id.city" t-field="doc.company_id.city"/>
                                        <span t-if="doc.company_id.state_id">, <span t-field="doc.company_id.state_id.name"/></span>
                                    </div>
                                    <div t-if="doc.company_id.phone">Phone: <span t-field="doc.company_id.phone"/></div>
                                </div>
                            </div>
                        </div>

                        <!-- Voucher Information -->
                        <div class="row mb-3" style="border-bottom: 2px solid #34495e; padding-bottom: 10px;">
                            <div class="col-6">
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <td style="width: 35%;"><strong>Voucher No:</strong></td>
                                        <td><span t-field="doc.name"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Date:</strong></td>
                                        <td><span t-field="doc.date"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Payment Method:</strong></td>
                                        <td><span t-field="doc.journal_id.name"/></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-6">
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <td style="width: 35%;"><strong>Partner:</strong></td>
                                        <td><span t-field="doc.partner_id.name"/></td>
                                    </tr>
                                    <tr t-if="doc.ref">
                                        <td><strong>Reference:</strong></td>
                                        <td><span t-field="doc.ref"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Currency:</strong></td>
                                        <td><span t-field="doc.currency_id.name"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Amount Section -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <div style="background-color: #ecf0f1; padding: 15px; border-radius: 5px;">
                                    <div class="row">
                                        <div class="col-6">
                                            <h4 style="color: #2c3e50; margin-bottom: 10px;">Amount Details</h4>
                                            <table class="table table-sm table-borderless">
                                                <tr>
                                                    <td style="width: 40%;"><strong>Amount:</strong></td>
                                                    <td><span t-field="doc.amount" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/></td>
                                                </tr>
                                                <tr t-if="doc.payment_type == 'outbound'">
                                                    <td><strong>Paid To:</strong></td>
                                                    <td><span t-field="doc.partner_id.name"/></td>
                                                </tr>
                                                <tr t-if="doc.payment_type == 'inbound'">
                                                    <td><strong>Received From:</strong></td>
                                                    <td><span t-field="doc.partner_id.name"/></td>
                                                </tr>
                                            </table>
                                        </div>
                                        <div class="col-6 text-right">
                                            <div style="font-size: 24px; font-weight: bold; color: #27ae60; border: 2px solid #27ae60; padding: 10px; border-radius: 5px; display: inline-block;">
                                                <span t-field="doc.amount" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Description/Memo -->
                        <div class="row mb-3" t-if="doc.ref">
                            <div class="col-12">
                                <strong>Description/Memo:</strong>
                                <div style="border: 1px solid #bdc3c7; padding: 8px; border-radius: 3px; background-color: #f8f9fa;">
                                    <span t-field="doc.ref"/>
                                </div>
                            </div>
                        </div>

                        <!-- Signature Section -->
                        <div class="row mt-5" style="margin-top: 40px;">
                            <div class="col-4 text-center">
                                <div style="border-top: 1px solid #000; padding-top: 5px; margin-top: 40px;">
                                    <strong>Prepared By</strong>
                                </div>
                            </div>
                            <div class="col-4 text-center">
                                <div style="border-top: 1px solid #000; padding-top: 5px; margin-top: 40px;">
                                    <strong>Approved By</strong>
                                </div>
                            </div>
                            <div class="col-4 text-center">
                                <div style="border-top: 1px solid #000; padding-top: 5px; margin-top: 40px;">
                                    <strong>Received By</strong>
                                </div>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="row mt-4" style="margin-top: 30px; border-top: 1px solid #ecf0f1; padding-top: 10px;">
                            <div class="col-12 text-center" style="font-size: 10px; color: #7f8c8d;">
                                <div>This is a computer generated document. No signature required.</div>
                                <div>Printed on: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/></div>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
