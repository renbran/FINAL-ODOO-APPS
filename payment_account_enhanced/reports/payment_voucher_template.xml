<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="report_payment_voucher_a4">
<t t-call="web.html_container">
<t t-foreach="docs" t-as="doc">
<div class="page"
     style="margin:0; padding:8mm; width:210mm; height:297mm;
            font-family:'Helvetica Neue',Arial,sans-serif;
            box-sizing:border-box; color:#222;">

  <!-- ========= HEADER (edge-to-edge background) ========= -->
  <div style="margin:-8mm -8mm 0 -8mm; height:40mm;
              background:linear-gradient(135deg, #7C2439 0%, #8B2A47 100%);
              display:flex; align-items:center; justify-content:space-between;
              padding:0 15mm; color:#fff;">
      <div>
          <div style="font-size:18pt; font-weight:700; letter-spacing:.5pt;">PAYMENT VOUCHER</div>
          <div style="font-size:9.5pt; opacity:.9;" t-field="doc.company_id.name"/>
      </div>
      <img src="https://osusproperties.com/wp-content/uploads/2025/02/OSUS-logotype-2.png"
           style="height:18mm; filter:brightness(0) invert(1);"/>
  </div>

  <!-- ========= BODY GRID ========= -->
  <div style="display:grid; grid-template-columns:1fr 1fr; gap:6mm; margin-top:6mm;">

    <!-- Left block -->
    <div>
      <table style="width:100%; border-collapse:collapse; font-size:9.5pt;">
        <tr><td style="width:38%; padding:2mm 0; font-weight:600;">Issued To</td>
            <td t-field="doc.partner_id.name"/></tr>
        <tr><td style="padding:2mm 0; font-weight:600;">Voucher No.</td>
            <td t-field="doc.name"/></tr>
        <tr><td style="padding:2mm 0; font-weight:600;">Date</td>
            <td t-field="doc.date" t-options='{"widget":"date","format":"dd MMM yyyy"}'/></tr>
        <tr><td style="padding:2mm 0; font-weight:600;">Payment Method</td>
            <td t-field="doc.journal_id.name"/></tr>
        <tr t-if="doc.ref">
            <td style="padding:2mm 0; font-weight:600;">Reference</td>
            <td t-field="doc.ref"/>
        </tr>
      </table>
    </div>

    <!-- Right block -->
    <div>
      <div style="background:#faf9f7; border:1px solid #e5e5e5; border-radius:4px;
                  padding:4mm; text-align:center;">
          <div style="font-size:22pt; font-weight:700; color:#7C2439;">
              <span t-field="doc.amount" t-options='{"widget":"monetary","display_currency":doc.currency_id}'/>
          </div>
          <div style="margin-top:2mm; font-size:9pt; color:#555;">
              <span t-esc="doc.currency_id.amount_to_text(doc.amount)"/> only
          </div>
      </div>
    </div>

  </div>

  <!-- ========= AUTHORISATION ========= -->
  <div style="margin-top:12mm;">
      <h3 style="font-size:12pt; color:#7C2439; margin-bottom:4mm;">AUTHORISATION &amp; ACKNOWLEDGMENT</h3>
      <div style="display:flex; gap:6mm;">
          <div style="flex:1; border:1px solid #ccc; padding:4mm;">
              <div style="font-weight:600;">INITIATED BY</div>
              <div t-field="doc.create_uid.name"/>
              <div style="font-size:8pt; color:#666;" t-field="doc.create_date" t-options='{"widget":"datetime","format":"dd/MM/yyyy HH:mm"}'/>
          </div>
          <div style="flex:1; border:1px solid #ccc; padding:4mm;">
              <div style="font-weight:600;">APPROVED BY</div>
              <t t-if="doc.state=='posted'">
                  <div t-field="doc.write_uid.name"/>
                  <div style="font-size:8pt; color:#666;" t-field="doc.write_date" t-options='{"widget":"datetime","format":"dd/MM/yyyy HH:mm"}'/>
              </t>
              <t t-else=""><div style="color:#c00;">Pending Approval</div></t>
          </div>
          <div style="flex:1; border:1px solid #ccc; padding:4mm;">
              <div style="font-weight:600;">RECEIVED BY</div>
              <div style="border-bottom:1px solid #333; height:8mm; margin-bottom:2mm;"></div>
              <div style="font-size:8pt;">Signature &amp; Date</div>
          </div>
      </div>
  </div>

  <!-- ========= FOOTER ========= -->
  <div style="margin:12mm -8mm -8mm -8mm; padding:4mm 15mm;
              background:#7C2439; color:#fff; text-align:center; font-size:8.5pt;">
      Thank you for your business â€¢ For payment confirmation, please contact
      <t t-if="doc.company_id.phone"><span t-field="doc.company_id.phone"/></t>
      <t t-else="">our office</t>
      <br/>
      <span style="opacity:.8;">This is a computer-generated document. No physical signature required for system verification.</span>
  </div>

</div>
</t>
</t>
</template>
</data>
</odoo>