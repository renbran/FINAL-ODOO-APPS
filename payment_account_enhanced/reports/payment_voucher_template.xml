<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Payment Voucher Report Template - OSUS Style Optimized -->
        <template id="report_payment_voucher">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page" style="margin: 0; padding: 15mm; background: #ffffff; font-family: 'Arial', 'Helvetica', sans-serif; width: 210mm; min-height: 297mm; box-sizing: border-box;">
                        
                        <!-- Main Voucher Container - Optimized for A4 with 50% max height -->
                        <div style="max-width: 180mm; max-height: 148.5mm; background: #fff; border: 2px solid #7C2439; box-shadow: 0 4px 12px rgba(124, 36, 57, 0.12); border-radius: 8px; overflow: hidden; display: flex; flex-direction: column; margin: 0 auto;">
                            
                            <!-- Header Section with Smart Spacing -->
                            <div style="background: #7C2439; color: #fff; display: flex; justify-content: space-between; align-items: flex-start; min-height: 65px; padding: 15px 20px;">
                                
                                <!-- Company Info with Auto Spacing -->
                                <div style="flex: 1; display: flex; flex-direction: column; justify-content: center;">
                                    <!-- Reference at first line -->
                                    <div style="font-size: 16px; font-weight: 700; color: #fff; margin-bottom: 8px;">
                                        REF: <span t-field="doc.name"/>
                                    </div>
                                    <!-- Company Details -->
                                    <div style="font-size: 11px; line-height: 1.4; color: rgba(255, 255, 255, 0.95);">
                                        <div style="font-size: 13px; font-weight: 600; color: #fff; margin-bottom: 4px;">
                                            <span t-field="doc.company_id.name"/>
                                        </div>
                                        <t t-if="doc.company_id.street">
                                            <div style="margin-bottom: 2px;"><span t-field="doc.company_id.street"/></div>
                                        </t>
                                        <div style="margin-bottom: 2px;">
                                            <t t-if="doc.company_id.city"><span t-field="doc.company_id.city"/></t>
                                            <t t-if="doc.company_id.zip">, <span t-field="doc.company_id.zip"/></t>
                                        </div>
                                        <t t-if="doc.company_id.country_id">
                                            <div style="margin-bottom: 2px;"><span t-field="doc.company_id.country_id.name"/></div>
                                        </t>
                                        <t t-if="doc.company_id.vat">
                                            <div>VAT: <span t-field="doc.company_id.vat"/></div>
                                        </t>
                                    </div>
                                </div>
                                
                                <!-- OSUS Logo -->
                                <div style="display: flex; align-items: center; margin-left: 15px;">
                                    <img src="https://osusproperties.com/wp-content/uploads/2025/02/OSUS-logotype-2.png" 
                                         style="height: 40px; width: auto; max-width: 120px;" 
                                         alt="OSUS Logo"/>
                                </div>
                            </div>
                            
                            <!-- Main Content Section with Responsive Spacing -->
                            <div style="flex: 1; display: flex; flex-direction: column; padding: 18px 20px;">
                
                                <!-- Voucher Title -->
                                <h1 style="text-align: center; font-size: 22px; font-weight: 700; color: #7C2439; margin: 0 0 16px 0;">
                                    <t t-if="doc.payment_type == 'outbound'">Payment Voucher</t>
                                    <t t-elif="doc.payment_type == 'inbound'">Receipt Voucher</t>
                                    <t t-else="">Payment Voucher</t>
                                </h1>
                                
                                <!-- Details Table with Smart Spacing -->
                                <table style="width: 100%; border-collapse: collapse; margin-bottom: 16px;">
                                    <tr>
                                        <th style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #7C2439; font-weight: 600; width: 35%;">Issued To:</th>
                                        <td style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #333;">
                                            <span t-field="doc.partner_id.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #7C2439; font-weight: 600;">Number:</th>
                                        <td style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #333;">
                                            <span t-field="doc.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #7C2439; font-weight: 600;">Date:</th>
                                        <td style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #333;">
                                            <span t-field="doc.date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #7C2439; font-weight: 600;">Address:</th>
                                        <td style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #333;">
                                            <t t-if="doc.partner_id.street or doc.partner_id.city">
                                                <t t-if="doc.partner_id.street"><span t-field="doc.partner_id.street"/></t>
                                                <t t-if="doc.partner_id.city">
                                                    <t t-if="doc.partner_id.street">, </t>
                                                    <span t-field="doc.partner_id.city"/>
                                                </t>
                                            </t>
                                            <t t-else="">-</t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #7C2439; font-weight: 600;">Phone:</th>
                                        <td style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #333;">
                                            <t t-if="doc.partner_id.phone">
                                                <span t-field="doc.partner_id.phone"/>
                                            </t>
                                            <t t-else="">-</t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #7C2439; font-weight: 600;">Bank Details:</th>
                                        <td style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #333;">
                                            <t t-if="doc.partner_bank_id">
                                                <span t-field="doc.partner_bank_id.acc_number"/>
                                                <t t-if="doc.partner_bank_id.acc_holder_name">
                                                    (<span t-field="doc.partner_bank_id.acc_holder_name"/>)
                                                </t>
                                            </t>
                                            <t t-else="">-</t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #7C2439; font-weight: 600;">Payment Method:</th>
                                        <td style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #333;">
                                            <span t-field="doc.journal_id.name"/>
                                        </td>
                                    </tr>
                                    <!-- Conditional fields with proper spacing -->
                                    <tr t-if="doc.ref">
                                        <th style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #7C2439; font-weight: 600;">Reference:</th>
                                        <td style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #333;">
                                            <span t-field="doc.ref"/>
                                        </td>
                                    </tr>
                                    <tr t-if="doc.state == 'posted' and doc.authorized_by">
                                        <th style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #7C2439; font-weight: 600;">Authorized By:</th>
                                        <td style="padding: 7px 0; text-align: left; font-size: 13px; border-bottom: 1px solid #e5e5e5; color: #333;">
                                            <span t-esc="doc.authorized_by"/>
                                        </td>
                                    </tr>
                                </table>
                                
                                <!-- Amount Section with Better Styling -->
                                <div style="background: linear-gradient(135deg, #BFA46F 0%, #d4c195 100%); color: #fff; padding: 14px 20px; border-radius: 6px; text-align: center; margin: 12px 0;">
                                    <p style="font-size: 24px; font-weight: 700; margin: 0; text-shadow: 0 1px 2px rgba(0,0,0,0.1);">
                                        Total Amount: <span t-field="doc.amount" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                    </p>
                                </div>
                                
                                <!-- Authorization and Signature Sections -->
                                <div style="margin-top: 16px; display: flex; justify-content: space-between; gap: 20px; flex-wrap: wrap;">
                                    <!-- Left Section: Initiated By and Approved By -->
                                    <div style="flex: 1; min-width: 250px;">
                                        <!-- Initiated By Section -->
                                        <div style="margin-bottom: 20px;">
                                            <h4 style="font-size: 12px; font-weight: 600; color: #7C2439; margin-bottom: 6px; border-bottom: 1px solid #ddd; padding-bottom: 2px;">
                                                Initiated By:
                                            </h4>
                                            <p style="font-size: 11px; color: #333; margin: 0; line-height: 1.3;">
                                                <span t-field="doc.create_uid.name"/>
                                            </p>
                                            <p style="font-size: 10px; color: #666; margin: 2px 0 0 0;">
                                                <span t-field="doc.create_date" t-options="{'widget': 'datetime', 'format': 'dd/MM/yyyy HH:mm'}"/>
                                            </p>
                                        </div>
                                        
                                        <!-- Approved By Section -->
                                        <div style="margin-bottom: 12px;">
                                            <h4 style="font-size: 12px; font-weight: 600; color: #7C2439; margin-bottom: 6px; border-bottom: 1px solid #ddd; padding-bottom: 2px;">
                                                Authorized By:
                                            </h4>
                                            <t t-if="doc.state == 'posted' and doc.authorized_by">
                                                <p style="font-size: 11px; color: #333; margin: 0; line-height: 1.3;">
                                                    <span t-esc="doc.authorized_by"/>
                                                </p>
                                                <p style="font-size: 10px; color: #666; margin: 2px 0 0 0;">
                                                    <span t-field="doc.write_date" t-options="{'widget': 'datetime', 'format': 'dd/MM/yyyy HH:mm'}"/>
                                                </p>
                                            </t>
                                            <t t-elif="doc.state == 'posted'">
                                                <p style="font-size: 11px; color: #333; margin: 0; line-height: 1.3;">
                                                    <span t-field="doc.write_uid.name"/>
                                                </p>
                                                <p style="font-size: 10px; color: #666; margin: 2px 0 0 0;">
                                                    <span t-field="doc.write_date" t-options="{'widget': 'datetime', 'format': 'dd/MM/yyyy HH:mm'}"/>
                                                </p>
                                            </t>
                                            <t t-else="">
                                                <p style="font-size: 11px; color: #999; margin: 0; line-height: 1.3;">
                                                    Pending Authorization
                                                </p>
                                            </t>
                                        </div>
                                    </div>
                                    
                                    <!-- Right Section: Received By with Signature -->
                                    <div style="flex: 1; min-width: 250px;">
                                        <div>
                                            <h4 style="font-size: 12px; font-weight: 600; color: #7C2439; margin-bottom: 6px; border-bottom: 1px solid #ddd; padding-bottom: 2px;">
                                                Received By:
                                            </h4>
                                            
                                            <!-- Signature Line -->
                                            <div style="margin-bottom: 12px; padding-top: 8px;">
                                                <div style="border-top: 2px solid #333; width: 160px; margin-bottom: 4px;"></div>
                                                <p style="font-size: 10px; color: #666; margin: 0; text-align: left; width: 160px;">
                                                    Signature
                                                </p>
                                            </div>
                                            
                                            <!-- Name Field -->
                                            <div style="margin-bottom: 8px;">
                                                <t t-if="doc.received_by">
                                                    <p style="font-size: 11px; color: #333; margin: 0; line-height: 1.3;">
                                                        <span t-esc="doc.received_by"/>
                                                    </p>
                                                </t>
                                                <t t-else="">
                                                    <div style="border-bottom: 1px solid #999; width: 160px; height: 16px; margin-bottom: 2px;"></div>
                                                </t>
                                                <p style="font-size: 10px; color: #666; margin: 0;">
                                                    Full Name
                                                </p>
                                            </div>
                                            
                                            <!-- Date Field -->
                                            <div style="margin-bottom: 8px;">
                                                <div style="border-bottom: 1px solid #999; width: 110px; height: 16px; margin-bottom: 2px;"></div>
                                                <p style="font-size: 10px; color: #666; margin: 0;">
                                                    Date
                                                </p>
                                            </div>
                                            
                                            <!-- Mobile Field -->
                                            <div>
                                                <div style="border-bottom: 1px solid #999; width: 130px; height: 16px; margin-bottom: 2px;"></div>
                                                <p style="font-size: 10px; color: #666; margin: 0;">
                                                    Mobile
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                            
                            <!-- Footer with Smart Padding -->
                            <div style="background: #7C2439; color: #fff; text-align: center; padding: 8px 16px; font-size: 11px; line-height: 1.2; margin-top: auto;">
                                <span style="color: rgba(255, 255, 255, 0.95);">
                                    Thank you for your business â€¢ Confirm payment at 
                                    <t t-if="doc.company_id.phone"><span t-field="doc.company_id.phone"/></t>
                                    <t t-else="">our office</t>
                                </span>
                            </div>
                            
                        </div>
                        
                    </div>
                </t>
            </t>
        </template>
        
    </data>
</odoo>
