<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Modern OSUS Payment Voucher Template with CSS Grid Layout -->
        <template id="report_payment_voucher">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page" style="margin: 0; padding: 0; background: #F5F5F5; font-family: 'Arial', 'Helvetica', sans-serif; display: flex; justify-content: center; align-items: center; min-height: 100vh; box-sizing: border-box;">
                        
                        <!-- CSS Styles -->
                        <style>
                            .voucher-container {
                                width: 210mm;
                                height: 148mm;
                                max-width: 100%;
                                background: #fff;
                                border: 2px solid #7C2439;
                                box-shadow: 0 8px 25px rgba(124, 36, 57, 0.15);
                                border-radius: 6px;
                                overflow: hidden;
                                display: flex;
                                flex-direction: column;
                                font-family: 'Arial', 'Helvetica', sans-serif;
                            }
                            
                            .voucher-header {
                                background: #7C2439;
                                color: #fff;
                                padding: 12px 20px;
                                display: flex;
                                justify-content: space-between;
                                align-items: center;
                            }
                            
                            .company-info {
                                display: flex;
                                align-items: center;
                                gap: 15px;
                            }
                            
                            .company-details {
                                font-size: 10px;
                                line-height: 1.3;
                                color: rgba(255, 255, 255, 0.9);
                            }
                            
                            .company-name {
                                font-size: 12px;
                                font-weight: 700;
                                margin-bottom: 2px;
                            }
                            
                            .voucher-logo {
                                height: 45px;
                                width: auto;
                                max-width: 120px;
                            }
                            
                            .voucher-title-section {
                                text-align: center;
                                margin: 12px 0 6px;
                            }
                            
                            .voucher-title {
                                font-size: 20px;
                                font-weight: 700;
                                color: #7C2439;
                                margin: 0 0 4px;
                            }
                            
                            .voucher-number {
                                font-size: 14px;
                                color: #333;
                                font-weight: 600;
                            }
                            
                            .info-grid {
                                flex: 1 1 auto;
                                display: grid;
                                grid-template-columns: 1fr 1fr;
                                gap: 14px 30px;
                                padding: 0 20px;
                                align-content: start;
                            }
                            
                            .info-item {
                                display: flex;
                                flex-direction: column;
                            }
                            
                            .info-label {
                                font-size: 12px;
                                font-weight: 600;
                                color: #7C2439;
                                margin-bottom: 2px;
                            }
                            
                            .info-value {
                                font-size: 12px;
                                color: #333;
                                line-height: 1.3;
                            }
                            
                            .amount-section {
                                background: linear-gradient(135deg, #BFA46F, #d4c195);
                                color: #fff;
                                padding: 12px;
                                border-radius: 4px;
                                text-align: center;
                                margin: 10px 20px 0;
                            }
                            
                            .amount-text {
                                font-size: 22px;
                                font-weight: 700;
                                margin: 0;
                                text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
                            }
                            
                            .disclaimer {
                                text-align: center;
                                font-size: 10px;
                                color: #333;
                                margin: 4px 20px 4px;
                            }
                            
                            .voucher-footer {
                                background: #7C2439;
                                color: #fff;
                                text-align: center;
                                padding: 8px 16px;
                                font-size: 10px;
                                line-height: 1.3;
                            }
                            
                            @media print {
                                .page { background: white !important; }
                                .voucher-container { box-shadow: none; border: 1px solid #7C2439; }
                            }
                            
                            @media (max-width: 768px) {
                                .voucher-container { width: 100%; height: auto; }
                                .info-grid { grid-template-columns: 1fr; }
                            }
                        </style>
                        
                        <!-- Main Voucher Container -->
                        <div class="voucher-container">
                            
                            <!-- Header Section -->
                            <div class="voucher-header">
                                <div class="company-info">
                                    <div class="company-details">
                                        <div class="company-name">
                                            <t t-if="doc.company_id.name">
                                                <span t-field="doc.company_id.name"/>
                                            </t>
                                            <t t-else="">OSUS REAL ESTATE BROKERAGE LLC</t>
                                        </div>
                                        <t t-if="doc.company_id.street">
                                            <div><span t-field="doc.company_id.street"/></div>
                                        </t>
                                        <t t-else="">
                                            <div>Single Business Tower 29th Floor</div>
                                        </t>
                                        <div>
                                            <t t-if="doc.company_id.city">
                                                <span t-field="doc.company_id.city"/>
                                            </t>
                                            <t t-else="">Business Bay Dubai</t>
                                        </div>
                                        <t t-if="doc.company_id.country_id">
                                            <div><span t-field="doc.company_id.country_id.name"/></div>
                                        </t>
                                        <t t-else="">
                                            <div>United Arab Emirates</div>
                                        </t>
                                        <t t-if="doc.company_id.vat">
                                            <div>VAT: <span t-field="doc.company_id.vat"/></div>
                                        </t>
                                        <t t-else="">
                                            <div>VAT: 100236589600003</div>
                                        </t>
                                    </div>
                                </div>
                                <img src="https://osusproperties.com/wp-content/uploads/2025/02/OSUS-logotype-2.png" 
                                     alt="OSUS Logo" 
                                     class="voucher-logo"/>
                            </div>
                            
                            <!-- Title Section -->
                            <div class="voucher-title-section">
                                <h1 class="voucher-title">
                                    <t t-if="doc.payment_type == 'outbound'">Payment Voucher</t>
                                    <t t-elif="doc.payment_type == 'inbound'">Receipt Voucher</t>
                                    <t t-else="">Payment Voucher</t>
                                </h1>
                                <div class="voucher-number">
                                    Voucher Reference: <span t-field="doc.name"/>
                                </div>
                            </div>
                            
                            <!-- Information Grid -->
                            <div class="info-grid">
                                
                                <div class="info-item">
                                    <span class="info-label">Issued To</span>
                                    <span class="info-value">
                                        <span t-field="doc.partner_id.name"/>
                                    </span>
                                </div>
                                
                                <div class="info-item">
                                    <span class="info-label">Date</span>
                                    <span class="info-value">
                                        <span t-field="doc.date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}"/>
                                    </span>
                                </div>
                                
                                <div class="info-item">
                                    <span class="info-label">Address</span>
                                    <span class="info-value">
                                        <t t-if="doc.partner_id.street or doc.partner_id.city">
                                            <t t-if="doc.partner_id.street">
                                                <span t-field="doc.partner_id.street"/>
                                            </t>
                                            <t t-if="doc.partner_id.city">
                                                <t t-if="doc.partner_id.street">, </t>
                                                <span t-field="doc.partner_id.city"/>
                                            </t>
                                        </t>
                                        <t t-else="">123 Anywhere St., Any City</t>
                                    </span>
                                </div>
                                
                                <div class="info-item">
                                    <span class="info-label">Phone</span>
                                    <span class="info-value">
                                        <t t-if="doc.partner_id.phone">
                                            <span t-field="doc.partner_id.phone"/>
                                        </t>
                                        <t t-else="">+123 456 7890</t>
                                    </span>
                                </div>
                                
                                <div class="info-item">
                                    <span class="info-label">Bank Details</span>
                                    <span class="info-value">
                                        <t t-if="doc.partner_bank_id">
                                            <span t-field="doc.partner_bank_id.acc_number"/>
                                            <t t-if="doc.partner_bank_id.acc_holder_name">
                                                (<span t-field="doc.partner_bank_id.acc_holder_name"/>)
                                            </t>
                                        </t>
                                        <t t-else="">012345678901 (Account Holder)</t>
                                    </span>
                                </div>
                                
                                <div class="info-item">
                                    <span class="info-label">Payment Method</span>
                                    <span class="info-value">
                                        <t t-if="doc.journal_id.name">
                                            <span t-field="doc.journal_id.name"/>
                                        </t>
                                        <t t-else="">Bank Transfer</t>
                                    </span>
                                </div>
                                
                                <div class="info-item" t-if="doc.ref">
                                    <span class="info-label">Reference / Memo</span>
                                    <span class="info-value">
                                        <span t-field="doc.ref"/>
                                    </span>
                                </div>
                                
                            </div>
                            
                            <!-- Amount Section -->
                            <div class="amount-section">
                                <p class="amount-text">
                                    Total Amount: <span t-field="doc.amount" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                </p>
                            </div>
                            
                            <!-- Disclaimer -->
                            <p class="disclaimer">
                                This is a computer-generated document; no signature or stamp required.
                            </p>
                            
                            <!-- Footer -->
                            <div class="voucher-footer">
                                Thank you for your business • Confirm payment at 
                                <t t-if="doc.company_id.phone">
                                    <span t-field="doc.company_id.phone"/>
                                </t>
                                <t t-else="">+123 456 7890</t>
                            </div>
                            
                        </div>
                        
                    </div>
                </t>
            </t>
        </template>
        
    </data>
</odoo>
