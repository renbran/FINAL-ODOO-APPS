<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Backend Assets for Enhanced Payment Module -->
        <template id="assets_backend" inherit_id="web.assets_backend">
            <!-- Enhanced CSS for OSUS Payment Styling -->
            <link rel="stylesheet" type="text/css" href="/payment_account_enhanced/static/src/css/osus_backend.css"/>
            <link rel="stylesheet" type="text/css" href="/payment_account_enhanced/static/src/css/osus_report.css"/>
            
            <!-- Enhanced JavaScript for Responsive Statusbar -->
            <script type="text/javascript" src="/payment_account_enhanced/static/src/js/payment_statusbar.js"/>
        </template>

        <!-- Report Assets for Payment Vouchers -->
        <template id="assets_frontend" inherit_id="web.assets_frontend">
            <link rel="stylesheet" type="text/scss" href="/payment_account_enhanced/static/src/scss/payment_voucher_report.scss"/>
        </template>

        <!-- QWeb Templates for Enhanced Components -->
        <template id="PaymentStatusbar" name="payment_account_enhanced.PaymentStatusbar">
            <div class="o_payment_statusbar_enhanced">
                <div class="statusbar-container">
                    <t t-if="props.states">
                        <t t-foreach="props.states" t-as="state">
                            <button t-attf-class="o_statusbar_status #{state.current ? 'o_arrow_button_current' : ''}"
                                    t-att-data-state="state.value"
                                    t-on-click="() => this.onStatusChange(state.value)">
                                <span t-esc="state.label"/>
                            </button>
                        </t>
                    </t>
                </div>
            </div>
        </template>
    </data>
</odoo>