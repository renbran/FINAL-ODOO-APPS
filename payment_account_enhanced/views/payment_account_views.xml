<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit account payment form view -->
        <record id="view_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <!-- Add Print Voucher button in header -->
                <xpath expr="//header/button[@name='mark_as_sent']" position="after">
                    <button name="action_print_voucher" 
                            string="Print Voucher" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'posted'"/>
                </xpath>
                
                <!-- Add voucher number in title -->
                <xpath expr="//div[@class='oe_title']" position="inside">
                    <div invisible="not voucher_number or state == 'draft'">
                        <label for="voucher_number" class="oe_edit_only"/>
                        <h2><field name="voucher_number" readonly="1"/></h2>
                    </div>
                </xpath>
                
                <!-- Add destination account field -->
                <xpath expr="//field[@name='destination_journal_id']" position="after">
                    <field name="destination_account_id" 
                           invisible="is_internal_transfer" 
                           readonly="state != 'draft'"/>
                </xpath>
                
                <!-- Add additional voucher fields -->
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="received_by" invisible="payment_type != 'outbound'"/>
                    <field name="authorization_code"/>
                </xpath>
                
                <!-- Add payment description -->
                <xpath expr="//group[@name='main_group']" position="after">
                    <group string="Additional Information" name="voucher_info">
                        <field name="payment_description" placeholder="Enter detailed payment description..."/>
                    </group>
                </xpath>
            </field>
        </record>
        
        <!-- Add voucher sequence -->
        <record id="seq_payment_voucher" model="ir.sequence">
            <field name="name">Payment Voucher</field>
            <field name="code">payment.voucher</field>
            <field name="prefix">PV</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>