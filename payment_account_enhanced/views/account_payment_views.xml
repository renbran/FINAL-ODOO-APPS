<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Enhanced Payment Form View -->
        <record id="view_account_payment_form_osus_enhanced" model="ir.ui.view">
            <field name="name">account.payment.form.osus.enhanced</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                
                <!-- Add Enhanced Status Bar -->
                <xpath expr="//header" position="replace">
                    <header>
                        <!-- Responsive Status Bar Widget -->
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted,cancel" 
                               statusbar_colors='{"draft":"blue","posted":"green","cancel":"red"}'
                               options="{'clickable_stages': [('draft', 'posted'), ('posted', 'cancel')]}"
                               class="o_payment_statusbar"/>
                        
                        <!-- Action Buttons with Enhanced Logic -->
                        <button name="action_validate_and_post" 
                                string="Validate &amp; Post" 
                                type="object" 
                                class="btn-success"
                                invisible="state != 'draft'"/>
                        
                        <button name="action_print_osus_voucher" 
                                string="Print OSUS Voucher" 
                                type="object" 
                                class="btn-primary"
                                icon="fa-print"
                                invisible="state == 'draft'"/>
                        
                        <button name="action_cancel" 
                                string="Cancel" 
                                type="object" 
                                class="btn-secondary"
                                confirm="Are you sure you want to cancel this payment?"
                                invisible="state in ['draft', 'cancel']"/>
                        
                        <button name="action_draft" 
                                string="Set to Draft" 
                                type="object" 
                                class="btn-warning"
                                groups="account.group_account_manager"
                                invisible="state != 'cancel'"/>
                        
                        <!-- Workflow Buttons -->
                        <button name="action_review_payment" 
                                string="Mark as Reviewed" 
                                type="object" 
                                class="btn-info"
                                invisible="state != 'draft'"/>
                        
                        <button name="action_approve_payment" 
                                string="Approve Payment" 
                                type="object" 
                                class="btn-success"
                                invisible="state != 'draft'"/>
                    </header>
                </xpath>
                
                <!-- QR Code Section -->
                <xpath expr="//sheet" position="inside">
                    <group string="QR Code &amp; Verification" name="qr_section" invisible="state == 'draft'">
                        <field name="qr_in_report"/>
                        <field name="qr_code" widget="image" invisible="qr_code == False"/>
                    </group>
                </xpath>
                
                <!-- Enhanced Information Section -->
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="remarks" 
                           placeholder="Enter additional remarks or memo for this payment voucher..."
                           widget="text"/>
                </xpath>
                
                <!-- Authorization Information -->
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="authorized_by" 
                           readonly="1" 
                           invisible="state != 'posted'"
                           string="Authorized By"/>
                    <field name="actual_approver_id" 
                           readonly="1" 
                           invisible="state != 'posted'"
                           string="Approved By"/>
                </xpath>
                
                <!-- Enhanced Fields Section -->
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="destination_account_id" 
                           required="state == 'draft'" 
                           readonly="state != 'draft'"
                           domain="[('company_id', '=', company_id)]"/>
                    
                    <separator string="Approval Workflow" colspan="2"/>
                    <group colspan="2" col="4">
                        <field name="reviewer_id" readonly="1"/>
                        <field name="reviewer_date" readonly="1"/>
                        <field name="approver_id" readonly="1"/>
                        <field name="approver_date" readonly="1"/>
                    </group>
                </xpath>
                
            </field>
        </record>
        
        <!-- Enhanced Payment Tree View -->
        <record id="view_account_payment_tree_osus_enhanced" model="ir.ui.view">
            <field name="name">account.payment.tree.osus.enhanced</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="authorized_by" optional="hide"/>
                    <field name="remarks" optional="hide"/>
                </xpath>
            </field>
        </record>
        
        <!-- Company Settings Enhancement -->
        <record id="view_company_form_osus_enhanced" model="ir.ui.view">
            <field name="name">res.company.form.osus.enhanced</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="OSUS Voucher Settings" name="osus_voucher">
                        <group string="Branding">
                            <field name="use_osus_branding"/>
                        </group>
                        <group string="Voucher Customization">
                            <field name="voucher_footer_message" 
                                   widget="text" 
                                   placeholder="Thank you for your business"/>
                            <field name="voucher_terms" 
                                   widget="text"
                                   placeholder="Terms and conditions..."/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        
        <!-- Action Definitions -->
        <record id="action_payment_voucher_osus" model="ir.actions.act_window">
            <field name="name">OSUS Payment Vouchers</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('payment_type', 'in', ['outbound', 'inbound'])]</field>
            <field name="context">{
                'default_payment_type': 'outbound',
                'search_default_posted': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first OSUS payment voucher
                </p>
                <p>
                    OSUS branded payment vouchers provide professional,
                    luxury-styled documentation for all your payments.
                </p>
            </field>
        </record>
        
        <!-- Menu Items -->
        <menuitem id="menu_osus_payment_vouchers"
                  name="OSUS Vouchers"
                  parent="account.menu_finance_payables"
                  action="action_payment_voucher_osus"
                  sequence="15"/>
                  
    </data>
</odoo>