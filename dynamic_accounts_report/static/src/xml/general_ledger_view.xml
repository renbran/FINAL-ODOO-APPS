<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="gl_template_new" owl="1">
        <div class="o_dynamic_accounts_report_general_ledger">
            <div class="o_dynamic_accounts_report_header">
                <h3>General Ledger Report</h3>
                <div class="o_dynamic_accounts_report_filters">
                    <div class="filter-group">
                        <label>Date From:</label>
                        <input type="date" name="start_date" class="form-control" t-on-change="applyFilter"/>
                    </div>
                    <div class="filter-group">
                        <label>Date To:</label>
                        <input type="date" name="end_date" class="form-control" t-on-change="applyFilter"/>
                    </div>
                    <div class="filter-group">
                        <label>Journals:</label>
                        <div class="journal-filters" t-if="state.journals">
                            <t t-foreach="state.journals" t-as="journal" t-key="journal.id">
                                <button class="btn btn-sm btn-outline-secondary filter-btn" 
                                        t-att-data-id="journal.id" 
                                        data-value="journal"
                                        t-on-click="applyFilter">
                                    <t t-esc="journal.name"/>
                                </button>
                            </t>
                        </div>
                    </div>
                    <div class="filter-group">
                        <button class="btn btn-primary" t-att-ref="unfoldButton" t-on-click="unfoldAll">
                            Unfold All
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="o_dynamic_accounts_report_content">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Account</th>
                            <th>Date</th>
                            <th>Reference</th>
                            <th>Partner</th>
                            <th>Description</th>
                            <th class="text-right">Debit</th>
                            <th class="text-right">Credit</th>
                            <th class="text-right">Balance</th>
                        </tr>
                    </thead>
                    <tbody t-att-ref="tbody">
                        <t t-if="state.account_data">
                            <t t-foreach="state.account" t-as="account" t-key="account">
                                <t t-set="account_data" t-value="state.account_data[account]"/>
                                <tr class="account-header">
                                    <td colspan="8">
                                        <strong t-esc="account_data.account_name"/>
                                        <span class="text-muted">(<t t-esc="account_data.code"/>)</span>
                                    </td>
                                </tr>
                                <t t-if="account_data.move_lines">
                                    <t t-foreach="account_data.move_lines" t-as="line" t-key="line.id">
                                        <tr>
                                            <td></td>
                                            <td t-esc="line.date"/>
                                            <td t-esc="line.move_name"/>
                                            <td t-esc="line.partner_name"/>
                                            <td t-esc="line.name"/>
                                            <td class="text-right" t-esc="line.debit"/>
                                            <td class="text-right" t-esc="line.credit"/>
                                            <td class="text-right" t-esc="line.balance"/>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                        </t>
                        <t t-else="">
                            <tr>
                                <td colspan="8" class="text-center">Loading general ledger data...</td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot t-if="state.total_debit and state.total_credit">
                        <tr class="table-info">
                            <th colspan="5">Total</th>
                            <th class="text-right" t-esc="state.total_debit"/>
                            <th class="text-right" t-esc="state.total_credit"/>
                            <th class="text-right"></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            
            <div class="o_dynamic_accounts_report_footer">
                <button class="btn btn-info" t-on-click="printPdf">Export PDF</button>
                <button class="btn btn-success" t-on-click="print_xlsx">Export Excel</button>
            </div>
        </div>
    </t>
</templates>
