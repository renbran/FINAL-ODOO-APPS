<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="general_ledger_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">General Ledger Report</h2>
                        
                        <div class="row mb-4">
                            <div class="col-3">
                                <strong>Company:</strong> <span t-esc="company_name"/>
                            </div>
                            <div class="col-3">
                                <strong>Period:</strong> <span t-esc="date_from"/> to <span t-esc="date_to"/>
                            </div>
                            <div class="col-3">
                                <strong>Target Moves:</strong> <span t-esc="target_move"/>
                            </div>
                            <div class="col-3">
                                <strong>Display Account:</strong> <span t-esc="display_account"/>
                            </div>
                        </div>
                        
                        <t t-foreach="accounts" t-as="account">
                            <h4><span t-esc="account['code']"/> - <span t-esc="account['name']"/></h4>
                            
                            <t t-if="initial_balance and account['init_balance']">
                                <div class="row mb-2">
                                    <div class="col-12">
                                        <strong>Initial Balance:</strong> 
                                        <span t-esc="account['init_balance']" t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                    </div>
                                </div>
                            </t>
                            
                            <table class="table table-sm table-bordered report_table">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Journal</th>
                                        <th>Partner</th>
                                        <th>Reference</th>
                                        <th>Move</th>
                                        <th class="text-end">Debit</th>
                                        <th class="text-end">Credit</th>
                                        <th class="text-end">Balance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="account['move_lines']" t-as="line">
                                        <tr>
                                            <td class="date_field"><span t-esc="line['date']"/></td>
                                            <td><span t-esc="line['journal']"/></td>
                                            <td><span t-esc="line['partner']"/></td>
                                            <td><span t-esc="line['ref']"/></td>
                                            <td><span t-esc="line['move']"/></td>
                                            <td class="text-end amount_field"><span t-esc="line['debit']" t-options="{'widget': 'monetary', 'display_currency': currency}"/></td>
                                            <td class="text-end amount_field"><span t-esc="line['credit']" t-options="{'widget': 'monetary', 'display_currency': currency}"/></td>
                                            <td class="text-end amount_field"><span t-esc="line['balance']" t-options="{'widget': 'monetary', 'display_currency': currency}"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot>
                                    <tr class="total_row">
                                        <td colspan="5"><strong>Total</strong></td>
                                        <td class="text-end"><strong><span t-esc="account['debit']" t-options="{'widget': 'monetary', 'display_currency': currency}"/></strong></td>
                                        <td class="text-end"><strong><span t-esc="account['credit']" t-options="{'widget': 'monetary', 'display_currency': currency}"/></strong></td>
                                        <td class="text-end"><strong><span t-esc="account['balance']" t-options="{'widget': 'monetary', 'display_currency': currency}"/></strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </t>
                        
                        <div class="row mt-4">
                            <div class="col-12 text-right">
                                <table class="table table-sm table-bordered" style="width: 300px; margin-left: auto;">
                                    <tr class="total_row">
                                        <td><strong>Total Debit:</strong></td>
                                        <td class="text-end amount_field">
                                            <strong><span t-esc="total_debit" t-options="{'widget': 'monetary', 'display_currency': currency}"/></strong>
                                        </td>
                                    </tr>
                                    <tr class="total_row">
                                        <td><strong>Total Credit:</strong></td>
                                        <td class="text-end amount_field">
                                            <strong><span t-esc="total_credit" t-options="{'widget': 'monetary', 'display_currency': currency}"/></strong>
                                        </td>
                                    </tr>
                                    <tr class="total_row">
                                        <td><strong>Balance:</strong></td>
                                        <td class="text-end amount_field">
                                            <strong><span t-esc="total_balance" t-options="{'widget': 'monetary', 'display_currency': currency}"/></strong>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
