<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- General Ledger Report Action -->
        <record id="action_general_ledger_report" model="ir.actions.client">
            <field name="name">General Ledger</field>
            <field name="tag">om_dynamic_reports.general_ledger_action</field>
        </record>

        <!-- Trial Balance Report Action -->
        <record id="action_trial_balance_report" model="ir.actions.client">
            <field name="name">Trial Balance</field>
            <field name="tag">trl_b</field>
        </record>

        <!-- Balance Sheet Report Action -->
        <record id="action_balance_sheet_report" model="ir.actions.client">
            <field name="name">Balance Sheet</field>
            <field name="tag">b_s</field>
        </record>

        <!-- Profit & Loss Report Action -->
        <record id="action_profit_loss_report" model="ir.actions.client">
            <field name="name">Profit &amp; Loss</field>
            <field name="tag">p_l_s</field>
        </record>

        <!-- Partner Ledger Report Action -->
        <record id="action_partner_ledger_report" model="ir.actions.client">
            <field name="name">Partner Ledger</field>
            <field name="tag">p_l</field>
        </record>

        <!-- Cash Flow Report Action -->
        <record id="action_cash_flow_report" model="ir.actions.client">
            <field name="name">Cash Flow</field>
            <field name="tag">csh_b</field>
        </record>

        <!-- Main Dynamic Reports Menu -->
        <menuitem id="menu_dynamic_reports" name="Enhanced Financial Reports" 
                  parent="account.menu_finance_reports"
                  sequence="15"/>

        <!-- Core Reports Submenu -->
        <menuitem id="menu_core_reports" name="Core Reports" 
                  parent="menu_dynamic_reports"
                  sequence="10"/>

        <menuitem id="menu_general_ledger_report" name="General Ledger" 
                  parent="menu_core_reports"
                  action="action_general_ledger_report"
                  sequence="10"/>

        <menuitem id="menu_trial_balance_report" name="Trial Balance" 
                  parent="menu_core_reports"
                  action="action_trial_balance_report"
                  sequence="20"/>

        <!-- Financial Statements Submenu -->
        <menuitem id="menu_financial_statements" name="Financial Statements" 
                  parent="menu_dynamic_reports"
                  sequence="20"/>

        <menuitem id="menu_balance_sheet_report" name="Balance Sheet" 
                  parent="menu_financial_statements"
                  action="action_balance_sheet_report"
                  sequence="10"/>

        <menuitem id="menu_profit_loss_report" name="Profit &amp; Loss" 
                  parent="menu_financial_statements"
                  action="action_profit_loss_report"
                  sequence="20"/>

        <menuitem id="menu_cash_flow_report" name="Cash Flow Statement" 
                  parent="menu_financial_statements"
                  action="action_cash_flow_report"
                  sequence="30"/>

        <!-- Partner Reports Submenu -->
        <menuitem id="menu_partner_reports" name="Partner Reports" 
                  parent="menu_dynamic_reports"
                  sequence="30"/>

        <menuitem id="menu_partner_ledger_report" name="Partner Ledger" 
                  parent="menu_partner_reports"
                  action="action_partner_ledger_report"
                  sequence="10"/>

    </data>
</odoo>
