<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_employment_certificate" model="ir.actions.report">
        <field name="name">Employment Certificate</field>
        <field name="model">hr.employment.certificate.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_employment_certificate.report_employment_certificate</field>
        <field name="report_file">hr_employment_certificate.report_employment_certificate</field>
        <field name="print_report_name">'Employment Certificate - %s' % (object.employee_id.name)</field>
        <field name="binding_type">report</field>
    </record>

    <record id="paperformat_employment_certificate" model="report.paperformat">
        <field name="name">Employment Certificate A4</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>
</odoo>
