{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleDetection": "auto",
        "baseUrl": ".",
        "paths": {
            "@odoo/*": ["./static/src/*"],
            "@web/*": ["./static/src/js/*"],
            "@/*": ["./static/src/*"]
        },
        "types": [],
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ]
    },
    "include": [
        "**/*.js",
        "static/src/**/*.js",
        "*/static/src/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "**/*.min.js",
        "**/lib/**",
        "**/dist/**",
        "**/__pycache__/**"
    ]
}
