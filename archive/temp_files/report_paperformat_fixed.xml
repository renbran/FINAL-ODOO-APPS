<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- OSUS Custom Paper Format - Optimized for Single Page -->
        <record id="paperformat_osus_standard" model="report.paperformat">
            <field name="name">OSUS Standard A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">75</field>
            <field name="margin_bottom">30</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">65</field>
            <field name="dpi">96</field>
            <field name="print_page_width">210</field>
            <field name="print_page_height">297</field>
        </record>

        <!-- Force all companies to use OSUS paper format -->
        <function model="res.company" name="write">
            <value eval="[ref('base.main_company')]"/>
            <value eval="{'paperformat_id': ref('paperformat_osus_standard')}"/>
        </function>

    </data>
</odoo>
