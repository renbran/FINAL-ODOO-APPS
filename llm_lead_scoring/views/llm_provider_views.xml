<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- LLM Provider Tree View -->
    <record id="view_llm_provider_tree" model="ir.ui.view">
        <field name="name">llm.provider.tree</field>
        <field name="model">llm.provider</field>
        <field name="arch" type="xml">
            <tree string="LLM Providers">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="provider_type"/>
                <field name="model_name"/>
                <field name="is_default"/>
                <field name="active"/>
                <field name="total_requests"/>
                <field name="failed_requests"/>
                <field name="last_used"/>
            </tree>
        </field>
    </record>

    <!-- LLM Provider Form View -->
    <record id="view_llm_provider_form" model="ir.ui.view">
        <field name="name">llm.provider.form</field>
        <field name="model">llm.provider</field>
        <field name="arch" type="xml">
            <form string="LLM Provider">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="provider_type"/>
                            <field name="model_name"/>
                            <field name="is_default"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="api_key" password="True"/>
                            <field name="api_endpoint"
                                   invisible="provider_type != 'custom'"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group string="Parameters">
                        <group>
                            <field name="temperature"/>
                            <field name="max_tokens"/>
                        </group>
                        <group>
                            <field name="timeout"/>
                        </group>
                    </group>
                    <group string="Usage Statistics">
                        <group>
                            <field name="total_requests" readonly="1"/>
                            <field name="failed_requests" readonly="1"/>
                        </group>
                        <group>
                            <field name="last_used" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LLM Provider Action -->
    <record id="action_llm_provider" model="ir.actions.act_window">
        <field name="name">LLM Providers</field>
        <field name="res_model">llm.provider</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first LLM Provider
            </p>
            <p>
                Configure LLM providers like OpenAI, Groq, HuggingFace, or Anthropic
                to enable AI-powered lead scoring.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_llm_lead_scoring_root"
              name="LLM Lead Scoring"
              sequence="100"
              web_icon="llm_lead_scoring,static/description/icon.png"/>

    <menuitem id="menu_llm_configuration"
              name="Configuration"
              parent="menu_llm_lead_scoring_root"
              sequence="100"/>

    <menuitem id="menu_llm_provider"
              name="LLM Providers"
              parent="menu_llm_configuration"
              action="action_llm_provider"
              sequence="10"/>
</odoo>
