<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- OSUS Report Header -->
        <template id="osus_external_layout_header">
            <div class="osus-header" style="padding: 15px 20px;">
                <div class="row">
                    <div class="col-4">
                        <!-- OSUS Logo from Company Settings -->
                        <img t-if="company.logo"
                             t-att-src="image_data_uri(company.logo)"
                             alt="Company Logo"
                             class="osus-logo"
                             style="max-height: 70px; max-width: 200px; object-fit: contain;"/>
                    </div>
                    <div class="col-8 text-end">
                        <!-- Company Information -->
                        <div class="osus-company-info">
                            <h4 class="mb-1" style="color: #1a1a1a; font-weight: 700; font-size: 14pt;">
                                <span t-esc="company.name"/>
                            </h4>
                            <div class="osus-contact-details" style="font-size: 9pt; color: #555; line-height: 1.6;">
                                <div t-if="company.street">
                                    <i class="fa fa-map-marker" style="width: 14px; display: inline-block;"/>
                                    <span t-esc="company.street"/>
                                    <span t-if="company.street2" t-esc="', ' + company.street2"/>
                                </div>
                                <div t-if="company.city or company.zip">
                                    <span t-if="company.zip" t-esc="company.zip"/>
                                    <span t-if="company.city" t-esc="' ' + company.city"/>
                                    <span t-if="company.state_id" t-esc="', ' + company.state_id.name"/>
                                    <span t-if="company.country_id" t-esc="', ' + company.country_id.name"/>
                                </div>
                                <div t-if="company.phone">
                                    <i class="fa fa-phone" style="width: 14px; display: inline-block;"/>
                                    <span t-esc="company.phone"/>
                                </div>
                                <div t-if="company.email">
                                    <i class="fa fa-envelope" style="width: 14px; display: inline-block;"/>
                                    <span t-esc="company.email"/>
                                </div>
                                <div t-if="company.website">
                                    <i class="fa fa-globe" style="width: 14px; display: inline-block;"/>
                                    <span t-esc="company.website"/>
                                </div>
                                <div t-if="company.vat" style="margin-top: 4px;">
                                    <strong>TRN:</strong> <span t-esc="company.vat"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <hr class="osus-header-line" style="border: none; border-top: 3px solid #004a7c; margin: 0;"/>
                    </div>
                </div>
            </div>
        </template>

        <!-- OSUS Report Footer -->
        <template id="osus_external_layout_footer">
            <div class="osus-footer" style="padding: 10px 20px;">
                <div class="row">
                    <div class="col-12">
                        <hr class="osus-footer-line" style="border: none; border-top: 3px solid #004a7c; margin: 0 0 10px 0;"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="osus-footer-info" style="font-size: 8pt; color: #555; line-height: 1.5;">
                            <div>
                                <strong><span t-esc="company.name"/></strong>
                            </div>
                            <div t-if="company.phone">
                                <strong>Tel:</strong> <span t-esc="company.phone"/>
                            </div>
                            <div t-if="company.email">
                                <strong>Email:</strong> <span t-esc="company.email"/>
                            </div>
                            <div t-if="company.website">
                                <strong>Web:</strong> <span t-esc="company.website"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 text-end">
                        <div class="osus-page-number" style="font-size: 8pt; color: #555; line-height: 1.5;">
                            <div style="font-weight: 600;">
                                Page <span class="page"/> of <span class="topage"/>
                            </div>
                            <div style="margin-top: 4px;">
                                Printed: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-2" t-if="company.vat">
                    <div class="col-12 text-center">
                        <div style="font-size: 7pt; color: #888;">
                            <strong>TRN:</strong> <span t-esc="company.vat"/> | This is a computer-generated document
                        </div>
                    </div>
                </div>
            </div>
        </template>

        <!-- OSUS External Layout (Inherits from web.external_layout_standard) -->
        <template id="osus_external_layout" inherit_id="web.external_layout_standard" priority="99">
            <!-- Replace entire header content -->
            <xpath expr="//div[contains(@t-attf-class, 'header')]" position="replace">
                <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                    <t t-call="osus_report_header_footer.osus_external_layout_header"/>
                </div>
            </xpath>

            <!-- Replace entire footer content -->
            <xpath expr="//div[contains(@t-attf-class, 'footer')]" position="replace">
                <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                    <t t-call="osus_report_header_footer.osus_external_layout_footer"/>
                </div>
            </xpath>
        </template>


    </data>
</odoo>
