<odoo>
    <data>
        <!-- Enhanced Purchase Order Form View -->
        <record id="view_purchase_order_form_inherit_enhanced" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.enhanced</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                
                <!-- Add Smart Button for Source Sale Order -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button type="object" 
                            name="action_view_source_sale_order" 
                            class="oe_stat_button" 
                            icon="fa-usd"
                            invisible="not origin_so_id">
                        <span>Source Sale Order</span>
                    </button>
                </xpath>

                <!-- Add Commission Information -->
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="origin_so_id" readonly="1" string="Source Sale Order"/>
                    <field name="commission_type" readonly="1" string="Commission Type"/>
                </xpath>

            </field>
        </record>

        <!-- Enhanced Purchase Order Tree View -->
        <record id="view_purchase_order_tree_inherit_enhanced" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit.enhanced</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="commission_type" optional="show"/>
                    <field name="origin_so_id" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- Commission Purchase Orders Action -->
        <record id="action_commission_purchase_orders" model="ir.actions.act_window">
            <field name="name">Commission Purchase Orders</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('commission_type', '!=', False)]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No commission purchase orders found!
                </p>
                <p>
                    Commission purchase orders are automatically generated when you confirm commissions on sale orders.
                </p>
            </field>
        </record>

        <!-- Menu for Commission Purchase Orders -->
        <menuitem id="menu_commission_purchase_orders"
                  name="Commission Purchase Orders"
                  parent="purchase.menu_procurement_management"
                  action="action_commission_purchase_orders"
                  sequence="20"/>

    </data>
</odoo>