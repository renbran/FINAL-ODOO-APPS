<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_purchase_order_form_inherit_enhanced" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.enhanced</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <!-- Add Force Post button to header -->
                <xpath expr="//header/button[@name='button_approve']" position="after">
                    <button 
                        name="action_force_post" 
                        string="Force Post Commission" 
                        type="object" 
                        invisible="commission_posted == True or origin_so_id == False"
                        class="btn-secondary"
                        groups="purchase.group_purchase_user"
                    />
                </xpath>

                <!-- Add commission details fields -->
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="origin_so_id" readonly="1" invisible="origin_so_id == False"/>
                    <field name="description" readonly="1" invisible="description == False"/>
                    <field name="commission_posted" readonly="1" invisible="origin_so_id == False"/>
                </xpath>
            </field>
        </record>

        <!-- Add action to view source sale order -->
        <record id="action_view_source_sale_order" model="ir.actions.act_window">
            <field name="name">Source Sale Order</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="context">{'default_id': active_id}</field>
        </record>
    </data>
</odoo>