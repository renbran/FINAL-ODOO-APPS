<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Add Resend Agent Email button to invoice form -->
        <record id="view_move_form_inherit_agent_email" model="ir.ui.view">
            <field name="name">account.move.form.inherit.agent.email</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_resend_agent_email" 
                            type="object" 
                            string="Resend Agent Email" 
                            class="btn-secondary"
                            attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"
                            help="Resend invoice notification email to the assigned agent"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
