<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_internal_commission_form" model="ir.ui.view">
        <field name="name">internal.commission.form</field>
        <field name="model">internal.commission</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" states="draft" class="oe_highlight"/>
                    <button name="action_pay" string="Mark as Paid" type="object" states="confirmed" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,confirmed"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" states="canceled"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="sale_value"/>
                            <field name="commission_type"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="create_date"/>
                            <field name="create_uid"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Commissions">
                            <group>
                                <group string="Agent 1">
                                    <field name="agent1_id"/>
                                    <field name="agent1_rate" attrs="{'invisible': [('commission_type', '=', 'fixed')]}"/>
                                    <field name="agent1_fixed" attrs="{'invisible': [('commission_type', '!=', 'fixed')]}"/>
                                    <field name="agent1_commission"/>
                                </group>
                                <group string="Agent 2">
                                    <field name="agent2_id"/>
                                    <field name="agent2_rate" attrs="{'invisible': [('commission_type', '=', 'fixed')]}"/>
                                    <field name="agent2_fixed" attrs="{'invisible': [('commission_type', '!=', 'fixed')]}"/>
                                    <field name="agent2_commission"/>
                                </group>
                                <group string="Manager">
                                    <field name="manager_id"/>
                                    <field name="manager_rate" attrs="{'invisible': [('commission_type', '=', 'fixed')]}"/>
                                    <field name="manager_fixed" attrs="{'invisible': [('commission_type', '!=', 'fixed')]}"/>
                                    <field name="manager_commission"/>
                                </group>
                                <group string="Director">
                                    <field name="director_id"/>
                                    <field name="director_rate" attrs="{'invisible': [('commission_type', '=', 'fixed')]}"/>
                                    <field name="director_fixed" attrs="{'invisible': [('commission_type', '!=', 'fixed')]}"/>
                                    <field name="director_commission"/>
                                </group>
                            </group>
                            <group class="oe_subtotal_footer">
                                <field name="total_commission" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Payment Information">
                            <group>
                                <field name="payment_date"/>
                                <field name="payment_reference"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_internal_commission_tree" model="ir.ui.view">
        <field name="name">internal.commission.tree</field>
        <field name="model">internal.commission</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="sale_value"/>
                <field name="commission_type"/>
                <field name="total_commission"/>
                <field name="state"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_internal_commission_search" model="ir.ui.view">
        <field name="name">internal.commission.search</field>
        <field name="model">internal.commission</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="agent1_id"/>
                <field name="agent2_id"/>
                <field name="manager_id"/>
                <field name="director_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                <filter string="Canceled" name="canceled" domain="[('state', '=', 'canceled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Commission Type" name="group_by_commission_type" context="{'group_by': 'commission_type'}"/>
                    <filter string="Sale Order" name="group_by_sale_order" context="{'group_by': 'sale_order_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_internal_commission" model="ir.actions.act_window">
        <field name="name">Internal Commissions</field>
        <field name="res_model">internal.commission</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_internal_commission_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first internal commission!
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_internal_commission"
              name="Internal Commissions"
              action="action_internal_commission"
              parent="sale.sale_menu_root"
              sequence="20"/>
</odoo>