<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_external_commission_form" model="ir.ui.view">
            <field name="name">external.commission.form</field>
            <field name="model">external.commission</field>
            <field name="arch" type="xml">
                <form string="External Commission">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" states="draft" class="oe_highlight"/>
                        <button name="action_pay" string="Pay" type="object" states="confirmed" class="oe_highlight"/>
                        <button name="action_cancel" string="Cancel" type="object" states="draft,confirmed"/>
                        <button name="action_draft" string="Reset to Draft" type="object" states="canceled"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="sale_order_id"/>
                                <field name="date"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="sale_value"/>
                                <field name="amount_untaxed"/>
                                <field name="total_commission"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Broker/Agency">
                                <group>
                                    <field name="broker_agency_id"/>
                                    <field name="broker_agency_commission_type"/>
                                    <field name="broker_agency_rate" attrs="{'invisible': [('broker_agency_commission_type', '=', 'fixed')]}"/>
                                    <field name="broker_agency_fixed" attrs="{'invisible': [('broker_agency_commission_type', '!=', 'fixed')]}"/>
                                    <field name="broker_agency_total"/>
                                </group>
                            </page>
                            <page string="Cashback">
                                <group>
                                    <field name="cashback_id"/>
                                    <field name="cashback_commission_type"/>
                                    <field name="cashback_rate" attrs="{'invisible': [('cashback_commission_type', '=', 'fixed')]}"/>
                                    <field name="cashback_fixed" attrs="{'invisible': [('cashback_commission_type', '!=', 'fixed')]}"/>
                                    <field name="cashback_total"/>
                                </group>
                            </page>
                            <page string="Referral">
                                <group>
                                    <field name="referral_id"/>
                                    <field name="referral_commission_type"/>
                                    <field name="referral_rate" attrs="{'invisible': [('referral_commission_type', '=', 'fixed')]}"/>
                                    <field name="referral_fixed" attrs="{'invisible': [('referral_commission_type', '!=', 'fixed')]}"/>
                                    <field name="referral_total"/>
                                </group>
                            </page>
                            <page string="Other">
                                <group>
                                    <field name="other_id"/>
                                    <field name="other_commission_type"/>
                                    <field name="other_rate" attrs="{'invisible': [('other_commission_type', '=', 'fixed')]}"/>
                                    <field name="other_fixed" attrs="{'invisible': [('other_commission_type', '!=', 'fixed')]}"/>
                                    <field name="other_total"/>
                                </group>
                            </page>
                        </notebook>
                        <group string="Payment Information">
                            <field name="payment_date"/>
                            <field name="payment_reference"/>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_external_commission_tree" model="ir.ui.view">
            <field name="name">external.commission.tree</field>
            <field name="model">external.commission</field>
            <field name="arch" type="xml">
                <tree string="External Commissions" decoration-info="state == 'draft'" decoration-muted="state == 'canceled'" decoration-success="state == 'paid'">
                    <field name="name"/>
                    <field name="sale_order_id"/>
                    <field name="date"/>
                    <field name="sale_value"/>
                    <field name="total_commission"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_external_commission_search" model="ir.ui.view">
            <field name="name">external.commission.search</field>
            <field name="model">external.commission</field>
            <field name="arch" type="xml">
                <search string="Search External Commissions">
                    <field name="name"/>
                    <field name="sale_order_id"/>
                    <field name="broker_agency_id"/>
                    <field name="cashback_id"/>
                    <field name="referral_id"/>
                    <field name="other_id"/>
                    <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                    <filter string="Paid" name="paid" domain="[('state','=','paid')]"/>
                    <filter string="Canceled" name="canceled" domain="[('state','=','canceled')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_state" context="{'group_by':'state'}"/>
                        <filter string="Sale Order" name="group_by_sale_order" context="{'group_by':'sale_order_id'}"/>
                        <filter string="Date" name="group_by_date" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_external_commission" model="ir.actions.act_window">
            <field name="name">External Commissions</field>
            <field name="res_model">external.commission</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_external_commission_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first external commission!
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_external_commission"
                  name="External Commissions"
                  parent="sale.sale_menu_root"
                  action="action_external_commission"
                  sequence="20"/>
    </data>
</odoo>