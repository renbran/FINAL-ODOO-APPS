<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_external_commission_form" model="ir.ui.view">
        <field name="name">external.commission.form</field>
        <field name="model">external.commission</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_pay" string="Mark as Paid" type="object" states="confirmed"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,confirmed"/>
                    <button name="action_draft" string="Set to Draft" type="object" states="canceled"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="sale_order_id"/>
                        <field name="partner_id"/>
                        <field name="date"/>
                    </group>
                    
                    <notebook>
                        <page string="Commission Details">
                            <group>
                                <field name="calculation_type"/>
                                <field name="percentage" options="{'invisible': [('calculation_type', '=', 'fixed')]}"/>
                                <field name="fixed_amount" options="{'invisible': [('calculation_type', '!=', 'fixed')]}"/>
                                <field name="commission_amount" readonly="1"/>
                            </group>
                            
                            <group string="Source Values">
                                <field name="sale_value" readonly="1"/>
                                <field name="amount_untaxed" readonly="1"/>
                            </group>
                        </page>
                        
                        <page string="Payment" options="{'invisible': [('state', '!=', 'paid')]}">
                            <field name="payment_date"/>
                            <field name="payment_reference"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_external_commission_tree" model="ir.ui.view">
        <field name="name">external.commission.tree</field>
        <field name="model">external.commission</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="calculation_type"/>
                <field name="commission_amount"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_external_commission_search" model="ir.ui.view">
        <field name="name">external.commission.search</field>
        <field name="model">external.commission</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <filter name="state" string="Status" domain="[]" context="{'group_by':'state'}"/>
                <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>
                <filter name="paid" string="Paid" domain="[('state','=','paid')]"/>
                <filter name="date" string="Date" date="date"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_external_commission" model="ir.actions.act_window">
        <field name="name">External Commissions</field>
        <field name="res_model">external.commission</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_external_commission_root" name="External Commissions" 
              parent="sales_team.menu_sales" sequence="30"/>
    <menuitem id="menu_external_commission" name="All External Commissions" 
              parent="menu_external_commission_root" action="action_external_commission"/>
</odoo>