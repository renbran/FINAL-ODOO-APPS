<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_external_commission_form" model="ir.ui.view">
            <field name="name">external.commission.form</field>
            <field name="model">external.commission</field>
            <field name="arch" type="xml">
                <form string="External Commission">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" 
                                invisible="state != 'draft'" class="oe_highlight"/>
                        <button name="action_pay" string="Mark as Paid" type="object" 
                                invisible="state != 'confirmed'" class="oe_highlight"/>
                        <button name="action_cancel" string="Cancel" type="object" 
                                invisible="state not in ['draft', 'confirmed']"/>
                        <button name="action_draft" string="Reset to Draft" type="object" 
                                invisible="state != 'canceled'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="sale_order_id" options="{'no_create': True}"/>
                                <field name="date"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="sale_value" widget="monetary"/>
                                <field name="amount_untaxed" widget="monetary"/>
                                <field name="total_commission" widget="monetary" class="oe_subtotal_footer_separator"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Commission Details">
                                <group>
                                    <group string="Broker/Agency Commission">
                                        <field name="broker_agency_id" domain="[('is_broker_agency', '=', True)]"/>
                                        <field name="broker_agency_commission_type"/>
                                        <field name="broker_agency_rate" 
                                               invisible="broker_agency_commission_type == 'fixed'"/>
                                        <field name="broker_agency_fixed" 
                                               invisible="broker_agency_commission_type != 'fixed'"/>
                                        <field name="broker_agency_total" widget="monetary" readonly="1"/>
                                    </group>
                                    <group string="Cashback Commission">
                                        <field name="cashback_id" domain="[('is_cashback_partner', '=', True)]"/>
                                        <field name="cashback_commission_type"/>
                                        <field name="cashback_rate" 
                                               invisible="cashback_commission_type == 'fixed'"/>
                                        <field name="cashback_fixed" 
                                               invisible="cashback_commission_type != 'fixed'"/>
                                        <field name="cashback_total" widget="monetary" readonly="1"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Referral Commission">
                                        <field name="referral_id" domain="[('is_referral_partner', '=', True)]"/>
                                        <field name="referral_commission_type"/>
                                        <field name="referral_rate" 
                                               invisible="referral_commission_type == 'fixed'"/>
                                        <field name="referral_fixed" 
                                               invisible="referral_commission_type != 'fixed'"/>
                                        <field name="referral_total" widget="monetary" readonly="1"/>
                                    </group>
                                    <group string="Other Commission">
                                        <field name="other_id"/>
                                        <field name="other_commission_type"/>
                                        <field name="other_rate" 
                                               invisible="other_commission_type == 'fixed'"/>
                                        <field name="other_fixed" 
                                               invisible="other_commission_type != 'fixed'"/>
                                        <field name="other_total" widget="monetary" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Payment Information">
                                <group>
                                    <field name="payment_date"/>
                                    <field name="payment_reference"/>
                                </group>
                            </page>
                            <page string="Notes">
                                <field name="notes" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_external_commission_tree" model="ir.ui.view">
            <field name="name">external.commission.tree</field>
            <field name="model">external.commission</field>
            <field name="arch" type="xml">
                <tree string="External Commissions" 
                      decoration-info="state == 'draft'" 
                      decoration-muted="state == 'canceled'" 
                      decoration-success="state == 'paid'">
                    <field name="name"/>
                    <field name="sale_order_id"/>
                    <field name="date"/>
                    <field name="sale_value" widget="monetary"/>
                    <field name="total_commission" widget="monetary"/>
                    <field name="state" widget="badge" 
                           decoration-info="state == 'draft'"
                           decoration-warning="state == 'confirmed'"
                           decoration-success="state == 'paid'"
                           decoration-danger="state == 'canceled'"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_external_commission_search" model="ir.ui.view">
            <field name="name">external.commission.search</field>
            <field name="model">external.commission</field>
            <field name="arch" type="xml">
                <search string="Search External Commissions">
                    <field name="name"/>
                    <field name="sale_order_id"/>
                    <field name="broker_agency_id"/>
                    <field name="cashback_id"/>
                    <field name="referral_id"/>
                    <field name="other_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                    <filter string="Paid" name="paid" domain="[('state','=','paid')]"/>
                    <filter string="Canceled" name="canceled" domain="[('state','=','canceled')]"/>
                    <separator/>
                    <filter string="This Month" name="this_month" 
                            domain="[('date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                     ('date', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                    <filter string="Last Month" name="last_month"
                            domain="[('date', '&gt;=', (context_today() + relativedelta(months=-1, day=1)).strftime('%Y-%m-%d')),
                                     ('date', '&lt;', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_state" context="{'group_by':'state'}"/>
                        <filter string="Sale Order" name="group_by_sale_order" context="{'group_by':'sale_order_id'}"/>
                        <filter string="Date" name="group_by_date" context="{'group_by':'date:month'}"/>
                        <filter string="Broker/Agency" name="group_by_broker" context="{'group_by':'broker_agency_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_external_commission_kanban" model="ir.ui.view">
            <field name="name">external.commission.kanban</field>
            <field name="model">external.commission</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="state"/>
                    <field name="name"/>
                    <field name="sale_order_id"/>
                    <field name="total_commission"/>
                    <field name="currency_id"/>
                    <field name="date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <span class="badge badge-pill" 
                                              t-attf-class="badge-#{record.state.raw_value == 'draft' ? 'info' : record.state.raw_value == 'confirmed' ? 'warning' : record.state.raw_value == 'paid' ? 'success' : 'danger'}">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <field name="sale_order_id"/>
                                        <div class="text-muted">
                                            <i class="fa fa-calendar"/> <field name="date"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <strong>
                                                <field name="total_commission" widget="monetary"/>
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_external_commission" model="ir.actions.act_window">
            <field name="name">External Commissions</field>
            <field name="res_model">external.commission</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_external_commission_search"/>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first external commission!
                </p>
                <p>
                    Track and manage commissions for external partners including brokers, agencies, 
                    cashback partners, and referrals.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_external_commission"
                  name="External Commissions"
                  parent="sale.sale_menu_root"
                  action="action_external_commission"
                  sequence="20"/>
    </data>
</odoo>